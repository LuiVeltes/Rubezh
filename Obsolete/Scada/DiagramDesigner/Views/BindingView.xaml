<Window x:Class="DiagramDesigner.Views.BindingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:DiagramDesigner.Views"
    Title="Привязка к данным" Height="600" Width="600">
    <StackPanel>
        <ListBox ItemsSource="{Binding MyDataItems}" SelectedItem="{Binding SelectedDataItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <view:DataItemView />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Save" Command="{Binding SaveCommand}" />
    </StackPanel>
</Window>
