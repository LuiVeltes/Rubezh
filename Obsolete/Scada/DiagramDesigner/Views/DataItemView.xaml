<UserControl x:Class="DiagramDesigner.Views.DataItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <TextBlock DataContext="{Binding DataItem}" Text="{Binding DataValue}" Margin="2" />
        <TextBlock DataContext="{Binding DataItem}" Text="{Binding Name}" Margin="2" />
    </StackPanel>
</UserControl>
