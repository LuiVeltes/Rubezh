<UserControl x:Class="ComEmulator.DeviceDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="550">
        <ScrollViewer.Content>
            <StackPanel VerticalAlignment="Top">
                <StackPanel DataContext="{Binding SelectedDevice}">
                    <TextBlock Text="{Binding DeviceName}" Foreground="White" />
                    <TextBlock Text="{Binding Address}" Foreground="White" />
                    <ItemsControl ItemsSource="{Binding States}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="Transparent" Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="20" />
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsActive}" Foreground="White" />
                                        <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="White" />
                                        <TextBlock Grid.Column="2" Text="{Binding Id}" Foreground="White" />
                                        <TextBlock Grid.Column="3" Text="{Binding Priority}" Foreground="White" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer.Content>
    </ScrollViewer>
</UserControl>
