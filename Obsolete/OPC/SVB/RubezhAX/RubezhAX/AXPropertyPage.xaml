<Window x:Class="RubezhAX.AXPropertyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:RubezhAX.PropertyPage.Views"
    Title="Конфигурирование ActiveX элемента" Height="351" Width="798" Background="LightGray" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="Укажите тип устройства:" Grid.Row="0"/>
            <ComboBox  x:Name="ChoiceIDDevice" Grid.Row="1" IsReadOnly="True" IsEditable="False"  ItemsSource="{Binding MDataID}" SelectedItem="{Binding SelectedID}" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <views:ComTree Grid.Row="2"/>
            <views:DetailInfo Grid.Row="3"/>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="2" Content="Выбор устройства" Command="{Binding SelectCommand}"/>

            </Grid>




        </Grid>
    </StackPanel>
</Window>
