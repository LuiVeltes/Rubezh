<Window x:Class="WpfApplication13.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Grid>
        <Grid>
            <StackPanel>
                <Button Content="Select Person" Command="{Binding SelectCommand}" />
                <TextBlock Text="{Binding Name}" />
                <ListBox ItemsSource="{Binding Persons}" SelectedItem="{Binding SelectedPerson}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" IsEnabled="{Binding Enabled}">
                                <TextBox Text="{Binding Name}" Padding="5" />
                                <TextBox Text="{Binding Id}" Padding="5" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel DataContext="{Binding SelectedPerson}" Orientation="Horizontal">
                    <TextBlock Text="Фамилия " />
                    <TextBlock Text="{Binding Description}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
