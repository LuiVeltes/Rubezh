<Window x:Class="ServiceClient.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:ServiceClient.Views"
    Title="Service Client" Height="900" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button Command="{Binding Start}" Content="Start" />
        </StackPanel>
        <TabControl Grid.Row="1">
                <!--<TabItem Header="Assad" Name="AssadTab">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <views:AssadTree Grid.Column="0" />
                        <views:AssadDatails Grid.Column="1" />
                    </Grid>
                </TabItem>-->
                <TabItem Header="Com Server" Name="ComServerTab">
                    <ScrollViewer>
                        <StackPanel>
                            <TextBox Text="{Binding StateMessage}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <views:ComTree Grid.Column="0" />
                                <views:ComDetails Grid.Column="1" />
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        <StackPanel Grid.Row="2">
            <TextBox Text="{Binding Messages}" />
        </StackPanel>
    </Grid>
</Window>
