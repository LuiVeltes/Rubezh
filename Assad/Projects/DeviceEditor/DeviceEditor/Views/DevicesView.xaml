<UserControl x:Class="DeviceEditor.DevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceEditor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

        <ScrollViewer>
            <ListBox ItemsSource="{Binding DeviceViewModels}" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBox Text="{Binding Id}" BorderThickness="0" />
                            <Expander>
                                <StackPanel>
                                    <local:StatesView/>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.Resources>
                    <ContextMenu x:Key="contextMenu">
                        <MenuItem Header="Добавить устройство" Command="{Binding AddDeviceCommand}"/>
                        <MenuItem Header="Удалить устройство" Command="{Binding RemoveDeviceCommand}"/>
                    </ContextMenu>
                </ListBox.Resources>
                <ListBox.ItemContainerStyle>
                    <Style >
                        <Setter Property="ListBoxItem.ContextMenu" Value="{StaticResource contextMenu}" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </ScrollViewer>

</UserControl>
