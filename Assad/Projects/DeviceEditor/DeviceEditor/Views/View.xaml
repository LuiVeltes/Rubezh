<Window x:Class="DeviceEditor.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DeviceEditor"
        Title="Графическая библиотека устройств" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Style="{DynamicResource LeftScrollViewer}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible">
            <Grid Grid.Column="0">
                <local:DevicesView/>
            </Grid>
        </ScrollViewer>
        <Grid Grid.Column="1">
            <TabControl Background="#616161" TabStripPlacement="Bottom" DataContext="{Binding SelectedStateViewModel}" ItemsSource="{Binding FrameViewModels}" SelectedItem="{Binding SelectedFrameViewModel}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock Text="Кадр "/>
                            <TextBlock Text="{Binding Id}"/>
                        </DockPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid Background="#BFBFBF">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBox Background="Black" Foreground="Yellow" Text="{Binding Image, UpdateSourceTrigger=PropertyChanged}" Name="textBox2" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" AcceptsTab="True" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <ItemsControl Margin="5" VerticalAlignment="Top" HorizontalAlignment="Right" ItemsSource="{Binding Path=DynamicPicture, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Left">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="500" Height="500"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.LayoutTransform>
                                        <ScaleTransform ScaleX="0.1" ScaleY="0.1"/>
                                    </ItemsControl.LayoutTransform>
                                </ItemsControl>
                                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                    <ItemsControl ItemsSource="{Binding Path=Picture, UpdateSourceTrigger=PropertyChanged}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas Width="500" Height="500"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.LayoutTransform>
                                            <ScaleTransform ScaleX="0.3" ScaleY="0.3"/>
                                        </ItemsControl.LayoutTransform>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,5" HorizontalAlignment="Right">
                                    <Label Content="Слой: " />
                                    <TextBox Text="{Binding Layer}" />
                                    <Button Content="Добавить кадр" Command="{Binding AddFrameCommand}"/>
                                    <Button Content="Удалить кадр" Command="{Binding RemoveFrameCommand}" />
                                    <Label Content="Длительность" Height="28" Name="label1" />
                                    <TextBox Width="78" Height="22" Name="textBoxDuration" Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}" AcceptsTab="True" AcceptsReturn="True" IsManipulationEnabled="True" IsTabStop="False" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>

            <Grid>
                <ContentControl DataContext="{Binding SelectedStateViewModel.ParentDevice}" HorizontalAlignment="Right" >
                    <Grid>
                        <ItemsControl ItemsSource="{Binding StatesPicture}" VerticalAlignment="Center" Margin="0,40,10,0" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Width="500">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="500" Height="500"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.LayoutTransform>
                                <ScaleTransform ScaleX="0.1" ScaleY="0.1"/>
                            </ItemsControl.LayoutTransform>
                        </ItemsControl>
                    </Grid>
                </ContentControl>
            </Grid>

            <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right" Panel.ZIndex="1">
                <DockPanel VerticalAlignment="Bottom">
                    <Button Width="80" Height="22" Command="{Binding SaveCommand}">Сохранить</Button>
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
