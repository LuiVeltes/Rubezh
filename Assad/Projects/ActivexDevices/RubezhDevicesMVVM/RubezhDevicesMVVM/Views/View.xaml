<Window x:Class="RubezhDevicesMVVM.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RubezhDevices" Height="200" Width="200">
        <StackPanel>
        <ItemsControl ItemsSource="{Binding StatesPicture}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Width="500" Height="500"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.LayoutTransform>
                    <ScaleTransform ScaleX="0.25" ScaleY="0.25"/>
                </ItemsControl.LayoutTransform>
            </ItemsControl>        
        <Button Content="Выбор устройства" Margin="10" Command="{Binding DeviceSelectionCommand}"/>
        </StackPanel>
</Window>
