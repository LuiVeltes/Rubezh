<UserControl x:Class="RubezhDevices.RubezhDevice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="614" Height="436.2" Name="window1">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem x:Name="menuItemReports" Header="Выбор состояния" Click="MenuItem_Click" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid Name="grid1">
        <ContentControl Name="contentControl1" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <StackPanel>
            <ComboBox Name="comboBoxStates" HorizontalAlignment="Left" VerticalAlignment="Top" MouseEnter="comboBoxStates_MouseEnter" Visibility="Hidden" DropDownClosed="comboBoxStates_DropDownClosed" />
        </StackPanel>        
    </Grid>
</UserControl>