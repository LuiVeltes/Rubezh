<UserControl x:Class="RubezhDevices.RubezhDevice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="614" Height="436.2" Name="window1">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem x:Name="menuItemReports" Header="Выбор устройства" Click="MenuItem_Click" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid Name="grid1">
        <ContentControl Name="contentControl1" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <StackPanel>
            <ComboBox Name="comboBox1" MouseEnter="comboBox1_MouseEnter" Visibility="Hidden" DropDownClosed="comboBox1_DropDownClosed" />
            <ComboBox Name="comboBox2" MouseEnter="comboBox2_MouseEnter" Visibility="Hidden" DropDownClosed="comboBox2_DropDownClosed" />
        </StackPanel>
        <TextBox Name="textBox1" Text="Нажмите правую кнопку мыши, чтобы увидеть меню выбора устройств." TextWrapping="WrapWithOverflow" FontSize="30" Foreground="#FF23284C" IsReadOnly="True" IsEnabled="False" />
    </Grid>
</UserControl>