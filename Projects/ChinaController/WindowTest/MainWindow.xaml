<Window x:Class="WindowTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="China SKD Window Test" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Content="Start" Click="OnStart" Width="100" Margin="2" />
            <Button Content="Stop" Click="OnStop" Width="100" Margin="2" />
        </StackPanel>
        <Grid Grid.Row="1" DataContext="{Binding JournalViewModel}">
            <DataGrid ItemsSource="{Binding JournalItems}" SelectedItem="{Binding SelectedJournalItem}" AutoGenerateColumns="False" Margin="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="SystemDateTime" Binding="{Binding JournalItem.SystemDateTime}" Width="Auto" />
                    <DataGridTextColumn Header="DeviceDateTime" Binding="{Binding JournalItem.DeviceDateTime}" Width="Auto" />
                    <DataGridTextColumn Header="EventNameType" Binding="{Binding JournalItem.JournalEventNameType}" Width="*" />
                    <DataGridTextColumn Header="Description" Binding="{Binding JournalItem.Description}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>