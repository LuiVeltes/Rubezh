<UserControl x:Class="ControllerSDK.Views.DoorConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="GetDoorConfiguration" Command="{Binding GetDoorConfigurationCommand}" Width="300" Margin="2" />
            <Button Content="SetDoorConfiguration" Command="{Binding SetDoorConfigurationCommand}" Width="300" Margin="2" />
        </StackPanel>

        <StackPanel DataContext="{Binding DoorConfiguration}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ChannelName" Margin="2" />
                <TextBox Text="{Binding ChannelName}" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="AceessState" Margin="2" />
                <TextBlock Text="{Binding AceessState}" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="AceessMode" Margin="2" />
                <TextBlock Text="{Binding AceessMode}" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="EnableMode" Margin="2" />
                <TextBox Text="{Binding EnableMode}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="IsSnapshotEnable" Margin="2" />
                <CheckBox IsChecked="{Binding IsSnapshotEnable}" Margin="2" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="DoorOpenMethod" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseDoorOpenMethod}" Width="200" Margin="2" />
                <TextBlock Text="{Binding DoorOpenMethod}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="UnlockHoldInterval" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseUnlockHoldInterval}" Width="200" Margin="2" />
                <TextBox Text="{Binding UnlockHoldInterval}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="CloseTimeout" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseCloseTimeout}" Width="200" Margin="2" />
                <TextBox Text="{Binding CloseTimeout}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="OpenAlwaysTimeIndex" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseOpenAlwaysTimeIndex}" Width="200" Margin="2" />
                <TextBox Text="{Binding OpenAlwaysTimeIndex}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="HolidayTimeIndex" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseHolidayTimeIndex}" Width="200" Margin="2" />
                <TextBox Text="{Binding HolidayTimeRecoNo}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="BreakInAlarmEnable" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseBreakInAlarmEnable}" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding IsBreakInAlarmEnable}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="RepeatEnterAlarmEnable" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseRepeatEnterAlarmEnable}" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding IsRepeatEnterAlarmEnable}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="DoorNotClosedAlarmEnable" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseDoorNotClosedAlarmEnable}" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding IsDoorNotClosedAlarmEnable}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="DuressAlarmEnable" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseDuressAlarmEnable}" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding IsDuressAlarmEnable}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="DoorTimeSection" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseDoorTimeSection}" Width="200" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="SensorEnable" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding UseSensorEnable}" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding IsSensorEnable}" Width="200" Margin="2" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>