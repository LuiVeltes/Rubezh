<UserControl x:Class="DialogBox.UserDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="350" MinHeight="100">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,0,11,11">
            <Button Content="Ok"
                    Command="{Binding OkCommand}"
                    Visibility="{Binding IsOkButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Margin="11,0,0,0"
                    Width="100"
                    IsDefault="True" />
            <Button Content="Да"
                    Command="{Binding YesCommand}"
                    Visibility="{Binding IsYesButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Margin="11,0,0,0"
                    Width="100" IsDefault="True" />
            <Button Content="Нет"
                    Command="{Binding NoCommand}"
                    Visibility="{Binding IsNoButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Margin="11,0,0,0"
                    Width="100" />
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Visibility="{Binding IsCancelButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Margin="11,0,0,0"
                    Width="100" />
        </WrapPanel>
        <Grid Margin="11">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   Visibility="{Binding IsNoneImageVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Source="/DialogBox;component/DialogBoxImages\none.png"
                   Width="50" Height="50" />
            <Image Grid.Column="0"
                   Visibility="{Binding IsInformationImageVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Source="/DialogBox;component/DialogBoxImages\information.png"
                   Width="50" Height="50" />
            <Image Grid.Column="0"
                   Visibility="{Binding IsQuestionImageVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Source="/DialogBox;component/DialogBoxImages\question.png"
                   Width="50" Height="50" />
            <Image Grid.Column="0"
                   Visibility="{Binding IsStopImageVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Source="/DialogBox;component/DialogBoxImages\stop.png"
                   Width="50" Height="50" />
            <Image Grid.Column="0"
                   Visibility="{Binding IsWarningImageVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Source="/DialogBox;component/DialogBoxImages\warning.png"
                   Width="50" Height="50" />
            <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" Foreground="White"
                       Text="{Binding Message}" />
        </Grid>
    </DockPanel>
</UserControl>