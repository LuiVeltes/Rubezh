<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ext="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended" xmlns:loc="clr-namespace:Controls">

	<ContextMenu x:Key="UpDownContextMenu">
		<loc:IconedMenuItem HorizontalAlignment="Left" Command="ApplicationCommands.Copy" ImageSource="/Controls;component/Images/BCopy.png" Text="Копировать" />
		<loc:IconedMenuItem HorizontalAlignment="Left" Command="ApplicationCommands.Cut" ImageSource="/Controls;component/Images/BCut.png" Text="Вырезать" />
		<loc:IconedMenuItem HorizontalAlignment="Left" Command="ApplicationCommands.Paste" ImageSource="/Controls;component/Images/BPaste.png" Text="Вставить" />
	</ContextMenu>

	<Style BasedOn="{StaticResource {x:Type ext:WatermarkTextBox}}" TargetType="{x:Type ext:WatermarkTextBox}">
		<Setter Property="ContextMenu" Value="{StaticResource UpDownContextMenu}" />
	</Style>

	<Style BasedOn="{StaticResource {x:Type ext:IntegerUpDown}}" TargetType="{x:Type ext:IntegerUpDown}">
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="SelectAllOnGotFocus" Value="True" />
	</Style>

	<Style BasedOn="{StaticResource {x:Type ext:DoubleUpDown}}" TargetType="{x:Type ext:DoubleUpDown}">
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="SelectAllOnGotFocus" Value="True" />
	</Style>

</ResourceDictionary>