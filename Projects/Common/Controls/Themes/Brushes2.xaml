<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="BaseWindowBackgroundBrush" StartPoint="0, 0" EndPoint="0,1">
        <GradientStop Color="LightBlue" Offset="0" />
        <GradientStop Color="Blue" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WindowBorderBrush" StartPoint="0, 0" EndPoint="0,1">
        <GradientStop Color="Black" Offset="0" />
        <GradientStop Color="Black" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0, 0" EndPoint="0,1">
        <GradientStop Color="BlueViolet" Offset="0" />
        <GradientStop Color="Blue" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DialogHeaderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Blue" Offset="0" />
        <GradientStop Color="DodgerBlue" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HighlightedBackgoundBrush" StartPoint="0, 0" EndPoint="0,1">
        <GradientStop Color="Blue" Offset="0" />
        <GradientStop Color="DarkBlue" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HighlightedBackgoundBrush2" StartPoint="0, 0" EndPoint="0,1">
        <GradientStop Color="Yellow" Offset="0" />
        <GradientStop Color="YellowGreen" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PressedBackgroundBrush" StartPoint="0, 0" EndPoint="0,1">
        <GradientStop Color="Red" Offset="0" />
        <GradientStop Color="DarkRed" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AlternativeBackgroundBrush" StartPoint="0, 0" EndPoint="0,1">
        <GradientStop Color="Gray" Offset="0" />
        <GradientStop Color="DarkGray" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="DisabledBorderBrush" Color="Azure" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="BlueViolet" />
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="RosyBrown" />

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="Magenta" />
    <SolidColorBrush x:Key="WindowBlackBackgroundBrush" Color="HotPink" />

    <LinearGradientBrush x:Key="WindowBlacHeaderkBackgroundBrush" StartPoint="0, 0" EndPoint="0, 1">
        <GradientStop Color="Gold" Offset="0" />
        <GradientStop Color="Aqua" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>