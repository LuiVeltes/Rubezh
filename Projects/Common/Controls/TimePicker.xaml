<UserControl x:Class="Controls.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Controls">
    <WrapPanel>
        <TextBox 
            Name="TextBox"
            PreviewKeyDown="TextBox_PreviewKeyDown"
            SelectionChanged="TextBox_SelectionChanged"
            TextChanged="TextBox_TextChanged" 
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            OverridesDefaultStyle="True"
            MinWidth="0"
            Width="37"
            Margin="1">
        </TextBox>
        <Button Name="Inc" Click="Inc_Click" >
            <Image Source="/Controls;component/Images/AddTime.png" Width="16" Height="16" />    
        </Button>
        <Button Name="Dec" Click="Dec_Click" Margin="1 0 0 0" >
            <Image Source="/Controls;component/Images/DeleteTime.png" Width="16" Height="16" />    
        </Button>
    </WrapPanel>
</UserControl>
