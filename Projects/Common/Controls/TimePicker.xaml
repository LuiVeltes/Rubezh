<UserControl x:Class="Controls.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Controls">
    <WrapPanel>
        <TextBox 
            Name="TextBox"
            PreviewKeyDown="TextBox_PreviewKeyDown"
            SelectionChanged="TextBox_SelectionChanged"
            TextChanged="TextBox_TextChanged" 
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            OverridesDefaultStyle="True"
            LostFocus="TextBox_LostFocus"
            PreviewTextInput="TextBox_PreviewTextInput"
            MinWidth="0"
            Width="37"
            Margin="1">
        </TextBox>
        <StackPanel>
            <Button Name="Inc" Click="Inc_Click" Width="20" Height="16" >
                <Image Source="/Controls;component/Images/AddTime.png" />
            </Button>
            <Button Name="Dec" Click="Dec_Click" Width="20" Height="16" >
                <Image Source="/Controls;component/Images/DeleteTime.png" />
            </Button>
        </StackPanel>
        
    </WrapPanel>
</UserControl>