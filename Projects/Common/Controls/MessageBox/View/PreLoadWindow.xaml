<Window x:Class="Controls.MessageBox.PreLoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen" WindowStyle="None"
        Height="100" Width="300" Background="{StaticResource BackgroundBrush}" Foreground="White">
    <Border CornerRadius="5">
        <TextBlock Text="{Binding PreLoadText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17" FontWeight="Black" Foreground="White"/>
    </Border>
</Window>
