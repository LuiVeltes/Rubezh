<UserControl x:Class="Controls.PhotoSelectation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Name="PhotoImage" Stretch="UniformToFill" />
        <Button Grid.Row="1" Content="Загрузить фото" Width="120" HorizontalAlignment="Right" Click="Button_Click" />
    </Grid>
</UserControl>
