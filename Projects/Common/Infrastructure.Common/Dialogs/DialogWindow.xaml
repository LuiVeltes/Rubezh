<Window x:Class="Infrastructure.Common.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	    FontSize="12"
	    FontFamily="Arial"
	    WindowStartupLocation="CenterOwner"
	    SizeToContent="Manual"
	    ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
	    KeyDown="OnKeyDown"
        Loaded="OnLoaded">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="11" Background="{DynamicResource WindowBlackBackgroundBrush}">
        <Border BorderBrush="#747474" BorderThickness="1" CornerRadius="11">
            <DockPanel>
                <Border DockPanel.Dock="Top" Height="30" MouseMove="Header_MouseMove" CornerRadius="11 11 0 0" >
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ADADAD" Offset="0" />
                            <GradientStop Color="#676767" Offset="0.5" />
                            <GradientStop Color="#303030"  Offset="0.99" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Name="_captionTextBlock" VerticalAlignment="Center" Margin="10, 0, 0, 0" HorizontalAlignment="Left" Foreground="White" FontWeight="Bold" />
                        <Button Grid.Column="1" Margin="0, 0, 10, 0" Click="OnCloseButton" Style="{StaticResource ToolarButtonStyle}">
                            <Image Source="/Controls;component/Images/Close.png" Height="16" />
                        </Button>
                    </Grid>
                </Border>
                <Thumb DockPanel.Dock="Bottom" DragDelta="Thumb_DragDelta" HorizontalAlignment="Right" Width="10" Height="10" Style="{DynamicResource ResizeThumbStyle}" />
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ContentControl Grid.Row="0" Name="_content" />
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Name="_okCancelStackPanel" Margin="0, 4, 0, 0" >
                        <Button x:Name="bOk" Content="OK" Command="{Binding SaveCommand}" Width="100" Margin="0, 0, 4, 0" IsDefault="True" />
                        <Button x:Name="bCancel" Content="Отмена" Command="{Binding CancelCommand}" Width="100" />
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Border>
    </Border>
</Window>