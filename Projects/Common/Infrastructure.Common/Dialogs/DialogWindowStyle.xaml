<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
    //
    // Styles for Dialog Windows
    //
    //-->
    <Style x:Key="ResizeGripStyleKey" TargetType="{x:Type ResizeGrip}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid x:Name="ResizeGrippers" Background="#00ffffff">
                        <Path
                        Margin="1,1,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="10"
                        Width="10"
                        Stretch="Fill"
                        Opacity="1"
                        Data="M 9,9 C9,9 9,11 9,11 9,11 11,11 11,11 11,11 11,9 11,9 11,9 9,9 9,9 zM 5,9 C5,9 5,11 5,11 5,11 7,11 7,11 7,11 7,9 7,9 7,9 5,9 5,9 zM 1,9 C1,9 1,11 1,11 1,11 3,11 3,11 3,11 3,9 3,9 3,9 1,9 1,9 zM 5,5 C5,5 5,7 5,7 5,7 7,7 7,7 7,7 7,5 7,5 7,5 5,5 5,5 zM 9,5 C9,5 9,7 9,7 9,7 11,7 11,7 11,7 11,5 11,5 11,5 9,5 9,5 zM 9,1 C9,1 9,3 9,3 9,3 11,3 11,3 11,3 11,1 11,1 11,1 9,1 9,1 z"
                        Fill="White" SnapsToDevicePixels="True" />
                        <Path
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="10"
                        Width="10"
                        Stretch="Fill"
                        Opacity="1"
                        Data="M 8,8 C8,8 8,10 8,10 8,10 10,10 10,10 10,10 10,8 10,8 10,8 8,8 8,8 zM 4,8 C4,8 4,10 4,10 4,10 6,10 6,10 6,10 6,8 6,8 6,8 4,8 4,8 zM 0,8 C0,8 0,10 0,10 0,10 2,10 2,10 2,10 2,8 2,8 2,8 0,8 0,8 zM 4,4 C4,4 4,6 4,6 4,6 6,6 6,6 6,6 6,4 6,4 6,4 4,4 4,4 zM 8,4 C8,4 8,6 8,6 8,6 10,6 10,6 10,6 10,4 10,4 10,4 8,4 8,4 zM 8,0 C8,0 8,2 8,2 8,2 10,2 10,2 10,2 10,0 10,0 10,0 8,0 8,0 z"
                        Fill="{DynamicResource AgilentMediumGray}" SnapsToDevicePixels="True" />
                    </Grid>
                    <ControlTemplate.Triggers></ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <SolidColorBrush x:Key="CloseButtonBackgroundBrush" Color="#FF2136C2"/>
    <SolidColorBrush x:Key="CloseButtonBorderBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="CloseButtonFocusBorderBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="CloseButtonMouseOverBrush" Color="#5AFFFFFF"/>
    <SolidColorBrush x:Key="CloseButtonPressedBackgroundBrush" Color="#495268"/>
    <SolidColorBrush x:Key="CloseButtonPressedHighlightBrush" Color="#2BA5A5A5"/>
    <SolidColorBrush x:Key="CloseButtonShineBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="MessageBoxBackgroundBrush" Color="#FF214F18"/>
    <SolidColorBrush x:Key="MessageBoxBorderBrush" Color="#FFFFFFFF"/>
    <LinearGradientBrush x:Key="MessageBoxHeaderBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF214F18" Offset="0"/>
        <GradientStop Color="#FF20361C" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="MessageBoxTitleBrush" Color="White" />
    <!-- Styles. -->
    <Style x:Key="MessageBoxTitle" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="Foreground" Value="{DynamicResource MessageBoxTitleBrush}" />
    </Style>
    <Path x:Key="CloseButtonPath"
              Data="M1,1 L7.4999998,7.334 M7.4999998,1 L0.99999997,7.334"
              Stretch="Fill"
              Stroke="White"
              StrokeEndLineCap="Square"
              StrokeStartLineCap="Square"
              StrokeThickness="3" />
    <Style x:Key="CloseButton" TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Height" Value="18" />
        <Setter Property="Width" Value="18" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="IsCancel" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*" />
                            <RowDefinition Height="0.5*" />
                        </Grid.RowDefinitions>
                        <Border x:Name="border"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Grid.RowSpan="2"
                                    SnapsToDevicePixels="True" />
                        <ContentPresenter x:Name="content"
                                              Grid.RowSpan="2"
                                              HorizontalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="Center" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource CloseButtonFocusBorderBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment" Value="Center" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="Black" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="DialogHelpButton" TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Height" Value="18" />
        <Setter Property="Width" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Visibility" Value="Collapsed" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*" />
                            <RowDefinition Height="0.5*" />
                        </Grid.RowDefinitions>
                        <Border x:Name="border"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            CornerRadius="3"
                            Grid.RowSpan="2"
                            SnapsToDevicePixels="True" />
                        <ContentPresenter x:Name="content"
                            Grid.RowSpan="2"
                            Margin="0 -2"
                            HorizontalAlignment="Center"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            VerticalAlignment="Center" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource CloseButtonFocusBorderBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment" Value="Center" />
        <!--<Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource AgilentBlue}"/>
            </Trigger>
        </Style.Triggers>-->
    </Style>
    <Style x:Key="DialogWindow" TargetType="{x:Type Window}" >
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border BorderThickness="1" CornerRadius="0 0 4 4" Background="{DynamicResource AgilentLightGray}" BorderBrush="{DynamicResource AgilentGray}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid x:Name="PART_Title" Background="{DynamicResource AgilentBlackGradient}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="30" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Column="0"
                                    Style="{DynamicResource MessageBoxTitle}"
                                    Content="{TemplateBinding Title}" />
                                <Button
                                    x:Name="PART_Help"
                                    Grid.Column="1"
                                    Style="{StaticResource DialogHelpButton}"
                                    Padding="3"
                                    Content="?"
                                    />
                                <Button
                                    x:Name="PART_Close"
                                    Grid.Column="2"
                                    Style="{StaticResource CloseButton}"
                                    Padding="3" >
                                    <Path
                                        Data="M1,1 L7.4999998,7.334 M7.4999998,1 L0.99999997,7.334"
                                        Stretch="Fill"
                                        Stroke="White"
                                        StrokeEndLineCap="Square"
                                        StrokeStartLineCap="Square"
                                        StrokeThickness="3" />
                                </Button>
                            </Grid>
                            <AdornerDecorator Grid.Row="1">
                                <ContentPresenter Content="{TemplateBinding Content}" Margin="{TemplateBinding Margin}" />
                            </AdornerDecorator>
                            <ResizeGrip x:Name="WindowResizeGrip"
                                        Grid.Row="1"
                                        Margin="0 0 -3 -3"
                                        Style="{StaticResource ResizeGripStyleKey}"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        IsTabStop="False"
                            />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>