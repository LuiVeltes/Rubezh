<UserControl x:Class="Infrastructure.Common.BalloonTrayTip.Views.BalloonToolTipView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Grid>
        <tb:TaskbarIcon
            x:Name="MyNotifyIcon"
            IconSource="../Icons/Error.ico"
            ToolTipText=""
            MouseDown="MyNotifyIcon_MouseDown"
            TrayBalloonTipClicked="MyNotifyIcon_TrayBalloonTipClosed"
            TrayBalloonTipClosed="MyNotifyIcon_TrayBalloonTipClosed"
            Visibility="Hidden"/>
    </Grid>
</UserControl>
