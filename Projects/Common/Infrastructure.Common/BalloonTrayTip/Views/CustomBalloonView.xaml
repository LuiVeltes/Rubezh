<UserControl x:Class="Infrastructure.Common.BalloonTrayTip.Views.CustomBalloonView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:tb="http://www.hardcodet.net/taskbar"
  x:Name="me"
  MaxWidth="220"
  Height="Auto"
 >
        <Border x:Name="grid" MouseLeftButtonDown="grid_MouseDown" Width="220" Height="Auto"
            CornerRadius="5"
            BorderThickness="1"
            BorderBrush="{DynamicResource WindowBorderBrush}" Background="{DynamicResource BackgroundBrush}">
            <Border.Effect>
                <DropShadowEffect Color="#747474"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Margin="10 5 10 0" VerticalAlignment="Top" Text="{Binding BalloonTitle}" TextWrapping="Wrap" Foreground="#ECAD25" FontWeight="Bold"/>
                <Path
                    Margin="10 0"
                    Stretch="Fill"
                    Height="1"
                    Data="M26,107 L220.04123,107" SnapsToDevicePixels="True"
                    Stroke="{DynamicResource WindowBorderBrush}">
                 </Path>
                <TextBlock Margin="10 0 10 5" VerticalAlignment="Bottom" Text="{Binding BalloonText}" TextWrapping="Wrap" Foreground="#ECAD25" FontWeight="Bold"/>
            </StackPanel>
        </Border>
</UserControl>
