<UserControl x:Class="Infrastructure.Common.MessageBox.MessageBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="350" MinHeight="100">
    
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,0,11,11">
            <Button Content="Копировать" Command="{Binding CopyCommand}" Margin="10,0,0,0" Width="100"
                    Visibility="{Binding IsException, Converter={StaticResource BoolToVisibilityConverter}}" />
            <Button Content="Ok" Command="{Binding OkCommand}" IsDefault="True" Margin="10,0,0,0" Width="100"
                    Visibility="{Binding IsOkButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
            <Button Content="Да" Command="{Binding YesCommand}" IsDefault="True" Margin="10,0,0,0" Width="100"
                    Visibility="{Binding IsYesButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
            <Button Content="Нет" Command="{Binding NoCommand}" Margin="10,0,0,0" Width="100"
                    Visibility="{Binding IsNoButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Margin="10,0,0,0" Width="100"
                    Visibility="{Binding IsCancelButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>
        <Grid Margin="11">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Width="50" Height="50">
                <Image Source="/Controls;component/MessageBox\DialogBoxImages\information.png"
                   Visibility="{Binding IsInformationImageVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Image Source="/Controls;component/MessageBox\DialogBoxImages\question.png"
                   Visibility="{Binding IsQuestionImageVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Image Source="/Controls;component/MessageBox\DialogBoxImages\warning.png"
                   Visibility="{Binding IsWarningImageVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Image Source="/Controls;component/MessageBox\DialogBoxImages\warning.png"
                   Visibility="{Binding IsErrorImageVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>

            <ScrollViewer Grid.Column="1" Margin="2" Visibility="{Binding IsException, Converter={StaticResource BoolToVisibilityConverter}}" VerticalScrollBarVisibility="Auto">
                <TextBox Text="{Binding Message}" TextWrapping="Wrap" />
            </ScrollViewer>

            <TextBlock Grid.Column="1" Text="{Binding Message}" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" Foreground="White"
                       Visibility="{Binding IsException, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}" />
        </Grid>
    </DockPanel>
</UserControl>