<Window x:Class="Infrastructure.Common.Windows.Views.WindowBaseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
		
		Icon="{Binding Icon}"
        WindowStartupLocation="{Binding StartupLocation}"
        Title="{Binding Title}"
        Height="{Binding Height}"
		Width="{Binding Width}"
        MinWidth="{Binding MinWidth}" 
		MinHeight="{Binding MinHeight}"
		MaxHeight="{Binding MaxHeight}"
		MaxWidth="{Binding MaxWidth}"
        Closing="Window_Closing"
        Closed="Window_Closed">

	<Border BorderBrush="Black" BorderThickness="1" CornerRadius="11" Background="{DynamicResource WindowBlackBackgroundBrush}">
		<Border BorderBrush="#747474" BorderThickness="1" CornerRadius="11">
			<ContentPresenter x:Name="_content"/>
		</Border>
	</Border>
</Window>