<UserControl x:Class="Infrastructure.Common.Windows.Views.ApplicationView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<DockPanel>
		<ContentPresenter DockPanel.Dock="Bottom" Content="{Binding ContentFotter}" />
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition>
					<ColumnDefinition.Style>
						<Style TargetType="{x:Type ColumnDefinition}">
							<Style.Triggers>
								<DataTrigger Value="False" Binding="{Binding RightContent, Converter={StaticResource NullToBoolConverter}}">
									<Setter Property="Width" Value="0" />
								</DataTrigger>
								<DataTrigger Value="True" Binding="{Binding RightContent, Converter={StaticResource NullToBoolConverter}}">
									<Setter Property="Width" Value="*" />
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</ColumnDefinition.Style>
				</ColumnDefinition>
			</Grid.ColumnDefinitions>
			<DockPanel Grid.Row="0">
				<Border Background="{DynamicResource WindowBlacHeaderkBackgroundBrush}" DockPanel.Dock="Top">
					<ContentPresenter Content="{Binding Toolbar}" />
				</Border>
				<ContentPresenter Content="{Binding}" ContentTemplateSelector="{StaticResource HierarhicalDataTemplateSelector}" />
			</DockPanel>
			<GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Cursor="SizeWE" Visibility="{Binding RightContent, Converter={StaticResource NullToVisibilityConverter}}" />
			<ContentPresenter Grid.Column="2" Content="{Binding RightContent}" />
		</Grid>
	</DockPanel>
</UserControl>