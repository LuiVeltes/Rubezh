<UserControl x:Class="Infrastructure.Common.Windows.Views.ApplicationHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="auto" />
		</Grid.ColumnDefinitions>
		<Image Grid.Column="0" Margin="10 5 0 5" HorizontalAlignment="Left" Source="/Controls;component/Images/logo.png" Opacity="0.5" Width="32" Height="26" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
		<TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Content.Title}" Foreground="White" FontFamily="Arial" FontSize="15" Margin="0 5" Opacity="0.5" />
		<StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0, 2, 2, 0">
			<Menu Background="Transparent" VerticalAlignment="Center" Visibility="{Binding Content.AllowHelp, Converter={StaticResource BoolToVisibilityConverter}}">
				<MenuItem>
					<MenuItem.Header>
						<Image Source="/Controls;component/Images/Help.png" Height="12" Margin="-2" />
					</MenuItem.Header>
					<MenuItem Header="Помощь" Click="OnShowHelp" />
					<MenuItem Header="О программе" Click="OnShowAbout" />
				</MenuItem>
			</Menu>
			<Button Click="OnMinimize" ToolTip="Свернуть" Style="{StaticResource ToolarButtonStyle}" Visibility="{Binding Content.AllowMinimize, Converter={StaticResource BoolToVisibilityConverter}}">
				<Image Source="/Controls;component/Images/Minimize.png" Height="12" Margin="-2" />
			</Button>
			<Button Click="OnMaximize" ToolTip="Распахнуть" Style="{StaticResource ToolarButtonStyle}" Visibility="{Binding Content.AllowMaximize, Converter={StaticResource BoolToVisibilityConverter}}">
				<Image Source="/Controls;component/Images/Maximize.png" Height="12" Margin="-2" />
			</Button>
			<Button Click="OnClose" ToolTip="Закрыть" Style="{StaticResource ToolarButtonStyle}">
				<Image Source="/Controls;component/Images/Close.png" Height="12" Margin="-2" />
			</Button>
		</StackPanel>
		<ContentPresenter Content="{Binding Content.Toolbar}" Grid.Row="1" Grid.ColumnSpan="3"/>
	</Grid>
</UserControl>
