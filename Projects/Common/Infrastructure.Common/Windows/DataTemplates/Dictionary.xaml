<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:Views="clr-namespace:Infrastructure.Common.Windows.Views"
                    xmlns:ViewModels="clr-namespace:Infrastructure.Common.Windows.ViewModels">

	<DataTemplate DataType="{x:Type ViewModels:WindowBaseViewModel}">
		<Views:WindowBaseView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:ConnectionViewModel}">
		<Views:ConnectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:CaptionedViewModel}">
		<Views:CaptionedView />
	</DataTemplate>


</ResourceDictionary>