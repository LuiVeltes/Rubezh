<Window x:Class="TestWebServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тестовый веб сервер" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Запуск" Click="Button_Click" Width="100" Margin="2" />
        <TextBox Grid.Row="1" Name="textBox" Text="{Binding Text}" TextWrapping="Wrap" Margin="2" />
    </Grid>
</Window>