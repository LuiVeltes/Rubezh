<UserControl x:Class="FireMonitor.Multiclient.Views.HostView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Border BorderBrush="Green" BorderThickness="5" CornerRadius="10" Padding="10">
		<DockPanel>
			<TextBlock HorizontalAlignment="Center" DockPanel.Dock="Top" FontSize="20" Text="{Binding Caption}" />
			<ContentPresenter Content="{Binding HostControl}" />
		</DockPanel>
	</Border>
</UserControl>