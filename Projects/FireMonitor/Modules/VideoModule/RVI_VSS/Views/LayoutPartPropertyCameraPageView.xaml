<UserControl x:Class="VideoModule.RVI_VSS.Views.LayoutPartPropertyCameraPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:VideoModule.Converters"
             MinWidth="400" MinHeight="400">
    <UserControl.Resources>
        <converters:CameraToStringConverter x:Key="CameraToStringConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding PropertyViewModels}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Binding="{Binding CellName}" Header="Название окна" />
                <DataGridTemplateColumn Header="Видеокамеры">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox HorizontalAlignment="Stretch" Width="Auto" ItemsSource="{Binding Cameras}" SelectedValue="{Binding SelectedCamera,  Converter={StaticResource CameraToStringConverter}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ., Converter={StaticResource CameraToStringConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>