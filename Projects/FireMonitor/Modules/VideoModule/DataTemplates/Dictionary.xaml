<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:ViewModels="clr-namespace:VideoModule.ViewModels" 
                    xmlns:Views="clr-namespace:VideoModule.Views"
                    xmlns:RviViewModels="clr-namespace:VideoModule.RVI_VSS.ViewModels" 
                    xmlns:RviViews="clr-namespace:VideoModule.RVI_VSS.Views"
                    xmlns:rviVss="clr-namespace:VideoModule.Views.RVI_VSS">

	<DataTemplate DataType="{x:Type ViewModels:CameraTooltipViewModel}">
		<Views:CameraTooltipView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:LayoutPartCameraViewModel}">
		<Views:LayoutPartCameraView />
	</DataTemplate>
    
    <DataTemplate DataType="{x:Type ViewModels:LayoutPartPropertyCameraPageViewModel}">
		<Views:LayoutPartPropertyCameraPageView />
	</DataTemplate>

    <DataTemplate DataType="{x:Type RviViewModels:LayoutMultiCameraViewModel}">
        <RviViews:LayoutMultiCameraView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type RviViewModels:LayoutPartPropertyCameraPageViewModel}">
        <RviViews:LayoutPartPropertyCameraPageView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type RviViewModels:ArchiveViewModel}">
        <RviViews:ArchiveView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type RviViewModels:CamerasViewModel}">
        <RviViews:CamerasView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type RviViewModels:CameraDetailsViewModel}">
        <rviVss:CameraDetailsView />
    </DataTemplate>

</ResourceDictionary>