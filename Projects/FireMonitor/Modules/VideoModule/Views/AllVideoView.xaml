<UserControl x:Class="VideoModule.Views.AllVideoView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:views="clr-namespace:VideoModule.Views">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<views:LayoutMultiCameraView Grid.Row="0" DataContext="{Binding LayoutMultiCameraViewModel}" />
		<GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Cursor="SizeNS" />
		<views:CamerasView Grid.Row="2" DataContext="{Binding CamerasViewModel}" />
	</Grid>
</UserControl>