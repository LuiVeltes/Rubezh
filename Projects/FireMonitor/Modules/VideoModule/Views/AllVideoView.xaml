<UserControl x:Class="VideoModule.Views.AllVideoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:VideoModule.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <views:CamerasView Grid.Row="0" DataContext="{Binding CamerasViewModel}" />
        <views:LayoutMultiCameraView Grid.Row="1" DataContext="{Binding LayoutMultiCameraViewModel}" />
    </Grid>
</UserControl>