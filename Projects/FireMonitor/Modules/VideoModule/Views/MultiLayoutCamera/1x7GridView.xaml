<UserControl x:Class="VideoModule.Views._1X7GridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:VideoModule.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <views:LayoutPartCameraView x:Name="_grid00" Grid.Row ="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="5"  Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid03" Grid.Row ="0" Grid.Column="6" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid13" Grid.Row ="2" Grid.Column="6" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid23" Grid.Row ="4" Grid.Column="6" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid33" Grid.Row ="6" Grid.Column="6" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid30" Grid.Row ="6" Grid.Column="0" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid31" Grid.Row ="6" Grid.Column="2" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid32" Grid.Row ="6" Grid.Column="4" Background="{DynamicResource BackgroundBrush}" />
        
        <GridSplitter Grid.Row="1" Grid.Column="6" Height="5" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Row="3" Grid.Column="6" Height="5" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Row="5" Grid.Column="0" Height="5" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.ColumnSpan="7" />

        <GridSplitter Grid.Row="6" Grid.Column="1" Width="5" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row="6" Grid.Column="3" Width="5" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row="0" Grid.Column="5" Width="5" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Center" Grid.RowSpan="7" />
    </Grid>
</UserControl>