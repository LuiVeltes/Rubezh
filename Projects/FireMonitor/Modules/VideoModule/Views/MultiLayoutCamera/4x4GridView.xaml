<UserControl x:Class="VideoModule.Views._4X4GridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:VideoModule.Views">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <views:LayoutPartCameraView x:Name="_grid00" Grid.Row ="0" Grid.Column="0" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid01" Grid.Row ="0" Grid.Column="2" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid02" Grid.Row ="0" Grid.Column="4" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid03" Grid.Row ="0" Grid.Column="6" Background="{DynamicResource BackgroundBrush}" />

        <views:LayoutPartCameraView x:Name="_grid10" Grid.Row ="2" Grid.Column="0" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid11" Grid.Row ="2" Grid.Column="2" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid12" Grid.Row ="2" Grid.Column="4" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid13" Grid.Row ="2" Grid.Column="6" Background="{DynamicResource BackgroundBrush}" />

        <views:LayoutPartCameraView x:Name="_grid20" Grid.Row ="4" Grid.Column="0" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid21" Grid.Row ="4" Grid.Column="2" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid22" Grid.Row ="4" Grid.Column="4" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid23" Grid.Row ="4" Grid.Column="6" Background="{DynamicResource BackgroundBrush}" />

        <views:LayoutPartCameraView x:Name="_grid30" Grid.Row ="6" Grid.Column="0" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid31" Grid.Row ="6" Grid.Column="2" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid32" Grid.Row ="6" Grid.Column="4" Background="{DynamicResource BackgroundBrush}" />
        <views:LayoutPartCameraView x:Name="_grid33" Grid.Row ="6" Grid.Column="6" Background="{DynamicResource BackgroundBrush}" />

        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="7" Width="5" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row="0" Grid.Column="3" Grid.RowSpan="7" Width="5" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row="0" Grid.Column="5" Grid.RowSpan="7" Width="5" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7" Height="5" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="7" Height="5" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="7" Height="5" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
    </Grid>
</UserControl>
