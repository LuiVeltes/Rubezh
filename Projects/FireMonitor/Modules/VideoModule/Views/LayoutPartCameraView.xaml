<UserControl x:Class="VideoModule.Views.LayoutPartCameraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid IsVisibleChanged="UIElement_OnIsVisibleChanged" >
        <Grid.Background>
            <VisualBrush AlignmentX="Center" Stretch="Uniform">
                <VisualBrush.Visual>
                    <Image Name="_image" Source="{Binding CameraViewModel.ImageSource, Mode=OneWay}" />
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>
    </Grid>
</UserControl>