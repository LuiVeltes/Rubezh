<UserControl x:Class="VideoModule.Views.CameraDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400" MaxWidth="600" MaxHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Border Width="50" Height="50" Margin="0, 0, 0, 5" Background="{Binding CameraPicture}" BorderThickness="0" />
                <StackPanel Orientation="Horizontal">
                    <Image Width="16" Height="16" VerticalAlignment="Center" Source="{Binding Camera.StateClass, Converter={StaticResource XStateClassToIconConverter}}" />
                    <TextBlock Margin="5, 1, 1, 1" VerticalAlignment="Center" Text="{Binding Camera.StateClass, Converter={StaticResource XStateClassToStringConverter}}" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <TabControl Grid.Row="1">
            <TabItem Header="Основные">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl Background="White">
                        <ItemsControl.Items>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock Width="110" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Text="Устройство: " />
                                <WrapPanel>
                                    <TextBlock>
										<Hyperlink Command="{Binding ShowCommand}" Style="{StaticResource HyperlinkStyle2}">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16" Source="/Controls;component/Images/BVideo.png" />
												<TextBlock Text="{Binding Camera.PresentationName}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="2" />
                                            </StackPanel>
                                        </Hyperlink>
								    </TextBlock>
                                </WrapPanel>
                            </StackPanel>
                            <WrapPanel Margin="2">
                                <TextBlock Width="110" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Text="Зона или Логика: " />
                                <TextBlock>
									<Hyperlink Command="{Binding ShowZoneCommand}" Style="{StaticResource HyperlinkStyle2}">
										<StackPanel Orientation="Horizontal">
											<Image Width="16" Source="/Controls;component/Images/zone.png" />
											<TextBlock Text="{Binding PresentationZones}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="2" />
										</StackPanel>
									</Hyperlink>
								</TextBlock>
                                <WrapPanel.Style>
                                    <Style>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PresentationZones}" Value="{x:Null}">
                                                <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding PresentationZones}" Value="">
                                                <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                            </WrapPanel>
                            <ItemsControl ItemsSource="{Binding PlanNames}" Margin="2" >
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Width="110" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Text="План: " />
                                            <TextBlock>
												<Hyperlink Command="{Binding ShowOnPlanCommand}" Style="{StaticResource HyperlinkStyle2}">
													<StackPanel Orientation="Horizontal">
														<Image Width="16" Source="/Controls;component/Images/CMap.png" Margin="1" />
														<TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="1" />
													</StackPanel>
												</Hyperlink>
											</TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ItemsControl.Items>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
