<UserControl x:Class="VideoModule.Views._3X3GridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Name="_grid00" Grid.Row ="0" Grid.Column="0" Background="{DynamicResource BackgroundBrush}" CornerRadius="5"/>
        <Border Name="_grid01" Grid.Row ="0" Grid.Column="2" Background="{DynamicResource BackgroundBrush}" CornerRadius="5"/>
        <Border Name="_grid02" Grid.Row ="0" Grid.Column="4" Background="{DynamicResource BackgroundBrush}" CornerRadius="5"/>
        
        <Border Name="_grid10" Grid.Row ="2" Grid.Column="0" Background="{DynamicResource BackgroundBrush}" CornerRadius="5"/>
        <Border Name="_grid11" Grid.Row ="2" Grid.Column="2" Background="{DynamicResource BackgroundBrush}" CornerRadius="5"/>
        <Border Name="_grid12" Grid.Row ="2" Grid.Column="4" Background="{DynamicResource BackgroundBrush}" CornerRadius="5"/>
        
        <Border Name="_grid20" Grid.Row ="4" Grid.Column="0" Background="{DynamicResource BackgroundBrush}" CornerRadius="5"/>
        <Border Name="_grid21" Grid.Row ="4" Grid.Column="2" Background="{DynamicResource BackgroundBrush}" CornerRadius="5"/>
        <Border Name="_grid22" Grid.Row ="4" Grid.Column="4" Background="{DynamicResource BackgroundBrush}" CornerRadius="5"/>
        
        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" Width="5" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row="0" Grid.Column="3" Grid.RowSpan="5" Width="5" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Height="5" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Height="5" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
    </Grid>
</UserControl>
