<UserControl x:Class="VideoModule.Views._1X7GridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Name="_grid00" Row ="0" Column="0" Grid.RowSpan="5" Grid.ColumnSpan="5"/>
        <Grid Name="_grid03" Row ="0" Column="6"/>
        <Grid Name="_grid13" Row ="2" Column="6"/>
        <Grid Name="_grid23" Row ="4" Column="6"/>
        <Grid Name="_grid33" Row ="6" Column="6"/>
        <Grid Name="_grid30" Row ="6" Column="0"/>
        <Grid Name="_grid31" Row ="6" Column="2"/>
        <Grid Name="_grid32" Row ="6" Column="4"/>
        <GridSplitter Grid.Row="1" Grid.Column="6" Height="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Row="3" Grid.Column="6" Height="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        <GridSplitter Grid.Row="5" Grid.Column="0" Height="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.ColumnSpan="7" />

        <GridSplitter Grid.Row="6" Grid.Column="1" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row="6" Grid.Column="3" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
        <GridSplitter Grid.Row="0" Grid.Column="5" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Center" Grid.RowSpan="7" />
    </Grid>
</UserControl>
