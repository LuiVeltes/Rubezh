<UserControl x:Class="VideoModule.Views.VideoView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<DataGrid ItemsSource="{Binding Cameras}" SelectedItem="{Binding SelectedCamera}">
		<DataGrid.Columns>
			<DataGridTextColumn Width="200" Binding="{Binding Camera.Name}" Header="Название" />
			<DataGridTextColumn Width="200" Binding="{Binding Camera.Address}" Header="URL" />
			<DataGridTextColumn Width="*" Binding="{Binding PresenrationZones}" Header="Зоны" />
		</DataGrid.Columns>
		<DataGrid.ContextMenu>
			<ContextMenu>
				<IconedMenuItem Command="{Binding ShowOnPlanCommand}" ImageSource="/Controls;component/Images/map_black.png" Text="Показать на плане" />
			</ContextMenu>
		</DataGrid.ContextMenu>
	</DataGrid>
</UserControl>