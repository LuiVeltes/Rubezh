<UserControl x:Class="SKDModule.Views.EmployeeFilterView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
			 xmlns:Views="clr-namespace:SKDModule.Views"
			 Height="400" Width="600">
	<Grid>
		<DockPanel>
			<StackPanel DockPanel.Dock="Bottom">
				<Button Content="Сброс" Width="100" HorizontalAlignment="Right" Command="{Binding ResetCommand}" />
			</StackPanel>
			<TabControl>
				<TabItem Header="Отделы">
					<tree:TreeList Focusable="True" Source="{Binding RootDepartments}">
						<tree:TreeList.View>
							<GridView>
								<GridViewColumn>
									<GridViewColumn.CellTemplate>
										<DataTemplate>
											<StackPanel Orientation="Horizontal">
												<CheckBox IsChecked="{Binding IsChecked}" VerticalAlignment="Center" Command="{Binding DepartmentCheckedCommand}"/>
												<TextBlock Text="{Binding Department.Name}" VerticalAlignment="Center" Margin="2" />
											</StackPanel>
										</DataTemplate>
									</GridViewColumn.CellTemplate>
								</GridViewColumn>
							</GridView>
						</tree:TreeList.View>
					</tree:TreeList>
				</TabItem>
				<TabItem Header="Должности">
					<ListBox ItemsSource="{Binding Positions.Items}">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<CheckBox IsChecked="{Binding IsChecked}" VerticalAlignment="Center" />
									<TextBlock Text="{Binding Position.Name}" VerticalAlignment="Center" Margin="2" />
								</StackPanel>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</TabItem>
				<Views:FilterMarkDeletedTabItem />
				<Views:FilterOrganizationTabItem />
			</TabControl>
		</DockPanel>
	</Grid>
</UserControl>