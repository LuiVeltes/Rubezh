<UserControl x:Class="SKDModule.Views.EmployeeFilterView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
			 xmlns:Views="clr-namespace:SKDModule.Views"
			 Height="400" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TabControl Grid.Row="0">
			<TabItem Header="Отделы">
				<tree:TreeList Focusable="True" Source="{Binding RootDepartments}">
					<tree:TreeList.View>
						<GridView>
							<GridViewColumn>
								<GridViewColumn.CellTemplate>
									<DataTemplate>
										<StackPanel Orientation="Horizontal">
											<CheckBox IsChecked="{Binding IsChecked}" VerticalAlignment="Center" Command="{Binding DepartmentCheckedCommand}"/>
											<TextBlock Text="{Binding Department.Name}" VerticalAlignment="Center" Margin="2" />
										</StackPanel>
									</DataTemplate>
								</GridViewColumn.CellTemplate>
							</GridViewColumn>
						</GridView>
					</tree:TreeList.View>
				</tree:TreeList>
			</TabItem>
			<TabItem Header="Должности">
				<ListBox ItemsSource="{Binding Positions.Items}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<CheckBox IsChecked="{Binding IsChecked}" VerticalAlignment="Center" />
								<TextBlock Text="{Binding Position.Name}" VerticalAlignment="Center" Margin="2" />
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</TabItem>
			<Views:FilterMarkDeletedTabItem />
			<TabItem Header="Организация">
				<ItemsControl ItemsSource="{Binding AvailableOrganizations}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<RadioButton GroupName="AvailableOrganizations" Content="{Binding Name}" IsChecked="{Binding IsChecked, Mode=TwoWay}" Margin="5" Foreground="White" FontSize="14" />
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</TabItem>
			<TabItem Header="Сотрудники/Посетители" Visibility="{Binding HasManyPersonTypes, Converter={StaticResource BoolToVisibilityConverter}}">
				<StackPanel>
					<RadioButton GroupName="PersonTypes" Content="Сотрудники" IsChecked="{Binding IsEmployeesAllowed, Mode=TwoWay}" Margin="5" Foreground="White" FontSize="14" />
					<RadioButton GroupName="PersonTypes" Content="Посетители" IsChecked="{Binding IsGuestsAllowed, Mode=TwoWay}" Margin="5" Foreground="White" FontSize="14" />
				</StackPanel>
			</TabItem>
		</TabControl>
		<Button Grid.Row="1" Content="Сброс" Width="120" HorizontalAlignment="Right" Command="{Binding ResetCommand}" />
	</Grid>
</UserControl>