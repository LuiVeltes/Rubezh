<UserControl x:Class="SKDModule.Views.EmployeeDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400">
    <TabControl>
        <TabItem Header="Основные">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Фамилия" HorizontalAlignment="Right" />
                <Label Grid.Row="1" Grid.Column="0" Content="Имя" HorizontalAlignment="Right" />
                <Label Grid.Row="2" Grid.Column="0" Content="Отчество" HorizontalAlignment="Right" />
                <Label Grid.Row="3" Grid.Column="0" Content="Должность" HorizontalAlignment="Right" />
                <Label Grid.Row="4" Grid.Column="0" Content="Тип" HorizontalAlignment="Right" />
                
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SecondName, UpdateSourceTrigger=PropertyChanged}" Margin="2" />

                <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Positions}" SelectedItem="{Binding SelectedPosition}" Margin="2">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Margin="2" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding EmployeeTypes}" SelectedItem="{Binding SelectedEmployeeType}" Margin="2">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Margin="2" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
        </TabItem>
        <TabItem Header="Дополнительные колонки" Visibility="{Binding HasAdditionalColumns, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ListBox Grid.Column="0" ItemsSource="{Binding AdditionalColumns}" SelectedItem="{Binding SelectedAdditionalColumn}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Source="/Controls;component/Images/zone.png" VerticalAlignment="Center" Margin="1 0 0 0" />
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="2" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Grid Grid.Column="1" DataContext="{Binding SelectedAdditionalColumn}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Visibility="{Binding IsGraphicsData, Converter={StaticResource BoolToVisibilityConverter}}" >
                        <Image Source="{Binding Bitmap}" Stretch="None" />
                    </ScrollViewer>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="{Binding IsGraphicsData, Converter={StaticResource InversedBoolToVisibilityConverter}}" >
                        <TextBlock Text="{Binding Text}" Foreground="White" TextWrapping="Wrap" />
                    </ScrollViewer>
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>