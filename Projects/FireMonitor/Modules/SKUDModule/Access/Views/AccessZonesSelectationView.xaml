<UserControl x:Class="SKDModule.Views.AccessZonesSelectationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls"
             MinWidth="400" MinHeight="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" ScrollViewer.IsDeferredScrollingEnabled="True" VirtualizingStackPanel.VirtualizationMode="Recycling" Margin="2">
            <tree:TreeList Name="_zonesDataGrid" Focusable="True" SelectedTreeNode="{Binding SelectedZone}" Source="{Binding RootZones}">
                <tree:TreeList.View>
                    <GridView>
                        <GridViewColumn Width="250" Header="Зона">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsChecked}" Visibility="{Binding CanSelect, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        <TextBlock Text="{Binding Zone.Name}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="200" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding Zone.Description}" Header="Примечание" />
                    </GridView>
                </tree:TreeList.View>
            </tree:TreeList>
        </Grid>
        <Grid Grid.Row="1" DataContext="{Binding SelectedZone}" Margin="2">
            <StackPanel Visibility="{Binding CanSelect, Converter={StaticResource BoolToVisibilityConverter}}" IsEnabled="{Binding IsChecked}">
                <CheckBox Content="Защита от передачи карт(Antipassback)" IsChecked="{Binding IsAntiPassback}" Foreground="White" Margin="2" />
                <CheckBox Content="Доступ с комиссионированием" IsChecked="{Binding IsComission}" Foreground="White" Margin="2" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Временной критерий" Width="200" Foreground="White" Margin="2" />
                    <ComboBox ItemsSource="{Binding TimeCreterias}" SelectedItem="{Binding SelectedTimeCreteria}" Margin="2">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Margin="2" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="" Width="200" Margin="2" />
                    <ComboBox ItemsSource="{Binding TimeTypes}" SelectedItem="{Binding SelectedTimeType}" Margin="2">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Margin="2" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>