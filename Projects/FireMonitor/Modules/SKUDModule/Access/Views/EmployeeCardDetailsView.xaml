<UserControl x:Class="SKDModule.Views.EmployeeCardDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:SKDModule.Views"
             MinWidth="600" MinHeight="500">
    
    <TabControl>
        <TabItem Header="Основные">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Семейство" Foreground="White" HorizontalAlignment="Right" Margin="2" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding IDFamily}" HorizontalAlignment="Left" Margin="2" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Номер" Foreground="White" HorizontalAlignment="Right" Margin="2" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding IDNo}" HorizontalAlignment="Left" Margin="2" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Начало действия" Foreground="White" HorizontalAlignment="Right" Margin="2" />
                <Calendar Grid.Row="2" Grid.Column="1" BorderThickness="2" BorderBrush="#66ff9829" Margin="2" SelectionMode="SingleDate" VerticalAlignment="Top" HorizontalAlignment="Left" IsTodayHighlighted="False"
                    DisplayDateStart="{Binding StartDate, Mode=OneTime}"
                    SelectedDate="{Binding StartDate}" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Конец действия" Foreground="White" Margin="2" />
                <Calendar Grid.Row="3" Grid.Column="1" BorderThickness="2" BorderBrush="#66ff9829" Margin="2" SelectionMode="SingleDate" VerticalAlignment="Top" HorizontalAlignment="Left" IsTodayHighlighted="False"
                    DisplayDateStart="{Binding EndDate, Mode=OneTime}"
                    SelectedDate="{Binding EndDate}" />
            </Grid>
        </TabItem>
        <TabItem Header="Зоны">
            <Views:AccessZonesSelectationView DataContext="{Binding AccessZonesSelectationViewModel}" />
        </TabItem>
        <TabItem Header="ГУД">
        </TabItem>
    </TabControl>
</UserControl>