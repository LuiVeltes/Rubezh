<UserControl x:Class="SKDModule.Views.CardDeviceDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400">
    
    <TabControl>
        <TabItem Header="Основные">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Временной критерий" Width="200" Margin="2" />
                    <ComboBox ItemsSource="{Binding TimeCreterias}" SelectedItem="{Binding SelectedTimeCreteria}" Margin="2">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Margin="2" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="" Width="200" Margin="2" />
                    <ComboBox ItemsSource="{Binding TimeTypes}" SelectedItem="{Binding SelectedTimeType}" Margin="2">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Margin="2" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>