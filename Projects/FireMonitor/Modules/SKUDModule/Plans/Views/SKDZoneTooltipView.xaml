<UserControl x:Class="SKDModule.Views.SKDZoneTooltipView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<UserControl.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center" />
		</Style>
		<Style TargetType="Image">
			<Setter Property="VerticalAlignment" Value="Center" />
		</Style>
	</UserControl.Resources>
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<Image Width="16" Height="16" Margin="2" Source="/Controls;component/Images/zone.png" />
			<TextBlock FontWeight="Bold" Text="{Binding Zone.Name}" />
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<Image Width="16" Height="16" Margin="0 0 2 0" Source="{Binding State.StateClass, Converter={StaticResource XStateClassToIconConverter}}" />
			<TextBlock Text="{Binding State.StateClass, Converter={StaticResource XStateClassToStringConverter}}" />
		</StackPanel>
	</StackPanel>
</UserControl>