<UserControl x:Class="SKUDModule.Views.SKUDView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{DynamicResource BackgroundBrush}" CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding AddCommand}" Style="{StaticResource ToolBarButtonStyle}" ToolTip="Добавить пользователя">
                    <Image Height="24" Source="/Controls;component/Images/Add.png" />
                </Button>
                <Button Command="{Binding RemoveCommand}" Style="{StaticResource ToolBarButtonStyle}" ToolTip="Удалить пользователя">
                    <Image Height="24" Source="/Controls;component/Images/Delete.png" />
                </Button>
                <Button Command="{Binding EditCommand}" Style="{StaticResource ToolBarButtonStyle}" ToolTip="Редактировать пользователя">
                    <Image Height="24" Source="/Controls;component/Images/Edit.png" />
                </Button>
                <Button Command="{Binding RefreshCommand}" Style="{StaticResource ToolBarButtonStyle}" ToolTip="Удалить">
                    <Image Height="24" Source="/Controls;component/Images/Refresh.png" />
                </Button>
            </StackPanel>
        </Border>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="FirstName" Binding="{Binding Employee.Person.FirstName}"/>
                <DataGridTextColumn Header="SecondName" Binding="{Binding Employee.Person.SecondName}"/>
                <DataGridTextColumn Header="LastName" Binding="{Binding Employee.Person.LastName}"/>
                <DataGridTextColumn Header="Group" Binding="{Binding Employee.Group.Name}"/>
                <DataGridTextColumn Header="Department" Binding="{Binding Employee.Department.Name}"/>
                <DataGridTextColumn Header="Position" Binding="{Binding Employee.Position.Name}"/>
            </DataGrid.Columns>
            
        </DataGrid>
    </Grid>
</UserControl>
