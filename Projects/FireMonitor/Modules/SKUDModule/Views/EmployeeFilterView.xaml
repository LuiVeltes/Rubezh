<UserControl x:Class="SKDModule.Views.EmployeeFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
             Height="400" Width="300">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
                <Button Content="Cброс" Command="{Binding ClearCommand}" Margin="2" Width="100"/>
                <Button Content="ОК" Command="{Binding SaveCommand}" Margin="2" Width="100"/>
                <Button Content="Отмена" Command="{Binding CancelCommand}" Margin="2" Width="100"/>
            </StackPanel>
            <TabControl>
                <TabItem Header="Отделы">
                    <tree:TreeList Focusable="True" Source="{Binding RootDepartments}">
                        <tree:TreeList.View>
                            <GridView>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding IsChecked}" VerticalAlignment="Center" Command="{Binding DepartmentCheckedCommand}"/>
                                                <TextBlock Text="{Binding Department.Name}" VerticalAlignment="Center" Margin="2" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </tree:TreeList.View>
                    </tree:TreeList>
                    <!--<ListBox ItemsSource="{Binding Departments}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsChecked}" VerticalAlignment="Center" Command="{Binding DepartmentCheckedCommand}"/>
                                    <TextBlock Text="{Binding Department.Name}" VerticalAlignment="Center" Margin="2" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>-->
                </TabItem>
                <TabItem Header="Должности">
                    <ListBox ItemsSource="{Binding Positions}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsChecked}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding Position.Name}" VerticalAlignment="Center" Margin="2" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</UserControl>