<UserControl x:Class="SKDModule.Views.ReportSettingsView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinWidth="400" MinHeight="400">
	<UserControl.Resources>
		<DataTemplate x:Key="EnumDescription">
			<TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}" />
		</DataTemplate>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Content="Тип отчета" />
		<Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Content="Период отчета" />
		<Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Content="Дата начала" />
		<Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Content="Дата конца" />

		<ComboBox Grid.Row="0" Grid.Column="1" Margin="2" ItemsSource="{Binding ReportTypes}" ItemTemplate="{StaticResource EnumDescription}" SelectedItem="{Binding ReportType}" />
		<ComboBox Grid.Row="1" Grid.Column="1" Margin="2" ItemsSource="{Binding ReportPeriods}" ItemTemplate="{StaticResource EnumDescription}" SelectedItem="{Binding ReportPeriod}" />
		<Calendar Grid.Row="2" Grid.Column="1" DisplayDate="{Binding StartDateTime, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsFreePeriod}" SelectedDate="{Binding StartDateTime, UpdateSourceTrigger=PropertyChanged}" SelectionMode="SingleDate" />
		<Calendar Grid.Row="3" Grid.Column="1" DisplayDate="{Binding EndDateTime, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsFreePeriod}" SelectedDate="{Binding EndDateTime, UpdateSourceTrigger=PropertyChanged}" SelectionMode="SingleDate" />
	</Grid>
</UserControl>