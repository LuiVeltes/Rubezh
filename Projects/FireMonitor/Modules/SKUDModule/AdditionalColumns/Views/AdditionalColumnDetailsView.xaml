<UserControl x:Class="SKDModule.Views.AdditionalColumnDetailsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Converters="clr-namespace:SKDModule.Converters"
			 xmlns:Controls="clr-namespace:Controls;assembly=Controls"
			 xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended"
			 MinWidth="600" MinHeight="500">

	<UserControl.Resources>
		<Converters:AdditionalColumnTypeToStringConverter x:Key="AdditionalColumnTypeToStringConverter" />
	</UserControl.Resources>

	<TabControl>
		<TabItem Header="Основные">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Label Grid.Row="0" Grid.Column="0" Content="Наименование" HorizontalAlignment="Right" />
				<Label Grid.Row="1" Grid.Column="0" Content="Примечание" HorizontalAlignment="Right" />
				<Label Grid.Row="2" Grid.Column="0" Content="Формат данных" HorizontalAlignment="Right" />

				<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
				<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
				<ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding AvailableAdditionalColumnTypes}" SelectedItem="{Binding AdditionalColumnType}"
						  IsEnabled="{Binding CanChangeAdditionalColumnType}" Margin="2">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding ., Converter={StaticResource AdditionalColumnTypeToStringConverter}}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</Grid>
		</TabItem>
	</TabControl>
</UserControl>