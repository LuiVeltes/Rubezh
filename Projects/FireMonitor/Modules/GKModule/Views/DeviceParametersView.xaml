<UserControl x:Class="GKModule.Views.DeviceParametersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:GKModule.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Устройство" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <UserControl FontWeight="{Binding IsCurrent, Converter={StaticResource BoolToFontWeightConverter}}">
                                <Views:DeviceView DataContext="{Binding DeviceViewModel}"/>
                            </UserControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Температура" Binding="{Binding Temperature}" Width="Auto" />
                <DataGridTextColumn Header="Запыленность" Binding="{Binding Dustinness}" Width="Auto" />
                <DataGridTextColumn Header="Дата последнего обслуживания" Binding="{Binding LastServiceTime}" Width="Auto" />
                <DataGridTextColumn Header="Сопротивление" Binding="{Binding Resistance}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>