<UserControl x:Class="GKModule.Views.ZonesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:GKModule.Views"
        xmlns:Converters="clr-namespace:GKModule.Converters"
        xmlns:Controls="clr-namespace:Controls;assembly=Controls">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" CornerRadius="5" BorderThickness="0" Margin="0, 5, 0, 0" Background="{DynamicResource BackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Name="_grid">
                    <ScrollViewer Name="_scrollViewer">
                        <ListBox Name="_zonesListBox" ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}" Width="{Binding ActualWidth, ElementName=_grid}" BorderThickness="0" Style="{x:Null}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="Background" Value="{Binding ZoneState.StateClass, Converter={StaticResource XStateClassToZoneColorConverter}}" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="Foreground" Value="Black" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="TextBlock.FontSize" Value="12" />
                                    <Setter Property="TextBlock.FontWeight" Value="Normal" />
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Trigger.Setters>
                                                <Setter Property="BorderBrush" Value="Orange" />
                                                <Setter Property="TextBlock.FontSize" Value="14" />
                                                <Setter Property="TextBlock.FontWeight" Value="Bold" />
                                            </Trigger.Setters>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="50" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center"
                                            Background="{Binding ZoneState.StateClass, Converter={StaticResource XStateClassToZoneColorConverter}}"
                                            ToolTip="{Binding ToolTip}">
                                        <Grid.ContextMenu>
                                            <ContextMenu TextBlock.FontSize="12" TextBlock.FontWeight="Normal">
                                                <MenuItem Command="{Binding ShowOnPlanCommand}" Header="Показать на плане" />
                                                <Separator />
                                                <MenuItem Command="{Binding SetIgnoreCommand}" Header="Отключить" />
                                                <MenuItem Command="{Binding ResetIgnoreCommand}" Header="Снять отключение" />
                                                <Separator />
                                                <MenuItem Command="{Binding ResetFire1Command}" Header="Сбросить Пожар 1" />
                                                <MenuItem Command="{Binding ResetFire2Command}" Header="Сбросить Пожар 2" />
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                        <TextBlock Text="{Binding Zone.No}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Width="{Binding ActualWidth, ElementName=_grid}" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
                <StackPanel Grid.Row="1" DataContext="{Binding SelectedZone}">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Zone.PresentationName}" Margin="0" />
                        <Label Content="{Binding ZoneState.StateClass, Converter={StaticResource XStateClassToStringConverter}}" Margin="10, 0, 0, 0" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding ZoneState.StateClasses}" Margin="2">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ., Converter={StaticResource XStateClassToStringConverter}}" Foreground="White" VerticalAlignment="Center" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0, 5, 0, 0" VirtualizingStackPanel.VirtualizationMode="Recycling" ScrollViewer.IsDeferredScrollingEnabled="True">
            <Controls:TreeListView Focusable="True" ItemsSource="{Binding RootDevices}">
                <Controls:TreeListView.Columns>
                    <GridViewColumn Width="250" Header="Устройство">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Views:DeviceView />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Адрес" Width="50" DisplayMemberBinding="{Binding Device.PresentationAddress}" />
                    <GridViewColumn Header="Примечание" Width="100" DisplayMemberBinding="{Binding Device.Description}" />
                </Controls:TreeListView.Columns>
            </Controls:TreeListView>
        </Grid>
    </Grid>
</UserControl>