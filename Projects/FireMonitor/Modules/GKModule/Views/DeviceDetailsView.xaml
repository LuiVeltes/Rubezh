<UserControl x:Class="GKModule.Views.DeviceDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:GKModule.Views"
             MinWidth="400" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <ContentControl Content="{Binding DeviceControlContent}" Width="50" Height="50" Background="Black" Margin="0, 0, 0, 5" />
            <TextBlock Text="{Binding DeviceState.StateClass, Converter={StaticResource XStateClassToStringConverter}}" Margin="5" VerticalAlignment="Center" Foreground="White" />
        </StackPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="Основные">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{Binding Device.PresentationAddressAndDriver}" FontWeight="Bold" Foreground="Orange" />
                        <Views:DeviceStateView TextElement.Foreground="White" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Параметры" Visibility="{Binding HasAUParameters, Converter={StaticResource BoolToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding AUParameterValues}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Foreground="White" />
                                        <TextBlock Text="{Binding Value}" Foreground="White" Margin="5, 0, 0, 0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>                
            </TabItem>
            <TabItem Header="Управление" DataContext="{Binding DeviceCommandsViewModel}" Visibility="{Binding CanControl, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Button Content="Отключить" Command="{Binding SetIgnoreCommand}" Width="200" Margin="2" />
                        <Button Content="Снять отключение" Command="{Binding ResetIgnoreCommand}" Width="200" Margin="2" />
                        <Button Content="Включить автоматику" Command="{Binding SetAutomaticCommand}" Width="200" Margin="2" />
                        <Button Content="Выключить автоматику" Command="{Binding ResetAutomaticCommand}" Width="200" Margin="2" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Button Content="Включить" Command="{Binding TurnOnCommand}" Width="200" Margin="2" />
                        <Button Content="Включить немедленно" Command="{Binding TurnOnNowCommand}" Width="200" Margin="2" />
                        <Button Content="Выключить" Command="{Binding TurnOffCommand}" Width="200" Margin="2" />
                        <Button Content="Выключить немедленно" Command="{Binding TurnOffNowCommand}" Width="200" Margin="2" />
                        <Button Content="Остановить" Command="{Binding StopCommand}" Width="200" Margin="2" Visibility="Collapsed" />
                        <Button Content="Отменить задержку" Command="{Binding CancelDelayCommand}" Width="200" Margin="2" Visibility="Collapsed" />
                        <Button Content="Запретить пуск" Command="{Binding CancelStartCommand}" Width="200" Margin="2" Visibility="Collapsed" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>