<UserControl x:Class="GKModule.Views.ZoneDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Состояние" Foreground="White" Margin="2" />
                <TextBlock Text="{Binding ZoneState.StateClass, Converter={StaticResource XStateClassToStringConverter}}" Foreground="White" Margin="2" />
            </StackPanel>
            <StackPanel>
                <Button Content="Отключить" Command="{Binding SetIgnoreCommand}" Width="200" Margin="2" />
                <Button Content="Снять отключение" Command="{Binding ResetIgnoreCommand}" Width="200" Margin="2" />
                <Button Content="Сбросить" Command="{Binding ResetFireCommand}" Width="200" Margin="2" />
                <Button Content="Показать на плане" Command="{Binding ShowOnPlanCommand}" Width="200" Margin="2" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>