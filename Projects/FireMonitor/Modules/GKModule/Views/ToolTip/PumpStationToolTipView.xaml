<UserControl x:Class="GKModule.Views.PumpStationToolTipView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Image">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Margin="2 0" Width="16" Height="16" Source="/Controls;component/Images/Blue_Direction.png" />
            <TextBlock Text="{Binding PumpStation.PresentationName}" FontWeight="Bold" Margin="2 0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Состояние:" Margin="2 0" />
            <Image Margin="2 0" Width="16" Height="16" Source="{Binding State.StateClass, Converter={StaticResource XStateClassToIconConverter}}" />
            <TextBlock Text="{Binding State.StateClass, Converter={StaticResource XStateClassToStringConverter}}" Margin="2 0" />
        </StackPanel>
        <ItemsControl ItemsSource="{Binding State.StateClasses}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding ., Converter={StaticResource XStateClassToIconConverter}}" Width="16" Margin="2 0" />
                        <TextBlock Text="{Binding ., Converter={StaticResource XStateClassToStringConverter}}" Margin="2 0" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>