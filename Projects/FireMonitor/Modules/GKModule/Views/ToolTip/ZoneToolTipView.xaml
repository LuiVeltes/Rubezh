<UserControl x:Class="GKModule.Views.ZoneToolTipView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Margin="2 0" Width="16" Height="16" VerticalAlignment="Center" Source="/Controls;component/Images/zone.png" />
            <TextBlock Text="{Binding Zone.PresentationName}" Margin="2 0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Состояние:" Margin="2 0" />
            <Image Margin="2 0" Width="16" Height="16" VerticalAlignment="Center" Source="{Binding State.StateClass, Converter={StaticResource XStateClassToIconConverter}}" />
            <TextBlock Text="{Binding State.StateClass, Converter={StaticResource XStateClassToStringConverter}}" Margin="2 0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Количество датчиков для перевода в Пожар 1:" Margin="2 0" />
            <TextBlock Text="{Binding Zone.Fire1Count}" Margin="2 0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Количество датчиков для перевода в Пожар 2:" Margin="2 0" />
            <TextBlock Text="{Binding Zone.Fire2Count}" Margin="2 0" />
        </StackPanel>
    </StackPanel>
</UserControl>