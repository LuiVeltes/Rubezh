<UserControl x:Class="GKModule.Views.AlarmsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding Alarms}" SelectedItem="{Binding SelectedAlarm}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Состояние" Binding="{Binding Alarm.StateType}" Width="*" />
                <DataGridTextColumn Header="Устройство" Binding="{Binding Alarm.Device.ShortPresentationAddressAndDriver}" Width="*" />
                <DataGridTextColumn Header="Зона" Binding="{Binding Alarm.Zone.PresentationName}" Width="*" />
                <DataGridTextColumn Header="Направление" Binding="{Binding Alarm.Direction.PresentationName}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1">
            
        </StackPanel>
    </Grid>
</UserControl>