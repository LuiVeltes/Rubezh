<UserControl x:Class="JournalModule.Views.ArchiveSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Converters="clr-namespace:JournalModule.Converters"
             MinWidth="500" MinHeight="350"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <UserControl.Resources>
        <Converters:ArchiveDefaultStateTypeToStringConverter x:Key="ArchiveDefaultStateTypeToStringConverter" />
    </UserControl.Resources>
    <DockPanel Margin="7" LastChildFill="True">
        <WrapPanel DockPanel.Dock="Bottom"  HorizontalAlignment="Right">
            <Button Width="100" Margin="2" Content="Сохранить" Command="{Binding SaveCommand}" IsDefault="True" />
            <Button Width="100" Margin="2" Content="Отмена" Command="{Binding CancelCommand}" />
        </WrapPanel>
        <GroupBox  Header="При переходе на вкладку архива, показывать записи" Padding="3" Margin="5">
            <ListBox Name="_archiveDefaultStateTypes"  BorderThickness="0"
                     ItemsSource="{Binding ArchiveDefaultStates}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Margin="5"
                                     Content="{Binding ArchiveDefaultStateType,
                                                   Converter={StaticResource ArchiveDefaultStateTypeToStringConverter}}"
                                     IsChecked="{Binding IsActive}"
                                     Checked="RadioButton_Checked"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </DockPanel>
</UserControl>