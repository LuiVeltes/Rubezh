<UserControl x:Class="JournalModule.Views.JournalFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:JournalModule.Converters">
    <UserControl.Resources>
        <Converters:EventsToStringConverter x:Key="EventsToStringConverter" />
        <Converters:CategoriesToStringConverter x:Key="CategoriesToStringConverter" />
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Foreground" Value="OrangeRed" />
                    <Setter Property="FontWeight" Value="Black" />
                </Style>
            </StackPanel.Resources>
            <Label Content="Наименование: " />
            <Label Content="Тип события: " />
            <Label Content="Тип устройства: " />
            <Label Content="Выбрать записи: " />
        </StackPanel>
        <TextBlock>
            <StackPanel DataContext="{Binding JournalFilter}" >
                <Label Content="{Binding Name}" />
                <Label Content="{Binding Events, Converter={StaticResource EventsToStringConverter}}" />
                <Label Content="{Binding Categories, Converter={StaticResource CategoriesToStringConverter}}" />
                <WrapPanel Margin="2">
                    <WrapPanel>
                        <Label Content="{Binding LastRecordsCount}" />
                        <Label Content=" последних" />
                    </WrapPanel>
                    <WrapPanel Visibility="{Binding IsLastDaysCountActive, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Label Content=" за " />
                        <Label Content="{Binding LastDaysCount}" />
                        <Label Content=" дней" />
                    </WrapPanel>
                </WrapPanel>
            </StackPanel>
         </TextBlock>
    </StackPanel>
</UserControl>