<UserControl x:Class="JournalModule.Views.JournalFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:JournalModule.Converters">
    <UserControl.Resources>
        <SolidColorBrush x:Key="headerBrush">OrangeRed</SolidColorBrush>
        <SolidColorBrush x:Key="borderBrush">Silver</SolidColorBrush>
        <Converters:EventsToStringConverter x:Key="EventsToStringConverter" />
        <Converters:CategoriesToStringConverter x:Key="CategoriesToStringConverter" />
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Foreground" Value="{StaticResource headerBrush}" />
                    <Setter Property="FontWeight" Value="Black" />
                </Style>
            </StackPanel.Resources>
            <TextBlock Margin="2" Text="Наименование: " />
            <TextBlock Margin="2" Text="Тип события: " />
            <TextBlock Margin="2" Text="Тип устройства: " />
            <TextBlock Margin="2" Text="Выбрать записи: " />
        </StackPanel>
        <TextBlock>
            <StackPanel DataContext="{Binding JournalFilter}" >
                <TextBlock Margin="2"
                            Text="{Binding Name}" />
                <TextBlock Margin="2"
                            Text="{Binding Events,
                            Converter={StaticResource EventsToStringConverter}}" />
                <TextBlock Margin="2"
                            Text="{Binding Categories,
                            Converter={StaticResource CategoriesToStringConverter}}" />
                <WrapPanel Margin="2">
                    <WrapPanel>
                        <TextBlock Text="{Binding LastRecordsCount}" />
                        <TextBlock Text=" последних" />
                    </WrapPanel>
                    <WrapPanel Visibility="{Binding IsLastDaysCountActive,
                                                    Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text=" за " />
                        <TextBlock Text="{Binding LastDaysCount}" />
                        <TextBlock Text=" дней" />
                    </WrapPanel>
                </WrapPanel>
            </StackPanel>
         </TextBlock>
    </StackPanel>
</UserControl>