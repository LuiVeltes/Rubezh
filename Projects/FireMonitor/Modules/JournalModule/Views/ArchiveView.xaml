<UserControl x:Class="JournalModule.Views.ArchiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converter="clr-namespace:JournalModule.Converters"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase">
    <UserControl.Resources>
        <Converter:StateToColorConverter x:Key="StateToColorConverter" />
        <Converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

        <CollectionViewSource x:Key="SortedJournalItems" Source="{Binding Path=JournalItems}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Id" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    
    <DockPanel>

        <WrapPanel DockPanel.Dock="Top">
            <ToggleButton Name="filterActivator" Content="Фильтр" IsChecked="{Binding IsFiltered}" Margin="5" Foreground="OrangeRed" />
            <Button Content="Выбрать фильтр" Command="{Binding ShowFilterCommand}" Margin="5" />
        </WrapPanel>

        <Grid DockPanel.Dock="Bottom" DataContext="{Binding SelectedItem}" Margin="5">
            <Grid.Resources>
                <Style x:Key="headerStyle" TargetType="TextBlock">
                    <Setter Property="Foreground" Value="OrangeRed" />                    
                </Style>
            </Grid.Resources>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.ColumnSpan="2"
                    BorderThickness="2" BorderBrush="LightGray" Padding="5"
                    Background="{Binding StateType, Converter={StaticResource StateToColorConverter}}">
                <WrapPanel HorizontalAlignment="Center">
                    <TextBlock Text="Класс: " Style="{StaticResource headerStyle}" />
                    <TextBlock Text="{Binding ClassId, Converter={StaticResource IdToClassNameConverter}}" />
                </WrapPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="0"
                    BorderThickness="2" BorderBrush="LightGray" Padding="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Description}" FontWeight="Black" />
                    <WrapPanel Visibility="{Binding User, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="Пользователь: " Style="{StaticResource headerStyle}" />
                        <TextBlock Text="{Binding User}" FontWeight="Black" />
                    </WrapPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="1"
                    BorderThickness="2" BorderBrush="LightGray" Padding="5">
                <StackPanel VerticalAlignment="Center">
                    <WrapPanel>
                        <TextBlock Text="Время: " Style="{StaticResource headerStyle}" />
                        <TextBlock Text="{Binding SystemTime}" />
                    </WrapPanel>
                    <WrapPanel Visibility="{Binding Device, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="Устройство - Датчик: " Style="{StaticResource headerStyle}" />
                        <TextBlock Text="{Binding Device}" />
                    </WrapPanel>
                    <WrapPanel Visibility="{Binding Panel, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="Устройство: " Style="{StaticResource headerStyle}" />
                        <TextBlock Text="{Binding Panel}" />
                    </WrapPanel>
                </StackPanel>
            </Border>

            <WrapPanel Grid.Row="2" Grid.ColumnSpan="2">
                <Button Content="Показать на плане" Command="{Binding ShowPlanCommand}" Margin="3" />
                <Button Content="Показать в дереве" Command="{Binding ShowTreeCommand}" Margin="3" />
                <Button Content="Показать зону" Command="{Binding ShowZoneCommand}" Margin="3" />
            </WrapPanel>
        </Grid>

        <DataGrid ItemsSource="{Binding Source={StaticResource SortedJournalItems}}" SelectedItem="{Binding SelectedItem}"
                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Время устройства" Binding="{Binding DeviceTime}" />
                    <DataGridTextColumn Header="Системное время" Binding="{Binding SystemTime}" />
                    <DataGridTextColumn Header="Зона" Binding="{Binding ZoneName}" />
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" />
                    <DataGridTextColumn Header="Устройство - датчик" Binding="{Binding Device}" />
                    <DataGridTextColumn Header="Устройство" Binding="{Binding Panel}" />
                    <DataGridTextColumn Header="Пользователь" Binding="{Binding User}" />
                </DataGrid.Columns>

                <DataGrid.CellStyle>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Style.Setters>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                            <ContentPresenter VerticalAlignment="Center"></ContentPresenter>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="{Binding StateType, Converter={StaticResource StateToColorConverter}}" />
                        </Style.Setters>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="YellowGreen" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                
            </DataGrid>

    </DockPanel>
</UserControl>
