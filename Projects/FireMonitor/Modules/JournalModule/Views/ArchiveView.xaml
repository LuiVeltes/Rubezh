<UserControl x:Class="JournalModule.Views.ArchiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:WpfToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
             xmlns:Converter="clr-namespace:JournalModule.Converters"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
<UserControl.Resources>
        <Converter:StateToColorConverter x:Key="StateToColorConverter" />
        <Converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button Content="Фильтр" Command="{Binding ShowFilterCommand}" />
                <CheckBox Content="Применить фильтр" IsChecked="{Binding IsFiltered}" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <WpfToolkit:DataGrid ItemsSource="{Binding JournalItems}" SelectedItem="{Binding SelectedItem}"
                            ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}"
                            AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="FullRow" HeadersVisibility="Column" RowHeaderWidth="0"
                            IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserSortColumns="True"
                            HorizontalGridLinesBrush="WhiteSmoke" VerticalGridLinesBrush="WhiteSmoke"
                            Background="White" BorderBrush="Black" BorderThickness="0"
                            RowHeight="20">
                <WpfToolkit:DataGrid.Columns>
                    <WpfToolkit:DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <WpfToolkit:DataGridTextColumn Header="Время устройства" Binding="{Binding DeviceTime}" />
                    <WpfToolkit:DataGridTextColumn Header="Системное время" Binding="{Binding SystemTime}" />
                    <WpfToolkit:DataGridTextColumn Header="Зона" Binding="{Binding ZoneName}" />
                    <WpfToolkit:DataGridTextColumn Header="Описание" Binding="{Binding Description}" />
                    <WpfToolkit:DataGridTextColumn Header="Устройство - датчик" Binding="{Binding Device}" />
                    <WpfToolkit:DataGridTextColumn Header="Устройство" Binding="{Binding Panel}" />
                    <WpfToolkit:DataGridTextColumn Header="Пользователь" Binding="{Binding User}" />
                </WpfToolkit:DataGrid.Columns>

            </WpfToolkit:DataGrid>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel DataContext="{Binding SelectedItem}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Класс" Padding="0, 0, 2, 0" />
                    <TextBlock Text="{Binding State}" Background="{Binding StateType, Converter={StaticResource StateToColorConverter}}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Время" Padding="0, 0, 2, 0" />
                    <TextBlock Text="{Binding SystemTime}" />
                </StackPanel>

                <TextBlock Text="{Binding Description}" />

                <StackPanel Visibility="{Binding User, Converter={StaticResource StringToVisibilityConverter}}" Orientation="Horizontal">
                    <TextBlock Text="Пользователь" Padding="0, 0, 2, 0" />
                    <TextBlock Text="{Binding User}" />
                </StackPanel>

                <StackPanel Visibility="{Binding Device, Converter={StaticResource StringToVisibilityConverter}}" Orientation="Horizontal">
                    <TextBlock Text="Устройство - Датчик" Padding="0, 0, 2, 0" />
                    <TextBlock Text="{Binding Device}" />
                </StackPanel>

                <StackPanel Visibility="{Binding Panel, Converter={StaticResource StringToVisibilityConverter}}" Orientation="Horizontal">
                    <TextBlock Text="Устройство" Padding="0, 0, 2, 0" />
                    <TextBlock Text="{Binding Panel}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Показать на плане" Command="{Binding ShowPlanCommand}" />
                    <Button Content="Показать в дереве" Command="{Binding ShowTreeCommand}" />
                    <Button Content="Показать зону" Command="{Binding ShowZoneCommand}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
