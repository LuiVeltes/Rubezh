<UserControl x:Class="JournalModule.Views.ArchiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converter="clr-namespace:JournalModule.Converters"
             xmlns:Views="clr-namespace:JournalModule.Views"
             xmlns:XButtons="clr-namespace:Controls;assembly=Controls"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase">
    <DockPanel>
        <Border DockPanel.Dock="Top">
            <Border.Background>
                <LinearGradientBrush StartPoint="0, 0" EndPoint="0,1">
                    <GradientStop Color="#DF8E2A" Offset="0" />
                    <GradientStop Color="#F2B352" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <DockPanel Background="White" Margin="5">
                <WrapPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                    <Button Command="{Binding ShowFilterCommand}"
                              Content="Задать фильтр"
                              Padding="5" Margin="7,5" />
                    <CheckBox Name="filterActivator"
                              IsChecked="{Binding IsFilterOn, UpdateSourceTrigger=PropertyChanged}"
                              IsEnabled="{Binding IsFilterExists, Mode=OneWay}"
                              Content="Включить фильтр"
                              Margin="5" Foreground="OrangeRed"
                              VerticalAlignment="Center"/>
                </WrapPanel>
                <Button DockPanel.Dock="Right" HorizontalAlignment="Right"
                              Command="{Binding ShowSettingsCommand}"
                              Content="Настройки"
                              Padding="5" Margin="7,5" />
            </DockPanel>
        </Border>
        <Views:JournalView />
    </DockPanel>
</UserControl>