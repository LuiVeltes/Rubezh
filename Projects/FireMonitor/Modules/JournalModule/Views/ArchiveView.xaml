<UserControl x:Class="JournalModule.Views.ArchiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converter="clr-namespace:JournalModule.Converters"
             xmlns:Views="clr-namespace:JournalModule.Views">
    <DockPanel>
        <Border DockPanel.Dock="Top" Background="{DynamicResource BackgroundBrush}" CornerRadius="5">
            <DockPanel Margin="2">
                <WrapPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                    <Button Command="{Binding ShowFilterCommand}" ToolTip="Задать фильтр" Style="{StaticResource ToolarButtonStyle}">
                        <Image Source="/Controls;component/Images/Filter.png" Height="24" />
                    </Button>
                    <CheckBox Name="filterActivator"
                              IsChecked="{Binding IsFilterOn, UpdateSourceTrigger=PropertyChanged}"
                              IsEnabled="{Binding IsFilterExists, Mode=OneWay}"
                              Content="Включить фильтр" Margin="5" VerticalAlignment="Center" Foreground="White" />
                </WrapPanel>
                <Button Command="{Binding ShowSettingsCommand}" ToolTip="Настройки" Style="{StaticResource ToolarButtonStyle}" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Image Source="/Controls;component/Images/Settings.png" Height="24" />
                </Button>
            </DockPanel>
        </Border>
        <Views:JournalView Margin="0, 5, 0, 0" />
    </DockPanel>
</UserControl>