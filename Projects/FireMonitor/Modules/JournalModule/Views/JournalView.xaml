<UserControl x:Class="JournalModule.Views.JournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:DataGridProperties="clr-namespace:Controls;assembly=Controls"
             xmlns:Converter="clr-namespace:JournalModule.Converters">
    <UserControl.Resources>
        <Converter:StateToColorConverter x:Key="StateToColorConverter" />
        <Converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <Converter:StateTypeToEventNameConverter x:Key="StateTypeToEventNameConverter" />
        <Converter:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />
    </UserControl.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Bottom" CornerRadius="5" BorderThickness="0" Margin="0, 5, 0, 0" Background="{DynamicResource BackgroundBrush}"
                Visibility="{Binding SelectedRecord, Converter={StaticResource ObjectToVisibilityConverter}}">
            <Grid DataContext="{Binding SelectedRecord}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{Binding StateType, Converter={StaticResource StateToColorConverter}}">
                    <WrapPanel HorizontalAlignment="Center">
                        <TextBlock Text="Класс: " Foreground="White" />
                        <TextBlock Text="{Binding StateType, Converter={StaticResource StateTypeToEventNameConverter}}" Foreground="White" />
                    </WrapPanel>
                </Border>
                <Border Grid.Row="1" Grid.Column="0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding Description}" Foreground="White" />
                        <WrapPanel Visibility="{Binding User, Converter={StaticResource StringToVisibilityConverter}}">
                            <TextBlock Text="Пользователь: " Foreground="White" />
                            <TextBlock Text="{Binding User}" Foreground="White" />
                        </WrapPanel>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Grid.Column="1">
                    <StackPanel VerticalAlignment="Center">
                        <WrapPanel>
                            <TextBlock Text="Время: " Foreground="White" />
                            <TextBlock Text="{Binding SystemTime}" Foreground="White" />
                        </WrapPanel>
                        <WrapPanel Visibility="{Binding Device, Converter={StaticResource StringToVisibilityConverter}}">
                            <Label Content="Устройство - Датчик: " Foreground="White" />
                            <Label Content="{Binding Device}" Foreground="White" />
                        </WrapPanel>
                        <WrapPanel Visibility="{Binding Panel, Converter={StaticResource StringToVisibilityConverter}}">
                            <TextBlock Text="Устройство: " Foreground="White" />
                            <TextBlock Text="{Binding Panel}" Foreground="White" />
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <DataGrid Name="journalDataGrid" DataGridProperties:DataGridProperties.HeaderBrush="{DynamicResource AlternativeBackgroundBrush}"
                  ItemsSource="{Binding JournalRecords}" SelectedItem="{Binding SelectedRecord}"
                  EnableRowVirtualization="True" VirtualizingStackPanel.VirtualizationMode="Recycling">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Системное время" Binding="{Binding SystemTime}" />
                <DataGridTextColumn Header="Время устройства" Binding="{Binding DeviceTime}" />
                <DataGridTextColumn Header="Зона" Binding="{Binding ZoneName}" />
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" />
                <DataGridTextColumn Header="Устройство - датчик" Binding="{Binding Device}" />
                <DataGridTextColumn Header="Устройство" Binding="{Binding Panel}" />
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User}" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Setters>
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem Header="Показать на плане" Command="{Binding ShowPlanCommand}" />
                                    <MenuItem Header="Показать в дереве" Command="{Binding ShowTreeCommand}" />
                                    <MenuItem Header="Показать зону" Command="{Binding ShowZoneCommand}" />
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style.Setters>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Setters>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background"
                            Value="{Binding StateType, Converter={StaticResource StateToColorConverter}}" />
                    </Style.Setters>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PressedBackgroundBrush}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>
    </DockPanel>
</UserControl>