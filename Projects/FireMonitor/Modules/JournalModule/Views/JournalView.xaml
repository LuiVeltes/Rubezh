<UserControl x:Class="JournalModule.Views.JournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converter="clr-namespace:JournalModule.Converters">
    <UserControl.Resources>
        <SolidColorBrush x:Key="headerBrush">OrangeRed</SolidColorBrush>
        <SolidColorBrush x:Key="borderBrush">LightGray</SolidColorBrush>
        <Converter:StateToColorConverter x:Key="StateToColorConverter" />
        <Converter:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <Converter:StateTypeToEventNameConverter x:Key="StateTypeToEventNameConverter" />
        <Converter:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />
    </UserControl.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Bottom" BorderThickness="0"
                Visibility="{Binding SelectedRecord, Converter={StaticResource ObjectToVisibilityConverter}}">
            <Grid Margin="5" DataContext="{Binding SelectedRecord}">
                <Grid.Resources>
                    <Style x:Key="headerStyle" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource headerBrush}" />
                    </Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderThickness" Value="2" />
                        <Setter Property="BorderBrush" Value="{StaticResource borderBrush}" />
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.ColumnSpan="2"
                    Background="{Binding StateType, Converter={StaticResource StateToColorConverter}}">
                    <WrapPanel HorizontalAlignment="Center">
                        <TextBlock Text="Класс: " Style="{StaticResource headerStyle}" />
                        <TextBlock Text="{Binding StateType, Converter={StaticResource StateTypeToEventNameConverter}}" />
                    </WrapPanel>
                </Border>
                <Border Grid.Row="1" Grid.Column="0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding Description}" FontWeight="Black" />
                        <WrapPanel Visibility="{Binding User, Converter={StaticResource StringToVisibilityConverter}}">
                            <TextBlock Text="Пользователь: " Style="{StaticResource headerStyle}" />
                            <TextBlock Text="{Binding User}" FontWeight="Black" />
                        </WrapPanel>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Grid.Column="1">
                    <StackPanel VerticalAlignment="Center">
                        <WrapPanel>
                            <TextBlock Text="Время: " Style="{StaticResource headerStyle}" />
                            <TextBlock Text="{Binding SystemTime}" />
                        </WrapPanel>
                        <WrapPanel Visibility="{Binding Device, Converter={StaticResource StringToVisibilityConverter}}">
                            <TextBlock Text="Устройство - Датчик: " Style="{StaticResource headerStyle}" />
                            <TextBlock Text="{Binding Device}" />
                        </WrapPanel>
                        <WrapPanel Visibility="{Binding Panel, Converter={StaticResource StringToVisibilityConverter}}">
                            <TextBlock Text="Устройство: " Style="{StaticResource headerStyle}" />
                            <TextBlock Text="{Binding Panel}" />
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <DataGrid Name="journalDataGrid"
                  ItemsSource="{Binding JournalRecords}"
                  SelectedItem="{Binding SelectedRecord}"
                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                  Style="{StaticResource DataGridStyle}"
                  EnableRowVirtualization="True" VirtualizingStackPanel.VirtualizationMode="Recycling"
                  ScrollViewer.IsDeferredScrollingEnabled="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Системное время" Binding="{Binding SystemTime}" />
                <DataGridTextColumn Header="Время устройства" Binding="{Binding DeviceTime}" />
                <DataGridTextColumn Header="Зона" Binding="{Binding ZoneName}" />
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" />
                <DataGridTextColumn Header="Устройство - датчик" Binding="{Binding Device}" />
                <DataGridTextColumn Header="Устройство" Binding="{Binding Panel}" />
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User}" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Setters>
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem Header="Показать на плане" Command="{Binding ShowPlanCommand}" />
                                    <MenuItem Header="Показать в дереве" Command="{Binding ShowTreeCommand}" />
                                    <MenuItem Header="Показать зону" Command="{Binding ShowZoneCommand}" />
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style.Setters>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Setters>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                        <ContentPresenter VerticalAlignment="Center"></ContentPresenter>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background"
                            Value="{Binding StateType, Converter={StaticResource StateToColorConverter}}" />
                    </Style.Setters>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="YellowGreen" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>
    </DockPanel>
</UserControl>