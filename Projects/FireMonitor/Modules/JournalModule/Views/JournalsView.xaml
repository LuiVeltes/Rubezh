<UserControl x:Class="JournalModule.Views.JournalsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:JournalModule.Views">

    <TabControl ItemsSource="{Binding Journals,
                                      Converter={StaticResource CollectionViewFactoryConverter},
                                      ConverterParameter=Name}"
                SelectedItem="{Binding SelectedJournal}">
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Name}" />
            </DataTemplate>
        </TabControl.ItemTemplate>
        <TabControl.ContentTemplate>
            <DataTemplate>
                <Views:FilteredJournalView />
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
</UserControl>