<UserControl x:Class="JournalModule.Views.JournalsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:JournalModule.Views"
             xmlns:Converter="clr-namespace:JournalModule.Converters">
    <UserControl.Resources>
        <Converter:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    </UserControl.Resources>

    <TabControl Name="tabControl"
                ItemsSource="{Binding Journals,
                                      Converter={StaticResource CollectionViewFactoryConverter},
                                      ConverterParameter=Name}"
                SelectedItem="{Binding SelectedJournal}">
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Name}"/>
            </DataTemplate>
        </TabControl.ItemTemplate>
        <TabControl.ItemContainerStyle>
            <Style TargetType="{x:Type TabItem}">
                <Setter Property="Visibility" Value="{Binding ElementName=tabControl, Path=Items.Count,
                                                              Converter={StaticResource CountToVisibilityConverter}}" />
            </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.ContentTemplate>
            <DataTemplate>
                <Views:FilteredJournalView />
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
</UserControl>