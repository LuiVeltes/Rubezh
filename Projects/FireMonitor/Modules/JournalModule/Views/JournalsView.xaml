<UserControl x:Class="JournalModule.Views.JournalsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:JournalModule.Views"
             xmlns:Converter="clr-namespace:JournalModule.Converters">
    <UserControl.Resources>
        <SolidColorBrush x:Key="borderBrush" Color="Black" />
        <SolidColorBrush x:Key="backgroundBrush" Color="White" />
        <Converter:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    </UserControl.Resources>
    <TabControl Name="tabControl"
                ItemsSource="{Binding Journals,
                                      Converter={StaticResource CollectionViewFactoryConverter},
                                      ConverterParameter=Name}"
                SelectedItem="{Binding SelectedJournal}"
                BorderThickness="0">
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Name}" />
            </DataTemplate>
        </TabControl.ItemTemplate>
        <TabControl.ItemContainerStyle>
            <Style TargetType="{x:Type TabItem}">
                <Setter Property="Background" Value="{x:Null}" />
                <Setter Property="Visibility" Value="{Binding ElementName=tabControl, Path=Items.Count,
                                                              Converter={StaticResource CountToVisibilityConverter}}" />
                <Setter Property="ToolTip">
                    <Setter.Value>
                        <ToolTip BorderThickness="3"
                                 BorderBrush="{StaticResource borderBrush}"
                                 Background="{StaticResource backgroundBrush}">
                            <Views:JournalFilterView />
                        </ToolTip>
                    </Setter.Value>
                </Setter>
            </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.ContentTemplate>
            <DataTemplate>
                <Views:JournalView />
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
</UserControl>