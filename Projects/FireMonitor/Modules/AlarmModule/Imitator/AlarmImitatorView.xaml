<Window x:Class="AlarmModule.Imitator.AlarmImitatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:FiresecAPI="clr-namespace:FiresecAPI.Models;assembly=FiresecAPI"
        Title="Имитатор тревог" Height="400" Width="400">
    <Window.Resources>
        <ObjectDataProvider x:Key="AvailableAlarms" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="FiresecAPI:AlarmType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                <GradientStop Offset="0" Color="DarkGray" />
                <GradientStop Offset="1" Color="LightGray" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Тип" Foreground="DarkRed" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Название" Foreground="DarkRed" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Описание" Foreground="DarkRed" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center" />

        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Source={StaticResource AvailableAlarms}}" SelectedIndex="{Binding AlarmType}" Margin="2" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name}" Margin="2" />
        <Button Grid.Row="2" Grid.Column="1" Content="Ok" Command="{Binding CreateCommand}" />
        <StackPanel Grid.Row="3">
            <Button Content="пожар" Click="Button_Click" />
            <Button Content="пожар" Click="Button_Click_1" />
            <Button Content="пожар" Click="Button_Click_2" />
            <Button Content="внимание" Click="Button_Click_3" />
            <Button Content="информация" Click="Button_Click_7" />
            <Button Content="информация" Click="Button_Click_8" />
            <Button Content="автоматика" Click="Button_Click_9" />

            <Button Content="отключено" Click="Button_Click_6" />
            <Button Content="неисправность" Click="Button_Click_4" />
            <Button Content="требуется обслуживание" Click="Button_Click_5" />
        </StackPanel>
    </Grid>
</Window>
