<UserControl x:Class="AlarmModule.Views.AlarmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls">
    <Border BorderThickness="2" BorderBrush="DarkGray" CornerRadius="5" Margin="5">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                <GradientStop Offset="0" Color="DarkGray" />
                <GradientStop Offset="1" Color="LightGray" />
            </LinearGradientBrush>
        </Border.Background>
        <StackPanel HorizontalAlignment="Left" Width="Auto">
            <StackPanel>
                <Label Content="{Binding Name}" FontWeight="Bold" FontSize="12" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Controls:XButton Content="Сбросить" Command="{Binding ResetCommand}" Height="30" Width="150" Margin="2" Background="Green" />
                <Controls:XButton Content="Закрыть" Command="{Binding CloseCommand}" Height="30" Width="150" Margin="2" Background="Green" />
                <Controls:XButton Content="Отложить" Command="{Binding LeaveCommand}" Height="30" Width="150" Margin="2" Background="Green" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Controls:XButton Content="Просмотр на плане" Command="{Binding ShowOnPlanCommand}" Height="30" Width="150" Margin="2" Background="Green" />
                <Controls:XButton Content="Устройство в дереве" Command="{Binding ShowDeviceCommand}" Height="30" Width="150" Margin="2" Background="Green" />
                <Controls:XButton Content="Зона в списке" Command="{Binding ShowZoneCommand}" Height="30" Width="150" Margin="2" Background="Green" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Controls:XButton Content="Инструкции" Command="{Binding ShowInstructionCommand}" Height="30" Width="150" Margin="2" Background="Green" />
                <Controls:XButton Content="Оповещение по телефону" Command="{Binding NotifyPhoneCommand}" Height="30" Width="150" Margin="2" Background="Green" />
                <Controls:XButton Content="СМС сообщение" Command="{Binding NotifySmsCommand}" Height="30" Width="150" Margin="2" Background="Green" />
                <Controls:XButton Content="Включить видео" Command="{Binding ShowVideoCommand}" Height="30" Width="150" Margin="2" Background="Green" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>