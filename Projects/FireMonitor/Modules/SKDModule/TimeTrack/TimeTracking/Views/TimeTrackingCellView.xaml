<UserControl x:Class="SKDModule.Views.TimeTrackingCellView"
	         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	         xmlns:Converters="clr-namespace:SKDModule.Converters">
	<UserControl.Resources>
	    <Converters:TimeTrackTypeToColorConverter x:Key="TimeTrackTypeToColorConverter" />
        <Converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
	</UserControl.Resources>

	<Grid MouseDown="Grid_MouseDown" Cursor="Hand" Background="{Binding DayTimeTrack.TimeTrackType, Converter={StaticResource TimeTrackTypeToColorConverter}}"
	      ToolTip="{Binding Tooltip}" Height="60">
	    <StackPanel Visibility="{Binding IsNormal, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{Binding DayTimeTrack.Total, Converter={StaticResource TimeSpanToStringConverter}}" VerticalAlignment="Center" />
            <TextBlock Text="{Binding DayTimeTrack.TotalMissed, Converter={StaticResource TimeSpanToStringConverter}}" VerticalAlignment="Center" />
            <TextBlock Text="{Binding DayTimeTrack.TotalInSchedule, Converter={StaticResource TimeSpanToStringConverter}}" VerticalAlignment="Center" />
            <TextBlock Text="{Binding DayTimeTrack.TotalOutSchedule, Converter={StaticResource TimeSpanToStringConverter}}" VerticalAlignment="Center" />
	    </StackPanel>
        <TextBlock Visibility="{Binding HasLetter, Converter={StaticResource BoolToVisibilityConverter}}" Text="{Binding Letter}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
	</Grid>
</UserControl>