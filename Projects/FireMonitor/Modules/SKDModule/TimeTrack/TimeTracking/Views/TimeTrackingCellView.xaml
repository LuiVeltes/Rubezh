<UserControl x:Class="SKDModule.Views.TimeTrackingCellView"
	         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	         xmlns:Converters="clr-namespace:SKDModule.Converters">
	<UserControl.Resources>
	    <Converters:TimeTrackTypeToColorConverter x:Key="TimeTrackTypeToColorConverter" />
        <Converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
        <Converters:TimeSpanToColorConverter x:Key="TimeSpanToColorConverter" />
	</UserControl.Resources>

	<Grid MouseDown="Grid_MouseDown" Cursor="Hand" ToolTip="{Binding Tooltip}">
	    <StackPanel Background="White">
            <Grid Height="60">
                <Rectangle Fill="{Binding DayTimeTrack.TimeTrackType, Converter={StaticResource TimeTrackTypeToColorConverter}}" />
                <TextBlock Text="{Binding Letter}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Grid>
            <ItemsControl ItemsSource="{Binding Totals}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock ToolTip="{Binding Name}" Text="{Binding TimeSpan, Converter={StaticResource TimeSpanToStringConverter}}" Foreground="{Binding TimeSpan, Converter={StaticResource TimeSpanToColorConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="20" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
	</Grid>
</UserControl>