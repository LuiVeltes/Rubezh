<UserControl x:Class="SKDModule.Views.TimeTrackingCellView"
	         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	         xmlns:Converters="clr-namespace:SKDModule.Converters">
	<UserControl.Resources>
	    <Converters:TimeTrackTypeToColorConverter x:Key="TimeTrackTypeToColorConverter" />
	</UserControl.Resources>

	<Grid MouseDown="Grid_MouseDown" Cursor="Hand" Background="{Binding DayTimeTrack.TimeTrackType, Converter={StaticResource TimeTrackTypeToColorConverter}}"
	      ToolTip="{Binding Tooltip}" Height="60">
	    <StackPanel Visibility="{Binding IsNormal, Converter={StaticResource BoolToVisibilityConverter}}">
	        <TextBlock Text="{Binding Total}" VerticalAlignment="Center" />
	        <TextBlock Text="{Binding TotalMissed}" VerticalAlignment="Center" />
	        <TextBlock Text="{Binding TotalInSchedule}" VerticalAlignment="Center" />
	        <TextBlock Text="{Binding TotalOutSchedule}" VerticalAlignment="Center" />
	    </StackPanel>
        <TextBlock Visibility="{Binding HasLetter, Converter={StaticResource BoolToVisibilityConverter}}" Text="{Binding Letter}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
	</Grid>
</UserControl>