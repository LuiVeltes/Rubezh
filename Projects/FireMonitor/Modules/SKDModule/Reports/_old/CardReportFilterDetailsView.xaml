<UserControl x:Class="SKDModule.Views.CardReportFilterDetailsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls"
             xmlns:Converters="clr-namespace:SKDModule.Converters"
             xmlns:Views="clr-namespace:SKDModule.Views"
			 Width="600" Height="400">
    <UserControl.Resources>
        <sys:Int32 x:Key="IntZero">0</sys:Int32>
        <sys:Int32 x:Key="IntUnit">1</sys:Int32>
        <Converters:RadioButtonCheckedConverter x:Key="RadioButtonCheckedConverter" />
    </UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TabControl Grid.Row="0">
			<TabItem Header="Настройки">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<Grid Grid.Row="0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>
						<TextBlock Grid.Row="0" Grid.Column="0" Text="Фильтр" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" Margin="2" />
                        <ComboBox Grid.Row="0" Grid.Column="1" Margin="2" ItemsSource="{Binding CardReportFilters}" SelectedItem="{Binding SelectedCardReportFilter}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>           
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                            <Controls:ToolBarButton Command="{Binding SaveFilterCommand}" ToolTip="Сохранить" Background="{DynamicResource Save}"  />
                            <Controls:ToolBarButton Command="{Binding RemoveFilterCommand}" ToolTip="Удалить" Background="{DynamicResource Close}"  />
                        </StackPanel>
                        
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Фильтровать по дате окончания действия" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="White" Margin="2" />
                        <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding IsWithEndDate}" Foreground="White" Margin="2" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Истекает через" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" Margin="2" />
                        <ComboBox Grid.Row="2" Grid.Column="1" Margin="2" ItemsSource="{Binding EndDateTypes}" SelectedItem="{Binding SelectedEndDateType}" IsEnabled="{Binding IsWithEndDate}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" Margin="1" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата окончания действия" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="White" Margin="2" />
						<TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center">
							<Hyperlink Command="{Binding SelectEndDateCommand}" Style="{StaticResource HyperlinkStyle}" IsEnabled="{Binding IsWithEndDate}">
								<TextBlock Text="{Binding EndDateString}" TextDecorations="Underline" Margin="2">
                                    <TextBlock.Style>
                                        <Style>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsWithEndDate, UpdateSourceTrigger=PropertyChanged}" Value="False">
							                        <DataTrigger.Setters>
								                        <Setter Property="TextBlock.Foreground" Value="LightGray" />
							                        </DataTrigger.Setters>
						                        </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Hyperlink>
						</TextBlock>
					</Grid>
					<StackPanel Grid.Row="1">
						<TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center">
						<Hyperlink Command="{Binding SelectShowAdditionalCommand}" Style="{StaticResource HyperlinkStyle}">
							<TextBlock Text="{Binding SelectShowAdditionalString}" TextDecorations="Underline" Margin="2" />
						</Hyperlink>
						</TextBlock>
						<StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Visibility="{Binding IsShowAdditional, Converter={StaticResource BoolToVisibilityConverter}}" >
                            <CheckBox Content="Отображать название фильтра" Foreground="White" Margin="2" IsChecked="{Binding IsShowName}" />
                            <CheckBox Content="Отображать название фильтра в заголовке" Foreground="White" Margin="2" IsChecked="{Binding IsShowNameInHeader}" />
                            <CheckBox Content="Отображать границы периода формирования отчёта" Foreground="White" Margin="2" IsChecked="{Binding IsShowPeriod}" />
                            <CheckBox Content="Отображать дату и время формирования отчёта" Foreground="White" Margin="2" IsChecked="{Binding IsShowDate}" />
                            <CheckBox Content="Отображать сведения о пользователе, сформировавшем отчёт" Foreground="White" Margin="2" IsChecked="{Binding IsShowUser}" />
						</StackPanel>
					</StackPanel>   
				</Grid>
			</TabItem>
            <TabItem Header="Фильтр" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" Content="Активные" IsChecked="{Binding IsWithActive}" Foreground="White" Margin="2" />
                    <CheckBox Grid.Row="1" Content="Деактивированные" IsChecked="{Binding IsWithBlocked}" Foreground="White" Margin="2" />
                    <TextBlock Grid.Row="2" Text="Типы активных пропусков" Foreground="White" Margin="2" />
                    <Grid Grid.Row="3" DataContext="{Binding CardTypesViewModel}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ListBox Grid.Row="0" ItemsSource="{Binding CardTypes.Items}" IsEnabled="{Binding CanSelect}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Margin="2" IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                  Content="{Binding CardType,  Converter={StaticResource EnumToDescriptionConverter}}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Controls:ToolBarButton Command="{Binding SelectAllCommand}" ToolTip="Выделить всё" Background="{DynamicResource SelectAll}"  />
                            <Controls:ToolBarButton Command="{Binding SelectNoneCommand}" ToolTip="Снять все выделения" Background="{DynamicResource SelectNone}"  />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Организации" DataContext="{Binding OrganisationsFilterViewModel}" >
                <Views:OrganisationsFilterView />
            </TabItem>
            <TabItem Header="Отделы">
                <Views:DepartmentsFilterView DataContext="{Binding DepartmentsFilterViewModel}" />
            </TabItem>
            <TabItem Header="Должности">
                <Views:PositionsFilterView DataContext="{Binding PositionsFilterViewModel}" />
            </TabItem>
            <TabItem Header="{Binding EmployeeTabItemHeader}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Views:EmployeesFilterView Grid.Row="0" DataContext="{Binding EmployeesFilterViewModel}" />
                    <StackPanel Grid.Row="1" >
                        <RadioButton GroupName="SortAscDescGroup" Content="Сотрудники" Margin="2" Foreground="White"
                            IsChecked="{Binding IsGuests, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter={StaticResource IntZero}}">
                        </RadioButton>
                        <RadioButton GroupName="SortAscDescGroup" Content="Посетители" Margin="2" Foreground="White" 
                            IsChecked="{Binding IsGuests, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter={StaticResource IntUnit}}">
                        </RadioButton>
                    </StackPanel>
                </Grid>
                
            </TabItem>
            <TabItem Header="Сортировка" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0" UIBehavior.ShowSelectionMark="True" UIBehavior.IsActiveSelectionMark="True"
                              ItemsSource="{Binding CardSortTypes}" SelectedItem="{Binding SelectedCardSortType}" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="*" Binding="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="1" >
                        <RadioButton GroupName="SortAscDescGroup" Content="По возрастанию" Margin="2" Foreground="White"
                            IsChecked="{Binding IsSortAsc, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter={StaticResource IntZero}}">
                        </RadioButton>
                        <RadioButton GroupName="SortAscDescGroup" Content="По убыванию" Margin="2" Foreground="White" 
                            IsChecked="{Binding IsSortAsc, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter={StaticResource IntUnit}}">
                        </RadioButton>
                    </StackPanel>
                </Grid>
            </TabItem>
		</TabControl>
		<CheckBox Grid.Row="1" Margin="5" Content="Отображать архивные сведения" IsChecked="{Binding IsWithDeleted}" VerticalAlignment="Center" VerticalContentAlignment="Center" Foreground="White" />
	</Grid>
</UserControl>