<UserControl x:Class="SKDModule.Views.OrganisationExportDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Экспорт сведений картотеки"  />
        <Label Grid.Row="1" Grid.Column="0" Content="Организация" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OrganisationName}" />
        <Label Grid.Row="2" Grid.Column="0" Content="Каталог для выгрузки" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Path}" />
        <ToolBarButton Grid.Row="2" Grid.Column="2" ImageSource="Add" ToolTip="Выбор папки" Command="{Binding SelectFolderCommand}" VerticalAlignment="Center" HorizontalAlignment="Left" />
        <Label Grid.Row="3" Grid.Column="0" Content="Выгружаемые сведения" />
        <CheckBox Grid.Row="4" Grid.Column="0" IsChecked="{Binding IsWithDepartments}" Content="Справочник подразделений" Foreground="White" />
        <CheckBox Grid.Row="5" Grid.Column="0" IsChecked="{Binding IsWithPositions}" Content="Справочник должностей" Foreground="White" />
        <CheckBox Grid.Row="6" Grid.Column="0" IsChecked="{Binding IsWithEmployees}" Content="Справочник сотрудников" Foreground="White" />
        <CheckBox Grid.Row="7" Grid.Column="0" IsChecked="{Binding IsWithDeleted}" Content="Выгружать архивные записи" Foreground="White" Margin="0 5" />
    </Grid>
</UserControl>
