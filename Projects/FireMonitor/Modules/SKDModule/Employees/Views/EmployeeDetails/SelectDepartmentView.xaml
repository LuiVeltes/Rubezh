<UserControl x:Class="SKDModule.Views.SelectDepartmentView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
			 MinWidth="500" MinHeight="500">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<tree:TreeList Grid.Row="0" Focusable="True" Source="{Binding RootDepartments}" SelectedItem="{Binding HighlightedDepartment}">
			<tree:TreeList.View>
				<GridView>
	                <GridViewColumn Header="Название">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<RadioButton GroupName="Departments" VerticalAlignment="Center" 
												 IsChecked="{Binding IsChecked, Mode=OneWay}" Command="{Binding SelectCommand}" Visibility="{Binding IsDepartment, Converter={StaticResource BoolToVisibilityConverter}}" />
									<Image Width="16" Source="/Controls;component/Images/Department.png" VerticalAlignment="Center" Margin="1 0 0 0" 
										   Visibility="{Binding IsDepartment, Converter={StaticResource BoolToVisibilityConverter}}" />
									<Image Width="16" Source="/Controls;component/Images/Organisation.png" VerticalAlignment="Center" Margin="1 0 0 0" 
										   Visibility="{Binding IsDepartment, Converter={StaticResource InversedBoolToVisibilityConverter}}" />
									<TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="2" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
	    <Button Grid.Row="1" Content="Добавить новый отдел" Command="{Binding AddCommand}" HorizontalAlignment="Right" Width="200" Margin="2" />
	</Grid>
</UserControl>