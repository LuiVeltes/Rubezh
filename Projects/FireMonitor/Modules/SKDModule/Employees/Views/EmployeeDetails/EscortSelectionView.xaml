<UserControl x:Class="SKDModule.Views.SelectEscortView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="400" MinHeight="300">
	<Grid>
		<ScrollViewer VerticalScrollBarVisibility="Auto">
			<DataGrid ItemsSource="{Binding Employees}" >
				<DataGrid.Columns>
					<DataGridTemplateColumn Header="Имя" Width="*" >
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton GroupName="Positions" Content="{Binding Name}" IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Center" Margin="2" />
                                    <Image Width="16" Source="/Controls;component/Images/Employee.png" VerticalAlignment="Center" Margin="1 0 0 0" />
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn Header="Должность" >
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding PositionName}" VerticalAlignment="Center" Margin="2" />
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
				</DataGrid.Columns>
			</DataGrid>
		</ScrollViewer>
	</Grid>
</UserControl>