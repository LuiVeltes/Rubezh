<UserControl x:Class="SKDModule.Views.DepartmentSelectionView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
			 MinWidth="500" MinHeight="500">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
        <tree:TreeList Grid.Row="0" Focusable="True" Source="{Binding RootDepartments}" SelectedItem="{Binding SelectedDepartment}" UIBehavior.ShowSelectionMark="True" UIBehavior.IsActiveSelectionMark="True">
			<tree:TreeList.View>
				<GridView>
					<GridViewColumn Header="Название">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Width="16" Source="/Controls;component/Images/Department.png" VerticalAlignment="Center" Margin="1 0 0 0" />
                                    <TextBlock Text="{Binding Department.Name}" VerticalAlignment="Center" Margin="2" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
		<Button Grid.Row="1" Content="Добавить новый отдел" Command="{Binding AddCommand}" HorizontalAlignment="Right" Width="205" Margin="0 5 0 0" />
	</Grid>
</UserControl>