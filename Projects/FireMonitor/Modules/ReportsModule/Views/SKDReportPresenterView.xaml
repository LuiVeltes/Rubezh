<UserControl x:Class="ReportsModule.Views.SKDReportPresenterView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
			 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
			 xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
			 xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
			 xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing" xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon">
	<UserControl.Resources>
		<dxp:DisabledCommand x:Key="disabledCommand" />
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0" Orientation="Horizontal">
				<ToolBarButton Command="{Binding ChangeFilterCommand}" ImageSource="/Controls;component/Images/Filter.png" ToolTip="Задать фильтр" />
				<ToolBarButton ImageSource="/Controls;component/Images/Refresh.png" ToolTip="Обновить отчет" />
				<ToolBarButton Command="{Binding Model.FirstPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="/Controls;component/Images/LeftLeft.png" ToolTip="Начальная страница" />
				<ToolBarButton Command="{Binding Model.PreviousPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="/Controls;component/Images/Left.png" ToolTip="Предыдущая страница" />
				<TextBox Height="30" MinWidth="25" MinHeight="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" FontSize="20" Text="{Binding Model.CurrentPageNumber, ElementName=viewer, UpdateSourceTrigger=Explicit}" />
				<Label VerticalContentAlignment="Center" Content="/" FontSize="20" />
				<Label VerticalContentAlignment="Center" Content="{Binding Model.PageCount, ElementName=viewer, FallbackValue='0'}" FontSize="20" />
				<ToolBarButton Command="{Binding Model.NextPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="/Controls;component/Images/Right.png" ToolTip="Следующая страница" />
				<ToolBarButton Command="{Binding Model.LastPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="/Controls;component/Images/RightRight.png" ToolTip="Последняя страница" />

				<ToolBarButton Command="{Binding FitPageSizeCommand}" CommandParameter="{x:Static dxp:ZoomFitMode.PageWidth}" ImageSource="/Controls;component/Images/WidthToPage.png" ToolTip="По ширине страницы" />
				<ToolBarButton Command="{Binding FitPageSizeCommand}" CommandParameter="{x:Static dxp:ZoomFitMode.PageHeight}" ImageSource="/Controls;component/Images/HeightToPage.png" ToolTip="По высоте страницы" />
				<ToolBarButton Command="{Binding FitPageSizeCommand}" CommandParameter="{x:Static dxp:ZoomFitMode.WholePage}" ImageSource="/Controls;component/Images/FidthToPage.png" ToolTip="Исходный размер" />
			</StackPanel>

			<DockPanel Grid.Column="1">
				<ToolBarButton Command="{Binding Model.ZoomOutCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" DockPanel.Dock="Left" ImageSource="/Controls;component/Images/ZoomOut.png" ToolTip="Уменьшить масштаб" />
				<ToolBarButton Command="{Binding Model.ZoomInCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" DockPanel.Dock="Right" ImageSource="/Controls;component/Images/ZoomIn.png" ToolTip="Увеличить масштаб" />
				<Slider x:Name="slider" VerticalAlignment="Center" IsSnapToTickEnabled="True" Maximum="500" Minimum="10" Orientation="Horizontal" TickFrequency="10" ToolTip="Изменить масштаб" Value="{Binding Model.Zoom, ElementName=viewer}" />
			</DockPanel>

			<StackPanel Grid.Column="2" Orientation="Horizontal">
				<ToolBarButton Command="{Binding Model.PrintCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="/Controls;component/Images/Print.png" ToolTip="Печать отчета" />
				<ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Csv" ImageSource="/Controls;component/Images/Pdf.png" ToolTip="Экспорт в CSV" />
			</StackPanel>
		</Grid>

		<dxb:BarManager x:Name="barManager" Grid.Row="1" ToolbarGlyphSize="Default">
			<dxb:BarManager.Resources>
				<dx:ObjectToBooleanConverter x:Key="objectToBooleanConverter" Invert="False" />
				<DataTemplate x:Key="zoomModeItemTemplate">
					<TextBlock Text="{Binding DisplayedText}" />
				</DataTemplate>
				<DataTemplate x:Key="separatorItemTemplate">
					<Rectangle Width="100" Height="1" Margin="0,1" Fill="Black" />
				</DataTemplate>
				<dxe:TextEditSettings x:Key="pageNumberEditSettings" HorizontalContentAlignment="Center" AllowNullInput="True" Mask="\d{0,6}" MaskType="RegEx" />
				<Style x:Key="pageNumberEditStyle" TargetType="{x:Type dxe:TextEdit}">
					<Setter Property="MinWidth" Value="30" />
					<Setter Property="Padding" Value="0,-2" />
				</Style>
				<dx:FormatStringConverter x:Key="formatStringConverter" Converter="{x:Null}" FormatString="/ {0}" />
				<DataTemplate x:Key="progressBarTemplate">
					<dxe:ProgressBarEdit Height="12" MinWidth="150" MaxHeight="12" Maximum="{Binding Model.ProgressMaximum, Source={x:Reference viewer}}" Minimum="0">
						<dxe:ProgressBarEdit.StyleSettings>
							<dxe:ProgressBarStyleSettings />
						</dxe:ProgressBarEdit.StyleSettings>
					</dxe:ProgressBarEdit>
				</DataTemplate>
				<DataTemplate x:Key="progressBarMarqueeTemplate">
					<dxe:ProgressBarEdit Height="12" MinWidth="150" MaxHeight="12">
						<dxe:ProgressBarEdit.StyleSettings>
							<dxe:ProgressBarMarqueeStyleSettings />
						</dxe:ProgressBarEdit.StyleSettings>
					</dxe:ProgressBarEdit>
				</DataTemplate>
			</dxb:BarManager.Resources>
			<dxb:BarManager.Bars>
				<dxb:Bar x:Name="barPreview" AllowCustomizationMenu="False" AllowQuickCustomization="False" Caption="{dxp:PrintingStringId StringId=ToolBarCaption}" IsMainMenu="True" UseWholeRow="True">
					<dxb:Bar.DockInfo>
						<dxb:BarDockInfo ContainerType="Top" />
					</dxb:Bar.DockInfo>
					<dxb:Bar.ItemLinks>
						<!--<dxb:BarCheckItemLink BarItemName="biParameters" />
						<dxb:BarCheckItemLink BarItemName="biDocumentMap" />
						<dxb:BarItemLinkSeparator />-->
						<dxb:BarButtonItemLink BarItemName="biShowFirstPage" />
						<dxb:BarButtonItemLink BarItemName="biShowPrevPage" />
						<dxb:BarEditItemLink BarItemName="biPageNumber" />
						<dxb:BarButtonItemLink BarItemName="biShowNextPage" />
						<dxb:BarButtonItemLink BarItemName="biShowLastPage" />
						<dxb:BarItemLinkSeparator />
						<dxb:BarButtonItemLink BarItemName="biZoomOut" />
						<dxb:BarEditItemLink BarItemName="biBarsZoomMode" />
						<dxb:BarButtonItemLink BarItemName="biZoomIn" />
						<dxb:BarItemLinkSeparator />
						<dxb:BarButtonItemLink BarItemName="biPrint" />
						<dxb:BarButtonItemLink BarItemName="biPrintDirect" />
						<dxb:BarButtonItemLink BarItemName="biPageSetup" />
						<dxb:BarSplitButtonItemLink BarItemName="biExportFile" />
					</dxb:Bar.ItemLinks>
				</dxb:Bar>
				<dxb:Bar x:Name="statusBar" Caption="{dxp:PrintingStringId StringId=StatusBarCaption}" IsStatusBar="True" UseWholeRow="True">
					<dxb:Bar.DockInfo>
						<dxb:BarDockInfo ContainerType="Bottom" />
					</dxb:Bar.DockInfo>
					<dxb:Bar.ItemLinks>
						<dxb:BarEditItemLink BarItemName="biProgress" />
						<dxb:BarEditItemLink BarItemName="biMarqueeProgress" />
						<dxb:BarButtonItemLink BarItemName="biStopPageBuilding" />
						<dxb:BarStaticItemLink BarItemName="biZoomFactor" />
					</dxb:Bar.ItemLinks>
				</dxb:Bar>
			</dxb:BarManager.Bars>
			<dxb:BarManager.Items>
				<!--<dxb:BarCheckItem x:Name="biParameters" Command="{Binding Model.ToggleParametersPanelCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=Parameters}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Parameters_16x16.png}" Hint="{dxp:PrintingStringId StringId=Parameters_Hint}" IsChecked="{Binding Model.IsParametersPanelVisible, ElementName=viewer, Mode=OneWay}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Parameters_32x32.png}" />
				<dxb:BarCheckItem x:Name="biDocumentMap" Command="{Binding Model.ToggleDocumentMapCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=DocumentMap}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/DocumentMap_16x16.png}" Hint="{dxp:PrintingStringId StringId=DocumentMap_Hint}" IsChecked="{Binding Model.IsDocumentMapVisible, ElementName=viewer, Mode=OneWay}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/DocumentMap_32x32.png}" />-->
				<dxb:BarButtonItem x:Name="biPrint" Command="{Binding Model.PrintCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=Print}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/PrintDialog_16x16.png}" Hint="{dxp:PrintingStringId StringId=Print_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/PrintDialog_32x32.png}" />
				<dxb:BarButtonItem x:Name="biPrintDirect" Command="{Binding Model.PrintDirectCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=PrintDirect}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Print_16x16.png}" Hint="{dxp:PrintingStringId StringId=PrintDirect_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Print_32x32.png}" />
				<dxb:BarButtonItem x:Name="biPageSetup" Command="{Binding Model.PageSetupCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=PageSetup}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/PageSetup_16x16.png}" Hint="{dxp:PrintingStringId StringId=PageSetup_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/PageSetup_32x32.png}" />
				<dxb:BarButtonItem x:Name="biZoomOut" Command="{Binding Model.ZoomOutCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=DecreaseZoom}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ZoomOut_16x16.png}" Hint="{dxp:PrintingStringId StringId=DecreaseZoom_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ZoomOut_32x32.png}" />
				<dxb:BarEditItem x:Name="biBarsZoomMode" BarItemDisplayMode="Content" CustomizationContent="{dxp:PrintingStringId StringId=Zoom}" CustomizationGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Zoom_16x16.png}" EditValue="{Binding Model.ZoomMode, ElementName=viewer}" EditWidth="100" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Zoom_16x16.png}" Hint="{dxp:PrintingStringId StringId=Zoom_Hint}" IsEnabled="{Binding Model, Converter={StaticResource objectToBooleanConverter}, ElementName=viewer}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Zoom_32x32.png}">
					<dxb:BarEditItem.EditSettings>
						<dxe:ComboBoxEditSettings IsTextEditable="False" ItemsSource="{Binding Model.ZoomModes, ElementName=viewer}">
							<dxe:ComboBoxEditSettings.ItemTemplateSelector>
								<dxp:ZoomComboBoxTemplateSelector SeparatorItemTemplate="{StaticResource separatorItemTemplate}" ZoomModeItemTemplate="{StaticResource zoomModeItemTemplate}" />
							</dxe:ComboBoxEditSettings.ItemTemplateSelector>
						</dxe:ComboBoxEditSettings>
					</dxb:BarEditItem.EditSettings>
				</dxb:BarEditItem>
				<dxb:BarButtonItem x:Name="biZoomIn" Command="{Binding Model.ZoomInCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=IncreaseZoom}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ZoomIn_16x16.png}" Hint="{dxp:PrintingStringId StringId=IncreaseZoom_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ZoomIn_32x32.png}" />
				<dxb:BarButtonItem x:Name="biShowFirstPage" Command="{Binding Model.FirstPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=FirstPage}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/First_16x16.png}" Hint="{dxp:PrintingStringId StringId=FirstPage_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/First_32x32.png}" />
				<dxb:BarButtonItem x:Name="biShowPrevPage" Command="{Binding Model.PreviousPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=PreviousPage}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Prev_16x16.png}" Hint="{dxp:PrintingStringId StringId=PreviousPage_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Prev_32x32.png}" />
				<dxb:BarButtonItem x:Name="biShowNextPage" Command="{Binding Model.NextPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=NextPage}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Next_16x16.png}" Hint="{dxp:PrintingStringId StringId=NextPage_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Next_32x32.png}" />
				<dxb:BarButtonItem x:Name="biShowLastPage" Command="{Binding Model.LastPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=LastPage}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Last_16x16.png}" Hint="{dxp:PrintingStringId StringId=LastPage_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Last_32x32.png}" />
				<dxb:BarSplitButtonItem x:Name="biExportFile" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=ExportFile}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Export_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportFile_Hint}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Export_32x32.png}">
					<dxb:BarSplitButtonItem.PopupControl>
						<dxb:PopupMenu>
							<dxb:PopupMenu.ItemLinks>
								<dxb:BarButtonItemLink BarItemName="biExportPdf" />
								<dxb:BarButtonItemLink BarItemName="biExportHtm" />
								<dxb:BarButtonItemLink BarItemName="biExportMht" />
								<dxb:BarButtonItemLink BarItemName="biExportRtf" />
								<dxb:BarButtonItemLink BarItemName="biExportXls" />
								<dxb:BarButtonItemLink BarItemName="biExportXlsx" />
								<dxb:BarButtonItemLink BarItemName="biExportCsv" />
								<dxb:BarButtonItemLink BarItemName="biExportTxt" />
								<dxb:BarButtonItemLink BarItemName="biExportGraphic" />
								<dxb:BarButtonItemLink BarItemName="biExportXps" />
							</dxb:PopupMenu.ItemLinks>
						</dxb:PopupMenu>
					</dxb:BarSplitButtonItem.PopupControl>
				</dxb:BarSplitButtonItem>
				<dxb:BarButtonItem x:Name="biExportPdf" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Pdf" Content="{dxp:PrintingStringId StringId=ExportPdf}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToPDF_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportPdf}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToPDF_32x32.png}" />
				<dxb:BarButtonItem x:Name="biExportHtm" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Htm" Content="{dxp:PrintingStringId StringId=ExportHtm}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToHTML_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportHtm}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToHTML_32x32.png}" />
				<dxb:BarButtonItem x:Name="biExportMht" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Mht" Content="{dxp:PrintingStringId StringId=ExportMht}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToMHT_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportMht}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToMHT_32x32.png}" />
				<dxb:BarButtonItem x:Name="biExportRtf" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Rtf" Content="{dxp:PrintingStringId StringId=ExportRtf}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToRTF_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportRtf}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToRTF_32x32.png}" />
				<dxb:BarButtonItem x:Name="biExportXls" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Xls" Content="{dxp:PrintingStringId StringId=ExportXls}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToXLS_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportXls}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToXLS_32x32.png}" />
				<dxb:BarButtonItem x:Name="biExportXlsx" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Xlsx" Content="{dxp:PrintingStringId StringId=ExportXlsx}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToXLSX_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportXlsx}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToXLSX_32x32.png}" />
				<dxb:BarButtonItem x:Name="biExportCsv" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Csv" Content="{dxp:PrintingStringId StringId=ExportCsv}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToCSV_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportCsv}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToCSV_32x32.png}" />
				<dxb:BarButtonItem x:Name="biExportTxt" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Txt" Content="{dxp:PrintingStringId StringId=ExportTxt}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToText_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportTxt}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToText_32x32.png}" />
				<dxb:BarButtonItem x:Name="biExportGraphic" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Image" Content="{dxp:PrintingStringId StringId=ExportImage}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToImage_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportImage}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToImage_32x32.png}" />
				<dxb:BarButtonItem x:Name="biExportXps" Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Xps" Content="{dxp:PrintingStringId StringId=ExportXps}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToXPS_16x16.png}" Hint="{dxp:PrintingStringId StringId=ExportXps}" LargeGlyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/ExportToXPS_32x32.png}" />
				<dxb:BarEditItem x:Name="biPageNumber" Content2="{Binding Model.PageCount, Converter={StaticResource formatStringConverter}, ElementName=viewer, FallbackValue=' / 0'}" EditSettings="{StaticResource pageNumberEditSettings}" EditStyle="{StaticResource pageNumberEditStyle}" EditValue="{Binding Model.CurrentPageNumber, ElementName=viewer, UpdateSourceTrigger=Explicit}" IsEnabled="{Binding Model.PageCount, ElementName=viewer, FallbackValue={StaticResource False}}" ShowScreenTip="False">
					<dxmvvm:Interaction.Behaviors>
						<dxp:PageNumberBehavior FocusTarget="{Binding ElementName=viewer}" />
					</dxmvvm:Interaction.Behaviors>
				</dxb:BarEditItem>
				<dxb:BarEditItem x:Name="biProgress" EditTemplate="{StaticResource progressBarTemplate}" EditValue="{Binding Model.ProgressValue, ElementName=viewer, Mode=OneWay}" IsVisible="{Binding Model.ProgressVisibility, ElementName=viewer, FallbackValue={StaticResource False}}" ShowScreenTip="False" />
				<dxb:BarEditItem x:Name="biMarqueeProgress" EditTemplate="{StaticResource progressBarMarqueeTemplate}" IsVisible="{Binding Model.ProgressMarqueeVisibility, ElementName=viewer, FallbackValue={StaticResource False}}" ShowScreenTip="False" />
				<dxb:BarButtonItem x:Name="biStopPageBuilding" BarItemDisplayMode="ContentAndGlyph" Command="{Binding Model.StopCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" Content="{dxp:PrintingStringId StringId=StopPageBuilding}" Glyph="{dxp:PrintingResourceImage ResourceName=Images/BarItems/Stop_16x16.png}" IsVisible="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" />
				<dxb:BarStaticItem x:Name="biZoomFactor" AutoSizeMode="Fill" Content="{Binding Model.ZoomDisplayText, ElementName=viewer}" ContentAlignment="Right" ShowBorder="False" />
			</dxb:BarManager.Items>
			<dxp:DocumentViewer x:Name="viewer" Model="{Binding Model}" />
		</dxb:BarManager>

		<StackPanel Grid.Row="2" Margin="10,3,3,3" Orientation="Vertical">
			<TextBlock FontWeight="Bold" Foreground="White" Text="Фильтр: По умолчанию" />
			<TextBlock FontWeight="Bold" Foreground="White" Text="За последнюю неделю" />
		</StackPanel>
	</Grid>
</UserControl>
