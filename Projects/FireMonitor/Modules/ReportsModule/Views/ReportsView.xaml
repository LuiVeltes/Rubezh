<UserControl x:Class="ReportsModule.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" Content="{Binding ReportContent}" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Controls:XButton Command="{Binding ShowReportTypesCountCommand}" Height="30" Margin="2" Background="DarkRed" Padding="5">
                <TextBlock Text="Количество устройств по типам" FontSize="12" />
            </Controls:XButton>
            <Controls:XButton Command="{Binding ShowReportDeviceParamsCommand}" Height="30" Margin="2" Background="DarkRed" Padding="5">
                <TextBlock Text="Параметры устройств" FontSize="12" />
            </Controls:XButton>
            <Controls:XButton Command="{Binding ShowReportIndicationBlockCommand}" Height="30" Margin="2" Background="DarkRed" Padding="5">
                <TextBlock Text="Блоки индикации" FontSize="12" />
            </Controls:XButton>
            <Controls:XButton Command="{Binding ShowReportJournalCommand}" Height="30" Margin="2" Background="DarkRed" Padding="5">
                <TextBlock Text="Журнал событий" FontSize="12" />
            </Controls:XButton>
            <Controls:XButton Command="{Binding ShowReportDeviceListCommand}" Height="30" Margin="2" Background="DarkRed" Padding="5">
                <TextBlock Text="Списки устройств" FontSize="12" />
            </Controls:XButton>
        </StackPanel>
    </Grid>
</UserControl>