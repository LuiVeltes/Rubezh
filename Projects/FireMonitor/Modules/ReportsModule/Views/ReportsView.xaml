<UserControl x:Class="ReportsModule.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" ItemsSource="{Binding ReportNames}" SelectedItem="{Binding SelectedReportName}" HorizontalAlignment="Left" />
        <ContentControl Grid.Row="1" Content="{Binding ReportContent}" Margin="2" />
    </Grid>
</UserControl>