<UserControl x:Class="ReportsModule.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ReportView="clr-namespace:SAPBusinessObjects.WPF.Viewer;assembly=SAPBusinessObjects.WPF.Viewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" HorizontalAlignment="Stretch" >
            <Button Command="{Binding ShowIndicationBlockReportCommand}" Width="150" Margin="2">
                <TextBlock Text="Блоки индикации" FontSize="12" />
            </Button>
            <Button Command="{Binding ShowJournalReportCommand}" Width="150" Margin="2">
                <TextBlock Text="Журнал событий" FontSize="12" />
            </Button>
            <Button Command="{Binding ShowDriverCountReportCommand}" Width="200" Margin="2">
                <TextBlock Text="Количество устройств по типам" FontSize="12" />
            </Button>
            <Button Command="{Binding ShowDeviceParamsReportCommand}" Width="150" Margin="2">
                <TextBlock Text="Параметры устройств" FontSize="12" />
            </Button>
            <Button Command="{Binding ShowDeviceListReportCommand}" Width="150" Margin="2">
                <TextBlock Text="Список устройств" FontSize="12" />
            </Button>
        </DockPanel>
        <ContentControl Grid.Row="1" Content="{Binding ReportContent}" Margin="2" />
    </Grid>
</UserControl>