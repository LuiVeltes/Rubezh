<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:xrbc="clr-namespace:CodeReason.Reports.Document.Barcode;assembly=CodeReason.Reports" xmlns:xrd="clr-namespace:CodeReason.Reports.Document;assembly=CodeReason.Reports" ColumnWidth="21cm" PageHeight="29.7cm" PageWidth="21cm">
	<FlowDocument.Resources>
		<Style TargetType="{x:Type TableCell}">
			<Setter Property="Padding" Value="0.1cm" />
			<Setter Property="BorderBrush" Value="Black" />
			<Setter Property="BorderThickness" Value="0.01cm" />
		</Style>
		<Style TargetType="{x:Type TextElement}">
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="FontSize" Value="12" />
		</Style>
		<Style x:Key="section" BasedOn="{StaticResource {x:Type TextElement}}" TargetType="{x:Type Section}" />
		<Style x:Key="header1" BasedOn="{StaticResource {x:Type TextElement}}" TargetType="{x:Type TableRowGroup}">
			<Setter Property="FontWeight" Value="DemiBold" />
			<Setter Property="FontSize" Value="16" />
			<Setter Property="Background" Value="LightGray" />
		</Style>
		<Style x:Key="header2" BasedOn="{StaticResource {x:Type TextElement}}" TargetType="{x:Type TableRowGroup}">
			<Setter Property="Background" Value="LightGray" />
		</Style>
		<Style x:Key="text" BasedOn="{StaticResource {x:Type TextElement}}" TargetType="{x:Type TableRowGroup}" />
	</FlowDocument.Resources>

	<xrd:ReportProperties />

	<xrd:SectionReportFooter Padding="10,0,10,10" PageFooterHeight="2" Style="{StaticResource section}">
		<Table BorderBrush="Black" BorderThickness="0,1,0,0" CellSpacing="0" Padding="0,3,0,0">
			<Table.Columns>
				<TableColumn Width="*" />
				<TableColumn Width="*" />
			</Table.Columns>
			<TableRowGroup>
				<TableRow>
					<TableCell>
						<Paragraph>
							<xrd:InlineDocumentValue Format="dd.MM.yyyy HH:mm:ss" PropertyName="PrintDate" />
						</Paragraph>
					</TableCell>
					<TableCell>
						<Paragraph TextAlignment="Right">
							Страница
							<xrd:InlineContextValue FontWeight="Bold" PropertyName="PageNumber" />
							из
							<xrd:InlineContextValue FontWeight="Bold" PropertyName="PageCount" />
						</Paragraph>
					</TableCell>
				</TableRow>
			</TableRowGroup>
		</Table>
	</xrd:SectionReportFooter>

	<Section BreakPageBefore="True" FontSize="12" Padding="80,20,40,10" Style="{StaticResource section}">
		<Table BorderBrush="Black" BorderThickness="0.02cm" CellSpacing="0">
			<Table.Columns>
				<TableColumn />
				<TableColumn />
				<TableColumn />
			</Table.Columns>
			<TableRowGroup Style="{StaticResource header1}">
				<TableRow>
					<TableCell ColumnSpan="3">
						<Paragraph TextAlignment="Center">Список устройств конфигурации</Paragraph>
					</TableCell>
				</TableRow>
			</TableRowGroup>
			<TableRowGroup Style="{StaticResource header2}">
				<TableRow>
					<TableCell ColumnSpan="2">
						<Paragraph TextAlignment="Center">Устройство</Paragraph>
					</TableCell>
					<TableCell RowSpan="2">
						<Paragraph TextAlignment="Center">
							<LineBreak />
							Зона
						</Paragraph>
					</TableCell>
				</TableRow>
				<TableRow>
					<TableCell>
						<Paragraph TextAlignment="Center">Тип</Paragraph>
					</TableCell>
					<TableCell>
						<Paragraph TextAlignment="Center">Адрес</Paragraph>
					</TableCell>
				</TableRow>
			</TableRowGroup>

			<TableRowGroup Style="{StaticResource text}">
				<xrd:TableRowForDataTable TableName="Devices">
					<TableCell>
						<Paragraph>
							<xrd:InlineTableCellValue PropertyName="Type" />
						</Paragraph>
					</TableCell>
					<TableCell>
						<Paragraph>
							<xrd:InlineTableCellValue PropertyName="Address" />
						</Paragraph>
					</TableCell>
					<TableCell>
						<Paragraph>
							<xrd:InlineTableCellValue PropertyName="Zone" />
						</Paragraph>
					</TableCell>
				</xrd:TableRowForDataTable>
			</TableRowGroup>

		</Table>
	</Section>
</FlowDocument>

