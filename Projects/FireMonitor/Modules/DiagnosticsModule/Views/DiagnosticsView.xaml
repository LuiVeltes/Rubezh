<UserControl x:Class="DiagnosticsModule.Views.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DiagnosticsModule.Views"
             >
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <Button Content="Включать" Command="{Binding Test1Command}" Width="250" Margin="2" />
            <Button Content="Выключать" Command="{Binding Test2Command}" Width="250" Margin="2" />
            <Button Content="Сбрасавать все" Command="{Binding Test3Command}" Width="250" Margin="2" />
            <Button Content="Исключение" Command="{Binding Test4Command}" Width="250" Margin="2" />
            <Button Content="Управление устройством" Command="{Binding Test5Command}" Width="250" Margin="2" />
            <Button Content="Охранные зоны" Command="{Binding Test6Command}" Width="250" Margin="2" />
            <Button Content="Переход по вкладкам" Command="{Binding Test7Command}" Width="250" Margin="2" />
            <Button Content="Все вместе" Command="{Binding Test8Command}" Width="250" Margin="2" />
            <Button Content="Сообщение" Command="{Binding Test9Command}" Width="250" Margin="2" />
            <Button Content="DomainTestCommand" Command="{Binding DomainTestCommand}" Width="250" Margin="2" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="WarningButton_Click" Content="Предупреждение из трея" Width="80" Margin="2"/>
                <Button Click="NotificationButton_Click" Content="Уведомление из трея" Width="80" Margin="2"/>
                <Button Click="ConflagrationButton_Click" Content="Пожар из трея" Width="80" Margin="2"/>
            </StackPanel>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <TextBox Text="{Binding Text}"/>
        </ScrollViewer>
    </Grid>
</UserControl>