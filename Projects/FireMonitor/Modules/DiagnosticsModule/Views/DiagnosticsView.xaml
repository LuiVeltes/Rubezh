<UserControl x:Class="DiagnosticsModule.Views.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Content="Включать" Command="{Binding Test1Command}" Width="150" Margin="2" />
            <Button Content="Выключать" Command="{Binding Test2Command}" Width="150" Margin="2" />
            <Button Content="Сбрасавать все" Command="{Binding Test3Command}" Width="150" Margin="2" />
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <TextBox Text="{Binding Text}" />
        </ScrollViewer>
    </Grid>
</UserControl>