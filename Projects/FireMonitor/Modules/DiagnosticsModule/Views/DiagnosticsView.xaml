<UserControl x:Class="DiagnosticsModule.Views.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DiagnosticsModule.Views">
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="Основные">
                <WrapPanel>
                    <Button Content="Test1" Command="{Binding Test1Command}" Width="200" Margin="2" />
					<Button Content="Test PDF" Command="{Binding TestPdfCommand}" Width="200" Margin="2" />
					<Button Content="Test PDF 2" Command="{Binding TestPdf2Command}" Width="200" Margin="2" />
                    <Button Content="Test Instructions" Command="{Binding TestInstructionsCommand}" Width="200" Margin="2" />
				</WrapPanel>
            </TabItem>
        </TabControl>
        <ScrollViewer Grid.Row="1" Margin="2">
            <TextBox Text="{Binding Text}" Margin="2" />
        </ScrollViewer>
    </Grid>
</UserControl>