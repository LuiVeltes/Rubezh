<UserControl x:Class="DiagnosticsModule.Views.ServerView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Margin="2">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Content="Обновить" Command="{Binding RefreshCommand}" HorizontalAlignment="Right" Width="100" Margin="2" />
        </StackPanel>
		<TabControl Grid.Row="1" Margin="2">
			<TabItem Header="Очередь сервера">
                <DataGrid ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Название" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Margin="2 0" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
		</TabControl>
	</Grid>
</UserControl>