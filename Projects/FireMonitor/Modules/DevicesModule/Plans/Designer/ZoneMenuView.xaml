<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ContextMenu x:Key="ZoneMenuView" x:Shared="False">
		<MenuItem Command="{Binding ShowInTreeCommand}" Header="Показать в списке" />
		<MenuItem Command="{Binding DisableAllCommand}" Header="Отключить все устройства в зоне" />
		<MenuItem Command="{Binding EnableAllCommand}" Header="Включить все устройства в зоне" />
		<MenuItem Command="{Binding SetGuardCommand}" Header="Поставить на охрану" />
		<MenuItem Command="{Binding UnSetGuardCommand}" Header="Снять с охраны" />
	</ContextMenu>
</ResourceDictionary>