<UserControl x:Class="DevicesModule.Views.MPTTimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="200" MinHeight="200">

    <StackPanel TextBlock.FontSize="20">
        <TextBlock Text="Включение МПТ" Margin="2" />
        <TextBlock Text="Обратный отсчет" Margin="2" />
        <StackPanel>
            <Label Content="{Binding TimeLeft}" Margin="2" />
            <Label Content=" сек. " Margin="2" />
        </StackPanel>
    </StackPanel>
</UserControl>