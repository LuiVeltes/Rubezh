<UserControl x:Class="DevicesModule.Views.DeviceDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:DevicesModule.Views"
             MinWidth="400" MinHeight="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ContentControl Grid.Column="0" Content="{Binding DeviceControlContent}" Width="50" Height="50" Background="Black" Margin="0, 0, 0, 5" />
            <TextBlock Grid.Column="1" Text="{Binding State}" Margin="5" />
        </Grid>
        
        <TabControl Grid.Row="1">
            
            <TabItem Header="Основные">
                <StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Visibility="{Binding Driver.HasImage, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Image Source="{Binding Driver.ImageSource}" Width="16" Height="16" Margin="5, 0, 5, 0" />
                        </StackPanel>
                        <TextBlock Text="{Binding Driver.Name}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="3">
                        <TextBlock Text="Тип устройства: " FontWeight="Bold" Foreground="YellowGreen" />
                        <TextBlock Text="{Binding Driver.CategoryName}" />
                        <TextBlock Text=", " />
                        <TextBlock Text="{Binding Driver.DeviceTypeName}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="3">
                        <TextBlock Text="Подключено: " FontWeight="Bold" Foreground="YellowGreen" />
                        <TextBlock Text="{Binding ConnectedTo}" />
                    </StackPanel>

                    <StackPanel Visibility="{Binding Driver.IsZoneDevice, Converter={StaticResource BoolToVisibilityConverter}}" Orientation="Horizontal" Margin="3">
                        <TextBlock Text="Зона:" FontWeight="Bold" Foreground="YellowGreen" />
                        <TextBlock Text="{Binding PresentationZone}" />
                    </StackPanel>

                    <StackPanel Visibility="{Binding Driver.IsZoneLogicDevice, Converter={StaticResource BoolToVisibilityConverter}}" Margin="3">
                        <TextBlock Text="Логика срабатывания по состоянию зон:" FontWeight="Bold" Foreground="YellowGreen" />
                        <TextBlock Text="{Binding PresentationZone}" />
                    </StackPanel>

                </StackPanel>
            </TabItem>
            
            <TabItem Header="Состояние">
                <StackPanel>

                    <ItemsControl ItemsSource="{Binding ParentStates}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl ItemsSource="{Binding SelfStates}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding Parameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                </StackPanel>
            </TabItem>

            <TabItem Header="Управление" Visibility="{Binding Driver.CanControl, Converter={StaticResource BoolToVisibilityConverter}}">
                <Views:DeviceControlView DataContext="{Binding DeviceControlViewModel}" />
            </TabItem>
            
        </TabControl>
        
    </Grid>
</UserControl>
