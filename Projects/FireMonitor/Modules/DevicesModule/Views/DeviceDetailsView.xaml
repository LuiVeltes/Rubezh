<UserControl x:Class="DevicesModule.Views.DeviceDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:DevicesModule.Views"
             MinHeight="300" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <ContentControl Content="{Binding DeviceControlContent}" Width="50" Height="50" Background="Black" Margin="0, 0, 0, 5" />
            <Label Content="{Binding StateType, Converter={StaticResource StateTypeToStringConverter}}" Margin="5" VerticalAlignment="Center" />
        </StackPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="Основные">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Visibility="{Binding Driver.HasImage, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Image Source="{Binding Driver.ImageSource}" Width="20" Height="20" Margin="5" />
                        </StackPanel>
                        <Label Content="{Binding Driver.Name}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="3">
                        <Label Content="Тип устройства: " FontWeight="Bold" />
                        <Label Content="{Binding Driver.CategoryName}" />
                        <Label Content=", " />
                        <Label Content="{Binding Driver.DeviceTypeName}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="3">
                        <Label Content="Подключено: " FontWeight="Bold" />
                        <Label Content="{Binding ConnectedTo}" />
                    </StackPanel>
                    <StackPanel Visibility="{Binding Driver.IsZoneDevice, Converter={StaticResource BoolToVisibilityConverter}}" Orientation="Horizontal" Margin="3">
                        <Label Content="Зона:" FontWeight="Bold" />
                        <Label Content="{Binding PresentationZone}" />
                    </StackPanel>
                    <StackPanel Visibility="{Binding Driver.IsZoneLogicDevice, Converter={StaticResource BoolToVisibilityConverter}}" Margin="3">
                        <Label Content="Логика срабатывания по состоянию зон:" FontWeight="Bold" />
                        <Label Content="{Binding PresentationZone}" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Состояние">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding ParentStates}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl ItemsSource="{Binding SelfStates}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding Parameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <!--<TabItem Header="Управление" Visibility="{Binding Driver.CanControl, Converter={StaticResource BoolToVisibilityConverter}}">
                <Views:DeviceControlView DataContext="{Binding DeviceControlViewModel}" />
            </TabItem>-->
        </TabControl>
    </Grid>
</UserControl>