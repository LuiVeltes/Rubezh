<UserControl x:Class="DevicesModule.Views.ConnectionIndicatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"        
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Controls;assembly=Controls" xmlns:Converters="clr-namespace:DevicesModule.Converters" Loaded="UserControl_Loaded">
   
    <UserControl.Resources>
        <Converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal">
        <Grid>
            <Image Name="_serviceConnectionIndicator" Height="13" RenderOptions.BitmapScalingMode="NearestNeighbor"  Opacity="0.4">
                <Image.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsServiceConnected, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                <DataTrigger.Setters>
                                    <Setter Property="Image.Source" Value="/Controls;component/Images/Ind_C-C.png" />
                                </DataTrigger.Setters>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsServiceConnected, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                <DataTrigger.Setters>
                                    <Setter Property="Image.Source" Value="/Controls;component/Images/Ind_CxC.png" />
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <Controls:AlarmButton Name="_serviceConnectionControl" Width="50" Height="30" Margin="3 3" OuterBorderThickness="0" GlowColor="DarkOrange" IsGlowing ="{Binding IsServiceConnected, Converter={StaticResource InverseBooleanConverter}}"  IsEnabled="{Binding IsServiceConnected, Converter={StaticResource InverseBooleanConverter}}" Visibility="{Binding IsServiceConnected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}"/>
            <Grid Name="_serviceConnectionGrid" Width="50" Height="30" Margin="3 3" Background="White" Opacity="0.01" Visibility="{Binding IsServiceConnected, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>
        <Grid>
            <Image Name="_deviceConnectionIndicator"  Height="13" RenderOptions.BitmapScalingMode="NearestNeighbor" Opacity="0.4">
                <Image.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDeviceConnected}" Value="True">
                                <DataTrigger.Setters>
                                    <Setter Property="Image.Source" Value="/Controls;component/Images/Ind_C-P.png" />
                                </DataTrigger.Setters>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsDeviceConnected}" Value="False">
                                <DataTrigger.Setters>
                                    <Setter Property="Image.Source" Value="/Controls;component/Images/Ind_CxP.png" />
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <Controls:AlarmButton Name="_deviceConnectionControl" Width="50" Height="30" Margin="3 3" OuterBorderThickness="0" GlowColor="DarkOrange" IsGlowing ="{Binding IsDeviceConnected, Converter={StaticResource InverseBooleanConverter}}"  IsEnabled="{Binding IsDeviceConnected, Converter={StaticResource InverseBooleanConverter}}" Visibility="{Binding IsDeviceConnected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}"/>
            <Grid Name="_deviceConnectionGrid" Width="50" Height="30" Margin="3 3"  Background="White" Opacity="0.01" Visibility="{Binding IsDeviceConnected, Converter={StaticResource BoolToVisibilityConverter}}" />
