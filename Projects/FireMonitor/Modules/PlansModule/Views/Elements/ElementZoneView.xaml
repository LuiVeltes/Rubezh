<UserControl x:Class="PlansModule.ElementZoneView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Name="_grid">
        <Polygon Name="_polygon" Stroke="Orange" StrokeThickness="0" Opacity="0.6"
                 ToolTip="{Binding PresentationName}" Fill="{Binding ZoneState, Converter={StaticResource ZoneStateToColorConverter}}"
                 MouseEnter="_polygon_MouseEnter" MouseLeave="_polygon_MouseLeave" PreviewMouseLeftButtonDown="_polygon_PreviewMouseLeftButtonDown">
            <Polygon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Показать в дереве" Command="{Binding ShowInTreeCommand}" />
                    <MenuItem Header="Отключить все устройства в зоне" Command="{Binding DisableCommand}" />
                    <MenuItem Header="Включить все устройства в зоне" Command="{Binding EnableCommand}" />
                </ContextMenu>
            </Polygon.ContextMenu>
        </Polygon>
    </Grid>
</UserControl>