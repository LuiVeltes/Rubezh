<UserControl x:Class="PlansModule.ElementZoneView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:PlansModule.Converters">
    <UserControl.Resources>
        <Converters:StateToColorConverter x:Key="StateToColorConverter" />
    </UserControl.Resources>
    <Grid>
        <Polygon Name="_polygon" Stroke="Orange" StrokeThickness="0" Opacity="0.6"
                 ToolTip="{Binding PresentationName}" Fill="{Binding StateType, Converter={StaticResource StateToColorConverter}}"
                 MouseEnter="_polygon_MouseEnter" MouseLeave="_polygon_MouseLeave">
            <Polygon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Показать в дереве" Command="{Binding ShowInTreeCommand}" />
                    <MenuItem Header="Отключить все устройства в зоне" Command="{Binding DisableCommand}" />
                    <MenuItem Header="Включить все устройства в зоне" Command="{Binding EnableCommand}" />
                </ContextMenu>
            </Polygon.ContextMenu>
        </Polygon>
    </Grid>
</UserControl>