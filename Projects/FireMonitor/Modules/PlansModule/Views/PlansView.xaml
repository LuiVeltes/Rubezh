<UserControl x:Class="PlansModule.Views.PlansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:PlansModule.Views"
             xmlns:WpfToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Controls:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Controls:LevelToMarginConverter x:Key="LevelToMarginConverter" />
    </UserControl.Resources>
    <Grid Background="WhiteSmoke" Name="_grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Views:CanvasView Grid.Row="1" Height="{Binding ElementName=_grid, Path=ActualHeight}" />
        </Grid>

        <StackPanel Grid.Column="1">
            <Views:PlanTreeView />
            <Views:SelectionView DataContext="{Binding PlanDetails}" />
        </StackPanel>
    </Grid>
</UserControl>
