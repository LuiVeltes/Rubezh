<UserControl x:Class="PlansModule.Views.MonitorSubPlanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Image">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Margin="2" Width="16" Height="16" Source="/Controls;component/Images/BMap.png" />
            <TextBlock Text="{Binding PlanViewModel.Plan.Caption}" FontWeight="Bold" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Состояние:" Margin="2" />
            <Image Margin="0 0 2 0" Width="16" Height="16" Source="{Binding PlanViewModel.StateClass, Converter={StaticResource XStateClassToIconConverter}}" />
            <TextBlock Text="{Binding PlanViewModel.StateClass, Converter={StaticResource XStateClassToStringConverter}}" />
        </StackPanel>
    </StackPanel>
</UserControl>