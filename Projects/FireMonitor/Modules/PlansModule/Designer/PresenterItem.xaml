<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:presenter="clr-namespace:Infrustructure.Plans.Presenter;assembly=Infrustructure.Plans">
	<Style TargetType="{x:Type presenter:PresenterItem}">
		<Setter Property="SnapsToDevicePixels" Value="true" />
		<Setter Property="Background" Value="Red" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type presenter:PresenterItem}">
					<Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=.}" ToolTip="{Binding Title}">
						<ContentPresenter Content="{Binding Content}" IsHitTestVisible="True" />
						<ContentPresenter x:Name="border" Content="{Binding Border}" Visibility="Hidden" />
						<Rectangle x:Name="flush_item" StrokeThickness="10" Stroke="Red" Opacity="0" Margin="-10" />
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="border" Property="Visibility" Value="Visible" />
						</Trigger>
						<EventTrigger RoutedEvent="Flush">
							<BeginStoryboard>
								<Storyboard>
									<DoubleAnimation Storyboard.TargetName="flush_item" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:2" AutoReverse="True" />
								</Storyboard>
							</BeginStoryboard>
						</EventTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>