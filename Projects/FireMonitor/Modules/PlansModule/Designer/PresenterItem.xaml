<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:presenter="clr-namespace:Infrustructure.Plans.Presenter;assembly=Infrustructure.Plans">
	<Style TargetType="{x:Type presenter:PresenterItem}">
		<Setter Property="SnapsToDevicePixels" Value="true" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type presenter:PresenterItem}">
					<Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=.}" ToolTip="{Binding Title}">
						<ContentPresenter Content="{Binding Presenter}" IsHitTestVisible="True" />
						<ContentPresenter x:Name="border" Content="{Binding Border}" Visibility="Hidden" />
						<Rectangle x:Name="flush_border" StrokeThickness="{Binding AdornerThickness}" Stroke="Red" Opacity="0" Margin="{Binding AdornerMargin}"/>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="border" Property="Visibility" Value="Visible" />
						</Trigger>
						<DataTrigger Binding="{Binding ContextMenu.IsOpen, RelativeSource={RelativeSource Self}}" Value="True">
							<Setter TargetName="border" Property="Visibility" Value="Visible" />
						</DataTrigger>
						<EventTrigger RoutedEvent="Flush">
							<BeginStoryboard>
								<Storyboard>
									<DoubleAnimationUsingKeyFrames Storyboard.TargetName="flush_border" Storyboard.TargetProperty="Opacity" Duration="0:0:2">
										<LinearDoubleKeyFrame Value="1" KeyTime="0:0:0" />
										<LinearDoubleKeyFrame Value="0" KeyTime="0:0:0.5" />
										<LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.7" />
										<LinearDoubleKeyFrame Value="0" KeyTime="0:0:1.2" />
										<LinearDoubleKeyFrame Value="1" KeyTime="0:0:1.4" />
										<LinearDoubleKeyFrame Value="0" KeyTime="0:0:2" />
									</DoubleAnimationUsingKeyFrames>
								</Storyboard>
							</BeginStoryboard>
						</EventTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>