<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:presenter="clr-namespace:Infrustructure.Plans.Presenter;assembly=Infrustructure.Plans">
	<Style TargetType="{x:Type presenter:PresenterItem}">
		<Setter Property="SnapsToDevicePixels" Value="true" />
		<Setter Property="Background" Value="Red" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type presenter:PresenterItem}">
					<Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=.}" ToolTip="{Binding Title}">
						<ContentPresenter Content="{Binding Content}" IsHitTestVisible="True" />
						<ContentPresenter x:Name="border" Content="{Binding Border}" Visibility="Hidden" />

						<Rectangle x:Name="flush_border" StrokeThickness="3" Stroke="Red" Opacity="0" Margin="-3"/>
						<Grid x:Name="flush_item" Opacity="0">
							<Ellipse Stroke="Red" StrokeThickness="3" />
							<Ellipse Stroke="Red" StrokeThickness="2" Margin="50" />
							<Ellipse Stroke="Red" StrokeThickness="1" Margin="100" />
							<Rectangle VerticalAlignment="Center" Fill="Red" StrokeThickness="0" Height="1"/>
							<Rectangle HorizontalAlignment="Center" Fill="Red" StrokeThickness="0" Width="1"/>
						</Grid>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="border" Property="Visibility" Value="Visible" />
						</Trigger>
						<EventTrigger RoutedEvent="Flush">
							<BeginStoryboard>
								<Storyboard>
									<DoubleAnimationUsingKeyFrames Storyboard.TargetName="flush_border" Storyboard.TargetProperty="Opacity" Duration="0:0:2">
										<LinearDoubleKeyFrame Value="1" KeyTime="0:0:0" />
										<LinearDoubleKeyFrame Value="0" KeyTime="0:0:0.5" />
										<LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.7" />
										<LinearDoubleKeyFrame Value="0" KeyTime="0:0:1.2" />
										<LinearDoubleKeyFrame Value="1" KeyTime="0:0:1.4" />
										<LinearDoubleKeyFrame Value="0" KeyTime="0:0:2" />
									</DoubleAnimationUsingKeyFrames>
									<DoubleAnimation Storyboard.TargetName="flush_item" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1" AutoReverse="True" />
									<ThicknessAnimation Storyboard.TargetName="flush_item" Storyboard.TargetProperty="Margin" From="-200" To="0" Duration="0:0:1" AutoReverse="True" />
								</Storyboard>
							</BeginStoryboard>
						</EventTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>