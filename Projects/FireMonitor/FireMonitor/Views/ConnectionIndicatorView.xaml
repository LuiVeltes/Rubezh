<UserControl x:Class="FireMonitor.ConnectionIndicatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:XButtons="clr-namespace:Buttons;assembly=Buttons"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Margin="5" Source="Images/Ind_C-C.png" Height="13" RenderOptions.BitmapScalingMode="NearestNeighbor"  Opacity="0.4" />
            <Image Margin="5" Source="Images/Ind_C-P.png" Height="13" RenderOptions.BitmapScalingMode="NearestNeighbor" Opacity="0.4" />
            <TextBlock Name="_textBlock" Foreground="White" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>