<UserControl x:Class="FireMonitor.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">
    <TabControl Template="{StaticResource OutlookTab}" VerticalAlignment="Top">
        <TabControl.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="11" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="10, 0, 0, 0" />
            </Style>
            <Style TargetType="{x:Type Image}">
                <Setter Property="Height" Value="24" />
                <Setter Property="Width" Value="24" />
            </Style>
        </TabControl.Resources>
        <TabItem IsSelected="{Binding IsAlarmSelected}">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/Alarm.png" />
                    <TextBlock Text="Тревоги" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
        <TabItem IsSelected="{Binding IsPlanSelected}">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/map.png" />
                    <TextBlock Text="Планы" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
        <TabItem IsSelected="{Binding IsJournalSelected}">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/book.png" />
                    <TextBlock Text="Журнал событий" />
                    <TextBlock Text="{Binding UnreadJournalCount}" Visibility="{Binding HasUnreadJournal, Converter={StaticResource BoolToVisibilityConverter}}" Margin="5" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
        <TabItem IsSelected="{Binding IsDevicesSelected}">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/tree.png" />
                    <TextBlock Text="Устройства" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
        <TabItem IsSelected="{Binding IsZonesSelected}">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/zones.png" />
                    <TextBlock Text="Зоны" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
        <TabItem IsSelected="{Binding IsReportSelected}">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/levels.png" />
                    <TextBlock Text="Отчеты" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
        <TabItem IsSelected="{Binding IsArchiveSelected}">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/archive.png"  />
                    <TextBlock Text="Архив" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
        <TabItem IsSelected="{Binding IsCallSelected}">
            <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/phone.png" />
                    <TextBlock Text="Дозвон" />
                </StackPanel>
            </TabItem.Header>
        </TabItem>
    </TabControl>
</UserControl>