<UserControl x:Class="FireMonitor.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/OutlookBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <TabControl Template="{StaticResource OutlookTab}">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontSize" Value="11" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Height" Value="20" />
                        <Setter Property="Margin" Value="-5 0 10 0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor" />
                    </Style>
                </TabControl.Resources>
                <TabItem IsSelected="{Binding IsAlarmSelected}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/FireMonitor;component/Views/Images/Tree_Alarms.png" />
                            <TextBlock Text="Тревоги" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <TabItem IsSelected="{Binding IsPlanSelected}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/FireMonitor;component/Views/Images/Tree_Plans.png" />
                            <TextBlock Text="Планы" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <TabItem IsSelected="{Binding IsJournalSelected}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/FireMonitor;component/Views/Images/Tree_Journal.png"  />
                            <TextBlock Text="Журнал" />
                            <TextBlock Text="{Binding UnreadJournalCount}" Visibility="{Binding HasUnreadJournal, Converter={StaticResource BoolToVisibilityConverter}}" Margin="5" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <TabItem IsSelected="{Binding IsDevicesSelected}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/FireMonitor;component/Views/Images/Tree_Equipment.png"  />
                            <TextBlock Text="Устройства" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <TabItem IsSelected="{Binding IsZonesSelected}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/FireMonitor;component/Views/Images/Tree_Zones.png" />
                            <TextBlock Text="Зоны" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <TabItem IsSelected="{Binding IsReportSelected}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/FireMonitor;component/Views/Images/Tree_Reports.png"  />
                            <TextBlock Text="Отчеты" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <TabItem IsSelected="{Binding IsArchiveSelected}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Архив" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <TabItem IsSelected="{Binding IsCallSelected}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Дозвон" FontWeight="Bold" VerticalAlignment="Center" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

            </TabControl>

        </StackPanel>
    </Grid>
</UserControl>