<UserControl x:Class="FireMonitor.AutoActivationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ToggleButton Name="AutoActivationButton" Background="WhiteSmoke" Width="32" Height="32"
                      IsChecked="True"
                      Checked="autoActivationButton_Checked"
                      Unchecked="autoActivationButton_Unchecked">
            <Image Source="Images/Tie_Advanced.ico" />
            <ToggleButton.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=AutoActivationButton, Path=IsChecked}" Value="True">
                            <DataTrigger.Setters>
                                <Setter Property="ToggleButton.ToolTip" Value="Автоматическая активация ВКЛючена" />
                            </DataTrigger.Setters>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=AutoActivationButton, Path=IsChecked}" Value="False">
                            <DataTrigger.Setters>
                                <Setter Property="ToggleButton.ToolTip" Value="Автоматическая активация ВЫКЛючена" />
                            </DataTrigger.Setters>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
    </Grid>
</UserControl>