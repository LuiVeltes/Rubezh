<UserControl x:Class="FireMonitor.AutoActivationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>

        <Button Command="{Binding PlaySoundCommand}" Style="{StaticResource ToolarButtonStyle}">
            <ContentControl>
                <ContentControl.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSoundOn}" Value="True">
                                <DataTrigger.Setters>
                                    <Setter Property="ContentControl.Content">
                                        <Setter.Value>
                                            <Image Source="E:\Icons/sound.png" />
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger.Setters>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsSoundOn}" Value="False">
                                <DataTrigger.Setters>
                                    <Setter Property="ContentControl.Content">
                                        <Setter.Value>
                                            <Image Source="E:\Icons/mute.png" />
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Button>

        <ToggleButton Name="AutoActivationButton" Background="WhiteSmoke" Width="32" Height="32" Visibility="Collapsed"
                      IsChecked="True"
                      Checked="autoActivationButton_Checked"
                      Unchecked="autoActivationButton_Unchecked">
            <Image Source="/Controls;component/Images/windowNormal.png" />
            <ToggleButton.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=AutoActivationButton, Path=IsChecked}" Value="True">
                            <DataTrigger.Setters>
                                <Setter Property="ToggleButton.ToolTip" Value="Автоматическая активация ВКЛючена" />
                            </DataTrigger.Setters>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=AutoActivationButton, Path=IsChecked}" Value="False">
                            <DataTrigger.Setters>
                                <Setter Property="ToggleButton.ToolTip" Value="Автоматическая активация ВЫКЛючена" />
                            </DataTrigger.Setters>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
    </Grid>
</UserControl>