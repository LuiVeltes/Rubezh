<UserControl x:Class="FireMonitor.SoundView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:XButtons="clr-namespace:Buttons;assembly=Buttons"
             xmlns:Converters="clr-namespace:FireMonitor.Views.Converters"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Converters:BoolToBackgroundImageConverter x:Key="BoolToBackgroundImageConverter" />
    </UserControl.Resources>
    <Grid>
        <XButtons:XButton Name="SoundButton" Margin="2" Padding="2"
                          Content="{Binding IsSoundOn, Converter={StaticResource BoolToBackgroundImageConverter}}"
                          FontWeight="Black" Background="Black"
                          Command="{Binding PlaySoundCommand}">
        </XButtons:XButton>
    </Grid>
</UserControl>