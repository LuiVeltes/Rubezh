<UserControl x:Class="FireMonitor.SoundView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:XButtons="clr-namespace:Buttons;assembly=Buttons"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style x:Key="myStyle" TargetType="XButtons:XButton">
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="true">
                    <Setter Property="XButtons:XButton.Content" >
                        <Setter.Value>
                            <Image Source="/FireMonitor;component/Images/mute.png" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <XButtons:XButton Name="SoundButton" Style="{StaticResource myStyle}" Margin="2" Padding="2" 
                          FontWeight="Black" Background="Black"
                          Command="{Binding PlaySoundCommand}">
            <XButtons:XButton.Content>
                <Image Source="/FireMonitor;component/Views/Images/sound.png" />
            </XButtons:XButton.Content>
        </XButtons:XButton>
    </Grid>
</UserControl>