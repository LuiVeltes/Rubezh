<UserControl x:Class="FireMonitor.SoundView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:XButtons="clr-namespace:Buttons;assembly=Buttons"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <XButtons:XButton Name="SoundButtonOn" Margin="2" Padding="2"
                          FontWeight="Black" Background="Black"
                          Command="{Binding PlaySoundCommand}"
                           >
            <XButtons:XButton.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSoundOn}" Value="true">
                            <DataTrigger.Setters>
                                <Setter Property="XButtons:XButton.Content">
                                    <Setter.Value>
                                        <Image Source="Images\sound.png" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger.Setters>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsSoundOn}" Value="false">
                            <DataTrigger.Setters>
                                <Setter Property="XButtons:XButton.Content">
                                    <Setter.Value>
                                        <Image Source="Images\mute.png" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger.Setters>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </XButtons:XButton.Style>
        </XButtons:XButton>
    </Grid>
</UserControl>