<UserControl x:Class="FireMonitor.Views.ToolbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:FireMonitor.Views">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Views:TimePresenterView Grid.Row="0" Margin="11 11 0 0"  />

			<ItemsControl Grid.Row="1" VerticalAlignment="Center" ItemsSource="{Binding ToolbarItems}" Focusable="False">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel Orientation="Horizontal" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>
        </Grid>
        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,0,10,5">
			<ContentPresenter Content="{Binding AlarmGroups}"/>
        </StackPanel>
    </Grid>
</UserControl>