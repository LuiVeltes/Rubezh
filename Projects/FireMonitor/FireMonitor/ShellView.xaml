<CustomWindow:EssentialWindow x:Class="FireMonitor.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:CustomWindow="clr-namespace:CustomWindow;assembly=CustomWindow"
        xmlns:local="clr-namespace:FireMonitor"
        WindowStartupLocation="CenterScreen"
        Title="Станция пожарного мониторинга" Height="750" Width="1200"
        MinWidth="750" MinHeight="480"
        AllowsTransparency="True" Background="Transparent">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" Background="#151515">
        <Border BorderBrush="#747474" BorderThickness="1" CornerRadius="10">
            <DockPanel>
                <Border Height="115" MouseMove="Header_MouseMove" CornerRadius="10 10 0 0" DockPanel.Dock="Top">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ADADAD" Offset="0" />
                            <GradientStop Color="#676767" Offset="0.3" />
                            <GradientStop Color="#555555" Offset="0.32" />
                            <GradientStop Color="#303030" Offset="0.75" />
                            <GradientStop Color="#303030" Offset="0.85" />
                            <GradientStop Color="#353535" Offset="0.9" />
                            <GradientStop Color="#555555" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" Text="Станция пожарного мониторинга" Foreground="White" FontFamily="Arial" FontSize="15" Margin="0 5" Opacity="0.5" />
                        <Border Grid.Column="1" Name="WindowButtonsPlaceholder" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            
                            <Image Margin="10 5 0 0" HorizontalAlignment="Left" Source="Images/logo.png" Opacity="0.5" Width="32" Height="26" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            
                            <TextBlock Grid.Row="1" Text="12:24:13" Margin="10 15 0 0" Foreground="White" FontFamily="Arial" FontSize="25" ></TextBlock>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Margin="15 5 20 5" Source="Images/mute.png" Width="24" Height="24" RenderOptions.BitmapScalingMode="NearestNeighbor" Opacity="0.5"/>
                                <Image Margin="5" Source="Images/Ind_C-C.png" Height="13" RenderOptions.BitmapScalingMode="NearestNeighbor"  Opacity="0.4" />
                                <Image Margin="5" Source="Images/Ind_C-P.png" Height="13" RenderOptions.BitmapScalingMode="NearestNeighbor" Opacity="0.4" />
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,30,10,5">
                            <ContentControl Name="_alarmGroups" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Thumb DragDelta="Thumb_DragDelta" HorizontalAlignment="Right" Margin="0 0 3 3" DockPanel.Dock="Bottom"
                       Cursor="SizeNWSE" />
                <Grid>
                     <DockPanel>

                        <StackPanel DockPanel.Dock="Bottom">
                            <ContentControl Name="_alarm" />
                        </StackPanel>

                         <Grid>
                             
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <local:NavigationView Grid.Column="0" Margin="5 5 0 20" />

                            <Grid Grid.Column="1" Margin="5 5 5 20">
                                <Border BorderBrush="#B5B6B5" BorderThickness="1" CornerRadius="3" Background="#E4E1E5">
                                <ContentControl Name="_mainRegionHost" />
                                </Border>
                            </Grid>
                             
                        </Grid>
                   </DockPanel>
                </Grid>
            </DockPanel>
        </Border>
    </Border>
</CustomWindow:EssentialWindow>
