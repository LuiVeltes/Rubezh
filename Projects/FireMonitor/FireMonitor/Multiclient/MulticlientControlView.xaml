<UserControl x:Class="FireMonitor.Views.MulticlientControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10, 0, 0, 0">
        <ItemsControl ItemsSource="{Binding Multiclients}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ToggleButton Content="{Binding MulticlientData.Name}" Command="{Binding SelectCommand}" Margin="1" />
                    <!--<Button Content="{Binding MulticlientData.Name}" Command="{Binding SelectCommand}" Margin="1" />-->
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>