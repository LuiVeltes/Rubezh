<Window x:Class="TestActiveXModule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:CurrentDeviceModule.Views;assembly=CurrentDeviceModule"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Views:DeviceControlView Height="50" Width="50"/>
        </Grid>
        <Button Grid.Row="1" Content="Выбрать устройство" Name="btnSelect" />
        <Button Grid.Row="2" Content="Свойства" Name="btnProperty" />
    </Grid>
</Window>
