<Window x:Class="ClientFS2.Views.ClientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Converters="clr-namespace:Controls.Converters;assembly=Controls"
        Height="450" Width="400">

    <Window.Resources>
        <Converters:NullToVisibilityConverter x:Key="NullObjectToVisibiltyConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Content="Автопоиск устройств" Command = "{Binding AutoDetectDeviceCommand}" />
            <DataGrid ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" Margin="2" Style="{x:Null}" />
            <StackPanel Visibility="{Binding SelectedDevice, Converter={StaticResource NullObjectToVisibiltyConverter}}">
                <Button Content="Запросить журнал событий" Command = "{Binding ReadJournalCommand}" />
            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="2" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Запрос:" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TextBoxRequest}" Margin="2"/>
                <Button Grid.Row="1" Grid.ColumnSpan="2" Content="Послать запрос" Command = "{Binding SendRequestCommand}" Margin="2" />
                <Label Grid.Row="2" Grid.Column="0" Content="Ответ:" />
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TextBoxResponse}" />
            </Grid>
        </Grid>
    </Grid>
</Window>