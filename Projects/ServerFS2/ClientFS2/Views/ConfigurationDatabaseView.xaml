<UserControl x:Class="ClientFS2.Views.ConfigurationDatabaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converter="clr-namespace:ClientFS2.Converters"
             MinWidth="1000" MinHeight="800">

    <UserControl.Resources>
        <Converter:IsBoldToColorConverter x:Key="IsBoldToColorConverter" />
    </UserControl.Resources>
    
    <TabControl ItemsSource="{Binding PanelDatabases}">
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding ParentPanel.PresentationAddressAndName}" />
            </DataTemplate>
        </TabControl.ItemTemplate>
        <TabControl.ContentTemplate>
            <DataTemplate>
                <DataGrid ItemsSource="{Binding BytesDatabase2.ByteDescriptions}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Offset}" Header="Offset" />
                        <DataGridTextColumn Binding="{Binding Value}" Header="Value" />
                        <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                        <DataGridTextColumn Binding="{Binding GroupName}" Header="GroupName" Width="*" />
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Style.Setters>
                            </Style.Setters>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Style.Setters>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DataGridCell}">
                                            <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" Value="{Binding IsBold, Converter={StaticResource IsBoldToColorConverter}}" />
                            </Style.Setters>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource PressedBackgroundBrush}" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
</UserControl>