<Window x:Class="USBTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Width="100" Content="Start" Click="Button_Click_1" Margin="2" />
            <Button Width="100" Content="Stop" Click="Button_Click_2" Margin="2" />
            <Button Name="button1" Width="100" Content="Dispose" Click="Button_Click_3" Margin="2" />
            <Button Width="100" Content="Test" Click="Button_Click_4" Margin="2" />
        </StackPanel>
    </Grid>
</Window>