<Window x:Class="FireAdministrator.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Администратор" Height="700" Width="900">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/OutlookBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="Gray">

        <DockPanel>

            <StackPanel DockPanel.Dock="Top"  Margin="2">
                <ContentControl Name="_mainMenu" />
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom">
                <TextBlock Text="Состояние" />
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TabControl Template="{StaticResource OutlookTab}">

                        <TabItem IsSelected="{Binding IsDevicesSelected}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Устройства" FontWeight="Bold" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>

                        <TabItem IsSelected="{Binding IsZonesSelected}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Зоны" FontWeight="Bold" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        
                        <TabItem IsSelected="{Binding IsLibrarySelected}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Библиотека" FontWeight="Bold" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>

                        <TabItem IsSelected="{Binding IsPlanSelected}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Планы" FontWeight="Bold" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>

                        <TabItem IsSelected="{Binding IsSecuritySelected}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Безопасность" FontWeight="Bold" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>

                        <TabItem IsSelected="{Binding IsJournalSelected}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Журнал" FontWeight="Bold" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>
                        
                        <TabItem IsSelected="{Binding IsReportSelected}">
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Отчеты" FontWeight="Bold" />
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>

                    </TabControl>
                </StackPanel>

                <Grid Grid.Column="1" Name="centerStackPanel" Background="LightGray">
                    <ContentControl Name="_mainRegionHost" />
                </Grid>

            </Grid>

        </DockPanel>

    </Grid>
</Window>
