<Window x:Class="FireAdministrator.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FireAdministrator"
        WindowStartupLocation="CenterScreen"
        Title="Администратор" Height="700" Width="900">

    <Grid Background="Gray">

        <DockPanel>

            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="2">
                <Button Content="Создать новый" Click="Button_Click_1" Width="100" Margin="1" />
                <Button Content="Считать из файла" Click="Button_Click_2" Width="100" Margin="1" />
                <Button Content="Сохранить в файл" Click="Button_Click_3" Width="100" Margin="1" />
                <Button Content="Ok" Click="Button_Click" Width="100" Margin="1" />
                <ContentControl Name="_mainMenu" />
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom">
                <TextBlock Text="" />
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <local:NavigationView Grid.Column="0" />

                <Grid Grid.Column="1" Name="centerStackPanel" Background="LightGray">
                    <ContentControl Name="_mainRegionHost" />
                </Grid>

            </Grid>

        </DockPanel>

    </Grid>
</Window>
