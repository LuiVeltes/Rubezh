<CustomWindow:EssentialWindow x:Class="FireAdministrator.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:CustomWindow="clr-namespace:CustomWindow;assembly=CustomWindow"
        xmlns:Views="clr-namespace:FireAdministrator"
        WindowStartupLocation="CenterScreen"
        Title="Администратор"
        Height="750" Width="1100"
        MinWidth="800" MinHeight="600"
        AllowsTransparency="True" Background="Transparent"
        Closing="EssentialWindow_Closing"
        Closed="EssentialWindow_Closed">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="11" Background="{DynamicResource WindowBlackBackgroundBrush}">
        <Border BorderBrush="#747474" BorderThickness="1" CornerRadius="11">
            <DockPanel>
                <Border Height="75" MouseMove="Header_MouseMove" MouseDown="Header_MouseDown" CornerRadius="11 11 0 0" DockPanel.Dock="Top">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ADADAD" Offset="0" />
                            <GradientStop Color="#676767" Offset="0.3" />
                            <GradientStop Color="#555555" Offset="0.32" />
                            <GradientStop Color="#303030" Offset="0.75" />
                            <GradientStop Color="#303030" Offset="0.85" />
                            <GradientStop Color="#353535" Offset="0.9" />
                            <GradientStop Color="#555555" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" Text="Администратор" Foreground="White" FontFamily="Arial" FontSize="15" Margin="0 5" Opacity="0.5" />
                        <Border Grid.Column="1" Name="WindowButtonsPlaceholder" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Image Margin="10 5 0 0" HorizontalAlignment="Left" Source="/Controls;component/Images/logo.png" Opacity="0.5" Width="32" Height="26" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Views:MenuView Grid.Column="0" />
                                <ContentControl Grid.Column="1" Name="_menu" MinWidth="700" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
                <Thumb DragDelta="Thumb_DragDelta" HorizontalAlignment="Right" Margin="0 0 3 3" DockPanel.Dock="Bottom"
                       Cursor="SizeNWSE" />
                <Grid>
                    <DockPanel>
                        <Grid DockPanel.Dock="Bottom" >
                            <ContentControl Name="_validationArea" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Views:NavigationView Grid.Column="0" Margin="5 5 0 20" />
                            <Grid Grid.Column="1" Margin="5 5 5 20">
                                <Border>
                                    <ContentControl Name="_mainRegionHost" />
                                </Border>
                            </Grid>
                        </Grid>
                    </DockPanel>
                </Grid>
            </DockPanel>
        </Border>
    </Border>
</CustomWindow:EssentialWindow>