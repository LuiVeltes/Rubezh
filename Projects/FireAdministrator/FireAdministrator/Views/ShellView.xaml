<Window x:Class="FireAdministrator.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:FireAdministrator.Views"
        xmlns:Controls="clr-namespace:Controls;assembly=Controls"
        WindowStartupLocation="CenterScreen"
        Title="Администратор ОПС Firesec-2"
        Height="750" Width="1100"
        MinWidth="800" MinHeight="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Closing="Window_Closing"
        Closed="Window_Closed">

        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="11" Background="{DynamicResource WindowBlackBackgroundBrush}">
        <Border BorderBrush="#747474" BorderThickness="1" CornerRadius="11">
            <DockPanel>
                <Border Height="75" MouseMove="Header_MouseMove" MouseDown="Header_MouseDown" CornerRadius="11 11 0 0" DockPanel.Dock="Top" Background="{DynamicResource WindowBlacHeaderkBackgroundBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" Text="Администратор ОПС Firesec-2" Foreground="White" FontFamily="Arial" FontSize="15" Margin="0 5" Opacity="0.5" />
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0, 2, 2, 0">
                            <Menu Background="Transparent" VerticalAlignment="Center">
                                <MenuItem>
                                    <MenuItem.Header>
                                        <Image Source="/Controls;component/Images/Help.png" Height="12" Margin="-2" />
                                    </MenuItem.Header>
                                    <MenuItem Header="Помощь" Click="OnShowHelp" />
                                    <MenuItem Header="О программе" Click="OnShowAbout" />
                                </MenuItem>
                            </Menu>
                            <Button Click="OnMinimize" ToolTip="Свернуть" Style="{StaticResource ToolarButtonStyle}">
                                <Image Source="/Controls;component/Images/Minimize.png" Height="12" Margin="-2" />
                            </Button>
                            <Button Click="OnMaximize" ToolTip="Распахнуть" Style="{StaticResource ToolarButtonStyle}">
                                <Image Source="/Controls;component/Images/Maximize.png" Height="12" Margin="-2" />
                            </Button>
                            <Button Click="OnClose" ToolTip="Закрыть" Style="{StaticResource ToolarButtonStyle}">
                                <Image Source="/Controls;component/Images/Close.png" Height="12" Margin="-2" />
                            </Button>
                        </StackPanel>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Image Margin="10 5 0 0" HorizontalAlignment="Left" Source="/Controls;component/Images/logo.png" Opacity="0.5" Width="32" Height="26" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Views:MenuView Grid.Column="0" x:Name="_menuView" Margin="1, 0, 0, 1" />
                                <ContentControl Grid.Column="1" Name="_menu" MinWidth="400" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
                <Thumb DockPanel.Dock="Bottom" DragDelta="Thumb_DragDelta" HorizontalAlignment="Right" Width="10" Height="10" Style="{DynamicResource ResizeThumbStyle}" />
                <Grid>
                    <DockPanel>
                        <Grid DockPanel.Dock="Bottom">
                            <ContentControl Name="_validationArea" Margin="5 0 0 5" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
								<ColumnDefinition Width="200" />
								<ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--<Views:NavigationAreaView Grid.Column="0" Margin="5 5 0 5" />-->
							<!--<Controls:NavigationView Grid.Column="0" Margin="5 5 0 5" x:Name="_navigation" />-->
                            <ItemsControl Name="_itemsControl" Grid.Column="1" Margin="5 5 5 5">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Grid />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Grid>
                    </DockPanel>
                </Grid>
            </DockPanel>
        </Border>
    </Border>
</Window>