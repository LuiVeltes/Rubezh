<UserControl x:Class="FireAdministrator.Views.ProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="100" MinWidth="400">
    <StackPanel>
        <Label Content="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
        <ProgressBar Background="Red" Foreground="Blue" Minimum="0" Maximum="100" Value="{Binding Percent}" Height="30" Margin="2" />
        <Button Command="{Binding StopCommand}" Width="100" Content="{Binding CancelText}" Margin="2" />
    </StackPanel>
</UserControl>
