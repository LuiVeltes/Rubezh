<UserControl x:Class="FireAdministrator.Views.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Loaded="On_Loaded">
	<DockPanel>
		<TreeView DockPanel.Dock="Top" Style="{StaticResource OutlookTreeView}" VerticalAlignment="Top" ItemsSource="{Binding Navigation}" TreeViewItem.Selected="TreeViewItem_Selected" MouseLeftButtonUp="TreeView_MouseLeftButtonUp" TreeViewItem.PreviewMouseDoubleClick="TreeViewItem_PreviewMouseDoubleClick">
			<TreeView.ItemTemplate>
				<HierarchicalDataTemplate ItemsSource="{Binding Childs}">
					<HierarchicalDataTemplate.Resources>
						<Style TargetType="{x:Type TextBlock}">
							<Setter Property="FontWeight" Value="Bold" />
							<Setter Property="FontSize" Value="11" />
							<Setter Property="VerticalAlignment" Value="Center" />
							<Setter Property="Margin" Value="10, 0, 0, 0" />
							<Setter Property="Foreground" Value="White" />
						</Style>
						<Style TargetType="{x:Type Image}">
							<Setter Property="Height" Value="24" />
							<Setter Property="Width" Value="24" />
						</Style>
					</HierarchicalDataTemplate.Resources>
					<StackPanel Orientation="Horizontal">
						<!--<Image>
							<Image.Style>
								<Style TargetType="{x:Type Image}">
									<Setter Property="Width" Value="16" />
