<UserControl x:Class="FireAdministrator.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <TabControl DockPanel.Dock="Top" Template="{StaticResource OutlookTab}" VerticalAlignment="Top">
            <TabControl.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontSize" Value="11" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Margin" Value="10, 0, 0, 0" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="Height" Value="24" />
                    <Setter Property="Width" Value="24" />
                </Style>
            </TabControl.Resources>
            <TabItem IsSelected="{Binding IsDevicesSelected}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/tree.png"  />
                        <TextBlock Text="Устройства" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsZonesSelected}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/zones.png" />
                        <TextBlock Text="Зоны" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsDerectonsSelected}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/direction.png" />
                        <TextBlock Text="Направления пожаротушения" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem Name="_guardTab" IsSelected="{Binding IsGuardSelected}">
                <TabItem.Header>
                    <TextBlock Text="Охрана" FontWeight="Bold" />
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsGuardUsersSelected}" Margin="15, -2, 0, 3"
                     Visibility="{Binding  IsSelected, ElementName=_guardTab, Converter={StaticResource BoolToVisibilityConverter}}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/user.png" />
                        <TextBlock Text="Пользователи"  />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsGuardLevelsSelected}" Margin="15, 0, 0, 3"
                     Visibility="{Binding  IsSelected, ElementName=_guardTab, Converter={StaticResource BoolToVisibilityConverter}}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/levels.png" />
                        <TextBlock Text="Уровни доступа" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsGuardDevicesSelected}" Margin="15, 0, 0, 11"
                     Visibility="{Binding  IsSelected, ElementName=_guardTab, Converter={StaticResource BoolToVisibilityConverter}}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/tree.png" />
                        <TextBlock Text="Устройства" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsLibrarySelected}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/book.png" />
                        <TextBlock Text="Библиотека" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsPlanSelected}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/map.png" />
                        <TextBlock Text="Планы" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem Name="_securityTab" IsSelected="{Binding IsSecuritySelected}">
                <TabItem.Header>
                    <TextBlock Text="Права" FontWeight="Bold" />
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsUsersSelected}" Margin="15, -2, 0, 3"
                     Visibility="{Binding IsSelected, ElementName=_securityTab, Converter={StaticResource BoolToVisibilityConverter}}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/user.png" />
                        <TextBlock Text="Пользователи" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsUserGroupsSelected}" Margin="15, 0, 0, 11"
                     Visibility="{Binding IsSelected, ElementName=_securityTab, Converter={StaticResource BoolToVisibilityConverter}}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/users.png" />
                        <TextBlock Text="Роли" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsJournalSelected}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/filter.png"  />
                        <TextBlock Text="Фильтры" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsSoundsSelected}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/music.png" />
                        <TextBlock Text="Звуки" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsInstructionsSelected}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/information.png" />
                        <TextBlock Text="Инструкции" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem IsSelected="{Binding IsSettingsSelected}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Controls;component/Images/settings.png" />
                        <TextBlock Text="Настройки" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
        <Image DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Margin="15" Source="/Controls;component/Images/firesec.png" />
    </DockPanel>
</UserControl>