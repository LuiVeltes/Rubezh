<UserControl x:Class="LibraryModule.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:LibraryModule.Views">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Views:LibraryTree Grid.Column="0" />

        <Grid Grid.Column="1" DataContext="{Binding SelectedDeviceViewModel}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="90" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <TextBox DataContext="{Binding SelectedStateViewModel.SelectedFrameViewModel.Frame}"
                         Text="{Binding Image}"
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         AcceptsReturn="True" AcceptsTab="True" />
            </Grid>

            <Views:FramesView Grid.Row="1" Grid.Column="0"
                DataContext="{Binding SelectedStateViewModel}" />

            <Views:DeviceControlView Grid.Row="1" Grid.Column="1" />
        </Grid>
    </Grid>
</UserControl>