<UserControl x:Class="LibraryModule.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:LibraryModule.Views">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        
        <Views:DevicesView Grid.Column="0" />
        
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="90" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.ColumnSpan="2" DataContext="{Binding SelectedDevice, UpdateSourceTrigger=PropertyChanged}">
                <TextBox DataContext="{Binding SelectedState.SelectedFrame, UpdateSourceTrigger=PropertyChanged}" 
                         Text="{Binding XmlOfImage, UpdateSourceTrigger=PropertyChanged}"
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         AcceptsReturn="True" AcceptsTab="True" />
            </Grid>
            
            <Views:FramesView Grid.Row="1" Grid.Column="0" DataContext="{Binding SelectedDevice}" />
            
            <DockPanel Grid.Row="1" Grid.Column="1">
                <Views:CanvacesView DataContext="{Binding SelectedDevice}" />
                <Button Content="Сохранить" VerticalAlignment="Bottom" Margin="10"
                        Command="{Binding SaveCommand}"  DockPanel.Dock="Bottom" />
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
