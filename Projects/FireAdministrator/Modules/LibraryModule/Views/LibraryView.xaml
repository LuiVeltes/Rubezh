<UserControl x:Class="LibraryModule.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:LibraryModule.Views">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>        
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
            <Grid Grid.Column="0">
                <Views:DevicesView />
            </Grid>
        </ScrollViewer>        
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="90" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>            
            <Grid Grid.Row="0" Grid.ColumnSpan="2" DataContext="{Binding SelectedState.SelectedFrame}">
                <TextBox Text="{Binding Image, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />
            </Grid>
            <TabControl Grid.Row="1" Grid.Column="0"
                            TabStripPlacement="Bottom"
                            DataContext="{Binding SelectedState}"
                            ItemsSource="{Binding Frames}" 
                            SelectedItem="{Binding SelectedFrame}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Кадр " />
                            <TextBlock Text="{Binding Id}" />
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.Resources>
                    <ContextMenu x:Key="contextMenu">
                        <MenuItem Header="Добавить кадр" Command="{Binding AddFrameCommand}" />
                        <MenuItem Header="Удалить кадр" Command="{Binding RemoveFrameCommand}" />
                    </ContextMenu>
                </TabControl.Resources>
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="TabItem.ContextMenu" Value="{StaticResource contextMenu}" />
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <ItemsControl Grid.Row="0" HorizontalAlignment="Center" 
                                                      ItemsSource="{Binding Path=Picture, UpdateSourceTrigger=PropertyChanged}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas Width="500" Height="500" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.LayoutTransform>
                                    <ScaleTransform ScaleX="0.5" ScaleY="0.5" />
                                </ItemsControl.LayoutTransform>
                            </ItemsControl>
                            <WrapPanel Grid.Row="1" Orientation="Horizontal">
                                <Label Content="Слой: " />
                                <TextBox Text="{Binding Layer, UpdateSourceTrigger=PropertyChanged}" />
                                <Label  Content=" Длительность: " />
                                <TextBox Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}" />
                                <Button Content="Импорт из .svg" Command="{Binding ImportSvgCommand}" Margin="10,5,0,0"/>
                            </WrapPanel>
                        </Grid>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
            <DockPanel Grid.Row="1" Grid.Column="1">
                <ContentControl Margin="10" DataContext="{Binding SelectedState.ParentDevice}" DockPanel.Dock="Top">
                    <ItemsControl ItemsSource="{Binding DeviceControl.StateCanvases}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="500" Height="500" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.LayoutTransform>
                            <ScaleTransform ScaleX="{Binding ElementName=sliderScale, Path=Value, Mode=OneWay}" 
                                                ScaleY="{Binding ElementName=sliderScale, Path=Value, Mode=OneWay}" />
                        </ItemsControl.LayoutTransform>
                    </ItemsControl>
                </ContentControl>
                <Slider Name="sliderScale" Cursor="Hand" Minimum="0.01" Maximum="0.15" Value="1.0" DockPanel.Dock="Top" />
                <Button Content="Сохранить" VerticalAlignment="Bottom" Margin="10"
                        Command="{Binding SaveCommand}"  DockPanel.Dock="Bottom"/>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
