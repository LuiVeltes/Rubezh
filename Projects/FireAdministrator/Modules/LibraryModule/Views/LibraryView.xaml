<UserControl x:Class="LibraryModule.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:LibraryModule.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ScrollViewer Style="{DynamicResource LeftScrollViewer}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible">
            <Grid Grid.Column="0">
                <Views:DevicesView/>
            </Grid>
        </ScrollViewer>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.ColumnSpan="2" DataContext="{Binding SelectedState.SelectedFrame}">
                <TextBox Background="Transparent" Text="{Binding Image, UpdateSourceTrigger=PropertyChanged}" Name="textBox2" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" AcceptsTab="True" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0">
                <TabControl TabStripPlacement="Bottom" DataContext="{Binding SelectedState}" ItemsSource="{Binding Frames}" SelectedItem="{Binding SelectedFrame}">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="Кадр " />
                                <TextBlock Text="{Binding Id}" />
                            </DockPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <Grid Name="grid">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="50"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <WrapPanel VerticalAlignment="Bottom">
                                        <ItemsControl HorizontalAlignment="Center" ItemsSource="{Binding Path=Picture, UpdateSourceTrigger=PropertyChanged}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <Canvas Width="500" Height="500" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.LayoutTransform>
                                                <ScaleTransform ScaleX="{Binding ElementName=grid, Path=ActualWidth, Converter={StaticResource Transform}, ConverterParameter=0.002}" 
                                                            ScaleY="{Binding ElementName=grid, Path=ActualWidth, Converter={StaticResource Transform}, ConverterParameter=0.002}" />
                                            </ItemsControl.LayoutTransform>
                                        </ItemsControl>
                                    </WrapPanel>
                                </Grid>
                                <Grid Background="White" Grid.Row="1">
                                    <ScrollViewer HorizontalScrollBarVisibility="Visible"  VerticalScrollBarVisibility="Hidden">
                                        <Grid>
                                            <DockPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                                <Label Content="Слой: "/>
                                                <TextBox HorizontalContentAlignment="Center" Width="43" Height="20" Text="{Binding Layer, UpdateSourceTrigger=PropertyChanged}" />
                                                <Label  Content=" Длительность: " FontSize="11" />
                                                <TextBox Name="textBoxDuration" HorizontalContentAlignment="Right" Height="20" Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}" AcceptsTab="True" AcceptsReturn="True" IsManipulationEnabled="True" IsTabStop="False" />
                                            </DockPanel>
                                        </Grid>
                                        <!--<Button Content="Добавить кадр" BorderThickness="3" Command="{Binding AddFrameCommand}" />
                                        <Button Content="Удалить кадр" BorderThickness="3" Command="{Binding RemoveFrameCommand}" />-->
                                    </ScrollViewer>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid Height="140" Margin="0,-20,0,0" VerticalAlignment="Top">
                    <ContentControl DataContext="{Binding SelectedState.ParentDevice}" HorizontalAlignment="Center" HorizontalContentAlignment="Center">
                        <ItemsControl ItemsSource="{Binding DeviceControl.StateCanvases}" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="500">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="500" Height="500"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding ElementName=sliderScale, Path=Value, Mode=OneWay}" ScaleY="{Binding ElementName=sliderScale, Path=Value, Mode=OneWay}" />
                            </ItemsControl.LayoutTransform>
                        </ItemsControl>
                    </ContentControl>
                    <Slider Visibility="{Binding Path=Flag, Converter={StaticResource VisibleIfTrue}}" Cursor="Hand" Name="sliderScale" Width="80" Margin="0,0,5,0" HorizontalAlignment="Right" Orientation="Horizontal" Minimum="0.01" Maximum="0.15"
                                Value="1.0" VerticalAlignment="Bottom" />
                </Grid>
                <Button VerticalAlignment="Bottom" Content="Сохранить" Visibility="{Binding Path=Flag, Converter={StaticResource VisibleIfTrue}}" Width="80" Height="22" Margin="0,0,0,5" Command="{Binding SaveCommand}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
