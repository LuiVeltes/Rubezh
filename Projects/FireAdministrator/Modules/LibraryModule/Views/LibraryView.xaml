<UserControl x:Class="LibraryModule.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:LibraryModule.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ScrollViewer Style="{DynamicResource LeftScrollViewer}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible">
            <Grid Grid.Column="0">
                <Views:DevicesView/>
            </Grid>
        </ScrollViewer>
        <Grid Grid.Column="1">
            <TabControl TabStripPlacement="Bottom" DataContext="{Binding SelectedState}" ItemsSource="{Binding Frames}" SelectedItem="{Binding SelectedFrame}">
                <TabControl.Background>
                    <ImageBrush ImageSource="Style/1.png" Viewport="0,0,15,15" TileMode="Tile" Stretch="None" ViewportUnits="Absolute" />
                </TabControl.Background>
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock Text="Кадр " />
                            <TextBlock Text="{Binding Id}" />
                        </DockPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid Margin="-4">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid Background="#FFBB55" Grid.Row="0">
                                <TextBox Background="Transparent" Text="{Binding Image, UpdateSourceTrigger=PropertyChanged}" Name="textBox2" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" AcceptsTab="True" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <ItemsControl Padding="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" ItemsSource="{Binding Path=Picture, UpdateSourceTrigger=PropertyChanged}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas Width="500" Height="500">
                                                </Canvas>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.LayoutTransform>
                                            <ScaleTransform ScaleX="0.3" ScaleY="0.3" />
                                        </ItemsControl.LayoutTransform>
                                    </ItemsControl>
                                </Grid>
                                <Grid Grid.Column="1" Height="120" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                    <StackPanel VerticalAlignment="Bottom">
                                        <DockPanel HorizontalAlignment="Left">
                                            <Label Content="Слой:" FontSize="14" FontWeight="ExtraBold" />
                                            <TextBox BorderBrush="Black" HorizontalContentAlignment="Center" Width="43" Height="20" FontSize="13" FontWeight="Bold" Text="{Binding Layer, UpdateSourceTrigger=PropertyChanged}" />
                                        </DockPanel>
                                        <Label  Content="Длительность: " FontWeight="ExtraBold" FontSize="11"  Height="28" Name="label1" Margin="-2,0,0,-5" />
                                        <TextBox Name="textBoxDuration" BorderBrush="Black"  HorizontalContentAlignment="Right" FontWeight="Bold" Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}" AcceptsTab="True" AcceptsReturn="True" IsManipulationEnabled="True" IsTabStop="False" />
                                        <Button Content="Добавить кадр" FontWeight="ExtraBold" BorderThickness="3" Command="{Binding AddFrameCommand}" />
                                        <Button Content="Удалить кадр" FontWeight="ExtraBold" BorderThickness="3" Command="{Binding RemoveFrameCommand}" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
            <Grid>
                <ContentControl Width="90" DataContext="{Binding SelectedState.ParentDevice}" HorizontalAlignment="Right" HorizontalContentAlignment="Center">
                    <ItemsControl Margin="0,64,12,0" ItemsSource="{Binding DeviceControl.StateCanvases}" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="500">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="500" Height="500"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.LayoutTransform>
                            <ScaleTransform ScaleX="{Binding ElementName=sliderScale, Path=Value, Mode=OneWay}" ScaleY="{Binding ElementName=sliderScale, Path=Value, Mode=OneWay}" />
                        </ItemsControl.LayoutTransform>
                    </ItemsControl>
                </ContentControl>
                <Slider Visibility="{Binding Path=Flag, Converter={StaticResource VisibleIfTrue}}" Cursor="Hand" Name="sliderScale" Width="80" HorizontalAlignment="Right" Orientation="Horizontal" Minimum="0.01" Maximum="0.15"
                                Value="1.0" VerticalAlignment="Center" Margin="0,180,10,0"/>
            </Grid>
            <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right" Panel.ZIndex="1">
                <DockPanel VerticalAlignment="Bottom">
                    <Button Content="Сохранить" Visibility="{Binding Path=Flag, Converter={StaticResource VisibleIfTrue}}" Width="80" Height="22" Command="{Binding SaveCommand}" />
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
