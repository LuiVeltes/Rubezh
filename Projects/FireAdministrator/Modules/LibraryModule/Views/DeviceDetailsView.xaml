<UserControl x:Class="LibraryModule.Views.DeviceDeailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400">

    <ListBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="5, 1, 0, 0">
                    <Image Width="14" Margin="5,0" Source="{Binding Driver.ImageSource}" />
                    <TextBlock Text="{Binding Driver.ShortName}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>