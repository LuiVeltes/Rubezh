<UserControl x:Class="LibraryModule.Views.DeviceDeailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             MinWidth="400"
             MinHeight="400">
    <UserControl.Resources>
        <CollectionViewSource x:Key="SortedItems" Source="{Binding Path=Items}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription Direction="Ascending" PropertyName="Name" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <DockPanel Margin="10">
        <WrapPanel Margin="5"
                   HorizontalAlignment="Right"
                   DockPanel.Dock="Bottom">
            <Button MinWidth="100"
                    Margin="2"
                    Command="{Binding OkCommand}"
                    IsDefault="True">Ok</Button>
            <Button MinWidth="100"
                    Margin="2"
                    Command="{Binding CancelCommand}">Отмена</Button>
        </WrapPanel>
        <ListBox ItemsSource="{Binding Source={StaticResource SortedItems}}"
                 SelectedItem="{Binding SelectedItem}"
                 Style="{StaticResource ListBoxStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <WrapPanel Margin="5, 5, 0, 0">
                        <Image Width="14"
                               Margin="5,0"
                               Source="{Binding ImageSource}" />
                        <TextBlock Text="{Binding Name}" />
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>