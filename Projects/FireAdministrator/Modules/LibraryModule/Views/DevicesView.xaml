<UserControl x:Class="LibraryModule.Views.DevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:LibraryModule.Views">
    <ListBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}"  HorizontalContentAlignment="Stretch" Background="Transparent" BorderThickness="0">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <DockPanel >
                    <Expander FontSize="13" Style="{DynamicResource PlusMinusExpanderStyle}">
                        <Expander.Header>
                            <DockPanel VerticalAlignment="Center">
                                <Image Source="{Binding IconPath}" Width="14" Margin="5,0,5,0" />
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                            </DockPanel>
                        </Expander.Header>
                        <DockPanel>
                            <Views:StatesView FontSize="12" />
                        </DockPanel>
                    </Expander>
                </DockPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
        <ListBox.Resources>
            <SolidColorBrush x:Key="SolidBorderBrush" Color="Blue"/>
            <Style TargetType="ContextMenu">
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="Grid.IsSharedSizeScope" Value="true"/>
                <Setter Property="HasDropShadow" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContextMenu">
                            <Border Name="Border" BorderBrush="{StaticResource SolidBorderBrush}">
                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="HasDropShadow" Value="true">
                                    <Setter TargetName="Border" Property="CornerRadius" Value="2"/>
                                    <Setter TargetName="Border" Property="BorderThickness" Value="1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
            <ContextMenu x:Key="contextMenu">
                <MenuItem Header="Добавить устройство" Command="{Binding ShowDevicesCommand}" />
                <MenuItem Header="Удалить устройство" Command="{Binding RemoveDeviceCommand}" />
                <MenuItem Header="Добавить состояние" Command="{Binding ShowStatesCommand}" />
                <MenuItem Header="Добавить дополнительное состояние" Command="{Binding ShowAdditionalStatesCommand}" />
                <ContextMenu.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF8040" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#818181" />
                </ContextMenu.Resources>
            </ContextMenu>
        </ListBox.Resources>
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="ListBoxItem.ContextMenu" Value="{StaticResource contextMenu}" />
            </Style>
        </ListBox.ItemContainerStyle>
    </ListBox>
</UserControl>