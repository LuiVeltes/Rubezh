<UserControl x:Class="LibraryModule.Views.DevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:LibraryModule.Views">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ContextMenuTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ListBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}"  HorizontalContentAlignment="Stretch" Background="Transparent" BorderThickness="0">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <DockPanel >
                    <Expander FontSize="13" Style="{DynamicResource PlusMinusExpanderStyle}">
                        <Expander.Header>
                            <DockPanel VerticalAlignment="Center">
                                <Image Source="{Binding IconPath}" Width="14" Margin="5,0,5,0" />
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                            </DockPanel>
                        </Expander.Header>
                        <DockPanel>
                            <Views:StatesView FontSize="12" />
                        </DockPanel>
                    </Expander>
                </DockPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
        <ListBox.Resources>
            <SolidColorBrush x:Key="SolidBorderBrush" Color="Blue"/>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Silver" />
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="WhiteSmoke" />
            <ContextMenu x:Key="contextMenu" Template="{StaticResource ContextMenuTemplate}">
                <MenuItem Header="Добавить устройство" Command="{Binding ShowDevicesCommand}" />
                <MenuItem Header="Добавить состояние" Command="{Binding ShowStatesCommand}" />
                <MenuItem Header="Добавить дополнительное состояние" Command="{Binding ShowAdditionalStatesCommand}" />
                <MenuItem Header="Удалить устройство" Command="{Binding RemoveDeviceCommand}" />
            </ContextMenu>
        </ListBox.Resources>
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="ListBoxItem.ContextMenu" Value="{StaticResource contextMenu}" />
            </Style>
        </ListBox.ItemContainerStyle>
    </ListBox>
</UserControl>