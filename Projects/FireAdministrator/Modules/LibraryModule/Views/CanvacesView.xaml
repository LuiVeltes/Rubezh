<UserControl x:Class="LibraryModule.Views.CanvacesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <ContentControl Margin="10" DataContext="{Binding SelectedState}" DockPanel.Dock="Top">
            <ItemsControl ItemsSource="{Binding CanvasesPresenter.Canvases}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Width="500" Height="500" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=sliderScale, Path=Value, Mode=OneWay}" 
                                                ScaleY="{Binding ElementName=sliderScale, Path=Value, Mode=OneWay}" />
                </ItemsControl.LayoutTransform>
            </ItemsControl>
        </ContentControl>
            <Slider Name="sliderScale" Cursor="Hand" Minimum="0.01" Maximum="0.15" Value="1.0" DockPanel.Dock="Top" />
    </StackPanel>
</UserControl>
