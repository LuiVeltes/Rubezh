<UserControl x:Class="LibraryModule.Views.StatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase">
    <UserControl.Resources>
        <CollectionViewSource x:Key="SortedStates" Source="{Binding Path=States}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    
    <ListBox ItemsSource="{Binding Source={StaticResource SortedStates}}" SelectedItem="{Binding SelectedState}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Height="15" Margin="40,0,0,0">
                    <CheckBox IsChecked="{Binding IsChecked}"
                              Visibility="{Binding IsAdditional, Converter={StaticResource BoolToVisibilityConverter}}">
                    </CheckBox>
                    <TextBlock Text="{Binding Name}" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Text}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
        
        <ListBox.ItemContainerStyle>
            <Style TargetType="{x:Type ListBoxItem}">
                <Style.Setters>
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Удалить состояние" Command="{Binding RemoveStateCommand}" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style.Setters>
            </Style>
        </ListBox.ItemContainerStyle>
    </ListBox>
</UserControl>
