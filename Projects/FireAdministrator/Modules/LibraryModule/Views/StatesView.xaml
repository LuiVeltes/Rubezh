<UserControl x:Class="LibraryModule.Views.StatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ContextMenuTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ListBox Background="WhiteSmoke" GotFocus="ListBoxGotFocus" ItemsSource="{Binding States}" SelectedItem="{Binding SelectedState}" 
             BorderThickness="1" Width="Auto">
        <ListBox.ItemTemplate>
            <DataTemplate>
                 <StackPanel Orientation="Horizontal" Height="15" Margin="50,0,0,0">
                    <CheckBox Name="checkBox"  IsChecked="{Binding IsChecked}" Panel.ZIndex="1"
                              IsEnabled="{Binding IsAdditional}">
                    </CheckBox>
                    <TextBlock Text="{Binding Name}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
        <ListBox.Resources>
            <ContextMenu BorderThickness="1" BorderBrush="Purple"  x:Key="contextMenu" Template="{StaticResource ContextMenuTemplate}">
                <MenuItem Header="Добавить состояние" Command="{Binding ShowStatesCommand}" />
                <MenuItem Header="Добавить дополнительное состояние" Command="{Binding ShowAdditionalStatesCommand}" />
                <MenuItem Header="Удалить состояние" Command="{Binding RemoveStateCommand}" />
            </ContextMenu>
        </ListBox.Resources>
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="ListBoxItem.ContextMenu" Value="{StaticResource contextMenu}" />
            </Style>
        </ListBox.ItemContainerStyle>
    </ListBox>
</UserControl>
