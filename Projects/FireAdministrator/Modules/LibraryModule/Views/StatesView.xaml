<UserControl x:Class="LibraryModule.Views.StatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ContextMenuTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ListBox Background="Transparent" GotFocus="ListBoxGotFocus" ItemsSource="{Binding States}" SelectedItem="{Binding SelectedState}" BorderThickness="1" Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ScrollViewer}}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                 <DockPanel Height="15" Margin="60,0,0,0">
                    <CheckBox VerticalAlignment="Center" VerticalContentAlignment="Top" IsChecked="{Binding IsChecked}" Panel.ZIndex="1" Margin="20,1,3,1" Name="checkBox" Visibility="{Binding IsAdditional, Converter={StaticResource BoolToVisibilityConverter}}">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="1.2" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                    <TextBlock VerticalAlignment="Center" Text="{Binding Name}"/>
                 </DockPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
        <ListBox.Resources>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF8040" />
            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#818181" />
            <ContextMenu BorderThickness="1" BorderBrush="Purple"  x:Key="contextMenu" Template="{StaticResource ContextMenuTemplate}">
                <MenuItem Header="Добавить состояние" Command="{Binding ShowStatesCommand}" />
                <MenuItem Header="Добавить дополнительное состояние" Command="{Binding ShowAdditionalStatesCommand}" />
                <MenuItem Header="Удалить состояние" Command="{Binding RemoveStateCommand}" />
            </ContextMenu>
        </ListBox.Resources>
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="ListBoxItem.ContextMenu" Value="{StaticResource contextMenu}" />
            </Style>
        </ListBox.ItemContainerStyle>
    </ListBox>
</UserControl>
