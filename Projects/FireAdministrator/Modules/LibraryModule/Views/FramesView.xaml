<UserControl x:Class="LibraryModule.Views.FramesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ExtToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended">
    <UserControl.Resources>
        <ContextMenu x:Key="tabItemContextMenu">
            <MenuItem Header="Добавить кадр" Command="{Binding AddFrameCommand}" />
            <MenuItem Header="Удалить кадр" Command="{Binding RemoveFrameCommand}" />
        </ContextMenu>
    </UserControl.Resources>

    <TabControl TabStripPlacement="Bottom"
                ItemsSource="{Binding FrameViewModels}"
                SelectedItem="{Binding SelectedFrameViewModel}"
                ContextMenuOpening="TabControl_ContextMenuOpening">

        <TabControl.ItemContainerStyle>
            <Style TargetType="{x:Type TabItem}">
                <Style.Setters>
                    <Setter Property="ContextMenu" Value="{StaticResource tabItemContextMenu}" />
                </Style.Setters>
            </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Кадр " />
                    <TextBlock Text="{Binding Frame.Id}" />
                </StackPanel>
            </DataTemplate>
        </TabControl.ItemTemplate>

        <TabControl.ContentTemplate>
            <DataTemplate>
                <DockPanel>
                    <WrapPanel DockPanel.Dock="Bottom">
                        <Label Content="Слой: " />
                        <ExtToolkit:IntegerUpDown IsEditable="False"
                                                  Text="{Binding Layer, UpdateSourceTrigger=PropertyChanged}" />
                        <Label  Content=" Длительность: " />
                        <ExtToolkit:IntegerUpDown IsEditable="False" Increment="100"
                                                  Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="Импорт из .svg" Command="{Binding ImportSvgCommand}" Margin="10,5,0,0"/>
                    </WrapPanel>

                    <ContentControl HorizontalAlignment="Center"
                                    Width="500" Height="500"
                                    Content="{Binding XamlOfImage}">
                        <ContentControl.LayoutTransform>
                            <ScaleTransform ScaleX="0.5" ScaleY="0.5" />
                        </ContentControl.LayoutTransform>
                    </ContentControl>
                </DockPanel>
            </DataTemplate>
        </TabControl.ContentTemplate>

    </TabControl>
</UserControl>