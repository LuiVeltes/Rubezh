<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:LibraryModule.Views"
                    xmlns:ViewModels="clr-namespace:LibraryModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:LibraryViewModel}">
        <Views:LibraryView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:AddDeviceViewModel}">
        <Views:AddDeviceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:AddStateViewModel}">
        <Views:AddStateView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type ViewModels:AddAdditionalStateViewModel}">
        <Views:AddAdditionalStateView />
    </DataTemplate>

</ResourceDictionary>