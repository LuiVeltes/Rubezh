<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:LibraryModule.Views"
                    xmlns:ViewModels="clr-namespace:LibraryModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:LibraryViewModel}">
        <Views:LibraryView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DevicesListViewModel}">
        <Views:DevicesListView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:StatesListViewModel}">
        <Views:StatesListView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type ViewModels:AdditionalStatesListViewModel}">
        <Views:AdditionalStatesListView />
    </DataTemplate>

</ResourceDictionary>