<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:LibraryModule.Views"
                    xmlns:ViewModels="clr-namespace:LibraryModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:LibraryViewModel}">
        <Views:LibraryView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DeviceDetailsViewModel}">
        <Views:DeviceDeailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:StateDetailsViewModel}">
        <Views:StateDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:AdditionalStateDetailsViewModel}">
        <Views:AdditionalStateDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:LibraryMenuViewModel}">
        <Views:LibraryMenuView />
    </DataTemplate>

</ResourceDictionary>