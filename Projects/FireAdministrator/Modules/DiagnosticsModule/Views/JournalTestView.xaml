<UserControl x:Class="DiagnosticsModule.Views.JournalTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="600" MinHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" AutoGenerateColumns="True" ItemsSource="{Binding JournalRecords}" />
        <StackPanel Grid.Row="1">
            <Button Content="Добавить" Command="{Binding AddCommand}" Margin="2" />
            <Button Content="Выбрать" Command="{Binding SelectCommand}" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>