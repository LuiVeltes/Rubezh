	<TabControl>
		<TabItem Header="Отладка">
			<Border Margin="2" Background="White" BorderThickness="0" CornerRadius="10">
				<Grid>
					<StackPanel>
						<Button Width="100" Margin="2" Command="{Binding AddJournalCommand}" Content="AddJournal" />
						<Button Width="100" Margin="2" Command="{Binding AddManyJournalCommand}" Content="AddManyJournal" />
						<Button Width="100" Margin="2" Command="{Binding SaveCommand}" Content="Save" />
						<Button Width="100" Margin="2" Command="{Binding LoadCommand}" Content="Load" />
					</StackPanel>
				</Grid>
			</Border>
		</TabItem>
		<TabItem Header="Сервис RVI-VSS">
			<Border Margin="2" Background="White" BorderThickness="0" CornerRadius="10">
				<StackPanel>
                    <Button Width="100" Margin="2" Command="{Binding RviTestCommand}" Content="Test" />
					<Border BorderThickness="5" Height="400" Width="400" BorderBrush="Black">
						<Grid>
							<wpf:VlcControl x:Name="myVlcControl" />
							<Grid>
								<Grid.Background>
									<VisualBrush Stretch="Uniform">
										<VisualBrush.Visual>
											<Image Source="{Binding ElementName=myVlcControl, Path=VideoSource}" />
										</VisualBrush.Visual>
									</VisualBrush >
								</Grid.Background>
							</Grid>
						</Grid>
					</Border>
					<Button Content="Пуск" Width="100" Click="buttonRtsp_Click"></Button>
				</StackPanel>
			</Border>
		</TabItem>
