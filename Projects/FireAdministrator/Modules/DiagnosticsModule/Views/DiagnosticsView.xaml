<UserControl x:Class="DiagnosticsModule.Views.DiagnosticsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<UserControl.Resources />
	<TabControl>
		<TabItem Header="Отладка">
            <Border Background="White" BorderThickness="0" CornerRadius="10" Margin="2">
				<Grid>
					<StackPanel>
                        <Button Command="{Binding AddJournalCommand}" Content="AddJournal" Width="100" Margin="2" />
						<Button Command="{Binding SaveCommand}" Content="Save" Width="100" Margin="2" />
						<Button Command="{Binding LoadCommand}" Content="Load" Width="100" Margin="2" />
					</StackPanel>
				</Grid>
			</Border>
		</TabItem>
	</TabControl>
</UserControl>