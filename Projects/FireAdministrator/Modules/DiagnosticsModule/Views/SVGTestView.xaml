<UserControl x:Class="DiagnosticsModule.Views.SVGTestView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinWidth="800" MinHeight="800">
	<Grid Grid.Column="0" Background="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="3*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>
		<Button Grid.Row="0" Command="{Binding BrowseCommand}" Content="Browse" />
		<Border Grid.Row="1" Background="{Binding Background}" CacheMode="BitmapCache" CornerRadius="5" Padding="5" BorderThickness="3" />
		<GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Cursor="SizeNS" />
		<TextBox BorderBrush="Black" BorderThickness="2" Grid.Row="3" Margin="2" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" Text="{Binding Text}" TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto" />
	</Grid>
</UserControl>
