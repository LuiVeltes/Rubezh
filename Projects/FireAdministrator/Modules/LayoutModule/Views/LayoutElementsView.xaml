<UserControl x:Class="LayoutModule.Views.LayoutElementsView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls">
	<tree:TreeList SelectedTreeNode="{Binding SelectedItem}" Source="{Binding Items}">
		<tree:TreeList.ItemContainerStyle>
			<Style BasedOn="{StaticResource {x:Type tree:TreeListItem}}" TargetType="{x:Type tree:TreeListItem}">
				<!--<Setter Property="ContextMenu" Value="{StaticResource contextMenu}" />-->
				<!--<Setter Property="Controls:Attach.InputBindings" Value="{StaticResource inputCollection}" />-->
				<Setter Property="Focusable" Value="True" />
			</Style>
		</tree:TreeList.ItemContainerStyle>
		<tree:TreeList.View>
			<GridView>
				<GridViewColumn Width="250" Header="Элементы" DisplayMemberBinding="{Binding Name}"/>
			</GridView>
		</tree:TreeList.View>
	</tree:TreeList>
</UserControl>
