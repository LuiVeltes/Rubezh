<UserControl x:Class="LayoutModule.Views.LayoutPartPropertiesView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended" xmlns:xc="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" MinWidth="400" MinHeight="400">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Content="Минимальная ширина" />
		<Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Content="Минимальная высота" />
		<Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Content="Фиксированная ширина" />
		<Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Content="Фиксированная высота" />
		<Label Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Content="Ширина" />
		<Label Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Content="Высота" />
		<Label Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" Content="Тип ширины" />
		<Label Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" Content="Тип высоты" />

		<extToolkit:IntegerUpDown Grid.Row="0" Grid.Column="1" Margin="2" Maximum="10000" Minimum="5" Value="{Binding MinWidth, UpdateSourceTrigger=PropertyChanged}" />
		<extToolkit:IntegerUpDown Grid.Row="1" Grid.Column="1" Margin="2" Maximum="10000" Minimum="5" Value="{Binding MinHeight, UpdateSourceTrigger=PropertyChanged}" />
		<CheckBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" IsChecked="{Binding IsWidthFixed, UpdateSourceTrigger=PropertyChanged}" />
		<CheckBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" IsChecked="{Binding IsHeightFixed, UpdateSourceTrigger=PropertyChanged}" />
		<extToolkit:IntegerUpDown Grid.Row="4" Grid.Column="1" Margin="2" Maximum="10000" Minimum="1" Value="{Binding Width, UpdateSourceTrigger=PropertyChanged}" />
		<extToolkit:IntegerUpDown Grid.Row="5" Grid.Column="1" Margin="2" Maximum="10000" Minimum="1" Value="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />
		<ComboBox Grid.Row="6" Grid.Column="1" Margin="2" ItemsSource="{Binding UnitTypes}" SelectedIndex="{Binding WidthType, UpdateSourceTrigger=PropertyChanged}" />
		<ComboBox Grid.Row="7" Grid.Column="1" Margin="2" ItemsSource="{Binding UnitTypes}" SelectedIndex="{Binding HeightType, UpdateSourceTrigger=PropertyChanged}" />
	</Grid>
</UserControl>