<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:JournalModule.Views"
                    xmlns:ViewModels="clr-namespace:JournalModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:JournalsViewModel}">
        <Views:JournalView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:JournalsMenuViewModel}">
        <Views:JournalMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:EditJournalViewModel}">
        <Views:NewJournalView />
    </DataTemplate>

</ResourceDictionary>