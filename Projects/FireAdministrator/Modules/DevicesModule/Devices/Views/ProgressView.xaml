<UserControl x:Class="DevicesModule.Views.ProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="150" MinWidth="300">
    <Grid Margin="2">
        <StackPanel>
            <TextBlock Text="{Binding Description}" Margin="2" />
            <ProgressBar Background="Red" Foreground="Blue" Minimum="0" Maximum="100" Value="{Binding Percent}" Height="30" Margin="2" />
            <Button Command="{Binding StopCommand}" Width="100" Content="{Binding CancelText}" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>
