<UserControl x:Class="DevicesModule.Views.DevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:DevicesModule.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <DataGrid Name="_devicesDataGrid"  ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" IsReadOnly="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Тип Устройства" Width="250">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <WrapPanel Grid.Column="0"
                                               Margin="{Binding Level, Converter={StaticResource LevelToMarginConverter}}">
                                        <StackPanel Visibility="{Binding HasChildren, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <CheckBox Style="{StaticResource TreeExpanderStyle}" IsChecked="{Binding IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>
                                        <StackPanel Visibility="{Binding Driver.HasImage, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Image Source="{Binding Driver.ImageSource}" Width="16" Height="16" Margin="5, 0, 5, 0" />
                                        </StackPanel>
                                    </WrapPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Driver.ShortName}">
                                        <TextBlock.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Добавить" Command="{Binding AddCommand}" />
                                                <MenuItem Header="Добавить несколько" Command="{Binding AddManyCommand}" />
                                                <MenuItem Header="Удалить" Command="{Binding RemoveCommand}" />
                                                <MenuItem Header="Настройка логики" Command="{Binding ShowZoneLogicCommand}"
                                                          Visibility="{Binding Driver.IsZoneLogicDevice, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                <MenuItem Header="Свойства" Command="{Binding ShowPropertiesCommand}" />
                                            </ContextMenu>
                                        </TextBlock.ContextMenu></TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Адрес" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Visibility="{Binding Driver.HasAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="{Binding Address}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <StackPanel Visibility="{Binding Driver.CanEditAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Views:AddressRedactor DataContext="{Binding Address, Mode=TwoWay}" Foreground="Black" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding Address}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Зона" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding PresentationZone}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <StackPanel Visibility="{Binding Driver.IsZoneDevice, Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Stretch">
                                        <ComboBox ItemsSource="{Binding Zones}" SelectedItem="{Binding Zone}" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Height="19">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding PresentationName}" VerticalAlignment="Stretch" Foreground="Black" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Visibility="{Binding Driver.IsZoneLogicDevice, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding ShowZoneLogicCommand}" />
                                        </StackPanel.InputBindings>
                                        <TextBlock Text="{Binding PresentationZone}" />
                                    </StackPanel>
                                    <StackPanel Visibility="{Binding Driver.IsIndicatorDevice, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding ShowIndicatorLogicCommand}" />
                                        </StackPanel.InputBindings>
                                        <TextBlock Text="{Binding PresentationZone}" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Примечание" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Description}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Stretch">
                                    <TextBox Text="{Binding Description}" MaxLength="20" HorizontalAlignment="Stretch" Name="descriptionTextBox" Foreground="Black" />
                                </StackPanel>
                                <DataTemplate.Triggers>
                                    <Trigger SourceName="descriptionTextBox" Property="IsVisible" Value="True">
                                        <Setter TargetName="descriptionTextBox" Property="FocusManager.FocusedElement" Value="{Binding ElementName=descriptionTextBox}"/>
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="1" Margin="0, 10, 0, 0">
            <Border CornerRadius="5" BorderThickness="0" Margin="1" Background="{DynamicResource BackgroundBrush}">
                <StackPanel DataContext="{Binding SelectedDevice}" HorizontalAlignment="Left" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Driver.ImageSource}" Width="16" Margin="2" />
                        <Label Content="{Binding Driver.Name}" FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Подключено к" FontWeight="Bold" />
                        <Label Content="{Binding ConnectedTo}" />
                        <StackPanel.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ConnectedTo}" Value="{x:Null}" >
                                        <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                    </StackPanel>
                    <StackPanel DataContext="{Binding Zone}" Orientation="Horizontal">
                        <Label Content="Зона" FontWeight="Bold" />
                        <Label Content="{Binding PresentationName}" />
                        <StackPanel.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                        <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                    </StackPanel>
                    <Views:PropertiesView DataContext="{Binding PropertiesViewModel}" />
                    <TextBox Text="{Binding Device.UID, Mode=OneWay}" Margin="2" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>