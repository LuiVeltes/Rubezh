<UserControl x:Class="DevicesModule.Views.DevicesMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding AddCommand}" ToolTip="Добавить" Style="{StaticResource ToolarButtonStyle}">
            <Image Source="/Controls;component/Images/add.png" Height="24" />
        </Button>

        <Button Command="{Binding CopyCommand}" ToolTip="Копировать" Style="{StaticResource ToolarButtonStyle}">
            <Image Source="/Controls;component/Images/copy.png" Height="24" />
        </Button>

        <Button Command="{Binding CutCommand}" ToolTip="Вырезать" Style="{StaticResource ToolarButtonStyle}">
            <Image Source="/Controls;component/Images/cut.png" Height="24" />
        </Button>

        <Button Command="{Binding PasteCommand}" ToolTip="Вставить" Style="{StaticResource ToolarButtonStyle}">
            <Image Source="/Controls;component/Images/paste.png" Height="24" />
        </Button>

        <Menu Background="Transparent" VerticalAlignment="Center">
            <MenuItem>
                <MenuItem.Header>
                    <Image Source="/Controls;component/Images/Copy.png" Height="24" />
                </MenuItem.Header>

                <MenuItem Command="{Binding AutoDetectCommand}" Header="Автпоиск" />
                <MenuItem Command="{Binding ReadDeviceCommand}" Header="Считать конфигурацию из устройства" />
                <MenuItem Header="Синхронизировать охранных пользователей" IsEnabled="False" />
                <MenuItem Command="{Binding GetDescriptionCommand}" Header="Информация об устройстве" />
                <MenuItem Command="{Binding GetDeveceJournalCommand}" Header="Журнал событий" />
                <Separator />
                <MenuItem Command="{Binding WriteDeviceCommand}" Header="Записать конфигурацию в устройство" />
                <MenuItem Command="{Binding WriteAllDeviceCommand}" Header="Записать конфигурацию во все устройства" />
                <Separator />
                <MenuItem Command="{Binding SynchronizeDeviceCommand}" Header="Синзронизировать часы устройства с системными" />
                <MenuItem Command="{Binding RebootDeviceCommand}" Header="Перезагрузить устройство" />
                <MenuItem Command="{Binding UpdateSoftCommand}" Header="Обновление ПО" />
                <MenuItem Command="{Binding SetPasswordCommand}" Header="Задать пароль" />
                <MenuItem Header="Установить адрес" IsEnabled="False" />
                <MenuItem Command="{Binding BindMsCommand}" Header="Привязать" />
                <MenuItem Command="{Binding ExecuteCustomAdminFunctionsCommand}" Header="Другие функции" />
                
                <MenuItem Header="USB" Margin="10, 0, 0, 0">
                    <MenuItem Command="{Binding ReadDeviceCommand}" Header="Считать конфигурацию из устройства" />
                    <MenuItem Command="{Binding GetDescriptionCommand}" Header="Информация об устройстве" />
                    <MenuItem Command="{Binding GetDeveceJournalCommand}" Header="Журнал событий" />
                    <Separator />
                    <MenuItem Command="{Binding WriteDeviceCommand}" Header="Записать конфигурацию в устройство" />
                    <Separator />
                    <MenuItem Command="{Binding SynchronizeDeviceCommand}" Header="Синзронизировать часы устройства с системными" />
                    <MenuItem Command="{Binding UpdateSoftCommand}" Header="Обновление ПО" />
                    <MenuItem Command="{Binding SetPasswordCommand}" Header="Задать пароль" />
                    <MenuItem Command="{Binding ExecuteCustomAdminFunctionsCommand}" Header="Другие функции" />
                </MenuItem>
            </MenuItem>
        </Menu>

    </StackPanel>
</UserControl>