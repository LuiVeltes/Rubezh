<UserControl x:Class="DevicesModule.Views.IndicatorZoneSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="600" MinHeight="600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <DataGrid ItemsSource="{Binding TargetZones}" SelectedItem="{Binding SelectedTargetZone}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Binding="{Binding No}" Width="auto" />
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Примечание" Binding="{Binding Description}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Grid.Column="1" Margin="2">
            <Button Command="{Binding AddOneCommand}" ToolTip="Добавить" Style="{StaticResource ToolarButtonStyle}">
                <Image Source="/Controls;component/Images/Left.png" Height="24" />
            </Button>

            <Button Command="{Binding RemoveOneCommand}" ToolTip="Удалить" Style="{StaticResource ToolarButtonStyle}">
                <Image Source="/Controls;component/Images/Right.png" Height="24" />
            </Button>

            <Button Command="{Binding AddAllCommand}" ToolTip="Добавить все" Style="{StaticResource ToolarButtonStyle}">
                <Image Source="/Controls;component/Images/LeftLeft.png" Height="24" />
            </Button>

            <Button Command="{Binding RemoveAllCommand}" ToolTip="Удалить все" Style="{StaticResource ToolarButtonStyle}">
                <Image Source="/Controls;component/Images/RightRight.png" Height="24" />
            </Button>
        </StackPanel>

        <Grid Grid.Column="2">
            <DataGrid ItemsSource="{Binding SourceZones}" SelectedItem="{Binding SelectedSourceZone}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Binding="{Binding No}" Width="auto" />
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Примечание" Binding="{Binding Description}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
