<UserControl x:Class="DevicesModule.Views.SetPasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:DevicesModule.Converters"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls"
             MinWidth="400" MinHeight="400">

    <UserControl.Resources>
        <Converters:DevicePasswordTypeToIntConverter x:Key="DevicePasswordTypeToIntConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock Text="Сменить пароль" Margin="2" />
            
            <StackPanel>
                <RadioButton Content="Администратора" IsChecked="{Binding DevicePasswordType, Converter={StaticResource DevicePasswordTypeToIntConverter}, ConverterParameter=1, Mode=TwoWay}" Margin="2" />
                <RadioButton Content="Инсталлятора" IsChecked="{Binding DevicePasswordType, Converter={StaticResource DevicePasswordTypeToIntConverter}, ConverterParameter=2, Mode=TwoWay}" Margin="2" />
                <RadioButton Content="Дежурного" IsChecked="{Binding DevicePasswordType, Converter={StaticResource DevicePasswordTypeToIntConverter}, ConverterParameter=3, Mode=TwoWay}" Margin="2" />
            </StackPanel>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Новый пароль" Margin="2"  />
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Подтверждение" Margin="2"  />
                <Controls:PasswordBoxControl Grid.Row="0" Grid.Column="1" Password="{Binding Path=Password}" Margin="2" />
                <Controls:PasswordBoxControl Grid.Row="1" Grid.Column="1" Password="{Binding Path=PasswordConfirm}" Margin="2" />
            </Grid>
            
            
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Ок" Command="{Binding SaveCommand}" Width="100" Margin="2" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>
