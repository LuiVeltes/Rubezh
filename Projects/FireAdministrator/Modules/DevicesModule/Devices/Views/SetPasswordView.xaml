<UserControl x:Class="DevicesModule.Views.SetPasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:DevicesModule.Converters"
             MinWidth="400" MinHeight="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock Text="Сменить пароль" Margin="2" />
            <ItemsControl ItemsSource="{Binding Users}" Margin="2">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding Name}" IsChecked="{Binding IsSelected}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Новый пароль" Margin="2"  />
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Подтверждение" Margin="2"  />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Password, Converter={StaticResource StringToPasswordConverter}, UpdateSourceTrigger=PropertyChanged}" Margin="2"  />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PasswordConfirm, Converter={StaticResource StringToPasswordConverter}, UpdateSourceTrigger=PropertyChanged}" Margin="2"  />
            </Grid>
            
            
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Ок" Command="{Binding SaveCommand}" Width="100" Margin="2" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>
