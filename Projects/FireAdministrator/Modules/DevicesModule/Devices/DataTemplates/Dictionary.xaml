<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:DevicesModule.Views"
                    xmlns:ViewModels="clr-namespace:DevicesModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:DevicesViewModel}">
        <Views:DevicesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:NewDeviceViewModel}">
        <Views:NewDeviceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:NewDeviceRangeViewModel}">
        <Views:NewDeviceRangeView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DevicesMenuViewModel}">
        <Views:DevicesMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:IndicatorDetailsViewModel}">
        <Views:IndicatorDetailsView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type ViewModels:ValveDetailsViewModel}">
        <Views:ValveDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:PumpDetailsViewModel}">
        <Views:PumpDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:GroupDetailsViewModel}">
        <Views:GroupDetailsView />
    </DataTemplate>

</ResourceDictionary>