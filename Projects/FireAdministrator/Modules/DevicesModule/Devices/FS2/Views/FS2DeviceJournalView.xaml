<UserControl x:Class="DevicesModule.Views.FS2DeviceJournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="800" MinHeight="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Пожарные события" Foreground="White" Margin="2" />
            <DataGrid Grid.Row="1" ItemsSource="{Binding FireJournalItems}" MinRowHeight="20" Margin="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Время устройства" Binding="{Binding DeviceTime}" />
                    <DataGridTextColumn Header="Событие" Binding="{Binding Description}" />
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" />
                    <DataGridTextColumn Header="Устройство" Binding="{Binding DeviceName}" />
                    <DataGridTextColumn Header="Прибор" Binding="{Binding PanelName}" />
                    <DataGridTextColumn Header="Пользователь" Binding="{Binding UserName}" />
                </DataGrid.Columns>
                <DataGrid.CellStyle>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Style.Setters>
                            <Setter Property="Background" Value="{Binding StateType, Converter={StaticResource StateTypeToColorConverter}}" />
                        </Style.Setters>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="1" Visibility="{Binding HasSecurityJournalItems}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Охранные события" Foreground="White" Margin="2" />
            <DataGrid Grid.Row="1" ItemsSource="{Binding SecurityJournalItems}" MinRowHeight="20" Margin="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Время устройства" Binding="{Binding DeviceTime}" />
                    <DataGridTextColumn Header="Событие" Binding="{Binding Description}" />
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" />
                    <DataGridTextColumn Header="Устройство" Binding="{Binding DeviceName}" />
                    <DataGridTextColumn Header="Прибор" Binding="{Binding PanelName}" />
                    <DataGridTextColumn Header="Пользователь" Binding="{Binding UserName}" />
                </DataGrid.Columns>
                <DataGrid.CellStyle>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Style.Setters>
                            <Setter Property="Background" Value="{Binding StateType, Converter={StaticResource StateTypeToColorConverter}}" />
                        </Style.Setters>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>
        </Grid>
        <Button Grid.Row="3" Content="Сохранить в файл" Command="{Binding SaveToFileCommand}" HorizontalAlignment="Right" Width="100" />
    </Grid>
</UserControl>