<UserControl x:Class="DevicesModule.Views.FS2DeviceJournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="800" MinHeight="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding JournalItems}" MinRowHeight="20" Margin="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Время устройства" Binding="{Binding DeviceTime}" />
                <DataGridTextColumn Header="Время системы" Binding="{Binding SystemTime}" />
                <DataGridTextColumn Header="Событие" Binding="{Binding EventName}" />
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" />
                <DataGridTextColumn Header="Устройство" Binding="{Binding DeviceName}" />
                <DataGridTextColumn Header="Прибор" Binding="{Binding PanelName}" />
                <DataGridTextColumn Header="Пользователь" Binding="{Binding UserName}" />
            </DataGrid.Columns>
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Setters>
                        <Setter Property="Background" Value="{Binding StateType, Converter={StaticResource StateTypeToColorConverter}}" />
                    </Style.Setters>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>
        <Button Grid.Row="1" Content="Сохранить в файл" Command="{Binding SaveToFileCommand}" HorizontalAlignment="Right" Width="100" />
    </Grid>
</UserControl>