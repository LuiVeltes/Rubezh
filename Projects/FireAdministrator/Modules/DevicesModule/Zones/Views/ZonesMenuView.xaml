<UserControl x:Class="DevicesModule.Views.ZonesMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:XButtons="clr-namespace:Controls;assembly=Controls">

    <ToolBar Background="Transparent" ToolBarTray.IsLocked="True">
        <Button Command="{Binding AddCommand}" ToolTip="Добавить">
            <Image Source="/Controls;component/Images/Add.png" Height="32" />
        </Button>

        <Button Command="{Binding DeleteCommand}" ToolTip="Удалить">
            <Image Source="/Controls;component/Images/Delete.png" Height="32" />
        </Button>

        <Button Command="{Binding EditCommand}" ToolTip="Редактировать">
            <Image Source="/Controls;component/Images/Edit.png" Height="32" />
        </Button>

        <Button Command="{Binding DeleteAllCommand}" ToolTip="Удалить все зоны">
            <Image Source="/Controls;component/Images/DeleteAll.png" Height="32" />
        </Button>

        <Button Command="{Binding DeleteAllEmptyCommand}" ToolTip="Удалить все пустые зоны">
            <Image Source="/Controls;component/Images/DeleteAllEmpty.png" Height="32" />
        </Button>

    </ToolBar>
</UserControl>