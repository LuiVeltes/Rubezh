<UserControl x:Class="DevicesModule.Views.ZonesMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls">

    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding AddCommand}" ToolTip="Добавить" Style="{StaticResource ToolarButtonStyle}">
            <Image Source="/Controls;component/Images/add.png" Height="24" />
        </Button>

        <Button Command="{Binding DeleteCommand}" ToolTip="Удалить" Style="{StaticResource ToolarButtonStyle}">
            <Image Source="/Controls;component/Images/delete.png" Height="24" />
        </Button>

        <Button Command="{Binding EditCommand}" ToolTip="Редактировать" Style="{StaticResource ToolarButtonStyle}">
            <Image Source="/Controls;component/Images/edit.png" Height="24" />
        </Button>

        <Button Command="{Binding DeleteAllCommand}" ToolTip="Удалить все зоны" Style="{StaticResource ToolarButtonStyle}">
            <Image Source="/Controls;component/Images/DeleteAll.png" Height="24" />
        </Button>

        <Button Command="{Binding DeleteAllEmptyCommand}" ToolTip="Удалить все пустые зоны" Style="{StaticResource ToolarButtonStyle}">
            <Image Source="/Controls;component/Images/DeleteEmpty.png" Height="24" />
        </Button>
    </StackPanel>
    
</UserControl>