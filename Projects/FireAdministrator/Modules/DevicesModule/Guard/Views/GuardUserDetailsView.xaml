<UserControl x:Class="DevicesModule.Views.GuardUserDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls"
             MinWidth="400" MinHeight="400">

    <StackPanel>
        <Label Content="Имя" />
        <TextBox Text="{Binding Name}" Margin="2" />

        <Label Content="Пароль" />
        <Controls:PasswordBoxControl Password="{Binding Path=Password}" Margin="2" />

        <Label Content="ФИО" />
        <TextBox Text="{Binding FIO}" Margin="2" />

        <Label Content="Должность" />
        <TextBox Text="{Binding Function}" Margin="2" />

        <Label Content="Права" />
        <CheckBox Content="Постановка на охрану" IsChecked="{Binding CanSetZone}" Margin="2" Foreground="White" />
        <CheckBox Content="Снятие с охраны" IsChecked="{Binding CanUnSetZone}" Margin="2" Foreground="White" />
        <TextBlock Text="Уровни доступа" Margin="2" />

        <TextBlock Margin="2">
                    <Hyperlink Command="{Binding ChangeGuardLevelsCommand}" Style="{StaticResource HyperlinkStyle}">
                        <TextBlock Text="{Binding PresentationLevels}" />                
                        <TextBlock Text="Нажмите для выбора зон" Margin="2">
                            <TextBlock.Style>
                                <Style>
                                    <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PresentationLevels}" Value="{x:Null}">
                                            <Setter Property="TextBlock.Visibility" Value="Visible" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding PresentationLevels}" Value="">
                                            <Setter Property="TextBlock.Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>         
                    </Hyperlink>
                </TextBlock>

    </StackPanel>
</UserControl>
