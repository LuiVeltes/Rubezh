<UserControl x:Class="DevicesModule.Views.GuardUserDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls"
             MinWidth="400" MinHeight="400">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <StackPanel>
                <TextBlock Text="Имя" Margin="2" />
                <TextBox Text="{Binding Name}" Margin="2" />
                
                <TextBlock Text="Пароль" Margin="2" />
                <Controls:PasswordBoxControl Password="{Binding Path=Password}" Margin="2" />
                
                <TextBlock Text="ФИО" Margin="2" />
                <TextBox Text="{Binding FIO}" Margin="2" />
                
                <TextBlock Text="Должность" Margin="2" />
                <TextBox Text="{Binding Function}" Margin="2" />
                
                <TextBlock Text="Права" Margin="2" />
                <CheckBox Content="Постановка на охрану" IsChecked="{Binding CanSetZone}" Margin="2" />
                <CheckBox Content="Снятие с охраны" IsChecked="{Binding CanUnSetZone}" Margin="2" />
                <TextBlock Text="Уровни доступа" Margin="2" />

                <Button Command="{Binding ChangeGuardLevelsCommand}" Margin="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PresentationLevels}" Margin="2" />
                        <TextBlock Margin="2">
                            <TextBlock.Style>
                                <Style>
                                    <Style.Triggers>
                                    <DataTrigger Binding="{Binding PresentationLevels}" Value="{x:Null}">
                                        <Setter Property="TextBlock.Text" Value="Нажмите для выбора уровней доступа" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PresentationLevels}" Value="">
                                        <Setter Property="TextBlock.Text" Value="Нажмите для выбора уровней доступа" />
                                    </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
                
            </StackPanel>
        </Grid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Ok" Command="{Binding SaveCommand}" Margin="2" Width="100" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Margin="2" Width="100" />
        </StackPanel>
        
    </Grid>
</UserControl>
