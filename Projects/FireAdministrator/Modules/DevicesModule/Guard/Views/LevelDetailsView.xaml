<UserControl x:Class="DevicesModule.Views.LevelDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:DevicesModule.Converters"
             MinWidth="400" MinHeight="400">
    <UserControl.Resources>
        <Converters:ZoneActionToStringConverter x:Key="ZoneActionToStringConverter" />
    </UserControl.Resources>

    <Border CornerRadius="5" Margin="3" Padding="5" Background="{DynamicResource BackgroundBrush}">
        <StackPanel>
            <DockPanel>
                <Label DockPanel.Dock="Left" Content="Название" />
                <TextBox DockPanel.Dock="Right" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />
            </DockPanel>

            <Button Command="{Binding AddCommand}" ToolTip="Добавить зону" Style="{StaticResource ToolarButtonStyle}" HorizontalAlignment="Left">
                <Image Source="/Controls;component/Images/Add.png" Height="24" />
            </Button>

            <ItemsControl ItemsSource="{Binding ZoneLevels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">

                                <ComboBox ItemsSource="{Binding AvailableActions}" SelectedItem="{Binding ZoneLevel.ZoneActionType}" VerticalAlignment="Center" Width="150" Margin="2">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ., Converter={StaticResource ZoneActionToStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <TextBlock VerticalAlignment="Center" Margin="2">
                                        <Hyperlink Command="{Binding ChooseZonesCommand}" Style="{StaticResource HyperlinkStyle}">
                                            <TextBlock Text="{Binding PresentationZone}" />                
                                            <TextBlock Text="Нажмите для выбора зон" Margin="2">
                                                <TextBlock.Style>
                                                    <Style>
                                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                        <DataTrigger Binding="{Binding PresentationZone}" Value="{x:Null}">
                                                            <Setter Property="TextBlock.Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>         
                                        </Hyperlink>
                                    </TextBlock>
                            </StackPanel>

                            <Button DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="2" ToolTip="Удалить" Style="{StaticResource ToolarButtonStyle}"
                                        Command="{Binding
                                        RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}},
					                    Path=DataContext.RemoveCommand}"
                                        CommandParameter="{Binding}">
                                <Image Source="/Controls;component/Images/deleteCross.png" Height="16" />
                            </Button>

                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </Border>
</UserControl>
