<UserControl x:Class="DevicesModule.Views.GuardMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls">

    <StackPanel Orientation="Horizontal" DataContext="{Binding Context}">        
        <Controls:ToolBarButton Name="readButton" Command="{Binding ReadGuardUserCommand}" ToolTip="Считать охранную конфигурацию из устройства" ImageSource="/Controls;component/Images/read.png" />
        <Controls:ToolBarButton Name="writeButton" Command="{Binding WriteGuardUserCommand}" ToolTip="Записать охранную конфигурацию в устройство" ImageSource="/Controls;component/Images/write.png" />
        <Controls:ToolBarButton Command="{Binding ShowSynchronizationCommand}" ToolTip="Синхронизация" ImageSource="/Controls;component/Images/Settings.png" Visibility="Collapsed" />
    </StackPanel>
</UserControl>