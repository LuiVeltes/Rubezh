<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:DevicesModule.Views"
                    xmlns:ViewModels="clr-namespace:DevicesModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:GuardViewModel}">
        <Views:GuardView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:GuardUserDetailsViewModel}">
        <Views:GuardUserDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:GuardUsersMenuViewModel}">
        <Views:GuardUsersMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:GuardLevelDetailsViewModel}">
        <Views:GuardLevelDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:GuardLevelsMenuViewModel}">
        <Views:GuardLevelsMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:GuardZoneSelectationViewModel}">
        <Views:GuardZoneSelectationView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:GuardLevelsSelectationViewModel}">
        <Views:GuardLevelsSelectationView />
    </DataTemplate>

</ResourceDictionary>