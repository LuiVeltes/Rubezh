<UserControl x:Class="DevicesModule.Views.DirectionDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TabControl>
                <TabItem Header="Основные">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Номер направления" />
                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Наименование" />
                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Примечание" />
                        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Id}" Margin="2" />
                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Name}" Margin="2" />
                        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Description}" Margin="2" />
                    </Grid>
                </TabItem>

                <TabItem Header="Настройки направления">
                    <StackPanel>
                        <TextBlock Text="Внешняя сигнализация УАПТ заблокировано (РМ)" FontWeight="Bold" Margin="5" />
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0">
                                <Hyperlink Command="{Binding ChooseRmCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DeviceRm.Driver.ShortName}" />
                                        <TextBlock Text="{Binding DeviceRm.DottedAddress}" Margin="10, 0, 0, 0" />
                                    </StackPanel>
                                        
                                    <TextBlock  Text="Нажмите для выбора устройства" Margin="2">
                                        <TextBlock.Style>
                                            <Style>
                                                <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                <DataTrigger Binding="{Binding DeviceRm}" Value="{x:Null}">
                                                    <Setter Property="TextBlock.Visibility" Value="Visible" />
                                                </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                        
                                </Hyperlink>
                            </TextBlock>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="x" Command="{Binding ResetRmCommand}" ToolTip="Удалить" HorizontalAlignment="Right" />
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Кнопка сброса блокировки" FontWeight="Bold" Margin="5" />
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0">
                                <Hyperlink Command="{Binding ChooseButtonCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DeviceButton.Driver.ShortName}" />
                                        <TextBlock Text="{Binding DeviceButton.DottedAddress}" Margin="10, 0, 0, 0" />
                                    </StackPanel>
                                    <TextBlock  Text="Нажмите для выбора устройства" Margin="2">
                                        <TextBlock.Style>
                                            <Style>
                                                <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                <DataTrigger Binding="{Binding DeviceButton}" Value="{x:Null}">
                                                    <Setter Property="TextBlock.Visibility" Value="Visible" />
                                                </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Hyperlink>
                            </TextBlock>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="x" Command="{Binding ResetButtonCommand}" ToolTip="Удалить" HorizontalAlignment="Right" />
                            </StackPanel>
                        </Grid>
                        
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Ok" Command="{Binding SaveCommand}" Width="100" Margin="2" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>