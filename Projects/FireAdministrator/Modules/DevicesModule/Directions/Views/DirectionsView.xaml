<UserControl x:Class="DevicesModule.Views.DirectionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200" Name="leftColumn" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" MinWidth="200" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <DataGrid Grid.Column="0" Name="_directionDataGrid" ItemsSource="{Binding Directions}" SelectedItem="{Binding SelectedDirection}" SelectionChanged="DataGrid_SelectionChanged" MouseDoubleClick="DataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="1*" Binding="{Binding Direction.Id}" />
                    <DataGridTextColumn Header="Наименование" Width="1*" Binding="{Binding Direction.Name}" />
                    <DataGridTextColumn Header="Примечание" Width="1*" Binding="{Binding Direction.Description}" />
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Добавить" Command="{Binding AddCommand}" />
                        <MenuItem Header="Удалить" Command="{Binding DeleteCommand}" />
                        <MenuItem Header="Редактировать" Command="{Binding EditCommand}" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Grid>

        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="5" Background="Transparent" Cursor="SizeWE" />

        <Grid Grid.Column="2" DataContext="{Binding SelectedDirection}" SizeChanged="OnWidthChanged">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="200" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" MinHeight="200" Name="bottomRow" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DataGrid Grid.Column="0" ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="1*" Header="№" Binding="{Binding No}" />
                        <DataGridTextColumn Width="1*" Header="Наименование" Binding="{Binding Name}" />
                        <DataGridTextColumn Width="1*" Header="Примечание" Binding="{Binding Description}" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0, 2, 0, 0">
                    <Button Command="{Binding AddZoneCommand}" ToolTip="Добавить" Style="{StaticResource ToolarButtonStyle}">
                        <Image Source="/Controls;component/Images/ArrowUp.png" Height="24" />
                    </Button>
                    <Button Command="{Binding RemoveZoneCommand}" ToolTip="Удалить" Style="{StaticResource ToolarButtonStyle}">
                        <Image Source="/Controls;component/Images/ArrowDown.png" Height="24" />
                    </Button>
                </StackPanel>
            </Grid>

            <GridSplitter Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="5" Background="Transparent" Cursor="SizeNS" />

            <Grid Grid.Row="2" SizeChanged="OnHeightChanged">
                <DataGrid Grid.Column="0" ItemsSource="{Binding SourceZones}" SelectedItem="{Binding SelectedSourceZone}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="1*" Header="№" Binding="{Binding No}" />
                        <DataGridTextColumn Width="1*" Header="Наименование" Binding="{Binding Name}" />
                        <DataGridTextColumn Width="1*" Header="Примечание" Binding="{Binding Description}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>