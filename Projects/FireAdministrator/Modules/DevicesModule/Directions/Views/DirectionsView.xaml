<UserControl x:Class="DevicesModule.Views.DirectionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <DataGrid Margin="5" Grid.Column="0" ItemsSource="{Binding Directions}" SelectedItem="{Binding SelectedDirection}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Width="1*" Binding="{Binding Direction.Id}" />
                        <DataGridTextColumn Header="Наименование" Width="1*" Binding="{Binding Direction.Name}" />
                        <DataGridTextColumn Header="Примечание" Width="1*" Binding="{Binding Direction.Description}" />
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="DataContext" Value="{Binding RelativeSource={RelativeSource Self}}"/>
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="Добавить" Command="{Binding AddCommand}" />
                                        <MenuItem Header="Удалить" Command="{Binding DeleteCommand}" />
                                        <MenuItem Header="Редактировать" Command="{Binding EditCommand}" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Grid>

            <Grid Grid.Column="1" DataContext="{Binding SelectedDirection}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <DataGrid Margin="5" Grid.Column="0" ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="1*" Header="№" Binding="{Binding No}" />
                            <DataGridTextColumn Width="1*" Header="Наименование" Binding="{Binding Name}" />
                            <DataGridTextColumn Width="1*" Header="Примечание" Binding="{Binding Description}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Button Command="{Binding AddZoneCommand}" ToolTip="Добавить" Style="{StaticResource ToolarButtonStyle}">
                        <Image Source="/Controls;component/Images/ArrowUp.png" Height="24" />
                    </Button>

                    <Button Command="{Binding RemoveZoneCommand}" ToolTip="Удалить" Style="{StaticResource ToolarButtonStyle}">
                        <Image Source="/Controls;component/Images/ArrowDown.png" Height="24" />
                    </Button>
                </StackPanel>

                <Grid Grid.Row="2">
                    <DataGrid Margin="5" Grid.Column="0" ItemsSource="{Binding SourceZones}" SelectedItem="{Binding SelectedSourceZone}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="1*" Header="№" Binding="{Binding No}" />
                            <DataGridTextColumn Width="1*" Header="Наименование" Binding="{Binding Name}" />
                            <DataGridTextColumn Width="1*" Header="Примечание" Binding="{Binding Description}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </Grid>

        </Grid>
    </Grid>
</UserControl>