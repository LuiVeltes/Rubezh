<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:DevicesModule.Views"
                    xmlns:ViewModels="clr-namespace:DevicesModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:DevicesViewModel}">
        <Views:DevicesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZonesViewModel}">
        <Views:ZonesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZoneLogicViewModel}">
        <Views:ZoneLogicView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZoneLogicSectionViewModel}">
        <Views:ZoneLogicSectionView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:NewDeviceViewModel}">
        <Views:NewDeviceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZoneDetailsViewModel}">
        <Views:ZoneDetailsView />
    </DataTemplate>

</ResourceDictionary>