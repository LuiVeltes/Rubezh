                    xmlns:Views="clr-namespace:DevicesModule.Views"
                    xmlns:ViewModels="clr-namespace:DevicesModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:DevicesViewModel}">
        <Views:DevicesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZonesViewModel}">
        <Views:ZonesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZoneLogicViewModel}">
