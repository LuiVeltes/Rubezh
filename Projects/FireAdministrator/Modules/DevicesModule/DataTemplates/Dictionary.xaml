    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:IndicatorDetailsViewModel}">
        <Views:IndicatorDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DirectionsViewModel}">
        <Views:DirectionsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DirectionDetailsViewModel}">
        <Views:DirectionDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DirectionsMenuViewModel}">
        <Views:DirectionsMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZonesMenuViewModel}">
        <Views:ZonesMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DevicesMenuViewModel}">
        <Views:DevicesMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:NewDeviceRangeViewModel}">
        <Views:NewDeviceRangeView />
    </DataTemplate>
    
</ResourceDictionary>