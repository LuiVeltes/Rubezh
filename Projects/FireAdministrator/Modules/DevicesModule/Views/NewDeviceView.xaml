<UserControl x:Class="DevicesModule.Views.NewDeviceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="500" Width="500">
    <Grid>
        <StackPanel>
            <ListBox ItemsSource="{Binding AvailableDevices}" SelectedItem="{Binding SelectedAvailableDevice}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImageSource}" Width="16" Height="16" Margin="0, 0, 5, 0" />
                            <TextBlock Text="{Binding DriverName}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Ok" Command="{Binding AddCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
