<UserControl x:Class="DevicesModule.Views.GuardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:DevicesModule.Views">
    <Grid>
        <TabControl>
            <TabItem Header="Устройства">
                <Views:GuardDevicesView DataContext="{Binding GuardDevicesViewModel}" />
            </TabItem>

            <TabItem Header="Охранные пользователи" IsSelected="{Binding IsGuardUsersSelected}">
                <Views:GuardUsersView DataContext="{Binding GuardUsersViewModel}" />
            </TabItem>

            <TabItem Header="Уровни доступа" IsSelected="{Binding IsGuardLevelsSelected}" >
                <Views:GuardLevelsView DataContext="{Binding GuardLevelsViewModel}"  />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
