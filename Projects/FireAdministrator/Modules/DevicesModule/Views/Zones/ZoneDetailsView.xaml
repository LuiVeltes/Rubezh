<UserControl x:Class="DevicesModule.Views.ZoneDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:DevicesModule.Converters"
             MinWidth="600" MinHeight="400">
    
    <UserControl.Resources>
        <Converters:ZoneTypeToStringConverter x:Key="ZoneTypeToStringConverter" />
        <Converters:GuardZoneTypeToStringConverter x:Key="GuardZoneTypeToStringConverter" />
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <TabControl>
                
                <TabItem Header="Основные">
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Номер" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование" />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Примечание" />

                        <TextBox Grid.Row="0" Grid.Column="1" Margin="2" Text="{Binding No}" />
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="2" Text="{Binding Name}" />
                        <TextBox Grid.Row="2" Grid.Column="1" Margin="2" Text="{Binding Description}" />
                    </Grid>
                </TabItem>
                
                <TabItem Header="Настройки зоны">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Назначение зоны" />
                        <ComboBox Grid.Row="1" ItemsSource="{Binding AvailableZoneTypes}" SelectedItem="{Binding ZoneType}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ., Converter={StaticResource ZoneTypeToStringConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Grid Grid.Row="2">

                            <Grid Visibility="{Binding IsFireZone, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Число датчиков для формирования сигнала Пожар" />
                                    <TextBox Text="{Binding DetectorCount}" />
                                    <TextBlock Text="Время эвакуации, сек(если указано, то при получении события о" />
                                    <TextBlock Text="включении МПТ или ППУ в зоне, ОЗ перейдет в режим эвакуации)" />
                                    <TextBox Text="{Binding EvacuationTime}" />
                                </StackPanel>
                            </Grid>

                            <Grid Visibility="{Binding IsGuardZone, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Вид зоны" />
                                    
                                    <ComboBox ItemsSource="{Binding AvailableGuardZoneTypes}" SelectedItem="{Binding GuardZoneType}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ., Converter={StaticResource GuardZoneTypeToStringConverter}}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    
                                    <CheckBox Content="Тихая тревога" IsChecked="{Binding Skipped}" />
                                    <TextBlock Text="Входная/выходная задержка, сек" />
                                    <TextBox Text="{Binding Delay}" IsEnabled="{Binding CanAutoSet}" />
                                    <TextBlock Text="Автоперевзятие, сек" />
                                    <TextBox Text="{Binding AutoSet}" />
                                </StackPanel>
                            </Grid>
                            
                        </Grid>
                        
                    </Grid>
                </TabItem>
                
            </TabControl>
        </Grid>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="OK" Command="{Binding SaveCommand}" Width="100" Margin="2" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>
