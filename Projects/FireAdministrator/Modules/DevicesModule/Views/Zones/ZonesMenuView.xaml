<UserControl x:Class="DevicesModule.Views.ZonesMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:XButtons="clr-namespace:Buttons;assembly=Buttons">

    <ToolBar Background="Transparent">
        <Button Command="{Binding AddCommand}" ToolTip="Добавить">
            <Image Source="/DevicesModule;component/Images/Add.png" Height="32" />
        </Button>

        <Button Command="{Binding DeleteCommand}" ToolTip="Удалить">
            <Image Source="/DevicesModule;component/Images/Delete.png" Height="32" />
        </Button>

        <Button Command="{Binding EditCommand}" ToolTip="Редактировать">
            <Image Source="/DevicesModule;component/Images/Edit.png" Height="32" />
        </Button>

        <Button Command="{Binding DeleteAllCommand}" ToolTip="Удалить все зоны">
            <Image Source="/DevicesModule;component/Images/DeleteAll.png" Height="32" />
        </Button>

        <Button Command="{Binding DeleteAllEmptyCommand}" ToolTip="Удалить все пустые зоны">
            <Image Source="/DevicesModule;component/Images/DeleteAllEmpty.png" Height="32" />
        </Button>
    </ToolBar>
</UserControl>