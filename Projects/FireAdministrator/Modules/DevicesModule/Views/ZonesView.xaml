<UserControl x:Class="DevicesModule.Views.ZonesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:WpfToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
             xmlns:Converters="clr-namespace:DevicesModule.Converters"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Добавить" Command="{Binding AddCommand}" HorizontalAlignment="Left" Width="100" />
            <Button Content="Удалить" Command="{Binding DeleteCommand}" HorizontalAlignment="Left" Width="100" />
            <Button Content="Редактировать" Command="{Binding EditCommand}" HorizontalAlignment="Left" Width="100" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <WpfToolkit:DataGrid Margin="5" Grid.Column="0" ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}"
                            ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                            AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="FullRow" HeadersVisibility="Column"
                            IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserSortColumns="False"
                            HorizontalGridLinesBrush="WhiteSmoke" VerticalGridLinesBrush="WhiteSmoke"
                            Background="White" BorderBrush="Black" BorderThickness="0"
                            RowHeight="20">
                <WpfToolkit:DataGrid.Columns>
                    <WpfToolkit:DataGridTextColumn Header="№" Width="1*" Binding="{Binding No}" />
                    <WpfToolkit:DataGridTextColumn Header="Наименование" Width="2*" Binding="{Binding Name}" />
                    <WpfToolkit:DataGridTextColumn  Header="Примечание" Width="2*" Binding="{Binding Description}" />
                    <WpfToolkit:DataGridTextColumn Header="Число ИП для перехода в пожар" Width="2*" Binding="{Binding DetectorCount}" />
                </WpfToolkit:DataGrid.Columns>
                <WpfToolkit:DataGrid.CellStyle>
                    <Style TargetType="{x:Type WpfToolkit:DataGridCell}">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource RowSelectionBrush}" />
                                <Setter Property="Foreground" Value="Red" />
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type WpfToolkit:DataGridCell}">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                        <ContentPresenter VerticalAlignment="Center"></ContentPresenter>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </WpfToolkit:DataGrid.CellStyle>
            </WpfToolkit:DataGrid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.Resources>
                        <Converters:LevelToMarginConverter x:Key="LevelToMarginConverter" />
                        <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                        <Converters:BoolToVisibilityRevertConverter x:Key="BoolToVisibilityRevertConverter" />
                    </Grid.Resources>

                    <WpfToolkit:DataGrid ItemsSource="{Binding Devices}"
                            AutoGenerateColumns="False" SelectionMode="Single" HeadersVisibility="Column"
                            CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserSortColumns="False"
                            IsReadOnly="True" SelectionUnit="FullRow" ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" HorizontalGridLinesBrush="Beige" VerticalGridLinesBrush="Beige"
                            Background="White" BorderBrush="Black" BorderThickness="0"
                            RowHeight="20">
                        <WpfToolkit:DataGrid.Columns>
                            <WpfToolkit:DataGridTemplateColumn Header="Тип Устройства" Width="250">
                                <WpfToolkit:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="{Binding Level, Converter={StaticResource LevelToMarginConverter}}">
                                                <StackPanel Visibility="{Binding HasChildren, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <CheckBox Style="{StaticResource TreeExpanderStyle}" IsChecked="{Binding IsExpanded, Mode=TwoWay}"/>
                                                </StackPanel>
                                                <StackPanel Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <Image Source="{Binding ImageSource}" Width="16" Height="16" Margin="5, 0, 5, 0" />
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding ShortDriverName}" />
                                            </StackPanel>

                                        </Grid>
                                    </DataTemplate>
                                </WpfToolkit:DataGridTemplateColumn.CellTemplate>
                            </WpfToolkit:DataGridTemplateColumn>

                            <WpfToolkit:DataGridTextColumn Header="Адрес" Width="50" Binding="{Binding Address}" />
                            <WpfToolkit:DataGridTextColumn Header="Level" Width="50" Binding="{Binding Level}" />
                            <WpfToolkit:DataGridTextColumn Header="Примечание" Width="*" Binding="{Binding Description}" />

                        </WpfToolkit:DataGrid.Columns>

                        <WpfToolkit:DataGrid.CellStyle>
                            <Style TargetType="{x:Type WpfToolkit:DataGridCell}">
                                <Style.Setters>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type WpfToolkit:DataGridCell}">
                                                <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                    <ContentPresenter VerticalAlignment="Center"></ContentPresenter>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style.Setters>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="YellowGreen" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </WpfToolkit:DataGrid.CellStyle>

                    </WpfToolkit:DataGrid>
                    
                </Grid>

                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.Resources>
                            <Converters:LevelToMarginConverter x:Key="LevelToMarginConverter" />
                            <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                            <Converters:BoolToVisibilityRevertConverter x:Key="BoolToVisibilityRevertConverter" />
                        </Grid.Resources>

                        <WpfToolkit:DataGrid ItemsSource="{Binding AvaliableDevices}"
                            AutoGenerateColumns="False" SelectionMode="Single" HeadersVisibility="Column"
                            CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserSortColumns="False"
                            IsReadOnly="True" SelectionUnit="FullRow" ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" HorizontalGridLinesBrush="Beige" VerticalGridLinesBrush="Beige"
                            Background="White" BorderBrush="Black" BorderThickness="0"
                            RowHeight="20">
                            <WpfToolkit:DataGrid.Columns>
                                <WpfToolkit:DataGridTemplateColumn Header="Тип Устройства" Width="250">
                                    <WpfToolkit:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="{Binding Level, Converter={StaticResource LevelToMarginConverter}}">
                                                    <StackPanel Visibility="{Binding HasChildren, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <CheckBox Style="{StaticResource TreeExpanderStyle}" IsChecked="{Binding IsExpanded, Mode=TwoWay}"/>
                                                    </StackPanel>
                                                    <StackPanel Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <Image Source="{Binding ImageSource}" Width="16" Height="16" Margin="5, 0, 5, 0" />
                                                    </StackPanel>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ShortDriverName}" />
                                                </StackPanel>

                                            </Grid>
                                        </DataTemplate>
                                    </WpfToolkit:DataGridTemplateColumn.CellTemplate>
                                </WpfToolkit:DataGridTemplateColumn>

                                <WpfToolkit:DataGridTextColumn Header="Адрес" Width="50" Binding="{Binding Address}" />
                                <WpfToolkit:DataGridTextColumn Header="Level" Width="50" Binding="{Binding Level}" />
                                <WpfToolkit:DataGridTextColumn Header="Примечание" Width="*" Binding="{Binding Description}" />

                            </WpfToolkit:DataGrid.Columns>

                            <WpfToolkit:DataGrid.CellStyle>
                                <Style TargetType="{x:Type WpfToolkit:DataGridCell}">
                                    <Style.Setters>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type WpfToolkit:DataGridCell}">
                                                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                        <ContentPresenter VerticalAlignment="Center"></ContentPresenter>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style.Setters>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="YellowGreen" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </WpfToolkit:DataGrid.CellStyle>

                        </WpfToolkit:DataGrid>

                    </Grid>
                </Grid>
            </Grid>

        </Grid>

    </Grid>
</UserControl>
