<UserControl x:Class="NotificationModule.Views.SenderDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="300" MinHeight="200">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="From" HorizontalAlignment="Right" />
            <Label Grid.Row="1" Grid.Column="0" Content="Ip" HorizontalAlignment="Right" />
            <Label Grid.Row="2" Grid.Column="0" Content="Port" HorizontalAlignment="Right" />
            <Label Grid.Row="3" Grid.Column="0" Content="UserName" HorizontalAlignment="Right" />
            <Label Grid.Row="4" Grid.Column="0" Content="Password" HorizontalAlignment="Right" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SenderParamsViewModel.SenderParams.From, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SenderParamsViewModel.SenderParams.Ip}" Margin="2" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SenderParamsViewModel.SenderParams.Port}" Margin="2" />
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SenderParamsViewModel.SenderParams.UserName}" Margin="2" />
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SenderParamsViewModel.SenderParams.Password}" Margin="2" />
            <Button Grid.Row="5" Grid.Column="1" Content="Set default" Command="{Binding SetDefaultSenderParamsCommand}"/>
        </Grid>
    </Grid>
</UserControl>