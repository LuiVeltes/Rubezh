<UserControl x:Class="AutomationModule.Layout.Views.LayoutPartProcedureView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Padding="2">
	<Border Background="{DynamicResource HighlightedBackgoundBrush}" CornerRadius="2">
		<AlignableWrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center">
			<AlignableWrapPanel.LayoutTransform>
				<ScaleTransform ScaleX="2" ScaleY="2" />
			</AlignableWrapPanel.LayoutTransform>
			<Image Width="16" Margin="4" Source="{Binding IconSource, Converter={StaticResource NullToImageConverter}}" Stretch="Uniform" />
			<TextBlock VerticalAlignment="Center" Text="{Binding Title}" Visibility="{Binding ProcedureTitle, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=1}" TextAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" />
			<TextBlock VerticalAlignment="Center" Text="{Binding ProcedureTitle}" TextAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" />
		</AlignableWrapPanel>
	</Border>
</UserControl>
