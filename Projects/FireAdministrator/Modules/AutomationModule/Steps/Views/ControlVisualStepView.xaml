<UserControl x:Class="AutomationModule.Views.ControlVisualStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel>
		<StackPanel Margin="2" Orientation="Horizontal">
			<Label Content="Макет: " VerticalAlignment="Top" />
			<ComboBox ItemsSource="{Binding Layouts}" SelectedItem="{Binding SelectedLayout}" VerticalAlignment="Top">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
		</StackPanel>
	</StackPanel>
</UserControl>
