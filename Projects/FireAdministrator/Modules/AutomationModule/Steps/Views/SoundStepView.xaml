<UserControl x:Class="AutomationModule.Views.SoundStepView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="500" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<StackPanel Orientation="Vertical">
			<StackPanel Grid.Column="0" Margin="2" Orientation="Horizontal">
				<Label VerticalAlignment="Top" Content="Звук: " />
				<ComboBox VerticalAlignment="Top" ItemsSource="{Binding Sounds}" SelectedItem="{Binding SelectedSound}">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<Label Margin="2, 2, 0, 2" Content="Всем клиентам" />
				<CheckBox IsChecked="{Binding ForAllClients}" VerticalAlignment="Center"/>
			</StackPanel>
		</StackPanel>
		<Grid Grid.Column="1" Margin="2" DataContext="{Binding ProcedureLayoutCollectionViewModel}">
			<DataGrid ItemsSource="{Binding LayoutItems}">
				<DataGrid.Columns>
					<DataGridTemplateColumn Width="*" Header="Наименование макета">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Width="16" Margin="1 0 0 0" VerticalAlignment="Center" Source="/Controls;component/Images/BLayouts.png" />
									<TextBlock Text="{Binding Layout.Caption}" />
								</StackPanel>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn Width="Auto" Header="Использовать">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
				</DataGrid.Columns>
			</DataGrid>
		</Grid>
	</Grid>
</UserControl>