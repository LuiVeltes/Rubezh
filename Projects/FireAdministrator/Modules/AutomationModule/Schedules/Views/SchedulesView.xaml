<UserControl x:Class="AutomationModule.Views.SchedulesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" MinHeight="200" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="150" />
		</Grid.RowDefinitions>

		<DataGrid ItemsSource="{Binding Schedules}" SelectedItem="{Binding SelectedSchedule}" IsReadOnly="False">
			<DataGrid.Columns>
				<DataGridTemplateColumn Header="Название" Width="1*">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<Image Source="/Controls;component/Images/Calendar.png" Width="16" Margin="2 0 0 0" />
								<TextBlock Text="{Binding Name}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2 0" />
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>

		<GridSplitter Grid.Row="1" Height="5" Background="Transparent" />

		<Border Grid.Row="2" Margin="0, 5, 0, 0" Background="{DynamicResource BackgroundBrush}" CornerRadius="5,0,0,5" DataContext="{Binding SelectedSchedule}">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Grid Grid.Column="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
						<Label Content="Год"/>
						<ComboBox ItemsSource="{Binding Years}" SelectedItem="{Binding SelectedYear, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="2">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ., Converter={StaticResource DateToStringConverter}}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
						<Label Content="Месяц"/>
						<ComboBox ItemsSource="{Binding Months}" SelectedItem="{Binding SelectedMonth, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="2">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ., Converter={StaticResource DateToStringConverter}}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="0">
						<Label Content="День"/>
						<ComboBox ItemsSource="{Binding Days}" SelectedItem="{Binding SelectedDay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="2">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ., Converter={StaticResource DateToStringConverter}}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1">
						<Label Content="Час"/>
						<ComboBox ItemsSource="{Binding Hours}" SelectedItem="{Binding SelectedHour, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="2">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ., Converter={StaticResource DateToStringConverter}}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
						<Label Content="Минута"/>
						<ComboBox ItemsSource="{Binding Minutes}" SelectedItem="{Binding SelectedMinute, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="2">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ., Converter={StaticResource DateToStringConverter}}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="1">
						<Label Content="Секунда"/>
						<ComboBox ItemsSource="{Binding Seconds}" SelectedItem="{Binding SelectedSecond, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="2">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ., Converter={StaticResource DateToStringConverter}}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>
					<StackPanel Orientation="Vertical" Grid.Column="3" Grid.Row="0">
						<Label Content="День недели"/>
						<ComboBox ItemsSource="{Binding DaysOfWeek}" SelectedItem="{Binding SelectedDayOfWeek, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="2">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ., Converter={StaticResource DayOfWeekToStringConverter}}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>
				</Grid>
			</Grid>
		</Border>
	</Grid>
</UserControl>
