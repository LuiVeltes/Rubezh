<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:Views="clr-namespace:AutomationModule.Views"
					xmlns:ViewModels="clr-namespace:AutomationModule.ViewModels" >

	<DataTemplate DataType="{x:Type ViewModels:ProceduresViewModel}">
		<Views:ProceduresView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:ProceduresMenuViewModel}">
		<Views:ProceduresMenuView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:ProcedureDetailsViewModel}">
		<Views:ProcedureDetailsView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:StepTypeSelectationViewModel}">
		<Views:StepTypeSelectationView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:VariableDetailsViewModel}">
		<Views:VariableDetailsView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:FilterSelectionViewModel}">
		<Views:FilterSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:DeviceSelectionViewModel}">
		<Views:DeviceSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:ZoneSelectionViewModel}">
		<Views:ZoneSelectionView />
	</DataTemplate>
	
	<DataTemplate x:Key="soundsTemplate">
		<Views:SoundStepView />
	</DataTemplate>

	<DataTemplate x:Key="journalTemplate">
		<Views:JournalStepView />
	</DataTemplate>

	<DataTemplate x:Key="findObjectTemplate">
		<Views:FindObjectStepView />
	</DataTemplate>
	
	<DataTemplate x:Key="arithmeticTemplate">
		<Views:ArithmeticStepView />
	</DataTemplate>

	<DataTemplate x:Key="conditionTemplate">
		<Views:ConditionStepView />
	</DataTemplate>

	<DataTemplate x:Key="foreachTemplate">
		<Views:ForeachStepView />
	</DataTemplate>

	<DataTemplate x:Key="pauseTemplate">
		<Views:PauseStepView />
	</DataTemplate>

	<DataTemplate x:Key="procedureSelectionTemplate">
		<Views:ProcedureSelectionStepView />
	</DataTemplate>

	<DataTemplate x:Key="exitTemplate">
		<Views:ExitStepView />
	</DataTemplate>

	<DataTemplate x:Key="personInspectionTemplate">
		<Views:PersonInspectionStepView />
	</DataTemplate>

	<DataTemplate x:Key="setGlobalValueTemplate">
		<Views:SetGlobalValueStepView />
	</DataTemplate>

	<DataTemplate x:Key="incrementGlobalValueTemplate">
		<Views:IncrementGlobalValueStepView />
	</DataTemplate>

	<DataTemplate x:Key="controlGKDeviceTemplate">
		<Views:ControlGKDeviceStepView />
	</DataTemplate>

	<DataTemplate x:Key="controlGKFireZoneTemplate">
		<Views:ControlGKFireZoneStepView />
	</DataTemplate>

	<ViewModels:StepTypeTemplateSelector
		SoundsTemplate="{StaticResource soundsTemplate}"
		JournalTemplate="{StaticResource journalTemplate}"
		ArithmeticTemplate="{StaticResource arithmeticTemplate}"
		ConditionTemplate="{StaticResource conditionTemplate}"
		FindObjectTemplate="{StaticResource findObjectTemplate}"
		ForeachTemplate="{StaticResource foreachTemplate}"
		PauseTemplate="{StaticResource pauseTemplate}"
		ProcedureSelectionTemplate="{StaticResource procedureSelectionTemplate}"
		ExitTemplate="{StaticResource exitTemplate}"
		PersonInspectionTemplate="{StaticResource personInspectionTemplate}"
		SetGlobalValueTemplate="{StaticResource setGlobalValueTemplate}"
		IncrementGlobalValueTemplate="{StaticResource incrementGlobalValueTemplate}"
		ControlGKDeviceTemplate="{StaticResource controlGKDeviceTemplate}"
		ControlGKFireZoneTemplate="{StaticResource controlGKFireZoneTemplate}"
		x:Key="stepTypeTemplateSelector" />

</ResourceDictionary>