					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:Views="clr-namespace:AutomationModule.Views"
					xmlns:ViewModels="clr-namespace:AutomationModule.ViewModels">

	<DataTemplate DataType="{x:Type ViewModels:ProceduresViewModel}">
		<Views:ProceduresView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:ProceduresMenuViewModel}">
		<Views:ProceduresMenuView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:VariablesMenuViewModel}">
		<Views:VariablesMenuView />
	</DataTemplate> 
	
	<DataTemplate DataType="{x:Type ViewModels:ProcedureDetailsViewModel}">
		<Views:ProcedureDetailsView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:StepTypeSelectationViewModel}">
		<Views:StepTypeSelectationView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:VariableDetailsViewModel}">
		<Views:VariableDetailsView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:ArgumentDetailsViewModel}">
		<Views:ArgumentDetailsView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:StringDetailsViewModel}">
		<Views:StringDetailsView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:FilterSelectionViewModel}">
		<Views:FilterSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:DeviceSelectionViewModel}">
		<Views:DeviceSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:SKDDeviceSelectionViewModel}">
		<Views:SKDDeviceSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:ZoneSelectionViewModel}">
		<Views:ZoneSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:GuardZoneSelectionViewModel}">
		<Views:GuardZoneSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:SKDZoneSelectionViewModel}">
		<Views:SKDZoneSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:CameraSelectionViewModel}">
		<Views:CameraSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:DirectionSelectionViewModel}">
		<Views:DirectionSelectionView />
	</DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:DoorSelectionViewModel}">
		<Views:DoorSelectionView />
	</DataTemplate>

	<DataTemplate x:Key="soundsTemplate">
		<Views:SoundStepView />
	</DataTemplate>

	<DataTemplate x:Key="sendMessageTemplate">
		<Views:ShowMessageStepView />
	</DataTemplate>

	<DataTemplate x:Key="journalTemplate">
		<Views:JournalStepView />
	</DataTemplate>

	<DataTemplate x:Key="findObjectTemplate">
