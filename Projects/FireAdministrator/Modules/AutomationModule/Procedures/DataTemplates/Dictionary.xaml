	<DataTemplate x:Key="sendEmailTemplate">
		<Views:SendEmailStepView />
	</DataTemplate>

	<DataTemplate x:Key="runProgrammTemplate">
		<Views:RunProgrammStepView />
	</DataTemplate>

	<DataTemplate x:Key="randomTemplate">
		<Views:RandomStepView />
	</DataTemplate>

	<DataTemplate x:Key="changeListTemplate">
		<Views:ChangeListStepView />
	</DataTemplate>

	<DataTemplate x:Key="checkPermissionTemplate">
		<Views:CheckPermissionStepView />
	</DataTemplate>

	<DataTemplate x:Key="getListCountTemplate">
		<Views:GetListCountStepView />
	</DataTemplate>

	<DataTemplate x:Key="getListItemTemplate">
		<Views:GetListItemStepView />
	</DataTemplate>

	<ViewModels:StepTypeTemplateSelector
		SoundsTemplate="{StaticResource soundsTemplate}"
		ShowMessageTemplate ="{StaticResource sendMessageTemplate}"
		JournalTemplate="{StaticResource journalTemplate}"
		ArithmeticTemplate="{StaticResource arithmeticTemplate}"
		ConditionTemplate="{StaticResource conditionTemplate}"
		FindObjectTemplate="{StaticResource findObjectTemplate}"
		ForeachTemplate="{StaticResource foreachTemplate}"
		ForTemplate="{StaticResource forTemplate}"
		PauseTemplate="{StaticResource pauseTemplate}"
		ProcedureSelectionTemplate="{StaticResource procedureSelectionTemplate}"
		ExitTemplate="{StaticResource exitTemplate}"
		SetValueTemplate="{StaticResource setValueTemplate}"
		IncrementValueTemplate="{StaticResource incrementGlobalValueTemplate}"
		ControlGKDeviceTemplate="{StaticResource controlGKDeviceTemplate}"
		ControlSKDDeviceTemplate="{StaticResource controlSKDDeviceTemplate}"
		ControlGKFireZoneTemplate="{StaticResource controlGKFireZoneTemplate}"
		ControlGKGuardZoneTemplate="{StaticResource controlGKGuardZoneTemplate}"
		ControlSKDZoneTemplate="{StaticResource controlSKDZoneTemplate}"
		ControlCameraTemplate="{StaticResource controlCameraTemplate}"
		ControlDirectionTemplate="{StaticResource controlDirectionTemplate}"
		ControlDoorTemplate="{StaticResource controlDoorTemplate}"
		GetObjectPropertyTemplate ="{StaticResource getObjectPropertyTemplate}"
		SendEmailTemplate="{StaticResource sendEmailTemplate}"
		RunProgrammTemplate="{StaticResource runProgrammTemplate}"
		RandomTemplate="{StaticResource randomTemplate}"
		ChangeListTemplate="{StaticResource changeListTemplate}"
		CheckPermissionTemplate="{StaticResource checkPermissionTemplate}"
		GetListCountTemplate="{StaticResource getListCountTemplate}"
		GetListItemTemplate="{StaticResource getListItemTemplate}"
