	<DataTemplate x:Key="forTemplate">
		<Views:ForStepView />
	</DataTemplate>

	<DataTemplate x:Key="pauseTemplate">
		<Views:PauseStepView />
	</DataTemplate>

	<DataTemplate x:Key="procedureSelectionTemplate">
		<Views:ProcedureSelectionStepView />
	</DataTemplate>

	<DataTemplate x:Key="exitTemplate">
		<Views:ExitStepView />
	</DataTemplate>

	<DataTemplate x:Key="setValueTemplate">
		<Views:SetValueStepView />
	</DataTemplate>

	<DataTemplate x:Key="incrementGlobalValueTemplate">
		<Views:IncrementValueStepView />
	</DataTemplate>

	<DataTemplate x:Key="controlGKDeviceTemplate">
		<Views:ControlGKDeviceStepView />
	</DataTemplate>

	<DataTemplate x:Key="controlSKDDeviceTemplate">
		<Views:ControlSKDDeviceStepView />
	</DataTemplate>

	<DataTemplate x:Key="controlGKFireZoneTemplate">
		<Views:ControlGKFireZoneStepView />
	</DataTemplate>

	<DataTemplate x:Key="controlGKGuardZoneTemplate">
		<Views:ControlGKGuardZoneStepView />
	</DataTemplate>

	<DataTemplate x:Key="controlSKDZoneTemplate">
		<Views:ControlSKDZoneStepView />
	</DataTemplate>

	<DataTemplate x:Key="controlCameraTemplate">
