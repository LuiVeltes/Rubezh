<UserControl x:Class="AutomationModule.Views.ProcedureStepsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="400" MinHeight="400">

	<DataGrid ItemsSource="{Binding ProcedureSteps}" SelectedItem="{Binding SelectedProcedureStep}">
		<DataGrid.Columns>
			<DataGridTemplateColumn Header="Название" Width="*">
				<DataGridTemplateColumn.CellTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding ProcedureStepType, Converter={StaticResource ProcedureStepTypeToStringConverter}}" />
					</DataTemplate>
				</DataGridTemplateColumn.CellTemplate>
			</DataGridTemplateColumn>
		</DataGrid.Columns>
	</DataGrid>
</UserControl>