<UserControl x:Class="AutomationModule.Views.SKDZoneSelectionView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="400" MinHeight="400">
	<DataGrid ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}" SelectionMode="Single" CanUserSortColumns="True">
		<DataGrid.Columns>
			<DataGridTextColumn Header="Наименование" Binding="{Binding SKDZone.Name}" />
			<DataGridTextColumn Header="Примечание" Binding="{Binding SKDZone.Description}" Width="*" />
		</DataGrid.Columns>
	</DataGrid>
</UserControl>
