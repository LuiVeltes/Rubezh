<UserControl x:Class="AutomationModule.Views.ConditionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <ToolBarButton Command="{Binding AddStepCommand}" ToolTip="Добавить" ImageSource="/Controls;component/Images/Add.png" />
            <ToolBarButton Command="{Binding DeleteCommand}" ToolTip="Удалить" ImageSource="/Controls;component/Images/Delete.png" />

        </StackPanel>
        <Grid Grid.Row="1">
            <TextBlock Text="Условия" Foreground="White" Margin="2" />
        </Grid>
    </Grid>
</UserControl>