<UserControl x:Class="AutomationModule.Views.ArithmeticStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:converters="clr-namespace:AutomationModule.Converters"
			 xmlns:automation="clr-namespace:FiresecAPI.Automation;assembly=FiresecAPI"
			 xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended">
	<UserControl.Resources>
		<converters:ValueTypeToStringConverter x:Key="ValueTypeToStringConverter" />
		<converters:ValueTypeToVisibilityConverter x:Key="ValueTypeToVisibilityConverter" />
		<converters:ArithmeticTypeToStringConverter x:Key="ArithmeticTypeToStringConverter" />
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="Параметр1" HorizontalAlignment="Right" />
		<ComboBox Grid.Row="0" Grid.Column="1" DataContext="{Binding Variable1}" ItemsSource="{Binding ValueTypes}" Margin="2"
				  SelectedItem="{Binding SelectedValueType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource ValueTypeToStringConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="0" Grid.Column="2" DataContext="{Binding Variable1}" ItemsSource="{Binding GlobalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedGlobalVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedValueType, Converter={StaticResource ValueTypeToVisibilityConverter},
			ConverterParameter={x:Static automation:ValueType.IsGlobalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="0" Grid.Column="2" DataContext="{Binding Variable1}" ItemsSource="{Binding Variables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedValueType, Converter={StaticResource ValueTypeToVisibilityConverter},
			ConverterParameter={x:Static automation:ValueType.IsLocalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<extToolkit:IntegerUpDown  Grid.Row="0" Grid.Column="2" DataContext="{Binding Variable1}" Value="{Binding Value}" Margin="2"
				Visibility="{Binding Path=SelectedValueType, Converter={StaticResource ValueTypeToVisibilityConverter},
			ConverterParameter={x:Static automation:ValueType.IsValue}}" />

		<Label Grid.Row="1" Grid.Column="0" Content="Параметр2" HorizontalAlignment="Right" />
		<ComboBox Grid.Row="1" Grid.Column="1" DataContext="{Binding Variable2}" ItemsSource="{Binding ValueTypes}" Margin="2"
				  SelectedItem="{Binding SelectedValueType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource ValueTypeToStringConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="1" Grid.Column="2" DataContext="{Binding Variable2}" ItemsSource="{Binding GlobalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedGlobalVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedValueType, Converter={StaticResource ValueTypeToVisibilityConverter},
			ConverterParameter={x:Static automation:ValueType.IsGlobalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="1" Grid.Column="2" DataContext="{Binding Variable2}" ItemsSource="{Binding Variables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedValueType, Converter={StaticResource ValueTypeToVisibilityConverter},
			ConverterParameter={x:Static automation:ValueType.IsLocalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<extToolkit:IntegerUpDown  Grid.Row="1" Grid.Column="2" DataContext="{Binding Variable2}" Value="{Binding Value}" Margin="2"
				Visibility="{Binding Path=SelectedValueType, Converter={StaticResource ValueTypeToVisibilityConverter},
			ConverterParameter={x:Static automation:ValueType.IsValue}}" />

		<Label Grid.Row="2" Grid.Column="0" Content="Тип операции" HorizontalAlignment="Right" />
		<ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding ArithmeticTypes}" Margin="2" 
				  SelectedItem="{Binding SelectedArithmeticType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource ArithmeticTypeToStringConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<Label Grid.Row="3" Grid.Column="0" Content="Результат" HorizontalAlignment="Right" />
		<ComboBox Grid.Row="3" Grid.Column="1" DataContext="{Binding Result}" ItemsSource="{Binding ValueTypes}" Margin="2"
				  SelectedItem="{Binding SelectedValueType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource ValueTypeToStringConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="3" Grid.Column="2" DataContext="{Binding Result}" ItemsSource="{Binding GlobalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedGlobalVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedValueType, Converter={StaticResource ValueTypeToVisibilityConverter},
			ConverterParameter={x:Static automation:ValueType.IsGlobalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="3" Grid.Column="2" DataContext="{Binding Result}" ItemsSource="{Binding Variables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedValueType, Converter={StaticResource ValueTypeToVisibilityConverter},
			ConverterParameter={x:Static automation:ValueType.IsLocalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
	</Grid>
</UserControl>