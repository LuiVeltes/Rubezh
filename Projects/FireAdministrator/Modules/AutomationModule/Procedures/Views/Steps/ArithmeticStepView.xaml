<UserControl x:Class="AutomationModule.Views.ArithmeticStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:automation="clr-namespace:FiresecAPI.Automation;assembly=FiresecAPI"
			 xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="Тип значений" HorizontalAlignment="Right" />
		<ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding ArithmeticValueTypes}" Margin="2" 
				  SelectedItem="{Binding SelectedArithmeticValueType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<Label Grid.Row="1" Grid.Column="0" Content="Параметр1" HorizontalAlignment="Right" />
		<ComboBox Grid.Row="1" Grid.Column="1" DataContext="{Binding Variable1}" ItemsSource="{Binding VariableTypes}" Margin="2"
				  SelectedItem="{Binding SelectedVariableType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="1" Grid.Column="2" DataContext="{Binding Variable1}" ItemsSource="{Binding GlobalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsGlobalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="1" Grid.Column="2" DataContext="{Binding Variable1}" ItemsSource="{Binding LocalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsLocalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<StackPanel Grid.Row="1" Grid.Column="2" Margin="2" Visibility="{Binding Path=Variable1.SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsValue}}">			
			<extToolkit:IntegerUpDown Value="{Binding Variable1.IntValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=SelectedArithmeticValueType, Converter={StaticResource EnumToVisibilityConverter},
				ConverterParameter={x:Static automation:ValueType.Integer}}" Height="25" />
			<CheckBox IsChecked="{Binding Variable1.BoolValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=SelectedArithmeticValueType, Converter={StaticResource EnumToVisibilityConverter}, 
						ConverterParameter={x:Static automation:ValueType.Boolean}}" Margin="0,7,0,0" />
			<TextBox Text="{Binding Variable1.StringValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=SelectedArithmeticValueType, Converter={StaticResource EnumToVisibilityConverter},
						ConverterParameter={x:Static automation:ValueType.String}}" Height="25" VerticalContentAlignment="Center" />
			<extToolkit:DateTimePicker Value = "{Binding Variable1.DateTimeValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=SelectedArithmeticValueType, Converter={StaticResource EnumToVisibilityConverter},
						ConverterParameter={x:Static automation:ValueType.DateTime}}" Height="25" />
		</StackPanel>

		<Label Grid.Row="2" Grid.Column="0" Content="Параметр2" HorizontalAlignment="Right" />
		<ComboBox Grid.Row="2" Grid.Column="1" DataContext="{Binding Variable2}" ItemsSource="{Binding VariableTypes}" Margin="2"
				  SelectedItem="{Binding SelectedVariableType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="2" Grid.Column="2" DataContext="{Binding Variable2}" ItemsSource="{Binding GlobalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsGlobalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="2" Grid.Column="2" DataContext="{Binding Variable2}" ItemsSource="{Binding LocalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsLocalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		
		<StackPanel Grid.Row="2" Grid.Column="2" Margin="2" Visibility="{Binding Path=Variable2.SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsValue}}">
			<extToolkit:IntegerUpDown Value="{Binding Variable2.IntValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=SelectedArithmeticValueType, Converter={StaticResource EnumToVisibilityConverter},
				ConverterParameter={x:Static automation:ValueType.Integer}}" Height="25" />
			<CheckBox IsChecked="{Binding Variable2.BoolValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=SelectedArithmeticValueType, Converter={StaticResource EnumToVisibilityConverter}, 
						ConverterParameter={x:Static automation:ValueType.Boolean}}" Margin="0,7,0,0" />
			<TextBox Text="{Binding Variable2.StringValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=SelectedArithmeticValueType, Converter={StaticResource EnumToVisibilityConverter},
						ConverterParameter={x:Static automation:ValueType.String}}" Height="25" VerticalContentAlignment="Center" />
			<extToolkit:IntegerUpDown Value="{Binding Variable2.IntValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=SelectedArithmeticValueType, Converter={StaticResource EnumToVisibilityConverter},
				ConverterParameter={x:Static automation:ValueType.DateTime}}" Height="25" />
		</StackPanel>

		<ComboBox Grid.Row="2" Grid.Column="3" ItemsSource="{Binding TimeTypes}" Margin="2" 
				  SelectedItem="{Binding SelectedTimeType, UpdateSourceTrigger=PropertyChanged}" 
				  Visibility="{Binding Path=SelectedArithmeticValueType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:ValueType.DateTime}}" Width="120" HorizontalAlignment="Left">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<Label Grid.Row="3" Grid.Column="0" Content="Тип операции" HorizontalAlignment="Right" />
		<ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding ArithmeticOperationTypes}" Margin="2" 
				  SelectedItem="{Binding SelectedArithmeticOperationType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<Label Grid.Row="4" Grid.Column="0" Content="Результат" HorizontalAlignment="Right" />
		<ComboBox Grid.Row="4" Grid.Column="1" DataContext="{Binding Result}" ItemsSource="{Binding VariableTypes}" Margin="2"
				  SelectedItem="{Binding SelectedVariableType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="4" Grid.Column="2" DataContext="{Binding Result}" ItemsSource="{Binding GlobalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsGlobalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox Grid.Row="4" Grid.Column="2" DataContext="{Binding Result}" ItemsSource="{Binding LocalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsLocalVariable}}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
	</Grid>
</UserControl>