<UserControl x:Class="AutomationModule.Views.ForeachStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<StackPanel VerticalAlignment="Top" Orientation="Horizontal" Margin="2" >
			<StackPanel Orientation="Horizontal">
				<Label Content = "Список:" Margin="2"/>
				<ComboBox ItemsSource="{Binding ListVariables}" SelectedItem="{Binding SelectedListVariable}" Margin="2">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Visibility="{Binding SelectedListVariable, Converter = {StaticResource NullToVisibilityConverter}}" >
				<Label Content = "Текущий элемент списка:" Margin="2"/>
				<ComboBox ItemsSource="{Binding ItemVariables}" SelectedItem="{Binding SelectedItemVariable}" Margin="2">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
