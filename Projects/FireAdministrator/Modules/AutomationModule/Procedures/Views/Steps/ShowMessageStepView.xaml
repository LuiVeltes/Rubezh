<UserControl x:Class="AutomationModule.Views.ShowMessageStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:automation="clr-namespace:FiresecAPI.Automation;assembly=FiresecAPI"
			 xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended" >
	<DockPanel VerticalAlignment="Top" >
		<ComboBox ItemsSource="{Binding ValueTypes}" Margin="2" VerticalAlignment="Top" SelectedItem="{Binding ValueType, UpdateSourceTrigger=PropertyChanged}" >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox DataContext="{Binding Variable1}" ItemsSource="{Binding VariableTypes}" Margin="2"
								  SelectedItem="{Binding SelectedVariableType, UpdateSourceTrigger=PropertyChanged}" MinWidth="163" MaxWidth="163">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox DataContext="{Binding Variable1}" ItemsSource="{Binding GlobalVariables}" Margin="2"
								  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
								  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
							ConverterParameter={x:Static automation:VariableType.IsGlobalVariable}}" MinWidth="163" MaxWidth="163">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox DataContext="{Binding Variable1}" ItemsSource="{Binding LocalVariables}" Margin="2"
								  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
								  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
							ConverterParameter={x:Static automation:VariableType.IsLocalVariable}}" MinWidth="163" MaxWidth="163">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<StackPanel Margin="2" Visibility="{Binding Path=Variable1.SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
								ConverterParameter={x:Static automation:VariableType.IsValue}}" HorizontalAlignment="Left" Width="200" >
			<extToolkit:IntegerUpDown Value="{Binding Variable1.IntValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=ValueType, Converter={StaticResource EnumToVisibilityConverter},
									ConverterParameter={x:Static automation:ValueType.Integer}}" Height="25" VerticalAlignment="Center" />
			<CheckBox IsChecked="{Binding Variable1.BoolValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=ValueType, Converter={StaticResource EnumToVisibilityConverter}, 
									ConverterParameter={x:Static automation:ValueType.Boolean}}" Margin="0,7,0,0" VerticalAlignment="Center" />
			<TextBox Text="{Binding Variable1.StringValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=ValueType, Converter={StaticResource EnumToVisibilityConverter},
									ConverterParameter={x:Static automation:ValueType.String}}" Height="25" VerticalAlignment="Center" VerticalContentAlignment="Center" />
			<extToolkit:DateTimePicker Value="{Binding Variable1.DateTimeValue, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=ValueType, Converter={StaticResource EnumToVisibilityConverter},
									ConverterParameter={x:Static automation:ValueType.DateTime}}" Height="25" VerticalAlignment="Center" />
		</StackPanel>
	</DockPanel>
</UserControl>