<UserControl x:Class="AutomationModule.Views.ControlDoorStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<StackPanel>
			<StackPanel Orientation="Horizontal">
				<Label Content="Точка доступа: " VerticalAlignment="Top" Margin="2"/>
				<Image Width="16" Height="16" Margin="0, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/Controls;component/Images/Door.png"
					   Visibility="{Binding Path= SelectedDoor, Converter={StaticResource NullToVisibilityConverter}}"/>
				<TextBlock Margin="0,7,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >
				<Hyperlink Command="{Binding SelectDoorCommand}" Style="{StaticResource HyperlinkStyle}" >
					<TextBlock Text="{Binding SelectedDoor.Door.Name}" Visibility="{Binding Path= SelectedDoor, Converter={StaticResource NullToVisibilityConverter}}"/>
					<TextBlock Text="Нажмите для выбора точки доступа" >
						<TextBlock.Style>
							<Style>
								<Setter Property="TextBlock.Visibility" Value="Collapsed" />
								<Style.Triggers>
									<DataTrigger Binding="{Binding SelectedDoor}" Value="{x:Null}">
										<Setter Property="TextBlock.Visibility" Value="Visible" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</TextBlock.Style>
					</TextBlock>
				</Hyperlink>
			</TextBlock>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<Label Content="Команда:"></Label>
				<ComboBox ItemsSource="{Binding Commands}" SelectedItem="{Binding SelectedCommand, UpdateSourceTrigger=PropertyChanged}" Margin="30,0,0,0" >
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>

