<UserControl x:Class="AutomationModule.Views.ProcedureSelectionStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:views="clr-namespace:AutomationModule.Views">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>
		<ComboBox Grid.Column="0" VerticalAlignment="Top" ItemsSource="{Binding ScheduleProcedures}" SelectedItem="{Binding SelectedScheduleProcedure}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text ="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<views:ArgumentsView Grid.Column="1" DataContext="{Binding SelectedScheduleProcedure}" Visibility="{Binding ., Converter={StaticResource NullToVisibilityConverter}}" />
	</Grid>
</UserControl>