<UserControl x:Class="AutomationModule.Views.ControlGKDeviceStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:automation="clr-namespace:FiresecAPI.Automation;assembly=FiresecAPI" >
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<Label Content="Устройство: " VerticalAlignment="Top" Margin="2"/>
			<ComboBox DataContext="{Binding Variable1}" ItemsSource="{Binding VariableTypes}" Margin="2"
				  SelectedItem="{Binding SelectedVariableType, UpdateSourceTrigger=PropertyChanged}" Width="165" >
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<ComboBox Grid.Row="1" Grid.Column="2" DataContext="{Binding Variable1}" ItemsSource="{Binding GlobalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsGlobalVariable}}" >
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<ComboBox DataContext="{Binding Variable1}" ItemsSource="{Binding LocalVariables}" Margin="2"
				  SelectedItem="{Binding SelectedVariable, UpdateSourceTrigger=PropertyChanged}"
				  Visibility="{Binding Path=SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsLocalVariable}}" >
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>

			<StackPanel Margin="2" Orientation="Horizontal" Visibility="{Binding Path=Variable1.SelectedVariableType, Converter={StaticResource EnumToVisibilityConverter},
			ConverterParameter={x:Static automation:VariableType.IsValue}}">
				<Image Width="16" Height="16" Margin="0, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Source="{Binding SelectedDevice.Device.Driver.ImageSource}" 
					   Visibility="{Binding Path= SelectedDevice, Converter={StaticResource NullToVisibilityConverter}}"/>
				<TextBlock Margin="0,7,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >
				<Hyperlink Command="{Binding SelectDeviceCommand}" Style="{StaticResource HyperlinkStyle}" >
					<TextBlock Text="{Binding SelectedDevice.Device.PresentationName}" Visibility="{Binding Path= SelectedDevice, Converter={StaticResource NullToVisibilityConverter}}"/>
					<TextBlock Text="Нажмите для выбора устройства" >
						<TextBlock.Style>
							<Style>
								<Setter Property="TextBlock.Visibility" Value="Collapsed" />
								<Style.Triggers>
									<DataTrigger Binding="{Binding SelectedDevice}" Value="{x:Null}">
										<Setter Property="TextBlock.Visibility" Value="Visible" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</TextBlock.Style>
					</TextBlock>
				</Hyperlink>
			</TextBlock>
			</StackPanel>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Margin="2, 4">
			<Label Content="Команда:" />
			<ComboBox ItemsSource="{Binding Commands}" SelectedItem="{Binding SelectedCommand, UpdateSourceTrigger=PropertyChanged}" Margin="22,0,0,0" >
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
		</StackPanel>
	</StackPanel>
</UserControl>