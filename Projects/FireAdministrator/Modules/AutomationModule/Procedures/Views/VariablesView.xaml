<UserControl x:Class="AutomationModule.Views.VariablesView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:automation="clr-namespace:FiresecAPI.Automation;assembly=FiresecAPI">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<ToolBarButton Command="{Binding AddCommand}" ToolTip="Добавить" ImageSource="/Controls;component/Images/Add.png" />
			<ToolBarButton Command="{Binding EditCommand}" ToolTip="Редактировать" ImageSource="/Controls;component/Images/Edit.png" />
			<ToolBarButton Command="{Binding DeleteCommand}" ToolTip="Удалить" ImageSource="/Controls;component/Images/Delete.png" />
		</StackPanel>
		<DataGrid Grid.Row="1" ItemsSource="{Binding Variables}" SelectedItem="{Binding SelectedVariable}" IsReadOnly="False">
			<DataGrid.Columns>
				<DataGridTemplateColumn Header="Имя" Width="*">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<Image Source="/Controls;component/Images/GlobalVariable.png" Width="16" Margin="2 0 0 0" />
								<TextBlock Text="{Binding Name}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2 0" />
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="Тип" Width="*">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="{Binding ValueType, Converter={StaticResource EnumToDescriptionConverter}}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2 0" />
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="Значение" Width="*">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel>
								<StackPanel Visibility="{Binding Path=IsList, Converter={StaticResource InversedBoolToVisibilityConverter}}" >
									<TextBlock Text="{Binding DefaultBoolValue, UpdateSourceTrigger=PropertyChanged}" Margin="2" 
									 Visibility="{Binding Path=ValueType, Converter={StaticResource EnumToVisibilityConverter}, 
									ConverterParameter={x:Static automation:ValueType.Boolean}}" />
									<TextBlock Text="{Binding DefaultDateTimeValue, UpdateSourceTrigger=PropertyChanged}" Margin="2"
										 Visibility="{Binding Path=ValueType, Converter={StaticResource EnumToVisibilityConverter}, 
									ConverterParameter={x:Static automation:ValueType.DateTime}}" />
									<TextBlock Text="{Binding DefaultIntValue, UpdateSourceTrigger=PropertyChanged}" Margin="2" 
										 Visibility="{Binding Path=ValueType, Converter={StaticResource EnumToVisibilityConverter}, 
									ConverterParameter={x:Static automation:ValueType.Integer}}" />
									<TextBlock Text="{Binding ObjectType, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EnumToDescriptionConverter}}" Margin="2"
										 Visibility="{Binding Path=ValueType, Converter={StaticResource EnumToVisibilityConverter},
									ConverterParameter={x:Static automation:ValueType.Object}}" />
									<TextBlock Text="{Binding DefaultStringValue, UpdateSourceTrigger=PropertyChanged}" Margin="2" 
										 Visibility="{Binding Path=ValueType, Converter={StaticResource EnumToVisibilityConverter}, 
									ConverterParameter={x:Static automation:ValueType.String}}" />
								</StackPanel>

								<StackPanel Visibility="{Binding Path=IsList, Converter={StaticResource BoolToVisibilityConverter}}" >
									<TextBlock Text="Список" Margin="2" />
								</StackPanel>
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="Список" Width="60" MinWidth="60" MaxWidth="60">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<CheckBox IsChecked="{Binding IsList}" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2 0" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>