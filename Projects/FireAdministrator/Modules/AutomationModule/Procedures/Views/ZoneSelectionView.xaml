<UserControl x:Class="AutomationModule.Views.ZoneSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="400" MinHeight="400">
	<DataGrid ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}" SelectionMode="Single" CanUserSortColumns="True">
		<DataGrid.Columns>
			<DataGridTextColumn Header="№" Binding="{Binding Zone.No}" Width="40" />
			<DataGridTextColumn Header="Наименование" Binding="{Binding Zone.Name}" />
			<DataGridTextColumn Header="Примечание" Binding="{Binding Zone.Description}" Width="*" />
		</DataGrid.Columns>
	</DataGrid>
</UserControl>
