<UserControl x:Class="SKDModule.Views.SlideWeekIntervalsMenuView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Controls;assembly=Controls">
	<StackPanel DataContext="{Binding Context}" Orientation="Horizontal">
		<Controls:ToolBarButton Command="{Binding EditCommand}" ImageSource="/Controls;component/Images/Edit.png" ToolTip="Редактировать (Ctrl+E)" />
		<Controls:ToolBarButton Command="{Binding ActivateCommand}" ImageSource="{Binding SelectedSlideWeekInterval.ActivateActionImage}">
			<Controls:ToolBarButton.ToolTip>
				<ToolTip Content="{Binding SelectedSlideWeekInterval.ActivateActionTitle}" ContentStringFormat="{}{0} (Ctrl+A)" />
			</Controls:ToolBarButton.ToolTip>
		</Controls:ToolBarButton>
		<Controls:ToolBarButton Command="{Binding CopyCommand}" ImageSource="/Controls;component/Images/Copy.png" ToolTip="Копировать (Ctrl+C)" />
		<Controls:ToolBarButton Command="{Binding PasteCommand}" ImageSource="/Controls;component/Images/Paste.png" ToolTip="Вставить (Ctrl+V)" />
	</StackPanel>
</UserControl>