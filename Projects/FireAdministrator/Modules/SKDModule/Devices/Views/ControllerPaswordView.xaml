<UserControl x:Class="SKDModule.Views.ControllerPaswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="300">
    <TabControl>
        <TabItem Header="Основные">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Считать направление" Command="{Binding GetDoorTypeCommand}" Width="150" Margin="2" />
                    <Button Content="Записать направление" Command="{Binding SetDoorTypeCommand}" Width="150" Margin="2" />
                </StackPanel>
                <ComboBox ItemsSource="{Binding AvailableDoorTypes}" SelectedItem="{Binding SelectedDoorType}" HorizontalAlignment="Right" Width="150" BorderThickness="1" Margin="2">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>