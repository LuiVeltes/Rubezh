<UserControl x:Class="SKDModule.Views.PasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="300" MinHeight="150">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль" Foreground="White" Width="100" Margin="2" />
                <TextBox Text="{Binding Password}" Width="100" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Считать" Command="{Binding GetPasswordCommand}" Width="100" Margin="2" />
                <Button Content="Записать" Command="{Binding SetPasswordCommand}" Width="100" Margin="2" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>