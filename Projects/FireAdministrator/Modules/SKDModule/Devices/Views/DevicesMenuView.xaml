<UserControl x:Class="SKDModule.Views.DevicesMenuView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Controls="clr-namespace:Controls;assembly=Controls">
	<StackPanel Orientation="Horizontal" DataContext="{Binding Context}">
		<Controls:ToolBarButton Command="{Binding AddCommand}" DataContext="{Binding SelectedDevice}" ToolTip="Добавить (Ctrl+N)" ImageSource="/Controls;component/Images/add.png" />
		<Controls:ToolBarButton Command="{Binding ShowPropertiesCommand}" DataContext="{Binding SelectedDevice}" ToolTip="Редактировать (Ctrl+E)" ImageSource="/Controls;component/Images/edit.png" />
		<Controls:ToolBarButton Command="{Binding RemoveCommand}" DataContext="{Binding SelectedDevice}" ToolTip="Удалить (Ctrl+Del)" ImageSource="/Controls;component/Images/delete.png" />
		<Menu Background="Transparent" VerticalAlignment="Center" DataContext="{Binding DeviceCommandsViewModel}" FontSize="12">
			<MenuItem>
				<MenuItem.Header>
					<Image Source="/Controls;component/Images/ArrowUpDown.png" Height="24" ToolTip="Устройство" />
				</MenuItem.Header>
				<IconedMenuItem Command="{Binding WriteConfigCommand}" ImageSource="/Controls;component/Images/BParametersWrite.png" Text="Записать конфигурацию" TotalHeight="32" />
				<IconedMenuItem Command="{Binding ShowInfoCommand}" ImageSource="/Controls;component/Images/BInformation.png" Text="Информация об устройстве" TotalHeight="32" />
				<IconedMenuItem Command="{Binding SynchroniseTimeCommand}" ImageSource="/Controls;component/Images/BWatch.png" Text="Синхронизация времени" TotalHeight="32" />
                <IconedMenuItem Command="{Binding ShowPasswordCommand}" ImageSource="/Controls;component/Images/BParametersSync.png" Text="Задание пароля" TotalHeight="32" />
				<IconedMenuItem Command="{Binding WriteAllIdentifiersCommand}" ImageSource="/Controls;component/Images/BParametersSync.png" Text="Запись всех идентификаторов" TotalHeight="32" />
			</MenuItem>
		</Menu>
	</StackPanel>
</UserControl>