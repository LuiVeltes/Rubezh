<UserControl x:Class="SKDModule.Views.OrganisationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls">
    <Grid>
        <Controls:XDataGrid ItemsSource="{Binding Organisations}" SelectedItem="{Binding SelectedOrganisation}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Width="1*" Binding="{Binding Organisation.Name}" />
                <DataGridTextColumn Header="Описание" Width="1*" Binding="{Binding Organisation.Description}" />
            </DataGrid.Columns>
        </Controls:XDataGrid>
    </Grid>
</UserControl>