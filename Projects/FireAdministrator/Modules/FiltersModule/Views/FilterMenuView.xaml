<UserControl x:Class="FiltersModule.Views.FilterMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ToolBar Background="Transparent" Height="50">
        <Button Command="{Binding AddCommand}" ToolTip="Добавить">
            <Image Source="/Controls;component/Images/Add.png" Height="32" />
        </Button>

        <Button Command="{Binding EditCommand}" ToolTip="Редактировать">
            <Image Source="/Controls;component/Images/Edit.png" Height="32" />
        </Button>

        <Button Command="{Binding RemoveCommand}" ToolTip="Удалить">
            <Image Source="/Controls;component/Images/Delete.png" Height="32" />
        </Button>
    </ToolBar>
</UserControl>