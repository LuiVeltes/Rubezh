<UserControl x:Class="SettingsModule.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <TextBlock Text="Настройки" FontWeight="Bold" Margin="2" />
            <Button Content="Драйверы" Command="{Binding ShowDriversCommand}" Width="100" Margin="2" />
            <Button Content="Сохранить конфигурацию в файл" Command="{Binding SaveConfigurationCommand}" Width="200" Margin="2" />
            <Button Content="Загрузить конфигурацию из файла" Command="{Binding LoadConfigurationCommand}" Width="200" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>
