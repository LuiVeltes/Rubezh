<UserControl x:Class="SettingsModule.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:SettingsModule.Views" xmlns:Converters="clr-namespace:SettingsModule.Converters" xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:Controls="clr-namespace:Controls;assembly=Controls">

    <UserControl.Resources>
        <Converters:ThemeConverter x:Key="ThemeConverter" />
    </UserControl.Resources>
    <TabControl>
        <TabItem Header="Конвертация">
            <Border CornerRadius="10" BorderThickness="0" Background="White" Margin="2">
                <StackPanel Margin="10">
                    <Button Content="Конвертировать конфигурацию из формата FireSec-1" Command="{Binding ConvertConfigurationCommand}" Width="400" Margin="2" />
                    <Button Content="Конвертировать журнал событий из формата FireSec-1" Command="{Binding ConvertJournalCommand}" Width="400" Margin="2" />
                </StackPanel>
            </Border>
        </TabItem>
        <TabItem Header="Выбор темы">
            <Border CornerRadius="10" BorderThickness="0" Margin="2" DataContext="{Binding ThemeContext}">
                <StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <ComboBox ItemsSource="{Binding Themes}" SelectedItem="{Binding SelectedTheme}" Width="200" HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ., Converter={StaticResource ThemeConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
        </TabItem>
        <TabItem Header="Дополнительные модули">
            <ListBox DataContext="{Binding ModuleContext}" ItemsSource="{Binding Modules}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Description}" IsChecked="{Binding IsEnabled}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </TabItem>
        <TabItem Header="Поддержка формата *.fsc2">
            <Border CornerRadius="10" BorderThickness="0" Background="White" Margin="2">
                <StackPanel Margin="10">
                    <Button Command="{Binding LoadFromFileOldCommand}" Width="300" Content="Считать конфигурацию из файла" ToolTip="Считать конфигурацию из файла" />
                    <Button Command="{Binding SaveToFileOldCommand}" Width="300" Content="Сохранить конфигурацию в файл" ToolTip="Сохранить конфигурацию в файл" />
                </StackPanel>
            </Border>
        </TabItem>
    </TabControl>
</UserControl>