<UserControl x:Class="SettingsModule.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:SettingsModule.Views">
    
    <TabControl>
        <TabItem Header="Конвертация">
            <Border CornerRadius="10" BorderThickness="0" Background="White" Margin="2">
                <StackPanel Margin="10">
                    <Button Content="Конвертировать конфигурацию из формата FireSec-1" Command="{Binding ConvertConfigurationCommand}" Width="400" Margin="2" />
                    <Button Content="Конвертировать журнал событий из формата FireSec-1" Command="{Binding ConvertJournalCommand}" Width="400" Margin="2" />
                </StackPanel>
            </Border>
        </TabItem>
        <TabItem Header="Отладка" Visibility="{Binding IsDebug, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border CornerRadius="10" BorderThickness="0" Background="White" Margin="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="10">
                        <Button Content="Драйверы" Command="{Binding ShowDriversCommand}" Width="300" Margin="2" Visibility="Visible" />
                        <Button Content="Тест 1" Command="{Binding Test1Command}" Width="300" Margin="2" Visibility="Visible" />
                        <Button Content="Тест 2" Command="{Binding Test2Command}" Width="300" Margin="2" Visibility="Visible" />
                    </StackPanel>
                    <ScrollViewer Grid.Row="1">
                        <TextBox Text="{Binding Text}" />
                    </ScrollViewer>
                </Grid>
            </Border>
        </TabItem>
        <TabItem Header="Дерево(Отладка)" Visibility="{Binding IsDebug, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border CornerRadius="10" BorderThickness="0" Background="White" Margin="2">
                <Views:DevicesTreeView />
            </Border>
        </TabItem>
    </TabControl>
</UserControl>