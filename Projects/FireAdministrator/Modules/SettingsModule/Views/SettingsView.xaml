<UserControl x:Class="SettingsModule.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:SettingsModule.Views" xmlns:Converters="clr-namespace:SettingsModule.Converters">

    <UserControl.Resources>
        <Converters:ThemeConverter x:Key="ThemeConverter" />
        <Converters:ThemeConverter x:Key="ModuleConverter" />
    </UserControl.Resources>
    <TabControl>
        <TabItem Header="Конвертация">
            <Border CornerRadius="10" BorderThickness="0" Background="White" Margin="2">
                <StackPanel Margin="10">
                    <Button Content="Конвертировать конфигурацию из формата FireSec-1" Command="{Binding ConvertConfigurationCommand}" Width="400" Margin="2" />
                    <Button Content="Конвертировать журнал событий из формата FireSec-1" Command="{Binding ConvertJournalCommand}" Width="400" Margin="2" />
                </StackPanel>
            </Border>
        </TabItem>
        <TabItem Header="Выбор темы">
            <Border CornerRadius="10" BorderThickness="0" Margin="2">
                <StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <ComboBox ItemsSource="{Binding Themes}" SelectedItem="{Binding SelectedTheme}" Width="200" HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ., Converter={StaticResource ThemeConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
        </TabItem>
        <TabItem Header="Дополнительные модули">
            <Border CornerRadius="10" BorderThickness="0" Background="White" Margin="2">
                <StackPanel Margin="10">
                    <Border CornerRadius="10" BorderThickness="0" Margin="2">
                        <!--<ListView Grid.Row="0" ItemsSource="{Binding Modules}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn>
                                        <CheckBox Margin="10,5">
                                            <TextBlock Text="{Binding ., Converter={StaticResource ModuleConverter}}" />
                                        </CheckBox>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>-->

                        <!--<ListBox ItemsSource="{Binding Modules}" SelectedItem="{Binding SelectedModule}" >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>-->

                    </Border>
                </StackPanel>
            </Border>
        </TabItem>
    </TabControl>
</UserControl>