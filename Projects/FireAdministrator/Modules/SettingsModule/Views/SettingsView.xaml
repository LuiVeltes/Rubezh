<UserControl x:Class="SettingsModule.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <Button Content="Драйверы" Command="{Binding ShowDriversCommand}" Width="300" Margin="2" Visibility="Visible" />
        <Button Content="Конвертировать конфигурацию из старого формата" Command="{Binding ConvertConfigurationCommand}" Width="400" Margin="2" />
        <Button Content="Конвертировать журнал событий из старого формата" Command="{Binding ConvertJournalCommand}" Width="400" Margin="2" />
    </StackPanel>
</UserControl>
