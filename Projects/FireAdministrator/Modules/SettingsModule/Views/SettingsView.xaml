<UserControl x:Class="SettingsModule.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <Button Content="Драйверы" Command="{Binding ShowDriversCommand}" Width="300" Margin="2" />
        <Button Content="Сохранить конфигурацию в файл" Command="{Binding SaveConfigurationCommand}" Width="300" Margin="2" />
        <Button Content="Загрузить конфигурацию из файла" Command="{Binding LoadConfigurationCommand}" Width="300" Margin="2" />
    </StackPanel>
</UserControl>
