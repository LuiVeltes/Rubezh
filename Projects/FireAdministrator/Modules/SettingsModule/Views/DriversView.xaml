<Window x:Class="SettingsModule.Views.DriversView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Controls;assembly=Controls"
        WindowState="Maximized" Height="800" Width="1100"
        Title="Список драйверов устройств">

    <Controls:ScrollDataGrid ItemsSource="{Binding Drivers}" AutoGenerateColumns="true" CanUserSortColumns="True" FrozenColumnCount="1" />
</Window>