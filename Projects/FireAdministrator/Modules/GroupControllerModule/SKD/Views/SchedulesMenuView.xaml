<UserControl x:Class="GKModule.Views.SchedulesMenuView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<StackPanel Orientation="Horizontal" DataContext="{Binding Context}">
		<ToolBarButton Command="{Binding AddCommand}" ToolTip="Добавить (Ctrl+N)" Background="{DynamicResource Add}"  />
		<ToolBarButton Command="{Binding EditCommand}" ToolTip="Редактировать (Ctrl+E)" Background="{DynamicResource Edit}"  />
		<ToolBarButton Command="{Binding DeleteCommand}" ToolTip="Удалить (Ctrl+Del)" Background="{DynamicResource Delete}"  />

		<StackPanel Orientation="Horizontal" DataContext="{Binding SelectedSchedule}">
			<ToolBarButton Command="{Binding WriteCommand}" ToolTip="Записать" Background="{DynamicResource ParametersWrite}"  />
		</StackPanel>
	</StackPanel>
</UserControl>