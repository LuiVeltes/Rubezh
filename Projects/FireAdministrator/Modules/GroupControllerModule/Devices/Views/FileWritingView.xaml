<UserControl x:Class="GKModule.Views.FileWritingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="350" MaxWidth="350" MinHeight="100" MaxHeight="100">
    <StackPanel>
        <TextBlock Text="Хотите ли Вы записать конфигурационный файл в ГК?" Foreground="White" FontSize="13"/>
        <StackPanel Margin ="0, 10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Запомнить выбор и больше не показывать это окно"/>
                <CheckBox IsChecked="{Binding IsDisabled}" Margin="0,6"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin ="120, 0, 0, 0">
            <Button Content="Да" Command ="{Binding YesCommand}" Width="100" Height="25" FontSize="20" Margin="5" />
            <Button Content="Нет" Command ="{Binding NoCommand}" Width="100" Height="25" FontSize="20" Margin="5" />
        </StackPanel>
    </StackPanel>
</UserControl>
