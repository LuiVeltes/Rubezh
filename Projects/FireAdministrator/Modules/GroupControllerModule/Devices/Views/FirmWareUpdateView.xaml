<UserControl x:Class="GKModule.Views.FirmWareUpdateView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="350" MaxWidth="350" MinHeight="100" MaxHeight="100">
    <StackPanel Background="White" >
        <TextBlock Text="Выберете устройства, у которых следуют обновить ПО" FontWeight="Bold" Margin ="5, 5" />
        <ListView ItemsSource="{Binding}">
            <StackPanel Orientation="Horizontal" Background="White" >
                <Label Content="Запомнить выбор и больше не показывать это окно" Foreground="Black" />
                <CheckBox IsChecked = "{Binding IsDisabled}" Margin="0, 5, 0, 30" />
            </StackPanel>
        </ListView>
    </StackPanel>
</UserControl>
