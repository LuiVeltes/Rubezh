<UserControl x:Class="GKModule.Views.FirmWareUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="100">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ItemsControl  Grid.Row="0" ItemsSource ="{Binding AvailableDevices}" Margin="2" VerticalContentAlignment="Stretch">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <CheckBox IsChecked = "{Binding IsChecked}" Margin="2, 2, 2, 0" />
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Address}" Margin="5,0" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Обновить" Command ="{Binding UpdateCommand}" ToolTip="{Binding UpdateButtonToolTip}" ToolTipService.ShowOnDisabled ="True" Width="100" Height="25" FontSize="20" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
