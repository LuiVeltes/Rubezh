<UserControl x:Class="GKModule.Views.DevicesMenuView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Controls="clr-namespace:Controls;assembly=Controls">
  <StackPanel Orientation="Horizontal" DataContext="{Binding Context}">
		<Controls:ToolBarButton Command="{Binding AddCommand}" DataContext="{Binding SelectedDevice}" ToolTip="Добавить (Ctrl+N)" Background="{DynamicResource Add}"  />
		<Controls:ToolBarButton Command="{Binding ShowPropertiesCommand}" DataContext="{Binding SelectedDevice}" ToolTip="Редактировать (Ctrl+E)" Background="{DynamicResource Edit}"  />
		<Controls:ToolBarButton Command="{Binding RemoveCommand}" DataContext="{Binding SelectedDevice}" ToolTip="Удалить (Ctrl+Del)" Background="{DynamicResource Delete}"  />
		<ToolBarButton Command="{Binding CopyCommand}" ToolTip="Копировать (Ctrl+C)" Background="{DynamicResource Copy}"  />
		<Controls:ToolBarButton Command="{Binding CutCommand}" ToolTip="Вырезать (Ctrl+Х)" Background="{DynamicResource Cut}"  />
		<Controls:ToolBarButton Command="{Binding PasteCommand}" ToolTip="Вставить (Ctrl+V)" Background="{DynamicResource Paste}"  />
		<Menu Background="Transparent" VerticalAlignment="Center" DataContext="{Binding DeviceCommandsViewModel}" FontSize="12">
			<MenuItem>
				<MenuItem.Header>
					<Image Source="/Controls;component/Images/ArrowUpDown.png" Height="24" ToolTip="Устройство" />
				</MenuItem.Header>
				<IconedMenuItem Command="{Binding ReadConfigFileCommand}" ImageSource="/Controls;component/Images/BParametersReadFromFile.png" Text="Считать конфигурацию" TotalHeight="32" />
				<IconedMenuItem Command="{Binding ReadConfigurationCommand}" ImageSource="/Controls;component/Images/BParametersRead.png" Text="Считать конфигурацию дескрипторов" TotalHeight="32" />
				<IconedMenuItem Command="{Binding WriteConfigCommand}" ImageSource="/Controls;component/Images/BParametersWrite.png" Text="Записать конфигурацию" TotalHeight="32" />
				<Separator />
				<IconedMenuItem Command="{Binding ShowInfoCommand}" ImageSource="/Controls;component/Images/BInformation.png" Text="Информация об устройстве" TotalHeight="32" />
				<IconedMenuItem Command="{Binding SynchroniseTimeCommand}" ImageSource="/Controls;component/Images/BWatch.png" Text="Синзронизация времени" TotalHeight="32" />
				<IconedMenuItem Command="{Binding ReadJournalCommand}" ImageSource="/Controls;component/Images/BJournal.png" Text="Журнал событий" TotalHeight="32" />
				<IconedMenuItem Command="{Binding UpdateFirmwhareCommand}" ImageSource="/Controls;component/Images/BParametersSync.png" Text="Обновление ПО" TotalHeight="32" />
				<IconedMenuItem Command="{Binding AutoSearchCommand}" ImageSource="/Controls;component/Images/BSearch.png" Text="Автопоиск устройств" TotalHeight="32" />
                <Separator />
				<IconedMenuItem Command="{Binding ActualizeUsersCommand}" ImageSource="/Controls;component/Images/BSettings.png" Text="Актуализация пользователей прибора" TotalHeight="32" />
                <IconedMenuItem Command="{Binding RemoveUsersCommand}" ImageSource="/Controls;component/Images/BSettings.png" Text="Стереть пользователей прибора" TotalHeight="32" />
                <IconedMenuItem Command="{Binding RewriteUsersCommand}" ImageSource="/Controls;component/Images/BSettings.png" Text="Перезаписать пользователей прибора" TotalHeight="32" />
                <IconedMenuItem Command="{Binding RewriteAllSchedulesCommand}" ImageSource="/Controls;component/Images/BSettings.png" Text="Перезаписать все графики" TotalHeight="32" />
			</MenuItem>
		</Menu>
	</StackPanel>
</UserControl>