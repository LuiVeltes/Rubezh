<UserControl x:Class="GroupControllerModule.Views.DevicesMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls">

    <UserControl.Resources>
        <s:Boolean x:Key="True">True</s:Boolean>
        <s:Boolean x:Key="False">False</s:Boolean>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" DataContext="{Binding Context}">
        <Controls:ToolBarButton Command="{Binding AddCommand}" DataContext="{Binding SelectedDevice}" ToolTip="Добавить" ImageSource="/Controls;component/Images/add.png" />
        <Controls:ToolBarButton Command="{Binding ShowPropertiesCommand}" DataContext="{Binding SelectedDevice}" ToolTip="Редактировать" ImageSource="/Controls;component/Images/edit.png" />
        <Controls:ToolBarButton Command="{Binding RemoveCommand}" DataContext="{Binding SelectedDevice}" ToolTip="Удалить" ImageSource="/Controls;component/Images/delete.png" />
        <Controls:ToolBarButton Command="{Binding CopyCommand}" ToolTip="Копировать" ImageSource="/Controls;component/Images/copy.png" />
        <Controls:ToolBarButton Command="{Binding CutCommand}" ToolTip="Вырезать" ImageSource="/Controls;component/Images/cut.png" />
        <Controls:ToolBarButton Command="{Binding PasteCommand}" ToolTip="Вставить" ImageSource="/Controls;component/Images/paste.png" />
        <Menu Background="Transparent" VerticalAlignment="Center" DataContext="{Binding DeviceCommandsViewModel}">
            <MenuItem>
                <MenuItem.Header>
                    <Image Source="/Controls;component/Images/ArrowUpDown.png" Height="24" />
                </MenuItem.Header>

                <MenuItem Command="{Binding ConvertFromFiresecCommand}" Header="Конвертировать в из формата Рубеж-2АМ" />
                <MenuItem Command="{Binding ConvertToBinCommand}" Header="Конвертировать в бинарный формат" />
                
                <MenuItem Command="{Binding CheckConnectionCommand}" Header="Проверка связи" />
                <MenuItem Command="{Binding GetKAUVersionCommand}" Header="Запросить версию ПО КАУ" />
                <MenuItem Command="{Binding GetBlocklVersionCommand}" Header="Запросить информацию о блоке" />
                <MenuItem Command="{Binding WriteBlockInfoCommand}" Header="Записать информацию о блоке" />
                <MenuItem Command="{Binding GetTimeCommand}" Header="Запросить время" />
                <MenuItem Command="{Binding SetTimeCommand}" Header="Установить время" />
                <MenuItem Command="{Binding GetLastJournalIndexCommand}" Header="Запросить последнюю запись в журнале" />
                <MenuItem Command="{Binding GetJournalItemByIndexCommand}" Header="Запросить данные в журнале по номеру" />
                <MenuItem Command="{Binding EraseJournalCommand}" Header="Стереть журнал" />
                <MenuItem Command="{Binding GetParametersCommand}" Header="Запросить параметры" />
                <MenuItem Command="{Binding WriteParametersCommand}" Header="Записать параметры" />
                <MenuItem Command="{Binding StartWorkingProgramCommand}" Header="Стартовать боевую программу" />
                <MenuItem Command="{Binding GetObjectInfoCommand}" Header="Запросить информацию об объекте" />
                <MenuItem Command="{Binding ExecuteObjectCommand}" Header="Управление объектом" />
                <MenuItem Command="{Binding GoToTechnologicalProgrammCommand}" Header="Перейти к технологической программе" />
                <MenuItem Command="{Binding EraseDatabaseCommand}" Header="Стереть базу" />
                <MenuItem Command="{Binding EraseWorkingProgramCommand}" Header="Стереть боевую программу" />
                <MenuItem Command="{Binding WriteDatabaseCommand}" Header="Записать базу" />
                <MenuItem Command="{Binding WriteProgramCommand}" Header="Записать программу" />
                <MenuItem Command="{Binding GetDeviceParameterCommand}" Header="Запросить параметр АУ" />
                <MenuItem Command="{Binding WriteDeviceParameterCommand}" Header="Записать параметр АУ" />
            </MenuItem>
        </Menu>

    </StackPanel>
</UserControl>