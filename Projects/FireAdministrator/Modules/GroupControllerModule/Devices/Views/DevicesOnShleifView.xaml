<UserControl x:Class="GKModule.Views.DevicesOnShleifView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="500" MinHeight="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding Devices}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Устройство" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16" Margin="5, 0, 5, 0" HorizontalAlignment="Left" Source="{Binding Device.Driver.ImageSource}" />
                                <TextBlock Text="{Binding Device.PresentationName}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Выбрать" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1">
            <Button Content="Выделить все" Command="{Binding SelectAllCommand}" Width="100" Margin="2" />
            <Button Content="Снять все выделения" Command="{Binding DeSelectAllCommand}" Width="100" Margin="2" />
            <Button Content="Копировать" Command="{Binding CopyCommand}" Width="100" Margin="2" />
            <Button Content="Удалить" Command="{Binding RemoveCommand}" Width="100" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>