<UserControl x:Class="GKModule.Views.CodeReaderDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="500" MinHeight="400">

    <TabControl>
        <TabItem Header="Основные">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Действие для вызова тревоги" VerticalAlignment="Center" Foreground="White" Margin="2" />
                <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding SetAlarmEnterTypes}" SelectedItem="{Binding SelectedSetAlarmEnterType}" Margin="2">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" Margin="2" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Действие для постановки на охрану" VerticalAlignment="Center" Foreground="White" Margin="2" />
                <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding SetGuardEnterTypes}" SelectedItem="{Binding SelectedSetGuardEnterType}" Margin="2">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}, Mode=OneWay}" Margin="2" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Действие для снятия с охраны" VerticalAlignment="Center" Foreground="White" Margin="2" />
                <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding ResetGuardEnterTypes}" SelectedItem="{Binding SelectedResetGuardEnterType}" Margin="2">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}, Mode=OneWay}" Margin="2" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>