<UserControl x:Class="GKModule.Views.CodesView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <XDataGrid ItemsSource="{Binding Codes}" SelectedItem="{Binding SelectedCode}">
        <DataGrid.Columns>
            <DataGridTemplateColumn Header="Наименование" SortMemberPath="Code.Name" Width="*">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Width="16" Margin="2 0 0 0" Source="/Controls;component/Images/Code.png" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Code.Name}" VerticalAlignment="Center" Margin="2 0 0 0" />
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn Header="Пароль" SortMemberPath="Code.Name" Width="*">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Code.Password}" VerticalAlignment="Center" Margin="2 0 0 0" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </XDataGrid>
</UserControl>