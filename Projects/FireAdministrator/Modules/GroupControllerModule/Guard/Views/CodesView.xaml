<UserControl x:Class="GKModule.Views.CodesView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Controls="clr-namespace:Controls;assembly=Controls">
	<Grid>
		<Controls:XDataGrid Name="_codesDataGrid" ItemsSource="{Binding Codes}" SelectedItem="{Binding SelectedCode}">
			<DataGrid.Columns>
				<DataGridTemplateColumn Header="Имя" SortMemberPath="Code.Name" Width="*">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<Image Width="16" Margin="2 0 0 0" Source="/Controls;component/Images/Code.png" VerticalAlignment="Center" />
								<TextBlock Text="{Binding Code.Name}" VerticalAlignment="Center" Margin="2 0 5 0" />
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</Controls:XDataGrid>
	</Grid>
</UserControl>