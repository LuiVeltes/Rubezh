<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:GKModule.Views"
                    xmlns:ViewModels="clr-namespace:GKModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:DevicesViewModel}">
        <Views:DevicesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DeviceLogicViewModel}">
        <Views:DeviceLogicView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DevicesSelectationViewModel}">
        <Views:DevicesSelectationView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZonesSelectationViewModel}">
        <Views:ZonesSelectationView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:NewDeviceViewModel}">
        <Views:NewDeviceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:PropertiesViewModel}">
        <Views:PropertiesView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type ViewModels:DevicesMenuViewModel}">
        <Views:DevicesMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DeviceConverterViewModel}">
        <Views:DeviceConverterView />
    </DataTemplate>


    <DataTemplate DataType="{x:Type ViewModels:ZonesViewModel}">
        <Views:ZonesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZoneDetailsViewModel}">
        <Views:ZoneDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZonesMenuViewModel}">
        <Views:ZonesMenuView />
    </DataTemplate>

</ResourceDictionary>