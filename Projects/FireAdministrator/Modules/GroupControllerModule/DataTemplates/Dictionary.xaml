<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:GroupControllerModule.Views"
                    xmlns:ViewModels="clr-namespace:GroupControllerModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:DevicesViewModel}">
        <Views:DevicesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:DeviceDetailsViewModel}">
        <Views:DeviceDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:NewDeviceViewModel}">
        <Views:NewDeviceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:PropertiesViewModel}">
        <Views:PropertiesView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type ViewModels:DevicesMenuViewModel}">
        <Views:DevicesMenuView />
    </DataTemplate>


    <DataTemplate DataType="{x:Type ViewModels:ZonesViewModel}">
        <Views:ZonesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZoneDetailsViewModel}">
        <Views:ZoneDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ZonesMenuViewModel}">
        <Views:ZonesMenuView />
    </DataTemplate>

</ResourceDictionary>