<UserControl x:Class="GKModule.Views.StatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="600" MinHeight="600">
    <Grid>
        <DataGrid ItemsSource="{Binding States}" SelectedItem="{Binding SelectedState}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Тип" Binding="{Binding Driver.ShortName}" />
                <DataGridTextColumn Header="Адрес контроллера" Binding="{Binding ControllerAddress}" />
                <DataGridTextColumn Header="Адрес на контроллере" Binding="{Binding AddressOncontroller}" />
                <DataGridTextColumn Header="Физический адрес" Binding="{Binding PhysicalAddress}" />
                <DataGridTextColumn Header="Наименование" Binding="{Binding Description}" />
                <DataGridTextColumn Header="Серийный номер" Binding="{Binding SerialNo}" />
                <DataGridTextColumn Header="Состояния" Binding="{Binding StringStates}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>