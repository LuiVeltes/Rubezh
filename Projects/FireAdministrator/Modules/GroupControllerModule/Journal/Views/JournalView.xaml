<UserControl x:Class="GKModule.Views.JournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="800" MinHeight="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding JournalItems}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Запись ГК" Binding="{Binding GKNo}" />
                <DataGridTextColumn Header="Дата и Время" Binding="{Binding StringDate}" />
                <DataGridTextColumn Header="Событие" Binding="{Binding EventName}" />
                <DataGridTextColumn Header="Уточнение" Binding="{Binding EventDescription}" />
                <DataGridTextColumn Header="Запись КАУ" Binding="{Binding KAUNo}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Начальный номер записи" Foreground="White" HorizontalAlignment="Right" Margin="2" />
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Конечный номер записи" Foreground="White" HorizontalAlignment="Right" Margin="2" />

                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding StartIndex}" Margin="2" />
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding EndIndex}" Margin="2" />
            </Grid>
            <Button Content="Считать" Command="{Binding ReadCommand}" Width="100" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>