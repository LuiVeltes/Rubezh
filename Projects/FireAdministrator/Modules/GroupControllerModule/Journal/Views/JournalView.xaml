<UserControl x:Class="GKModule.Views.JournalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="800" MinHeight="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding JournalItems}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Запись ГК" Binding="{Binding GKJournalRecordNo}" />
                <DataGridTextColumn Header="Дата и Время" Binding="{Binding DateTime, Converter={StaticResource TimeToStringConverter}}" />
                <DataGridTextColumn Header="Событие" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Д/Н" Binding="{Binding YesNo, Converter={StaticResource BoolToGKYesNoConverter}}" />
                <DataGridTextColumn Header="Уточнение" Binding="{Binding Description}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Начальный номер записи" Foreground="White" HorizontalAlignment="Right" Margin="2" />
                    <TextBox Text="{Binding StartIndex}" Margin="2" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Конечный номер записи" Foreground="White" HorizontalAlignment="Right" Margin="2" />
                    <TextBox Text="{Binding EndIndex}" Margin="2" />
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Всего записей: " Foreground="White" HorizontalAlignment="Right" Margin="2" />
                <TextBlock Text="{Binding TotalCount}" Foreground="White" HorizontalAlignment="Right" Margin="2" />
            </StackPanel>
            <Button Content="Считать" Command="{Binding ReadCommand}" Width="100" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>