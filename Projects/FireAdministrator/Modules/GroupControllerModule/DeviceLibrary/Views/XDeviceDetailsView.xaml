<UserControl x:Class="GKModule.Views.XDeviceDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400">

    <ListBox ItemsSource="{Binding XDevices}" SelectedItem="{Binding SelectedXDevice}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="5, 5, 0, 0">
                    <Image Width="14" Margin="5,0" Source="{Binding XDriver.ImageSource}" />
                    <TextBlock Text="{Binding XDriver.ShortName}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
