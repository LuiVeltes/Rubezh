<UserControl x:Class="GKModule.Views.XStateDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="500">

    <DataGrid Focusable="True" ItemsSource="{Binding XStates}" SelectedItem="{Binding SelectedXState}">
        <DataGrid.Columns>
            <DataGridTemplateColumn Header="Состояние">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding XState.XStateType, Converter={StaticResource XStateTypeToIconConverter}}" Width="16" />
                            <TextBlock Text="{Binding ClassName}" />
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTextColumn Header="Описание" Binding="{Binding AdditionalName}" Width="*" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
