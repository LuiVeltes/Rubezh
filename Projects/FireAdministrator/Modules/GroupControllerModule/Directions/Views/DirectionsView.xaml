<UserControl x:Class="GKModule.Views.DirectionsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:GKModule.Converters"
        xmlns:Controls="clr-namespace:Controls;assembly=Controls">

    <UserControl.Resources>
        <Converters:XStateTypeToStringConverter x:Key="XStateTypeToStringConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" MinWidth="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="200" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="200" />
        </Grid.RowDefinitions>
        <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="5" Background="Transparent" Cursor="SizeNS" />
        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="5" Background="Transparent" Cursor="SizeWE" />

        <Controls:XDataGrid Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Directions}" SelectedItem="{Binding SelectedDirection}" CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="Auto" Header="№" SortMemberPath="Direction.No">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Margin="1 0 0 0" Width="16" Source="/Controls;component/Images/Blue_Direction.png" VerticalAlignment="Center" />
                                <TextBlock Margin="2" HorizontalAlignment="Stretch" Text="{Binding Direction.No}" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*" MinWidth="250" Header="Направление" SortMemberPath="Direction.Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding VisualizationState, Converter={StaticResource VisualizationStateToImageSourceConverter}}" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding Direction.Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Примечание" Binding="{Binding Direction.Description}" Width="*" />
                <DataGridTemplateColumn Width="Auto" Header="НС" SortMemberPath="Direction.IsNS">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Margin="2" HorizontalAlignment="Stretch" Text="НС" Visibility="{Binding Direction.IsNS, Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </Controls:XDataGrid>

        <Grid Grid.Row="0" Grid.Column="3" Visibility="{Binding SelectedDirection.Direction.IsNS, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListView Grid.Row="0" ItemsSource="{Binding OutputDevices}" DataContext="{Binding SelectedDirection}" SelectedItem="{Binding SelectedOutputDevice}">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Выходные устройства" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding Device.Driver.ImageSource}" Width="16" Margin="1 0 0 0" />
                                            <TextBlock Margin="2" Text="{Binding Device.Driver.ShortName}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Адрес" DisplayMemberBinding="{Binding Device.DottedAddress}" Width="100" />
                            <GridViewColumn Header="Зона или Логика" DisplayMemberBinding="{Binding PresentationZone}" Width="100" />
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding DeleteOutputDeviceCommand}">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Controls;component/Images/BDelete.png" Width="16" VerticalAlignment="Center" />
                                <TextBlock Margin="2" Text="Удалить" VerticalAlignment="Center" />
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Command="{Binding ChangeOutputDevicesCommand}" >
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Controls;component/Images/BEdit.png" Width="16" VerticalAlignment="Center" />
                                <TextBlock Margin="2" Text="Изменить" VerticalAlignment="Center" />
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="3" Visibility="{Binding SelectedDirection.Direction.IsNS, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListView Grid.Row="0" ItemsSource="{Binding NSDevices}" DataContext="{Binding SelectedDirection}" SelectedItem="{Binding SelectedNSDevice}">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Выходные устройства" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding Device.Driver.ImageSource}" Width="16" Margin="1 0 0 0" />
                                            <TextBlock Margin="2" Text="{Binding Device.Driver.ShortName}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Адрес" DisplayMemberBinding="{Binding Device.DottedAddress}" Width="100" />
                            <GridViewColumn Width="300" Header="Логика">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Controls:EditorPresenter>
                                            <Controls:EditorPresenter.ViewTemplate>
                                                <ControlTemplate>
                                                    <TextBlock MinWidth="100" Cursor="Hand" Text="{Binding NSPresentationZone}" Visibility="{Binding IsNSLogic, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock.Style>
											        <Style TargetType="TextBlock">
												        <Style.Triggers>
													        <DataTrigger Binding="{Binding IsZoneGrayed}" Value="True">
														        <Setter Property="TextBlock.Foreground" Value="Gray" />
													        </DataTrigger>
												        </Style.Triggers>
											        </Style>
										        </TextBlock.Style>
												<TextBlock.InputBindings>
													<MouseBinding Command="{Binding ShowNSLogicCommand}" MouseAction="LeftClick" />
												</TextBlock.InputBindings>
												<TextBlock.ToolTip>
													<WrapPanel>
														<TextBlock Text="{Binding NSPresentationZone}" TextWrapping="Wrap" />
													</WrapPanel>
												</TextBlock.ToolTip>
											</TextBlock>
                                                </ControlTemplate>
                                            </Controls:EditorPresenter.ViewTemplate>
                                        </Controls:EditorPresenter>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding ChangeNSDevicesCommand}" >
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Controls;component/Images/BEdit.png" Width="16" VerticalAlignment="Center" />
                                <TextBlock Margin="2" Text="Изменить" VerticalAlignment="Center" />
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>
        
        <Grid Grid.Column="0" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListView Grid.Row="0" ItemsSource="{Binding Zones}" DataContext="{Binding SelectedDirection}" SelectedItem="{Binding SelectedZone, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="№" Width="Auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="16" Margin="1 0 0 0" Source="/Controls;component/Images/zone.png" VerticalAlignment="Center" />
                                            <TextBlock Margin="2" HorizontalAlignment="Stretch" Text="{Binding DirectionZone.Zone.No}" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Входные зоны" DisplayMemberBinding="{Binding DirectionZone.Zone.Name}" />
                            <GridViewColumn Header="Состояние" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Controls:EditorPresenter>
                                            <Controls:EditorPresenter.ViewTemplate>
                                                <ControlTemplate>
                                                    <ComboBox ItemsSource="{Binding StateTypes}" SelectedItem="{Binding StateType, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image Margin="1 0 0 0" Width="16" Source="{Binding ., Converter={StaticResource XStateTypeToIconConverter}}" />
                                                                    <TextBlock Margin="2" Text="{Binding ., Converter={StaticResource XStateTypeToStringConverter}}" Foreground="Black" VerticalAlignment="Center" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                </ControlTemplate>
                                            </Controls:EditorPresenter.ViewTemplate>
                                        </Controls:EditorPresenter>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding DeleteZoneCommand}">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Controls;component/Images/BDelete.png" Width="16" VerticalAlignment="Center" />
                                <TextBlock Margin="2" Text="Удалить" VerticalAlignment="Center" />
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Command="{Binding ChangeZonesCommand}">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Controls;component/Images/BEdit.png" Width="16" VerticalAlignment="Center" />
                                <TextBlock Margin="2" Text="Изменить" VerticalAlignment="Center" />
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>

        <Grid Grid.Column="3" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListView Grid.Row="0" ItemsSource="{Binding Devices}" DataContext="{Binding SelectedDirection}" SelectedItem="{Binding SelectedDevice}">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Входные устройства" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Margin="1 0 0 0" Source="{Binding DirectionDevice.Device.Driver.ImageSource}" Width="16" Height="16" />
                                            <TextBlock Margin="2" Text="{Binding DirectionDevice.Device.Driver.ShortName}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Адрес" DisplayMemberBinding="{Binding DirectionDevice.Device.DottedAddress}" Width="100" />

                            <GridViewColumn Header="Состояние" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Controls:EditorPresenter>
                                            <Controls:EditorPresenter.ViewTemplate>
                                                <ControlTemplate>
                                                    <ComboBox ItemsSource="{Binding StateTypes}" SelectedItem="{Binding StateType, UpdateSourceTrigger=PropertyChanged}"
                                                                VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding ., Converter={StaticResource XStateTypeToStringConverter}}" VerticalAlignment="Stretch" Foreground="Black" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                </ControlTemplate>
                                            </Controls:EditorPresenter.ViewTemplate>
                                        </Controls:EditorPresenter>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding DeleteDeviceCommand}">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Controls;component/Images/BDelete.png" Width="16" VerticalAlignment="Center" />
                                <TextBlock Margin="2" Text="Удалить" VerticalAlignment="Center" />
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Command="{Binding ChangeDevicesCommand}" >
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Controls;component/Images/BEdit.png" Width="16" VerticalAlignment="Center" />
                                <TextBlock Margin="2" Text="Изменить" VerticalAlignment="Center" />
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>
    </Grid>
</UserControl>