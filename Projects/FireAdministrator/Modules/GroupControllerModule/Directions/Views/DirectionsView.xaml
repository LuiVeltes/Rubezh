<UserControl x:Class="GKModule.Views.DirectionsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:GKModule.Converters"
        xmlns:Controls="clr-namespace:Controls;assembly=Controls">

    <UserControl.Resources>
        <Converters:XStateTypeToStringConverter x:Key="XStateTypeToStringConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" MinWidth="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="200" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="200" />
        </Grid.RowDefinitions>
        <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="5" Background="Transparent" Cursor="SizeNS" />
        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="5" Background="Transparent" Cursor="SizeWE" />

        <Controls:XDataGrid Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Directions}" SelectedItem="{Binding SelectedDirection}" CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="Auto" Header="№" SortMemberPath="Direction.No">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Margin="1 0 0 0" Width="16" Source="/Controls;component/Images/Blue_Direction.png" VerticalAlignment="Center" />
                                <TextBlock Margin="2" HorizontalAlignment="Stretch" Text="{Binding Direction.No}" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*" MinWidth="250" Header="Направление" SortMemberPath="Direction.Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding VisualizationState, Converter={StaticResource VisualizationStateToImageSourceConverter}}" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding Direction.Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Примечание" Binding="{Binding Direction.Description}" Width="*" />
                <DataGridTemplateColumn Width="Auto" Header="НС" SortMemberPath="Direction.IsNS">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="НС" FontWeight="Bold" Background="Yellow" Visibility="{Binding Direction.IsNS, Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </Controls:XDataGrid>

        <Grid Grid.Row="0" Grid.Column="3" Visibility="{Binding SelectedDirection.Direction.IsNS, Converter={StaticResource InversedBoolToVisibilityConverter}}">
            <DataGrid ItemsSource="{Binding OutputDevices}" DataContext="{Binding SelectedDirection}" SelectedItem="{Binding SelectedOutputDevice}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Выходные устройства" MinWidth="200" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Device.Driver.ImageSource}" Width="16" Margin="2 0 0 0" />
                                    <TextBlock Text="{Binding Device.ShortName}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Адрес" Binding="{Binding Device.DottedAddress}" MinWidth="100" Width="Auto" />
                    <DataGridTemplateColumn Header="Зона или Логика" MinWidth="200" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PresentationZone}" HorizontalAlignment="Stretch" VerticalAlignment="Center">
									<TextBlock.ToolTip>
										<WrapPanel>
											<TextBlock Text="{Binding PresentationZone}" TextWrapping="Wrap" />
										</WrapPanel>
									</TextBlock.ToolTip>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" Command="{Binding DeleteOutputDeviceCommand}">
                        <MenuItem.Icon>
                            <Image Source="/Controls;component/Images/BDelete.png" Width="16" VerticalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Изменить" Command="{Binding ChangeOutputDevicesCommand}" >
                        <MenuItem.Icon>
                            <Image Source="/Controls;component/Images/BEdit.png" Width="16" VerticalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="3" Visibility="{Binding SelectedDirection.Direction.IsNS, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0" ItemsSource="{Binding NSDevices}" DataContext="{Binding SelectedDirection}" SelectedItem="{Binding SelectedNSDevice}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Устройства НС" MinWidth="200" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Device.Driver.ImageSource}" Width="16" Margin="2 0 0 0" />
                                    <TextBlock Margin="2" Text="{Binding Device.ShortName}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Адрес" Binding="{Binding Device.DottedAddress}" MinWidth="100" Width="Auto" />
                    <DataGridTemplateColumn Header="Логика" MinWidth="200" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Controls:EditorPresenter>
                                    <Controls:EditorPresenter.ViewTemplate>
                                        <ControlTemplate>
                                            <TextBlock MinWidth="100" Cursor="Hand" Text="{Binding NSPresentationZone}" Visibility="{Binding IsNSLogic, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock.Style>
											        <Style TargetType="TextBlock">
												        <Style.Triggers>
													        <DataTrigger Binding="{Binding IsZoneGrayed}" Value="True">
														        <Setter Property="TextBlock.Foreground" Value="Gray" />
													        </DataTrigger>
												        </Style.Triggers>
											        </Style>
										        </TextBlock.Style>
												<TextBlock.InputBindings>
													<MouseBinding Command="{Binding ShowNSLogicCommand}" MouseAction="LeftClick" />
												</TextBlock.InputBindings>
												<TextBlock.ToolTip>
													<WrapPanel>
														<TextBlock Text="{Binding NSPresentationZone}" TextWrapping="Wrap" />
													</WrapPanel>
												</TextBlock.ToolTip>
											</TextBlock>
                                        </ControlTemplate>
                                    </Controls:EditorPresenter.ViewTemplate>
                                </Controls:EditorPresenter>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="" Command="{Binding ChangeNSDevicesCommand}" >
                        <MenuItem.Icon>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Controls;component/Images/BEdit.png" Width="16" VerticalAlignment="Center" />
                                <TextBlock Margin="2" Text="Изменить" VerticalAlignment="Center" />
                            </StackPanel>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>
        
        <Grid Grid.Column="0" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0" ItemsSource="{Binding Zones}" DataContext="{Binding SelectedDirection}" SelectedItem="{Binding SelectedZone, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="№" MinWidth="50" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Margin="2 0 0 0" Source="/Controls;component/Images/zone.png" VerticalAlignment="Center" />
                                    <TextBlock Margin="2" HorizontalAlignment="Stretch" Text="{Binding DirectionZone.Zone.No}" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Входные зоны" Binding="{Binding DirectionZone.Zone.Name}" MinWidth="200" Width="*" />
                    <DataGridTemplateColumn Header="Состояние" MinWidth="50" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Controls:EditorPresenter>
                                    <Controls:EditorPresenter.ViewTemplate>
                                        <ControlTemplate>
                                            <ComboBox ItemsSource="{Binding StateTypes}" SelectedItem="{Binding StateType, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Image Margin="1 0 0 0" Width="16" Source="{Binding ., Converter={StaticResource XStateTypeToIconConverter}}" />
                                                            <TextBlock Margin="2" Text="{Binding ., Converter={StaticResource XStateTypeToStringConverter}}" Foreground="Black" VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </ControlTemplate>
                                    </Controls:EditorPresenter.ViewTemplate>
                                </Controls:EditorPresenter>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" Command="{Binding DeleteZoneCommand}">
                        <MenuItem.Icon>
                            <Image Source="/Controls;component/Images/BDelete.png" Width="16" VerticalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Изменить" Command="{Binding ChangeZonesCommand}">
                        <MenuItem.Icon>
                            <Image Source="/Controls;component/Images/BEdit.png" Width="16" VerticalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>

        <Grid Grid.Column="3" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0" ItemsSource="{Binding Devices}" DataContext="{Binding SelectedDirection}" SelectedItem="{Binding SelectedDevice}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Входные устройства" MinWidth="200" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Margin="2 0 0 0" Source="{Binding DirectionDevice.Device.Driver.ImageSource}" Width="16" Height="16" />
                                    <TextBlock Margin="2" Text="{Binding DirectionDevice.Device.ShortName}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Адрес" Binding="{Binding DirectionDevice.Device.DottedAddress}" MinWidth="100" Width="Auto" />
                    <DataGridTemplateColumn Header="Состояние" MinWidth="100" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Controls:EditorPresenter>
                                    <Controls:EditorPresenter.ViewTemplate>
                                        <ControlTemplate>
                                            <ComboBox ItemsSource="{Binding StateTypes}" SelectedItem="{Binding StateType, UpdateSourceTrigger=PropertyChanged}"
                                                    VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Image Margin="1 0 0 0" Width="16" Source="{Binding ., Converter={StaticResource XStateTypeToIconConverter}}" />
                                                            <TextBlock Margin="2" Text="{Binding ., Converter={StaticResource XStateTypeToStringConverter}}" Foreground="Black" VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </ControlTemplate>
                                    </Controls:EditorPresenter.ViewTemplate>
                                </Controls:EditorPresenter>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" Command="{Binding DeleteDeviceCommand}">
                        <MenuItem.Icon>
                            <Image Source="/Controls;component/Images/BDelete.png" Width="16" VerticalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Изменить" Command="{Binding ChangeDevicesCommand}" >
                        <MenuItem.Icon>
                            <Image Source="/Controls;component/Images/BEdit.png" Width="16" VerticalAlignment="Center" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>
    </Grid>
</UserControl>