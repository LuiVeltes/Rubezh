<UserControl x:Class="GKModule.Views.DirectionsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:GKModule.Converters"
        xmlns:Controls="clr-namespace:Controls;assembly=Controls">

    <UserControl.Resources>
        <Converters:XStateTypeToStringConverter x:Key="XStateTypeToStringConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" MinWidth="200" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Controls:XDataGrid Name="_directionDataGrid" ItemsSource="{Binding Directions}" SelectedItem="{Binding SelectedDirection}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Binding="{Binding Direction.No}" />
                    <DataGridTextColumn Header="Наименование" Width="1*" Binding="{Binding Direction.Name}" />
                    <DataGridTextColumn Header="Примечание" Width="1*" Binding="{Binding Direction.Description}" />
                </DataGrid.Columns>
            </Controls:XDataGrid>
        </Grid>

        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="5" Background="Transparent" Cursor="SizeWE" />

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="200" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" MinHeight="200" Name="bottomRow" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ListView Grid.Row="0" ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}" DataContext="{Binding SelectedDirection}">
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn DisplayMemberBinding="{Binding DirectionZone.Zone.No}" Header="№" />
                                <GridViewColumn DisplayMemberBinding="{Binding DirectionZone.Zone.Name}" Header="Наименование" />
                                <GridViewColumn Header="Состояние" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Controls:EditorPresenter>
                                                <Controls:EditorPresenter.ViewTemplate>
                                                    <ControlTemplate>
                                                        <TextBlock Text="{Binding StateType, Converter={StaticResource XStateTypeToStringConverter}}" VerticalAlignment="Center" />
                                                    </ControlTemplate>
                                                </Controls:EditorPresenter.ViewTemplate>
                                                <Controls:EditorPresenter.EditTemplate>
                                                    <ControlTemplate>
                                                        <Grid>
                                                            <ComboBox ItemsSource="{Binding StateTypes}" SelectedItem="{Binding StateType, UpdateSourceTrigger=PropertyChanged}"
                                                                      VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                <ComboBox.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding ., Converter={StaticResource XStateTypeToStringConverter}}" VerticalAlignment="Stretch" Foreground="Black" />
                                                                    </DataTemplate>
                                                                </ComboBox.ItemTemplate>
                                                            </ComboBox>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Controls:EditorPresenter.EditTemplate>
                                            </Controls:EditorPresenter>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0, 2, 0, 0">
                    <Button Command="{Binding ChangeZonesCommand}" Content="Изменить зоны" Width="150" Margin="2" />
                </StackPanel>
            </Grid>

            <GridSplitter Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="5" Background="Transparent" Cursor="SizeNS" />

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ListView Grid.Row="0" ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" DataContext="{Binding SelectedDirection}">
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Обозначение" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{Binding DirectionDevice.Device.Driver.ImageSource}" Width="16" Height="16" Margin="5, 0, 5, 0" />
                                                <TextBlock Text="{Binding DirectionDevice.Device.Driver.ShortName}" HorizontalAlignment="Stretch" Width="200" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding DirectionDevice.Device.Address}" Header="Адрес" Width="100" />
                                <GridViewColumn DisplayMemberBinding="{Binding DirectionDevice.Device.Description}" Header="Зона" Width="100" />

                                <GridViewColumn Header="Состояние" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Controls:EditorPresenter>
                                                <Controls:EditorPresenter.ViewTemplate>
                                                    <ControlTemplate>
                                                        <TextBlock Text="{Binding StateType, Converter={StaticResource XStateTypeToStringConverter}}" VerticalAlignment="Center" />
                                                    </ControlTemplate>
                                                </Controls:EditorPresenter.ViewTemplate>
                                                <Controls:EditorPresenter.EditTemplate>
                                                    <ControlTemplate>
                                                        <Grid>
                                                            <ComboBox ItemsSource="{Binding StateTypes}" SelectedItem="{Binding StateType, UpdateSourceTrigger=PropertyChanged}"
                                                                      VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                <ComboBox.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding ., Converter={StaticResource XStateTypeToStringConverter}}" VerticalAlignment="Stretch" Foreground="Black" />
                                                                    </DataTemplate>
                                                                </ComboBox.ItemTemplate>
                                                            </ComboBox>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Controls:EditorPresenter.EditTemplate>
                                            </Controls:EditorPresenter>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0, 2, 0, 0">
                    <Button Command="{Binding ChangeDevicesCommand}" Content="Изменить устройства" Width="150" Margin="2" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>