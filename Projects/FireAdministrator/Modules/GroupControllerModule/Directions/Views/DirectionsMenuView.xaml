<UserControl x:Class="GKModule.Views.DirectionsMenuView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<StackPanel Orientation="Horizontal" DataContext="{Binding Context}">
		<ToolBarButton Command="{Binding AddCommand}" ToolTip="Добавить (Ctrl+N)" Background="{DynamicResource Add}"  />
		<ToolBarButton Command="{Binding EditCommand}" ToolTip="Редактировать (Ctrl+E)" Background="{DynamicResource Edit}"  />
		<ToolBarButton Command="{Binding DeleteCommand}" ToolTip="Удалить (Ctrl+Del)" Background="{DynamicResource Delete}"  />
		<ToolBarButton Command="{Binding CopyCommand}" ToolTip="Копировать (Ctrl+C)" Background="{DynamicResource Copy}"  />
		<ToolBarButton Command="{Binding PasteCommand}" ToolTip="Вставить (Ctrl+V)" Background="{DynamicResource Paste}"  />
	</StackPanel>
</UserControl>