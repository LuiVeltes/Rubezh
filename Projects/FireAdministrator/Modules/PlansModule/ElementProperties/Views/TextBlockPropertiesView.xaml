<UserControl x:Class="PlansModule.Views.TextBlockPropertiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="400" MinWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Текст" HorizontalAlignment="Right" />
        <Label Grid.Column="0" Grid.Row="1" Content="Цвет фона" HorizontalAlignment="Right" />
        <Label Grid.Column="0" Grid.Row="2" Content="Цвет текста" HorizontalAlignment="Right" />
        <Label Grid.Column="0" Grid.Row="3" Content="Цвет границы" HorizontalAlignment="Right" />
        <Label Grid.Column="0" Grid.Row="4" Content="Ширина границы" HorizontalAlignment="Right" />

        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Text}" Margin="2" />
        <ComboBox Grid.Column="1" Grid.Row="1" Style="{StaticResource ColorPickerComboBox}" SelectedItem="{Binding ForegroundColor}" Margin="2" />
        <ComboBox Grid.Column="1" Grid.Row="2" Style="{StaticResource ColorPickerComboBox}" SelectedItem="{Binding BackgroundColor}" Margin="2" />
        <ComboBox Grid.Column="1" Grid.Row="3" Style="{StaticResource ColorPickerComboBox}" SelectedItem="{Binding BorderColor}" Margin="2" />
        <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding StrokeThickness}" Margin="2" />
    </Grid>
</UserControl>
