<UserControl x:Class="PlansModule.Views.EllipsePropertiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended"
             MinHeight="400" MinWidth="400">

    <TabControl Background="{DynamicResource AlternativeBackgroundBrush}">
        <TabItem Header="Основные">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="Цвет фона" HorizontalAlignment="Right" />
                <Label Grid.Column="0" Grid.Row="1" Content="Цвет границы" HorizontalAlignment="Right" />
                <Label Grid.Column="0" Grid.Row="2" Content="Ширина границы" HorizontalAlignment="Right" />

				<ComboBox Grid.Column="1" Grid.Row="0" Style="{StaticResource ColorPickerComboBox}" SelectedItem="{Binding BackgroundColor, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
				<ComboBox Grid.Column="1" Grid.Row="1" Style="{StaticResource ColorPickerComboBox}" SelectedItem="{Binding BorderColor, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
				<extToolkit:IntegerUpDown Grid.Column="1" Grid.Row="2" Value="{Binding StrokeThickness, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
            </Grid>
        </TabItem>
        <TabItem Header="Изображение">
            <Grid DataContext="{Binding ImagePropertiesViewModel}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ContentControl Grid.Column="0" Content="{Binding Image}" />
                <StackPanel Grid.Column="1">
                    <Button Content="Выбрать картинку" Command="{Binding SelectPictureCommand}" Margin="2" />
                    <Button Content="Очистить картинку" Command="{Binding RemovePictureCommand}" Margin="2" />
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
