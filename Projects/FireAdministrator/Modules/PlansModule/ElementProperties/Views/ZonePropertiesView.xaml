<UserControl x:Class="PlansModule.Views.ZonePropertiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="400" MinWidth="400">

    <DataGrid ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}" SelectionChanged="DataGrid_SelectionChanged">
        <DataGrid.Columns>
            <DataGridTextColumn Header="№" Binding="{Binding No}" Width="auto" />
            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" />
            <DataGridTextColumn Header="Примечание" Binding="{Binding Description}" Width="*" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
