<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:s="clr-namespace:Infrustructure.Plans.Designer;assembly=Infrustructure.Plans" xmlns:ad="clr-namespace:PlansModule.Designer.Adorners">

	<Style TargetType="{x:Type Shape}" x:Key="ThumbCorner">
		<Setter Property="SnapsToDevicePixels" Value="true" />
		<Setter Property="Stroke" Value="LightSlateGray" />
		<Setter Property="StrokeThickness" Value=".5" />
		<Setter Property="Width" Value="7" />
		<Setter Property="Height" Value="7" />
		<Setter Property="Margin" Value="-2" />
		<Setter Property="Fill">
			<Setter.Value>
				<RadialGradientBrush Center="0.3, 0.3" GradientOrigin="0.3, 0.3" RadiusX="0.7" RadiusY="0.7">
					<GradientStop Color="White" Offset="0" />
					<GradientStop Color="DarkSlateGray" Offset="0.9" />
				</RadialGradientBrush>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type ad:RectangleResizeChrome}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ad:RectangleResizeChrome}">
					<Grid>
						<Grid Name="PART_ResizeGrid" Opacity="0" Margin="-3">
							<s:ResizeThumb Name="PART_TopThumb" Height="3" Cursor="SizeNS" VerticalAlignment="Top" HorizontalAlignment="Stretch" />
							<s:ResizeThumb Name="PART_LeftThumb" Width="3" Cursor="SizeWE" VerticalAlignment="Stretch" HorizontalAlignment="Left" />
							<s:ResizeThumb Name="PART_RightThumb" Width="3" Cursor="SizeWE" VerticalAlignment="Stretch" HorizontalAlignment="Right" />
							<s:ResizeThumb Name="PART_BottomThumb" Height="3" Cursor="SizeNS" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" />
							<s:ResizeThumb Name="PART_TopLeftThumb" Width="7" Height="7" Margin="0" Cursor="SizeNWSE" VerticalAlignment="Top" HorizontalAlignment="Left" />
							<s:ResizeThumb Name="PART_TopRightThumb" Width="7" Height="7" Margin="0" Cursor="SizeNESW" VerticalAlignment="Top" HorizontalAlignment="Right" />
							<s:ResizeThumb Name="PART_BottomLeftThumb" Width="7" Height="7" Margin="0" Cursor="SizeNESW" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
							<s:ResizeThumb Name="PART_BottomRightThumb" Width="7" Height="7" Margin="0" Cursor="SizeNWSE" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
						</Grid>
						<Grid Name="PART_Decorators" IsHitTestVisible="False" Opacity="1" Margin="-3">
							<Rectangle Name="PART_CornerRectangle" SnapsToDevicePixels="True" StrokeThickness="1" Margin="1">
								<Rectangle.Stroke>
									<LinearGradientBrush StartPoint="0, 0" EndPoint="1, .3" Opacity=".7">
										<GradientStop Color="SlateGray" Offset="0" />
										<GradientStop Color="LightGray" Offset=".5" />
										<GradientStop Color="SlateGray" Offset="1" />
									</LinearGradientBrush>
								</Rectangle.Stroke>
							</Rectangle>
							<Ellipse Name="PART_TopLeftEllipse" Style="{StaticResource ThumbCorner}" HorizontalAlignment="Left" VerticalAlignment="Top" />
							<Ellipse Name="PART_TopRightEllipse" Style="{StaticResource ThumbCorner}" HorizontalAlignment="Right" VerticalAlignment="Top" />
							<Ellipse Name="PART_BottomLeftEllipse" Style="{StaticResource ThumbCorner}" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
							<Ellipse Name="PART_BottomRightEllipse" Style="{StaticResource ThumbCorner}" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
						</Grid>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>