<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:designer="clr-namespace:Infrustructure.Plans.Designer;assembly=Infrustructure.Plans">
	<Style TargetType="{x:Type designer:ResizeThumb}">
		<Setter Property="IsHitTestVisible" Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Ellipse StrokeThickness="0">
						<Ellipse.Fill>
							<RadialGradientBrush Center="0.3, 0.3" GradientOrigin="0.3, 0.3" RadiusX="0.7" RadiusY="0.7">
								<GradientStop Offset="0" Color="White" />
								<GradientStop Offset="0.9" Color="DarkSlateGray" />
							</RadialGradientBrush>
						</Ellipse.Fill>
					</Ellipse>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>