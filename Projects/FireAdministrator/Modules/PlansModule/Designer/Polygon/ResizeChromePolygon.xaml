<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:PlansModule.Designer">

	<Style TargetType="{x:Type local:ThumbPolygon}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Ellipse>
						<Ellipse.Fill>
							<RadialGradientBrush Center="0.3, 0.3" GradientOrigin="0.3, 0.3" RadiusX="0.7" RadiusY="0.7">
								<GradientStop Offset="0" Color="White" />
								<GradientStop Offset="0.9" Color="DarkSlateGray" />
							</RadialGradientBrush>
						</Ellipse.Fill>
					</Ellipse>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>