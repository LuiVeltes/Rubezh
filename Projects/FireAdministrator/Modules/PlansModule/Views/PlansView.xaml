<UserControl x:Class="PlansModule.Views.PlansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="clr-namespace:PlansModule.Designer"
             xmlns:Views="clr-namespace:PlansModule.Views">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal" Background="Gray">
                <Button Command="{Binding ShowDevicesCommand}" ToolTip="Устройства" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/Tree.png" Height="24" />
                </Button>
                
                <Button Command="{Binding MoveToFrontCommand}" ToolTip="Вверх" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/MoveForward.png" Height="24" />
                </Button>

                <Button Command="{Binding SendToBackCommand}" ToolTip="Вниз" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/MoveBackward.png" Height="24" />
                </Button>

                <Button Command="{Binding MoveForwardCommand}" ToolTip="Выше" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/MoveFront.png" Height="24" />
                </Button>

                <Button Command="{Binding MoveBackwardCommand}" ToolTip="Ниже" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/MoveBack.png" Height="24" />
                </Button>
                
                <StackPanel Orientation="Horizontal" Visibility="Hidden">
                    <Image Source="/Controls;component/Images/shapes-align-hori-center.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-hori-left.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-hori-right.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-verti-bottom.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-verti-middle.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-verti-top.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-flip-horizontal.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-flip-vertical.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-rotate-anticlockwise.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-rotate-clockwise.png" Height="24" />
                </StackPanel>

                <Button Command="{Binding CopyCommand}" ToolTip="Копировать" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Copy.png" Height="24" />
                </Button>
                <Button Command="{Binding CutCommand}" ToolTip="Вырезать" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Cut.png" Height="24" />
                </Button>
                <Button Command="{Binding PasteCommand}" ToolTip="Вставить" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Paste.png" Height="24" />
                </Button>
                <Button Command="{Binding UndoCommand}" ToolTip="Отменить" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Close.png" Height="24" />
                </Button>
                <Button Command="{Binding RedoCommand}" ToolTip="Применить" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Close.png" Height="24" />
                </Button>

            </StackPanel>
            <s:Toolbox />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Views:PlansTreeView Grid.Column="0" />
            <Views:PlanDesignerView Grid.Column="1" />
        </Grid>
    </Grid>
</UserControl>
