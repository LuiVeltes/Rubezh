<UserControl x:Class="PlansModule.Views.PlansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="clr-namespace:DiagramDesigner">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PlansModule;component/Designer/Rectangle/ResizeChrome.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/PlansModule;component/Designer/Designer/DesignerItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Add Point" Click="OnAddPolygonPoint" />
            <s:PolygonToolbox />
            <Button Content="Test" Command="{Binding TestCommand}" />
        </StackPanel>
        <Grid Grid.Row="1">
            <ContentControl Content="{Binding DesignerCanvas}" />
        </Grid>
    </Grid>
</UserControl>
