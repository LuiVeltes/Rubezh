<UserControl x:Class="PlansModule.Views.PlansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:PlansModule.Views"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Views:PlansTree Grid.Column="0" />
        <Views:PlanCanvasView  Grid.Column="1" />
        <Views:PropertiesView Grid.Column="2" Grid.Row="1"/>
        <GridSplitter Grid.Column="2"  Background="Gray"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Stretch"
                          
                          Width="3" />
        <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Stretch"
                          Background="LightGray"
                          Width="3" />

    </Grid>

</UserControl>
