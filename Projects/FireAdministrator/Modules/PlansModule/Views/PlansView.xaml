<UserControl x:Class="PlansModule.Views.PlansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="clr-namespace:PlansModule.Designer"
             xmlns:Views="clr-namespace:PlansModule.Views">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button Content="Устройства" Width="100" Command="{Binding ShowDevicesCommand}" />
                <Button Content="Вверх" Width="100" Command="{Binding MoveToFrontCommand}" />
                <Button Content="Вниз" Width="100" Command="{Binding SendToBackCommand}" />
                <Button Content="Выше" Width="100" Command="{Binding MoveForwardCommand}" />
                <Button Content="Ниже" Width="100" Command="{Binding MoveBackwardCommand}" />
            </StackPanel>
            <s:Toolbox />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Views:PlansTreeView Grid.Column="0" />
            <Views:PlanDesignerView Grid.Column="1" />
        </Grid>
    </Grid>
</UserControl>
