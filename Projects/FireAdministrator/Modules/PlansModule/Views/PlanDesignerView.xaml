<UserControl x:Class="PlansModule.Views.PlanDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="Gray">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Command="{Binding PlanDesignerViewModel.ZoomInCommand}" ToolTip="Увеличить" Style="{StaticResource ToolarButtonStyle}">
                <Image Source="/Controls;component/Images/ZoomIn.png" Height="24" />
            </Button>
            <Slider Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Minimum="1" Maximum="10" Value="1" x:Name="slider"/>
            <Button Grid.Row="2" Command="{Binding PlanDesignerViewModel.ZoomOutCommand}" ToolTip="Уменьшить" Style="{StaticResource ToolarButtonStyle}">
                <Image Source="/Controls;component/Images/ZoomOut.png" Height="24" />
            </Button>
        </Grid>

        <ScrollViewer Name="scrollViewer" Grid.Column="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
            <Grid Name="grid" RenderTransformOrigin="0.5,0.5">
                <ContentControl Name="_contentControl" Background="White" HorizontalAlignment="Left" Content="{Binding DesignerCanvas}" />
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
