<UserControl x:Class="PlansModule.Views.DevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataGrid Name="_devicesDataGrid" ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}">
        <DataGrid.Columns>
            <DataGridTemplateColumn Header="Тип Устройства" MinWidth="250">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="{Binding Level, Converter={StaticResource LevelToMarginConverter}}">
                                <StackPanel Visibility="{Binding HasChildren, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <CheckBox Style="{StaticResource TreeExpanderStyle}" IsChecked="{Binding IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding IsOnPlan}" />
                                <StackPanel Visibility="{Binding Device.Driver.HasImage, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Image Source="{Binding Device.Driver.ImageSource}" Width="16" Height="16" Margin="5, 0, 5, 0"
                                               PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding Device.Driver.ShortName}">
                                    <TextBlock.Style>
                                        <Style>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Device.Driver.IsPlaceable}" Value="True">
                                                    <DataTrigger.Setters>
                                                        <Setter Property="TextBlock.FontWeight" Value="Bold" />
                                                    </DataTrigger.Setters>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Button Content="Показать" Command="{Binding ShowOnPlanCommand}" Margin="1" />
                            </StackPanel>

                        </Grid>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <DataGridTextColumn Header="Адрес" MinWidth="50" Binding="{Binding Device.PresentationAddress}" />
            <DataGridTextColumn Header="Зона" MinWidth="50" Binding="{Binding PresentationZone}" />
            <DataGridTextColumn Header="Примечание" Width="*" Binding="{Binding Device.Description}" />

        </DataGrid.Columns>
    </DataGrid>
</UserControl>
