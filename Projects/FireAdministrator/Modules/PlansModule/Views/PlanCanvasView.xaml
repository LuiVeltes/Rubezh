        <ScrollViewer Name="scrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="1" Grid.Column="1"
                      Background="White"
                      ScrollChanged="scrollViewer_ScrollChanged"
                      IsEnabled="True"
                      >
            <Grid Name="grid">
                <Canvas Name ="MainCanvas" DataContext="{Binding MainCanvas}" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="MainCanvas_Loaded"
                MouseMove="MainCanvas_MouseMove"
                MouseLeftButtonDown="MainCanvas_MouseLeftButtonDown"
                MouseLeftButtonUp="MainCanvas_MouseLeftButtonUp"
                RenderTransformOrigin="0.5,0.5"
                >
                <Canvas.LayoutTransform >
                    <ScaleTransform x:Name="scaleTransform">
                        
                    </ScaleTransform>
                </Canvas.LayoutTransform>
                </Canvas>
