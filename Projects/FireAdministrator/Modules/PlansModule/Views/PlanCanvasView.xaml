            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
 
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!--
            <RowDefinition Height="30"/>
            -->
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        
        <Slider  Grid.Column="0" Grid.RowSpan="2" Orientation="Vertical" Visibility="{Binding CanZoom, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                    HorizontalAlignment="Right" Minimum="1" Maximum="10" Value="1" x:Name="slider" ValueChanged="slider_ValueChanged"/>
