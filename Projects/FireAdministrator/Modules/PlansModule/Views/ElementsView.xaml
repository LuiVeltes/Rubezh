<UserControl x:Class="PlansModule.Views.ElementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding ElementGroups}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Expander Header="{Binding Name}" IsExpanded="{Binding IsExpanded}" Visibility="{Binding HasElements, Converter={StaticResource BoolToVisibilityConverter}}" Foreground="White">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <WrapPanel Grid.Row="0">
                                <CheckBox IsChecked="{Binding IsAllVisible}" Margin="1" />
                                <CheckBox IsChecked="{Binding IsAllSelectable}" Margin="1" />
                            </WrapPanel>
                            <DataGrid Grid.Row="1" ItemsSource="{Binding Elements}" SelectedItem="{Binding SelectedElement}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox />
                                                <CheckBox />
                                                <TextBlock Text="Hello" />
                                            </StackPanel>
                                        </DataGridTemplateColumn.Header>    
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox IsChecked="{Binding IsVisible}" Margin="1" />
                                                    <CheckBox IsChecked="{Binding IsSelectable}" Margin="1" />
                                                    <TextBlock Text="{Binding Name}" Margin="1" />
                                                    <StackPanel.InputBindings>
                                                        <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding ShowOnPlanCommand}" />
                                                    </StackPanel.InputBindings>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Expander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>