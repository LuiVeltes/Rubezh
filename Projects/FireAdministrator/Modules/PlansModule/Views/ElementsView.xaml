<UserControl x:Class="PlansModule.Views.ElementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <DataTemplate x:Key="ElementDataTemplate">
            <WrapPanel>
                <CheckBox IsChecked="{Binding IsVisible}" Margin="1" />
                <CheckBox IsChecked="{Binding IsSelectable}" Margin="1" />
                <TextBlock Text="{Binding Name}" Margin="1" />
                <Button Content="Показать" Command="{Binding ShowOnPlanCommand}" Margin="1" />
            </WrapPanel>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Expander Header="Элементы" Visibility="{Binding HasElements, Converter={StaticResource BoolToVisibilityConverter}}" Foreground="White">
                <StackPanel>
                    <WrapPanel>
                        <CheckBox IsChecked="{Binding IsElementsVisible}" Margin="1" />
                        <CheckBox IsChecked="{Binding IsElementsSelectable}" Margin="1" />
                    </WrapPanel>
                    <ListBox ItemsSource="{Binding Elements}" ItemTemplate="{StaticResource ElementDataTemplate}" />
                </StackPanel>
            </Expander>
            <Expander Header="Зоны" Visibility="{Binding HasZones, Converter={StaticResource BoolToVisibilityConverter}}" Foreground="White">
                <StackPanel>
                    <WrapPanel>
                        <CheckBox IsChecked="{Binding IsZonesVisible}" Margin="1" />
                        <CheckBox IsChecked="{Binding IsZonesSelectable}" Margin="1" />
                    </WrapPanel>
                    <ListBox ItemsSource="{Binding Zones}" ItemTemplate="{StaticResource ElementDataTemplate}" />
                </StackPanel>
            </Expander>
            <Expander Header="Подпланы" Visibility="{Binding HasSubPlans, Converter={StaticResource BoolToVisibilityConverter}}" Foreground="White">
                <StackPanel>
                    <WrapPanel>
                        <CheckBox IsChecked="{Binding IsSubPlansVisible}" Margin="1" />
                        <CheckBox IsChecked="{Binding IsSubPlansSelectable}" Margin="1" />
                    </WrapPanel>
                    <ListBox ItemsSource="{Binding SubPlans}" ItemTemplate="{StaticResource ElementDataTemplate}" />
                </StackPanel>
            </Expander>
            <Expander Header="Устройства" Visibility="{Binding HasDevices, Converter={StaticResource BoolToVisibilityConverter}}" Foreground="White">
                <StackPanel>
                    <WrapPanel>
                        <CheckBox IsChecked="{Binding IsDevicesVisible}" Margin="1" />
                        <CheckBox IsChecked="{Binding IsDevicesSelectable}" Margin="1" />
                    </WrapPanel>
                    <ListBox ItemsSource="{Binding Devices}" ItemTemplate="{StaticResource ElementDataTemplate}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>