<UserControl x:Class="PlansModule.Views.ToolboxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Orientation="Horizontal">
        <Border CornerRadius="5" BorderThickness="0" Margin="2" Background="{DynamicResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding ShowDevicesCommand}" ToolTip="Устройства" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/Tree.png" Height="24" />
                </Button>

                <Button Command="{Binding ShowElementsCommand}" ToolTip="Слои" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/Layers.png" Height="24" />
                </Button>
            </StackPanel>
        </Border>

        <Border CornerRadius="5" BorderThickness="0" Margin="2" Background="{DynamicResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding CopyCommand}" ToolTip="Копировать" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Copy.png" Height="24" />
                </Button>
                <Button Command="{Binding CutCommand}" ToolTip="Вырезать" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Cut.png" Height="24" />
                </Button>
                <Button Command="{Binding PasteCommand}" ToolTip="Вставить" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Paste.png" Height="24" />
                </Button>
                <Button Command="{Binding UndoCommand}" ToolTip="Отменить" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Undo.png" Height="24" />
                </Button>
                <Button Command="{Binding RedoCommand}" ToolTip="Применить" Style="{StaticResource ToolarButtonStyle}" Margin="2">
                    <Image Source="/Controls;component/Images/Redo.png" Height="24" />
                </Button>
            </StackPanel>
        </Border>

        <Border CornerRadius="5" BorderThickness="0" Margin="2" Background="{DynamicResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding PlanDesignerViewModel.MoveToFrontCommand}" ToolTip="Вверх" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/MoveForward.png" Height="24" />
                </Button>

                <Button Command="{Binding PlanDesignerViewModel.SendToBackCommand}" ToolTip="Вниз" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/MoveBackward.png" Height="24" />
                </Button>

                <Button Command="{Binding PlanDesignerViewModel.MoveForwardCommand}" ToolTip="Выше" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/MoveFront.png" Height="24" />
                </Button>

                <Button Command="{Binding PlanDesignerViewModel.MoveBackwardCommand}" ToolTip="Ниже" Style="{StaticResource ToolarButtonStyle}">
                    <Image Source="/Controls;component/Images/MoveBack.png" Height="24" />
                </Button>
            </StackPanel>
        </Border>

        <Border CornerRadius="5" BorderThickness="0" Margin="2" Background="{DynamicResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Controls;component/Images/Rectangle.png" Name="ElementRectangle" ToolTip="Прямоугольник" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" Height="24" Margin="2" />
                <Image Source="/Controls;component/Images/Ellipse.png" Name="ElementEllipse" ToolTip="Эллипс" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" Height="24" Margin="2" />
                <Image Source="/Controls;component/Images/Polygon.png" Name="ElementPolygon" ToolTip="Многоугольник" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" Height="24" Margin="2" />
                <Image Source="/Controls;component/Images/Font.png" Name="ElementTextBlock" ToolTip="Текст" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" Height="24" Margin="2" />
                <Image Source="/Controls;component/Images/ZoneRectangle.png" Name="ElementRectangleZone" ToolTip="Зона" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" Height="24" Margin="2" />
                <Image Source="/Controls;component/Images/ZonePolygon.png" Name="ElementPolygonZone" ToolTip="Зона" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" Height="24" Margin="2" />
                <Image Source="/Controls;component/Images/SubPlanPolygon.png" Name="ElementSubPlan" ToolTip="Подплан" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" Height="24" Margin="2" />
            </StackPanel>
        </Border>

        <Border CornerRadius="5" BorderThickness="0" Margin="2" Background="{DynamicResource BackgroundBrush}" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/shapes-align-hori-center.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-hori-left.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-hori-right.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-verti-bottom.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-verti-middle.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-verti-top.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-flip-horizontal.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-flip-vertical.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-rotate-anticlockwise.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-rotate-clockwise.png" Height="24" />
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
    
</UserControl>
