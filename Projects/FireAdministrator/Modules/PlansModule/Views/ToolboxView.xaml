<UserControl x:Class="PlansModule.Views.ToolboxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls">
    
    <StackPanel Orientation="Horizontal">
        <Border CornerRadius="5" Margin="2" Background="{DynamicResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal">
                <Controls:ToolBarButton Command="{Binding ShowDevicesCommand}" ToolTip="Устройства" ImageSource="/Controls;component/Images/Tree.png" />
                <Controls:ToolBarButton Command="{Binding ShowElementsCommand}" ToolTip="Слои" ImageSource="/Controls;component/Images/Layers.png" />
            </StackPanel>
        </Border>

        <Border CornerRadius="5" Margin="2" Background="{DynamicResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal">
                <Controls:ToolBarButton Command="{Binding CopyCommand}" ToolTip="Копировать 2" ImageSource="/Controls;component/Images/Copy.png" />
                <Controls:ToolBarButton Name="copyButton" Command="{Binding CopyCommand}" ToolTip="Копировать" ImageSource="/Controls;component/Images/Copy.png" />
                <Controls:ToolBarButton Name="cutButton" Command="{Binding CutCommand}" ToolTip="Вырезать" ImageSource="/Controls;component/Images/Cut.png" />
                <Controls:ToolBarButton Name="pasteButton" Command="{Binding PasteCommand}" ToolTip="Вставить" ImageSource="/Controls;component/Images/Paste.png" />
                <Controls:ToolBarButton Name="undoButton" Command="{Binding UndoCommand}" ToolTip="Отменить" ImageSource="/Controls;component/Images/Undo.png" />
                <Controls:ToolBarButton Name="redoButton" Command="{Binding RedoCommand}" ToolTip="Применить" ImageSource="/Controls;component/Images/Redo.png" />
            </StackPanel>
        </Border>

        <Border CornerRadius="5" Margin="2" Background="{DynamicResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal">
                <Controls:ToolBarButton Command="{Binding PlanDesignerViewModel.MoveToFrontCommand}" ToolTip="Вверх" ImageSource="/Controls;component/Images/MoveForward.png" />
                <Controls:ToolBarButton Command="{Binding PlanDesignerViewModel.SendToBackCommand}" ToolTip="Вниз" ImageSource="/Controls;component/Images/MoveBackward.png" />
                <Controls:ToolBarButton Command="{Binding PlanDesignerViewModel.MoveForwardCommand}" ToolTip="Выше" ImageSource="/Controls;component/Images/MoveFront.png" />
                <Controls:ToolBarButton Command="{Binding PlanDesignerViewModel.MoveBackwardCommand}" ToolTip="Ниже" ImageSource="/Controls;component/Images/MoveBack.png" />
            </StackPanel>
        </Border>

        <Border CornerRadius="5" Margin="2" Background="{DynamicResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal">
                <Controls:ToolBarButton ImageSource="/Controls;component/Images/Rectangle.png" Name="ElementPolyLine" ToolTip="Линия" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" />
                <Controls:ToolBarButton ImageSource="/Controls;component/Images/Rectangle.png" Name="ElementRectangle" ToolTip="Прямоугольник" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" />
                <Controls:ToolBarButton ImageSource="/Controls;component/Images/Ellipse.png" Name="ElementEllipse" ToolTip="Эллипс" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" />
                <Controls:ToolBarButton ImageSource="/Controls;component/Images/Polygon.png" Name="ElementPolygon" ToolTip="Многоугольник" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" />
                <Controls:ToolBarButton ImageSource="/Controls;component/Images/Font.png" Name="ElementTextBlock" ToolTip="Текст" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" />
                <Controls:ToolBarButton ImageSource="/Controls;component/Images/ZoneRectangle.png" Name="ElementRectangleZone" ToolTip="Зона" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" />
                <Controls:ToolBarButton ImageSource="/Controls;component/Images/ZonePolygon.png" Name="ElementPolygonZone" ToolTip="Зона" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" />
                <Controls:ToolBarButton ImageSource="/Controls;component/Images/SubPlanPolygon.png" Name="ElementSubPlan" ToolTip="Подплан" PreviewMouseDown="On_PreviewMouseDown" MouseMove="On_MouseMove" />
            </StackPanel>
        </Border>

        <Border CornerRadius="5" Margin="2" Background="{DynamicResource BackgroundBrush}" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Controls;component/Images/shapes-align-hori-center.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-hori-left.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-hori-right.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-verti-bottom.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-verti-middle.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-align-verti-top.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-flip-horizontal.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-flip-vertical.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-rotate-anticlockwise.png" Height="24" />
                    <Image Source="/Controls;component/Images/shapes-rotate-clockwise.png" Height="24" />
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
    
</UserControl>
