<UserControl x:Class="SecurityModule.Views.RoleDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:SecurityModule.Converters"
             MinWidth="400" MinHeight="500">
    
    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Content="Ok" Command="{Binding SaveCommand}" Margin="2" Width="100" IsDefault="True" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Margin="2" Width="100" />
        </WrapPanel>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Название" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" MaxLength="100" Margin="2" VerticalAlignment="Center" />
            </Grid>
            <Label Content="Права:" FontWeight="Bold" Margin="0,11,0,3" />
            <ListBox ItemsSource="{Binding Permissions,
                                           Converter={StaticResource CollectionViewFactoryConverter},
                                           ConverterParameter=PermissionTypeName}"
                     Padding="7">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsEnable}" Content="{Binding PermissionTypeName}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </DockPanel>
</UserControl>