<UserControl x:Class="SecurityModule.Views.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:WpfToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
             mc:Ignorable="d" 
             d:DesignHeight="311" d:DesignWidth="432">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" >
			<Button Content="Добавить" Command="{Binding AddUserCommand}" HorizontalAlignment="Left" Width="100" Margin="10px" />
			<Button Content="Удалить" Command="{Binding DeleteUserCommand}" HorizontalAlignment="Left" Width="100" Margin="10px" />
			<Button Content="Редактировать" Command="{Binding EditUserCommand}" HorizontalAlignment="Left" Width="100" Margin="10px"/>
		</StackPanel>
		<WpfToolkit:DataGrid Margin="5,5,12,5" ItemsSource="{Binding Users}"  
                            ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" CellStyle="{StaticResource DataGridSelectionStyle}" 
                            AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="FullRow" HeadersVisibility="Column"
                            IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserSortColumns="False"
                            HorizontalGridLinesBrush="WhiteSmoke" VerticalGridLinesBrush="WhiteSmoke"
                            Background="White" BorderBrush="Black" BorderThickness="0"
                            RowHeight="20" Grid.Row="1">
			<WpfToolkit:DataGrid.Columns>
				<WpfToolkit:DataGridTextColumn Header="Имя" Width="1*" Binding="{Binding Name}" />
				<WpfToolkit:DataGridTextColumn Header="Полное имя" Width="1*" Binding="{Binding FullName}" />
			</WpfToolkit:DataGrid.Columns>
			<WpfToolkit:DataGrid.SelectedItem>
					<Binding Path="SelectedUser"/>
			</WpfToolkit:DataGrid.SelectedItem>
		</WpfToolkit:DataGrid>
	</Grid>
</UserControl>
