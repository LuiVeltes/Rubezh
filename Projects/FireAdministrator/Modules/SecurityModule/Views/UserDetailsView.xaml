<UserControl x:Class="SecurityModule.Views.UserDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="500">
    <UserControl.Resources></UserControl.Resources>
    <DockPanel Margin="10">
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Content="Ok" Command="{Binding SaveCommand}" Margin="2" Width="100" IsDefault="True" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Margin="2" Width="100" />
        </WrapPanel>
        <TabControl Name="tabControl" BorderThickness="0" Padding="11" SelectedIndex="0" Background="{x:Null}">
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Background" Value="{x:Null}" />
                </Style>
            </TabControl.ItemContainerStyle>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Общее" />
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0"
                               Text="     Имя пользователя:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <TextBox Grid.Column="1" Grid.Row="0"
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5" />
                    <TextBlock Grid.Column="0" Grid.Row="1"
                               Text="Логин:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <TextBox Grid.Column="1" Grid.Row="1"
                             Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5" />
                    <CheckBox Grid.ColumnSpan="2" Grid.Row="2"
                              Visibility="{Binding IsNotNew, Converter={StaticResource BoolToVisibilityConverter}}"
                              IsChecked="{Binding IsChangePassword, UpdateSourceTrigger=PropertyChanged}"
                              Content="Сменить пароль"
                              HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="0" Grid.Row="3"
                               Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                               Text="Действующий пароль:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <PasswordBox Grid.Column="1" Grid.Row="3"
                             Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="Password_LostFocus" />
                    <TextBlock Grid.Column="0" Grid.Row="4"
                               Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                               Text="Новый пароль:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <PasswordBox Grid.Column="1" Grid.Row="4"
                             Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="NewPassword_LostFocus" />
                    <TextBlock Grid.Column="0" Grid.Row="5"
                               Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                               Text="Подтверждение:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <PasswordBox Grid.Column="1" Grid.Row="5"
                             Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="NewPasswordConfirmition_LostFocus" />
                    <TextBlock Grid.Column="0" Grid.Row="6"
                               Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}"
                               Text="Пароль:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <PasswordBox Grid.Column="1" Grid.Row="6"
                             Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="NewPassword_LostFocus" />
                    <TextBlock Grid.Column="0" Grid.Row="7"
                               Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}"
                               Text="Подтверждение:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <PasswordBox Grid.Column="1" Grid.Row="7"
                             Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="NewPasswordConfirmition_LostFocus" />
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Роль" />
                </TabItem.Header>
                <StackPanel>
                    <ComboBox ItemsSource="{Binding Roles,
                                                    Converter={StaticResource CollectionViewFactoryConverter},
                                                    ConverterParameter=Name}"
                              SelectedItem="{Binding UserRole}"
                              IsEditable="False">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="Права:" FontWeight="Bold" Margin="0,11,0,3" />
                    <ListBox ItemsSource="{Binding Permissions,
                                           Converter={StaticResource CollectionViewFactoryConverter},
                                           ConverterParameter=PermissionTypeName}" Padding="7">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsEnable}" Content="{Binding PermissionTypeName}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>