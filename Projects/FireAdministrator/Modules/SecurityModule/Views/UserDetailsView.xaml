<UserControl x:Class="SecurityModule.Views.UserDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:SecurityModule.Views"
             MinWidth="400" MinHeight="500">
    <TabControl Name="tabControl" BorderThickness="0" Padding="11" SelectedIndex="0">
        <TabItem Header="Общее">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0"
                               Content="    Имя пользователя:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Grid.Row="0"
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5" />
                <Label Grid.Column="0" Grid.Row="1"
                               Content="Логин:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Grid.Row="1"
                             Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5" />
                <CheckBox Grid.Column="1" Grid.Row="2"
                              Visibility="{Binding IsNotNew, Converter={StaticResource BoolToVisibilityConverter}}"
                              IsChecked="{Binding IsChangePassword, UpdateSourceTrigger=PropertyChanged}"
                              Content="Сменить пароль"
                              Foreground="White" />
                <Label Grid.Column="0" Grid.Row="3"
                               Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                               Content="Действующий пароль:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                <PasswordBox Grid.Column="1" Grid.Row="3"
                             Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="Password_LostFocus" />
                <Label Grid.Column="0" Grid.Row="4"
                               Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                               Content="Новый пароль:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                <PasswordBox Grid.Column="1" Grid.Row="4"
                             Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="NewPassword_LostFocus" />
                <Label Grid.Column="0" Grid.Row="5"
                               Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                               Content="Подтверждение:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                <PasswordBox Grid.Column="1" Grid.Row="5"
                             Visibility="{Binding IsChangePassword, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="NewPasswordConfirmition_LostFocus" />
                <Label Grid.Column="0" Grid.Row="6"
                               Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}"
                               Content="Пароль:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                <PasswordBox Grid.Column="1" Grid.Row="6"
                             Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="NewPassword_LostFocus" />
                <Label Grid.Column="0" Grid.Row="7"
                               Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}"
                               Content="Подтверждение:"
                               HorizontalAlignment="Right" VerticalAlignment="Center" />
                <PasswordBox Grid.Column="1" Grid.Row="7"
                             Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}"
                             VerticalAlignment="Center"
                             MaxLength="100" Margin="5"
                             LostFocus="NewPasswordConfirmition_LostFocus" />
            </Grid>
        </TabItem>
        <TabItem Header="Роль">
            <StackPanel>
                <ComboBox ItemsSource="{Binding Roles, Converter={StaticResource CollectionViewFactoryConverter}, ConverterParameter=Name}"
                              SelectedItem="{Binding UserRole}"
                              IsEditable="False">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Label Content="Права:" FontWeight="Bold" Margin="0,11,0,3" />
                <ListBox ItemsSource="{Binding Permissions, Converter={StaticResource CollectionViewFactoryConverter}, ConverterParameter=PermissionTypeName}" Padding="7" Background="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsEnable}" />
                                <TextBlock Text="{Binding PermissionTypeName}" Margin="4, 1, 1, 1" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </TabItem>
        <TabItem Header="Удаленный доступ">
            <Views:RemoteAccessView DataContext="{Binding RemoteAccess}" />
        </TabItem>
    </TabControl>
</UserControl>