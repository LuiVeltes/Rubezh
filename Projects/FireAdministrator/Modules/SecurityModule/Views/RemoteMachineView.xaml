<UserControl x:Class="SecurityModule.Views.RemoteMachineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:SecurityModule.Views"
             MinWidth="350" MinHeight="100">
    <Border CornerRadius="5" Margin="3" Padding="5" Background="{DynamicResource BackgroundBrush}">
        <StackPanel>
            <Grid Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <RadioButton Grid.Column="0" Grid.Row="0" IsChecked="{Binding IsDnsName}" Content="Имя" Foreground="White" VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Grid.Row="0" MaxLength="100" Text="{Binding HostNameOrAddress}" IsEnabled="{Binding IsDnsName}" Margin="2" />
                <RadioButton Grid.Column="0" Grid.Row="1" IsChecked="{Binding IsIpAddress}" Content="IP адрес" Foreground="White" VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Grid.Row="1" Margin="2"
                     Name="addressEditor"
                     PreviewKeyDown="OnPreviewKeyDown"
                     TextChanged="OnTextChanged"
                     SelectionChanged="OnSelectionChanged"
                     LostFocus="OnLostFocus"
                     IsEnabledChanged="OnIsEnabledChanged"
                     PreviewDragEnter="OnPreviewDragEnter"
                     PreviewDragLeave="OnPreviewDragLeave"
                     PreviewDragOver="OnPreviewDragOver"
                     PreviewDrop="OnPreviewDrop"
                     Text="{Binding HostNameOrAddress}"
                     IsEnabled="{Binding IsIpAddress}">
                    <TextBox.ContextMenu>
                        <ContextMenu Visibility="Hidden" />
                    </TextBox.ContextMenu>
                </TextBox>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>