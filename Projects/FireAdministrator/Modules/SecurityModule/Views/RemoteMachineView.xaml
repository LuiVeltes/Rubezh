<UserControl x:Class="SecurityModule.Views.RemoteMachineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:SecurityModule.Views"
             MinWidth="350" MinHeight="150">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Foreground="White"
                    Text="Укажите способ идентификации удаленного компьютера: по сетевому имени или по IP адресу" />
        <Grid Grid.Row="1" Margin="0,17,0,17">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="7" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <RadioButton Grid.Column="0" Grid.Row="0"
                         IsChecked="{Binding IsDnsName}"
                         Margin="0,0,7,0"
                         Content="Имя" Foreground="White" />
            <TextBox Grid.Column="1" Grid.Row="0"
                     MaxLength="100"
                     VerticalAlignment="Center"
                     Text="{Binding HostNameOrAddress}"
                     IsEnabled="{Binding IsDnsName}" />
            <RadioButton Grid.Column="0" Grid.Row="2"
                         IsChecked="{Binding IsIpAddress}"
                         Margin="0,0,7,0" Foreground="White"
                         Content="IP адрес" />
            <TextBox Grid.Column="1" Grid.Row="2"
                     Name="addressRedactor"
                     PreviewKeyDown="OnPreviewKeyDown"
                     TextChanged="OnTextChanged"
                     SelectionChanged="OnSelectionChanged"
                     LostFocus="OnLostFocus"
                     IsEnabledChanged="addressRedactor_IsEnabledChanged"
                     Text="{Binding HostNameOrAddress}"
                     IsEnabled="{Binding IsIpAddress}">
                <TextBox.ContextMenu>
                    <ContextMenu Visibility="Hidden" />
                </TextBox.ContextMenu>
            </TextBox>
        </Grid>
    </Grid>
</UserControl>