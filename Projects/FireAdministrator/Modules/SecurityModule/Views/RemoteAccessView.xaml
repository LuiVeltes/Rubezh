<UserControl x:Class="SecurityModule.Views.RemoteAccessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Converters="clr-namespace:SecurityModule.Converters">
    <UserControl.Resources>
        <Converters:RemoteAccessTypeToStringConverter x:Key="RemoteAccessTypeToStringConverter" />
    </UserControl.Resources>
    
    <StackPanel>
        <TextBlock TextWrapping="Wrap"
                   Margin="0,7,0,0"
                   Text="Можно разрешить или запретить пользователю подключаться к серверу с других компьютеров. Подключение с локального компьютера доступно всегда." />
        <ListBox Margin="0,17,0,7"
                 ItemsSource="{Binding RemoteAccessTypes}"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <RadioButton IsChecked="{Binding IsActive}"
                              Content="{Binding RemoteAccessType,
                                                Converter={StaticResource RemoteAccessTypeToStringConverter}}"
                              Checked="RadioButton_Checked"
                              Margin="1.5" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <DockPanel Name="_computersList" LastChildFill="True">
            <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Left">
                <Button Content="Добавить" Command="{Binding AddCommand}" Margin="2" Width="100" />
                <Button Content="Удалить" Command="{Binding RemoveCommand}" Margin="2" Width="100" />
            </WrapPanel>
            <GroupBox Header="Список компьютеров">
                <ListBox ItemsSource="{Binding HostNameOrAddressList}"
                         SelectedItem="{Binding SelectedHostNameOrAddress}"
                         DataContextChanged="ListBox_DataContextChanged"
                         Height="250"
                         Margin="3"
                         BorderThickness="0" />
            </GroupBox>
        </DockPanel>
    </StackPanel>
</UserControl>