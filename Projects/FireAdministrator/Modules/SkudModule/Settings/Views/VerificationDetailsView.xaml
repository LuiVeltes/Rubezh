<UserControl x:Class="SKDModule.Views.VerificationDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="600" MinHeight="400">

    <TabControl>
        <TabItem Header="Считыватель">
            <DataGrid ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Контроллер" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Parent.Name}" Margin="2" />
                                    <TextBlock Text="{Binding Parent.Address}" Margin="2" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Считыватель" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Margin="2" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </TabItem>
        <TabItem Header="Отображаемые данные сотрудников">
            <Border CornerRadius="5" Background="White">
                <StackPanel Margin="5">
                    <CheckBox Content="Идентификатор" IsChecked="{Binding ShowEmployeeCardID}" Margin="2" />
                    <CheckBox Content="ФИО" IsChecked="{Binding ShowEmployeeName}" Margin="2" />
                    <CheckBox Content="Паспорт" IsChecked="{Binding ShowEmployeePassport}" Margin="2" />
                    <CheckBox Content="Время работы" IsChecked="{Binding ShowEmployeeTime}" Margin="2" />
                    <CheckBox Content="Табельный номер" IsChecked="{Binding ShowEmployeeNo}" Margin="2" />
                    <CheckBox Content="Должность" IsChecked="{Binding ShowEmployeePosition}" Margin="2" />
                    <CheckBox Content="График работы" IsChecked="{Binding ShowEmployeeShedule}" Margin="2" />
                    <CheckBox Content="Подразделение" IsChecked="{Binding ShowEmployeeDepartment}" Margin="2" />
                </StackPanel>
            </Border>
        </TabItem>
        <TabItem Header="Отображаемые данные посетителей">
            <Border CornerRadius="5" Background="White">
                <StackPanel Margin="5">
                    <CheckBox Content="Идентификатор" IsChecked="{Binding ShowGuestCardID}" Margin="2" />
                    <CheckBox Content="ФИО" IsChecked="{Binding ShowGuestName}" Margin="2" />
                    <CheckBox Content="Куда" IsChecked="{Binding ShowGuestWhere}" Margin="2" />
                    <CheckBox Content="Сопровождающий" IsChecked="{Binding ShowGuestConvoy}" Margin="2" />
                </StackPanel>
            </Border>
        </TabItem>
    </TabControl>
</UserControl>