<UserControl x:Class="SKDModule.Views.ControllerDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400">
    <Grid>
        <StackPanel>
            <CheckBox Content="Подтверждение от ДУ в режиме контроль" IsChecked="{Binding IsDUControl}" />
            <StackPanel Visibility="{Binding IsDUControl, Converter={StaticResource BoolToVisibilityConverter}}">
                <CheckBox Content="Верифицировать идентификаторы СОТРУДНИКОВ при проходе" IsChecked="{Binding IsEmployeeDU}" />
                <CheckBox Content="Верифицировать идентификаторы СОТРУДНИКОВ при проходе с НАРУШЕНИЕМ ВРЕМЕНИ" IsChecked="{Binding IsEmployeeDUTime}" />
                <CheckBox Content="Верифицировать идентификаторы СОТРУДНИКОВ при проходе с НАРУШЕНИЕМ ЗОНАЛЬНОСТИ" IsChecked="{Binding IsEmployeeDUZone}" />
                <CheckBox Content="Верифицировать идентификаторы ПОСЕТИТЕЛЕЙ при проходе" IsChecked="{Binding IsGuestDU}" />
                <CheckBox Content="Верифицировать идентификаторы ПОСЕТИТЕЛЕЙ при проходе с НАРУШЕНИЕМ ВРЕМЕНИ" IsChecked="{Binding IsGuestDUTime}" />
                <CheckBox Content="Верифицировать идентификаторы ПОСЕТИТЕЛЕЙ при проходе с НАРУШЕНИЕМ ЗОНАЛЬНОСТИ" IsChecked="{Binding IsGuestDUZone}" />
            </StackPanel>            
        </StackPanel>
    </Grid>
</UserControl>