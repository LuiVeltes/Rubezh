<UserControl x:Class="SoundsModule.Views.SoundsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:XButtons="clr-namespace:Buttons;assembly=Buttons"
             xmlns:Converters="clr-namespace:SoundsModule.Converters" >
    <UserControl.Resources>
        <Converters:SpeakerTypeToStringConverter x:Key="SpeakerTypeToStringConverter" />
        <Converters:SoundToStringConverter x:Key="SoundToStringConverter" />
        <Converters:BoolToStringConverter x:Key="BoolToStringConverter" />
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <DataGrid Margin="5" Grid.Column="0" ItemsSource="{Binding Sounds}" SelectedItem="{Binding SelectedSound}"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}" Style="{StaticResource DataGridStyle}" IsReadOnly="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Состояние" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StateType, Converter={StaticResource StateTypeToStringConverter}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Звук" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SoundName, Converter={StaticResource SoundToStringConverter}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox HorizontalAlignment="Stretch" Width="Auto" ItemsSource="{Binding AvailableSounds}"
                                          SelectedItem="{Binding SoundName, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="PC Speaker" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SpeakerType, Converter={StaticResource SpeakerTypeToStringConverter}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox HorizontalAlignment="Stretch" Width="Auto"
                                          ItemsSource="{Binding AvailableSpeakers}"
                                          SelectedItem="{Binding SpeakerType, Converter={StaticResource SpeakerTypeToStringConverter}, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ., Converter={StaticResource SpeakerTypeToStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Непрерывно" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsContinious, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="1">
            <XButtons:XButton Name="SoundButton" Content="Проверка"  Margin="2" Padding="2" Height="30" Width="100"
                              HorizontalAlignment="Left" Height="30" Width="100"
                              Content="{Binding IsNowPlaying, Converter={StaticResource BoolToStringConverter}}"
                              IsChecked="{Binding IsNowPlaying, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              FontWeight="Black" Background="Black" Command="{Binding PlaySoundCommand}" />
        </Grid>
    </Grid>
</UserControl>