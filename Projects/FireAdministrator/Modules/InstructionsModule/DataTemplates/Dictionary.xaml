<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:InstructionsModule.Views"
                    xmlns:ViewModels="clr-namespace:InstructionsModule.ViewModels">

    <DataTemplate DataType="{x:Type ViewModels:InstructionsViewModel}">
        <Views:InstructionsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:InstructionDetailsViewModel}">
        <Views:InstructionDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:InstructionsMenuViewModel}">
        <Views:InstructionsMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:InstructionZonesViewModel}">
        <Views:InstructionZonesView />
    </DataTemplate>

</ResourceDictionary>