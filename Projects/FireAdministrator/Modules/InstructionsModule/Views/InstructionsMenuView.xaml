<UserControl x:Class="InstructionsModule.Views.InstructionsMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ToolBar Background="Transparent" Height="50">
        <Button Command="{Binding AddCommand}" ToolTip="Добавить">
            <Image Source="/DevicesModule;component/Images/Add.png" Height="32" />
        </Button>

        <Button Command="{Binding RemoveCommand}" ToolTip="Удалить">
            <Image Source="/DevicesModule;component/Images/Delete.png" Height="32" />
        </Button>
        
        <Button Command="{Binding EditCommand}" ToolTip="Редактировать">
            <Image Source="/DevicesModule;component/Images/Edit.png" Height="32" />
        </Button>

        <Button Command="{Binding RemoveAllCommand}" ToolTip="Удалить все инструкции">
            <Image Source="/DevicesModule;component/Images/DeleteAll.png" Height="32" />
        </Button>

    </ToolBar>
</UserControl>
