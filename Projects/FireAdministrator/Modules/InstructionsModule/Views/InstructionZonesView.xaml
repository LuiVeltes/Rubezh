<UserControl x:Class="InstructionsModule.Views.InstructionZonesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:XButtons="clr-namespace:Controls;assembly=Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="432" MinHeight="400" MinWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Список всех зон:" />
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Список зон для инструкции:" />
            <DataGrid Grid.Row="1" Grid.Column="0" ItemsSource="{Binding AvailableZones}" SelectedItem="{Binding SelectedAvailableZone}"
                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" 
                  CellStyle="{StaticResource DataGridCellStyle}" 
                  Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="1*" Binding="{Binding No}" />
                    <DataGridTextColumn Header="Наименование" Width="2*" Binding="{Binding Name}" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                <XButtons:XButton Grid.Column="1" Name="btnAddZone" FontWeight="Black" Background="Black"
                              Width="50" Height="30" VerticalAlignment="Center" Command="{Binding AddZoneCommand}">
                    <XButtons:XButton.Content>
                        <Image Source="/DevicesModule;component/Images/RigthArrow.png" />
                    </XButtons:XButton.Content>
                    <XButtons:XButton.ToolTip>
                        <TextBlock Text="Добавить зону" />
                    </XButtons:XButton.ToolTip>
                </XButtons:XButton>
                <XButtons:XButton Grid.Column="1" Name="btnAddAllZone" FontWeight="Black" Background="Black"
                              Width="50" Height="30" VerticalAlignment="Center" Command="{Binding AddAllZoneCommand}">
                    <XButtons:XButton.Content>
                        <Image Source="/DevicesModule;component/Images/RigthArrow.png" />
                    </XButtons:XButton.Content>
                    <XButtons:XButton.ToolTip>
                        <TextBlock Text="Добавить все зоны" />
                    </XButtons:XButton.ToolTip>
                </XButtons:XButton>
                <XButtons:XButton Grid.Column="1" Name="btnRemoveZone" FontWeight="Black" Background="Black"
                              Width="50" Height="30" VerticalAlignment="Center" Command="{Binding RemoveZoneCommand}">
                    <XButtons:XButton.Content>
                        <Image Source="/DevicesModule;component/Images/LeftArrow.png" />
                    </XButtons:XButton.Content>
                    <XButtons:XButton.ToolTip>
                        <TextBlock Text="Удалить зону" />
                    </XButtons:XButton.ToolTip>
                </XButtons:XButton>
                <XButtons:XButton Grid.Column="1" Name="btnRemoveAllZone" FontWeight="Black" Background="Black"
                              Width="50" Height="30" VerticalAlignment="Center" Command="{Binding RemoveAllZoneCommand}">
                    <XButtons:XButton.Content>
                        <Image Source="/DevicesModule;component/Images/LeftArrow.png" />
                    </XButtons:XButton.Content>
                    <XButtons:XButton.ToolTip>
                        <TextBlock Text="Удалить все зоны" />
                    </XButtons:XButton.ToolTip>
                </XButtons:XButton>
            </StackPanel>
            <DataGrid Grid.Row="1" Grid.Column="2" ItemsSource="{Binding InstructionZones}" SelectedItem="{Binding SelectedInstructionZone}"
                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" IsReadOnly="False"
                  CellStyle="{StaticResource DataGridCellStyle}" 
                  Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="1*" Binding="{Binding No}" />
                    <DataGridTextColumn Header="Наименование" Width="2*" Binding="{Binding Name}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <XButtons:XButton Grid.Column="1" Name="btnOk" FontWeight="Black" Background="Black"
                              Width="80" Height="30" VerticalAlignment="Center" 
                              Command="{Binding SaveCommand}" Content="OK"/>
            <XButtons:XButton Grid.Column="1" Name="btnCancel" FontWeight="Black" Background="Black"
                              Width="80" Height="30" VerticalAlignment="Center" 
                              Command="{Binding CancelCommand}" Content="Отмена"/>
        </StackPanel>
    </Grid>
</UserControl>
