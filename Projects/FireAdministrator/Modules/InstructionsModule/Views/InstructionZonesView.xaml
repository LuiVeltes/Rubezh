<UserControl x:Class="InstructionsModule.Views.InstructionZonesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:XButtons="clr-namespace:Buttons;assembly=Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="428" d:DesignWidth="381" MinHeight="400" MinWidth="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0" ItemsSource="{Binding AvailableZones}" SelectedItem="{Binding SelectedAvailableZone}"
                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" 
                  CellStyle="{StaticResource DataGridCellStyle}" 
                  Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="1*" Binding="{Binding No}" />
                    <DataGridTextColumn Header="Наименование" Width="2*" Binding="{Binding Name}" />
                    <DataGridTextColumn  Header="Примечание" Width="2*" Binding="{Binding Description}" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                <XButtons:XButton Grid.Column="1" Name="btnAddZone" FontWeight="Black" Background="Black"
                              Width="50" Height="30" VerticalAlignment="Center" Command="{Binding AddZoneCommand}">
                    <XButtons:XButton.Content>
                        <Image Source="/DevicesModule;component/Images/RigthArrow.png" />
                    </XButtons:XButton.Content>
                </XButtons:XButton>
                <XButtons:XButton Grid.Column="1" Name="btnRemoveZone" FontWeight="Black" Background="Black"
                              Width="50" Height="30" VerticalAlignment="Center" Command="{Binding RemoveZoneCommand}">
                    <XButtons:XButton.Content>
                        <Image Source="/DevicesModule;component/Images/LeftArrow.png" />
                    </XButtons:XButton.Content>
                </XButtons:XButton>
            </StackPanel>
            <DataGrid Grid.Column="2" ItemsSource="{Binding Zones}" SelectedItem="{Binding SelectedZone}"
                  ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" 
                  CellStyle="{StaticResource DataGridCellStyle}" 
                  Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="1*" Binding="{Binding ZoneNo}" />
                    <DataGridTextColumn Header="Инструкция" Width="2*" Binding="{Binding Text}" />
                    <DataGridTextColumn Header="Назначение" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Label Content="Текст инструкции:" />
                <TextBox Name="txtInstruction" Text="{Binding Text}"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <XButtons:XButton Grid.Column="1" Name="btnAddDevice" FontWeight="Black" Background="Black"
                              Width="30" Height="25" VerticalAlignment="Center" Command="{Binding AddInstructionCommand}">
                        <XButtons:XButton.Content>
                            <Image Source="/DevicesModule;component/Images/Add.png" />
                        </XButtons:XButton.Content>
                    </XButtons:XButton>
                    <XButtons:XButton Grid.Column="1" Name="btnDeleteDevice" FontWeight="Black" Background="Black"
                              Width="30" Height="25" VerticalAlignment="Center">
                        <XButtons:XButton.Content>
                            <Image Source="/DevicesModule;component/Images/Delete.png" />
                        </XButtons:XButton.Content>
                    </XButtons:XButton>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
