<UserControl x:Class="InstructionsModule.Views.InstructionsDevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Controls;assembly=Controls"
             MinWidth="700" MinHeight="370">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Controls:ScrollDataGrid Grid.Column="0" ItemsSource="{Binding InstructionDevices}" SelectedItem="{Binding SelectedInstructionDevice}"
                  AutoGenerateColumns="False" MouseDoubleClick="SelectedInstructionDeviceDoubleClick">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Тип Устройства" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Driver.ImageSource}" Width="16" Height="16" Margin="5, 0, 5, 0" />
                                <TextBlock Text="{Binding Driver.ShortName}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Адрес" Width="70" Binding="{Binding DottedAddress}" />
            </DataGrid.Columns>
        </Controls:ScrollDataGrid>
        <StackPanel Grid.Column="1" Margin="2">
            <Controls:ToolBarButton Command="{Binding AddOneCommand}" ToolTip="Добавить" ImageSource="/Controls;component/Images/Left.png" />
            <Controls:ToolBarButton Command="{Binding RemoveOneCommand}" ToolTip="Удалить" ImageSource="/Controls;component/Images/Right.png" />
            <Controls:ToolBarButton Command="{Binding AddAllCommand}" ToolTip="Добавить все" ImageSource="/Controls;component/Images/LeftLeft.png" />
            <Controls:ToolBarButton Command="{Binding RemoveAllCommand}" ToolTip="Удалить все" ImageSource="/Controls;component/Images/RightRight.png" />
        </StackPanel>
        <Controls:ScrollDataGrid Grid.Column="2" ItemsSource="{Binding AvailableDevices}" SelectedItem="{Binding SelectedAvailableDevice}"
                  AutoGenerateColumns="False" MouseDoubleClick="SelectedAvailableDeviceDoubleClick">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Тип Устройства" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Driver.ImageSource}" Width="16" Height="16" Margin="5, 0, 5, 0" />
                                <TextBlock Text="{Binding Driver.ShortName}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Адрес" Width="70" Binding="{Binding DottedAddress}" />
            </DataGrid.Columns>
        </Controls:ScrollDataGrid>
    </Grid>
</UserControl>