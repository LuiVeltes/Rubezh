<UserControl x:Class="VideoModule.Views.AutoSearchCamerasView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinHeight="600" MinWidth="600">
	<Grid>
		<DataGrid ItemsSource="{Binding AutoSearchCameras}" SelectedItem="{Binding SelectedAutoSearchCamera}">
			<DataGrid.Columns>
				<DataGridTextColumn Width="120" Binding="{Binding DeviceSearchInfo.IpAddress}" Header="IP-Адрес" />
				<DataGridTextColumn Width="120" Binding="{Binding DeviceSearchInfo.DeviceType}" Header="Тип" />
				<DataGridTextColumn Width="120" Binding="{Binding DeviceSearchInfo.Port}" Header="Порт" />
				<DataGridTextColumn Width="120" Binding="{Binding DeviceSearchInfo.SerialNo}" Header="Серийный номер" />
				<DataGridTemplateColumn Header="Добавить" Width="1*">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<CheckBox HorizontalAlignment="Center" IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
									  IsEnabled="{Binding Path=IsAdded, Converter={StaticResource InverseBooleanConverter}}"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>
