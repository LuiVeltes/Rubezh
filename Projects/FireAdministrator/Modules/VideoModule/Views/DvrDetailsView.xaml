<UserControl x:Class="VideoModule.Views.DvrDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
             MinWidth="400" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" CornerRadius="5" Padding="5" Background="{DynamicResource BackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Название" HorizontalAlignment="Right" />
                <Label Grid.Row="1" Grid.Column="0" Content="Адрес" HorizontalAlignment="Right" />
                <Label Grid.Row="2" Grid.Column="0" Content="Порт" HorizontalAlignment="Right" />
                <Label Grid.Row="3" Grid.Column="0" Content="Имя пользователя" HorizontalAlignment="Right" />
                <Label Grid.Row="4" Grid.Column="0" Content="Пароль" HorizontalAlignment="Right" />
                <Label Grid.Row="5" Grid.Column="0" Content="Одиночная камера" HorizontalAlignment="Right" />
                <Label Grid.Row="6" Grid.Column="0" Content="Добавить каналов" HorizontalAlignment="Right" Visibility="{Binding IsChannelsCountVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Label Grid.Row="6" Grid.Column="0" Content="Состояние" HorizontalAlignment="Right" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Label Grid.Row="7" Grid.Column="0" Content="Зоны" HorizontalAlignment="Right" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Label Grid.Row="8" Grid.Column="0" Content="Отступ слева" HorizontalAlignment="Right" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Label Grid.Row="9" Grid.Column="0" Content="Отступ справа" HorizontalAlignment="Right" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Label Grid.Row="10" Grid.Column="0" Content="Ширина" HorizontalAlignment="Right" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Label Grid.Row="11" Grid.Column="0" Content="Высота" HorizontalAlignment="Right" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding CameraTypes}" Margin="2" >
                    SelectedItem="{Binding SelectedCameraType, UpdateSourceTrigger=PropertyChanged}" Margin="2">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ., Converter={StaticResource XStateClassToStringConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                <extToolkit:IntegerUpDown Grid.Row="6" Grid.Column="1" Value="{Binding ChannelsCount}" Minimum="1" Maximum="32" Margin="2" Visibility="{Binding IsChannelsCountVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                <ComboBox Grid.Row="6" Grid.Column="1" ItemsSource="{Binding StateClasses}"
					  SelectedItem="{Binding SelectedStateClass, UpdateSourceTrigger=PropertyChanged}" Margin="2" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ., Converter={StaticResource XStateClassToStringConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" Margin="2" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}">
					<Hyperlink Command="{Binding ShowZonesCommand}" Style="{StaticResource HyperlinkStyle}">
						<TextBlock Margin="2">
							<TextBlock.Style>
								<Style>
									<Setter Property="TextBlock.Text" Value="{Binding PresentationZones}" />
									<Style.Triggers>
										<DataTrigger Binding="{Binding PresentationZones}" Value="">
											<Setter Property="TextBlock.Text" Value="Нажмите для выбора зон" />
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</TextBlock.Style>
						</TextBlock>		 
					</Hyperlink>
				</TextBlock>
                <extToolkit:IntegerUpDown Grid.Row="8" Grid.Column="1" Value="{Binding Left}" Minimum="0" Maximum="10000" Margin="2" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <extToolkit:IntegerUpDown Grid.Row="9" Grid.Column="1" Value="{Binding Top}" Minimum="0" Maximum="10000" Margin="2" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <extToolkit:IntegerUpDown Grid.Row="10" Grid.Column="1" Value="{Binding Width}" Minimum="100" Maximum="1000" Margin="2" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <extToolkit:IntegerUpDown Grid.Row="11" Grid.Column="1" Value="{Binding Height}" Minimum="100" Maximum="1000" Margin="2" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Button Grid.Row="12" Grid.Column="1" Content="Предпросмотр" Margin="2"
                        IsEnabled="{Binding IsConnected, UpdateSourceTrigger=PropertyChanged}" Command="{Binding ShowCommand}" Visibility="{Binding IsCamera, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
