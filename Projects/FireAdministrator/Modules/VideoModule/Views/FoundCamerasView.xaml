<UserControl x:Class="VideoModule.Views.FoundCamerasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinHeight="600" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding FoundCameras}" SelectedItem="{Binding SelectedFoundCamera}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="120" Binding="{Binding Address}" Header="IP-Адрес" />
                <DataGridTextColumn Width="120" Binding="{Binding DeviceType}" Header="Тип" />
                <DataGridTextColumn Width="120" Binding="{Binding Port}" Header="Порт" />
                <DataGridTextColumn Width="120" Binding="{Binding SerialNo}" Header="Серийный номер" />
                <DataGridTemplateColumn Header="Добавить" Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox HorizontalAlignment="Center" IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      IsEnabled="{Binding Path=IsAdded, Converter={StaticResource InverseBooleanConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
