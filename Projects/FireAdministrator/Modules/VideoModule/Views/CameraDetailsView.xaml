<UserControl x:Class="VideoModule.Views.CameraDetailsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
			 xmlns:local="clr-namespace:FiresecAPI;assembly=FiresecAPI"
			 xmlns:converters="clr-namespace:VideoModule.Converters"
			 MinWidth="400" MinHeight="400">
	<UserControl.Resources>
		<converters:CameraTypeToVisibilityConverter x:Key="CameraTypeToVisibilityConverter" />
		<converters:InversedCameraTypeToVisibilityConverter x:Key="InversedCameraTypeToVisibilityConverter" />
		<converters:CameraTypeToStringConverter x:Key="CameraTypeToStringConverter" />
	</UserControl.Resources>
	<TabControl>
		<TabItem Header="Основные">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<Label Grid.Row="0" Grid.Column="0" Content="Тип видеоустройства" HorizontalAlignment="Right" Visibility="{Binding IsEditMode, Converter={StaticResource InversedBoolToVisibilityConverter}}"/>
				<ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding CameraTypes}" Margin="2" 
						  SelectedItem="{Binding SelectedCameraType, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding IsEditMode, Converter={StaticResource InversedBoolToVisibilityConverter}}">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding ., Converter={StaticResource CameraTypeToStringConverter}}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

				<Label Grid.Row="1" Grid.Column="0" Content="Название" HorizontalAlignment="Right" />
				<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="2" />

				<Label Grid.Row="2" Grid.Column="0" Content="Номер канала" HorizontalAlignment="Right"
					   Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource CameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />
				<extToolkit:IntegerUpDown Grid.Row="2" Grid.Column="1" Value="{Binding ChannelNumber}" Minimum="1" Maximum="32" Margin="2"
						Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource CameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />

				<Label Grid.Row="2" Grid.Column="0" Content="Адрес" HorizontalAlignment="Right"
					   Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource InversedCameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />
				<TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Margin="2"
						 Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource InversedCameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />

				<Label Grid.Row="3" Grid.Column="0" Content="Порт" HorizontalAlignment="Right"
					   Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource InversedCameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />
				<TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" Margin="2"
						 Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource InversedCameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />

				<Label Grid.Row="4" Grid.Column="0" Content="Имя пользователя" HorizontalAlignment="Right"
					   Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource InversedCameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />
				<TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" Margin="2"
						 Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource InversedCameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />
				
				<Label Grid.Row="5" Grid.Column="0" Content="Пароль" HorizontalAlignment="Right"
						 Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource InversedCameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />
				<TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="2"
						 Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource InversedCameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Channel}}" />
			</Grid>
		</TabItem>
		<TabItem Header="Дополнительные"
				 Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource CameraTypeToVisibilityConverter},
					ConverterParameter={x:Static local:CameraType.Dvr}}" >
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
					<Label Grid.Row="0" Grid.Column="0" Content="Добавить каналов" HorizontalAlignment="Right"
					   Visibility="{Binding IsEditMode, Converter={StaticResource InversedBoolToVisibilityConverter}}" />
				<extToolkit:IntegerUpDown Grid.Row="0" Grid.Column="1" Value="{Binding ChannelsCount}" Minimum="1" Maximum="32" Margin="2"
						Visibility="{Binding IsEditMode, Converter={StaticResource InversedBoolToVisibilityConverter}}" />
			</Grid>
		</TabItem>
		<TabItem Header="Дополнительные"
				 Visibility="{Binding Path=SelectedCameraType, Converter={StaticResource InversedCameraTypeToVisibilityConverter},
			ConverterParameter={x:Static local:CameraType.Dvr}}" >
		<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<Label Grid.Row="0" Grid.Column="0" Content="Состояние" HorizontalAlignment="Right" />
				<ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding StateClasses}"
					  SelectedItem="{Binding SelectedStateClass, UpdateSourceTrigger=PropertyChanged}" Margin="2">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding ., Converter={StaticResource XStateClassToStringConverter}}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

				<Label Grid.Row="1" Grid.Column="0" Content="Зоны" HorizontalAlignment="Right" />
				<TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="2">
					<Hyperlink Command="{Binding ShowZonesCommand}" Style="{StaticResource HyperlinkStyle}">
						<TextBlock Margin="2">
							<TextBlock.Style>
								<Style>
									<Setter Property="TextBlock.Text" Value="{Binding PresentationZones}" />
									<Style.Triggers>
										<DataTrigger Binding="{Binding PresentationZones}" Value="">
											<Setter Property="TextBlock.Text" Value="Нажмите для выбора зон" />
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</TextBlock.Style>
						</TextBlock>		 
					</Hyperlink>
				</TextBlock>

				<Label Grid.Row="2" Grid.Column="0" Content="Отступ слева" HorizontalAlignment="Right" />
				<extToolkit:IntegerUpDown Grid.Row="2" Grid.Column="1" Value="{Binding Left}" Minimum="0" Maximum="10000" Margin="2" />

				<Label Grid.Row="3" Grid.Column="0" Content="Отступ справа" HorizontalAlignment="Right" />
				<extToolkit:IntegerUpDown Grid.Row="3" Grid.Column="1" Value="{Binding Top}" Minimum="0" Maximum="10000" Margin="2" />

				<Label Grid.Row="4" Grid.Column="0" Content="Ширина" HorizontalAlignment="Right" />
				<extToolkit:IntegerUpDown Grid.Row="4" Grid.Column="1" Value="{Binding Width}" Minimum="100" Maximum="1000" Margin="2" />

				<Label Grid.Row="5" Grid.Column="0" Content="Высота" HorizontalAlignment="Right" />
				<extToolkit:IntegerUpDown Grid.Row="5" Grid.Column="1" Value="{Binding Height}" Minimum="100" Maximum="1000" Margin="2" />

				<Button Grid.Row="6" Grid.Column="1" Content="Предпросмотр" Margin="2" Command="{Binding ShowCommand}" />
			</Grid>
		</TabItem>
	</TabControl>
</UserControl>
