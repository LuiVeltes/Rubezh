<UserControl x:Class="VideoModule.Views.CameraDetailsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended"
			 MinWidth="400" MinHeight="400">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border Grid.Row="0" CornerRadius="5" Padding="5" Background="{DynamicResource BackgroundBrush}">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Label Grid.Row="0" Grid.Column="0" Content="Название" HorizontalAlignment="Right" />
				<Label Grid.Row="1" Grid.Column="0" Content="Состояние" HorizontalAlignment="Right" />
				<Label Grid.Row="2" Grid.Column="0" Content="Зоны" HorizontalAlignment="Right" />
                <Label Grid.Row="3" Grid.Column="0" Content="Номер канала" HorizontalAlignment="Right" />
                
				<Label Grid.Row="4" Grid.Column="0" Content="Отступ слева" HorizontalAlignment="Right" />
				<Label Grid.Row="5" Grid.Column="0" Content="Отступ справа" HorizontalAlignment="Right" />
				<Label Grid.Row="6" Grid.Column="0" Content="Ширина" HorizontalAlignment="Right" />
				<Label Grid.Row="7" Grid.Column="0" Content="Высота" HorizontalAlignment="Right" />

                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
                <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding StateClasses}"
					  SelectedItem="{Binding SelectedStateClass, UpdateSourceTrigger=PropertyChanged}" Margin="2">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding ., Converter={StaticResource XStateClassToStringConverter}}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
				<TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="2">
					<Hyperlink Command="{Binding ShowZonesCommand}" Style="{StaticResource HyperlinkStyle}">
						<TextBlock Margin="2">
							<TextBlock.Style>
								<Style>
									<Setter Property="TextBlock.Text" Value="{Binding PresentationZones}" />
									<Style.Triggers>
										<DataTrigger Binding="{Binding PresentationZones}" Value="">
											<Setter Property="TextBlock.Text" Value="Нажмите для выбора зон" />
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</TextBlock.Style>
						</TextBlock>		 
					</Hyperlink>
				</TextBlock>
                <extToolkit:IntegerUpDown Grid.Row="3" Grid.Column="1" Value="{Binding ChannelNumber}" Minimum="1" Maximum="16" Margin="2" />
				<extToolkit:IntegerUpDown Grid.Row="4" Grid.Column="1" Value="{Binding Left}" Minimum="0" Maximum="10000" Margin="2" />
                <extToolkit:IntegerUpDown Grid.Row="5" Grid.Column="1" Value="{Binding Top}" Minimum="0" Maximum="10000" Margin="2" />
                <extToolkit:IntegerUpDown Grid.Row="6" Grid.Column="1" Value="{Binding Width}" Minimum="100" Maximum="1000" Margin="2" />
                <extToolkit:IntegerUpDown Grid.Row="7" Grid.Column="1" Value="{Binding Height}" Minimum="100" Maximum="1000" Margin="2" />
                <Button Grid.Row="8" Grid.Column="3" Content="Предпросмотр" Margin="2"
                        IsEnabled="{Binding IsConnected, UpdateSourceTrigger=PropertyChanged}" Command="{Binding ShowCommand}" />
            </Grid>
		</Border>
	</Grid>
</UserControl>