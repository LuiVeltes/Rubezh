<UserControl x:Class="VideoModule.Views.CameraDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Название" HorizontalAlignment="Right" />
        <Label Grid.Row="1" Grid.Column="0" Content="Адрес" HorizontalAlignment="Right" />
        <Label Grid.Row="2" Grid.Column="0" Content="Зона" HorizontalAlignment="Right" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Margin="2" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Address}" Margin="2" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ZoneName}" Margin="2" />
        <Button Grid.Row="3" Grid.Column="1" Content="Тест" Command="{Binding TestCommand}" Width="100" Margin="2" />
    </Grid>
</UserControl>
