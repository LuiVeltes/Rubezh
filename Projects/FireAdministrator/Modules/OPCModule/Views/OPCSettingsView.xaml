<UserControl x:Class="OPCModule.Views.OPCSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <TabControl>
        <TabItem Header="Основные">
            <Border CornerRadius="10" BorderThickness="0" Background="White" Margin="2">
                <StackPanel Margin="10">
                    <Button Command="{Binding RefreshCommand}" Content="Обновить структуру тэгов" Width="200" Margin="2" />
                    <Button Command="{Binding RegisterCommand}" Content="Зарегистрировать" Width="200" Margin="2" />
                    <Button Command="{Binding UnRegisterCommand}" Content="Отменить регистрацию" Width="200" Margin="2" />
                </StackPanel>
            </Border>
        </TabItem>
    </TabControl>
</UserControl>