<Window x:Class="RubezhDevicesMVVM.DeviceSelectionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeviceSelectionView" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <ComboBox ItemsSource="{Binding DevicesViewModel}" DisplayMemberPath="Id" SelectedValuePath="Id" SelectedItem="{Binding SelectedDeviceViewModel}" />
            <ComboBox ItemsSource="{Binding SelectedDeviceViewModel.StatesViewModel}" SelectedItem="{Binding SelectedStateViewModel}" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Id}" Visibility="{Binding IsAdditional, Converter={StaticResource NotVisibleIfTrue}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ListBox DataContext="{Binding SelectedDeviceViewModel}" ItemsSource="{Binding StatesViewModel}" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <CheckBox IsChecked="{Binding IsChecked}" Visibility="{Binding IsAdditional, Converter={StaticResource VisibleIfTrue}}"/>
                            <TextBlock Text="{Binding Id}" Visibility="{Binding IsAdditional, Converter={StaticResource VisibleIfTrue}}"/>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
