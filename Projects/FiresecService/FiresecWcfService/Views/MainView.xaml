<Window x:Class="FiresecWcfService.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Firesec Service" Height="300" Width="300"
        Closing="Window_Closing">
<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
            <Button Command="{Binding StartCommand}"  Content="Start" Height="100" Margin="2" Background="DarkRed" Foreground="White" FontSize="20" />
            <TextBlock Text="{Binding Status}" />
            <Button Command="{Binding StopCommand}"  Content="Stop" Height="50" Margin="2" />
            <Button Command="{Binding TestCommand}"  Content="Execute Test" Margin="2" IsEnabled="False" />
        </StackPanel>
    </Grid>
</Window>
