<Window x:Class="FiresecDirect.FiresecDirectWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Firesec Direct" Height="800" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Click="Button_Click" Content="SetNewConfig" Margin="1" />
                <Button Click="Button_Click_1" Content="GetCoreConfig" Margin="1" />
                <Button Click="Button_Click_2" Content="GetCoreState" Margin="1" />
                <Button Click="Button_Click_3" Content="GetMetadata" Margin="1" />
                <Button Click="Button_Click_4" Content="GetCoreDeviceParams" Margin="1" />
                <Button Click="Button_Click_5" Content="ReadEvents" Margin="1" />
                <Button Click="Button_Click_6" Content="Serialize metadata" Margin="1" />
            </StackPanel>
            <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Width="950" Height="700">
                <TextBox Name="textBox1" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" />
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
