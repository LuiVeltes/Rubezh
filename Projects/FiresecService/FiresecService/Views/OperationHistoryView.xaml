<UserControl x:Class="FiresecService.Views.OperationHistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        MinWidth="400" MinHeight="400">
    <Grid Margin="5">
        <DataGrid ItemsSource="{Binding Operations}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Операция" Binding="{Binding OperationName}" Width="*" />
                <DataGridTextColumn Header="Направление" Binding="{Binding Direction}" Width="*" />
                <DataGridTextColumn Header="Время начала" Binding="{Binding StartDateTime}" Width="*" />
                <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>