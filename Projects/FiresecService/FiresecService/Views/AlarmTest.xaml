<Window x:Class="FiresecService.Views.AlarmTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:FiresecService.Converters"
        MaxHeight="400" SizeToContent="Width">
    <Window.Resources>
        <Converters:StateTypeToStringConverter  x:Key="StateTypeToStringConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0" ItemsSource="{Binding AvailableDevices}" SelectedItem="{Binding SelectedAvailableDevice}" 
                  AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Устройство" Binding="{Binding DeviceName}" Width="100" />
                    <DataGridTextColumn Header="Зона" Binding="{Binding ZoneNo}" Width="100" />
                    <DataGridTextColumn Header="Состояние" Binding="{Binding State, Converter={StaticResource StateTypeToStringConverter}}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                <Button Content="Add" Width="50" Height="30" Click="Button_Click" />
            </StackPanel>
            <DataGrid Grid.Column="2" ItemsSource="{Binding DevicesList}" SelectedItem="{Binding SelectedDeviceList}" 
                  AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Устройство" Binding="{Binding DeviceName}" Width="100" />
                    <DataGridTextColumn Header="Зона" Binding="{Binding ZoneNo}" Width="100" />
                    <DataGridTextColumn Header="Состояние" Binding="{Binding State, Converter={StaticResource StateTypeToStringConverter}}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="1" TextBlock.FontSize="14" Margin="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Cостояние" Margin="2"/>
            <ComboBox Grid.Column="1" ItemsSource="{Binding AvailableStates}"
                      SelectedItem="{Binding Path=SelectedDeviceList.State, Converter={StaticResource StateTypeToStringConverter}, UpdateSourceTrigger=PropertyChanged}"
                      Text="{Binding Path=SelectedDeviceList.State}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ., Converter={StaticResource StateTypeToStringConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
