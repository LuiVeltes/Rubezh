<UserControl x:Class="FiresecService.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinWidth="400" MinHeight="400" Loaded="UserControl_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" Background="{DynamicResource AlternativeBackgroundBrush}">
            <TabItem Header="Соединения">
                <DataGrid ItemsSource="{Binding Connections}" SelectedItem="{Binding SelectedConnection}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ClientType}" Header="Тип" />
                        <DataGridTextColumn Binding="{Binding IpAddress}" Header="IP адрес" />
                        <DataGridTextColumn Binding="{Binding UserName}" Header="Пользователь" Width="*" />
                        <DataGridTextColumn Binding="{Binding ConnectionDate}" Header="Время" Width="*" />
                        <DataGridTextColumn Binding="{Binding CurrentOperationName}" Header="Операция" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Управление(DEBUG)" Visibility="{Binding IsDebug, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <Button Content="Перезагрузить" Command="{Binding ReloadCommand}" Margin="1" />
                    <Button Content="Имитатор" Command="{Binding ShowImitatorCommand}" Margin="1" />
                </StackPanel>
            </TabItem>
            <TabItem Header="COM Сервера(DEBUG)" Visibility="{Binding IsDebug, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding ComServersSatus}" Foreground="White" />
                </StackPanel>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1">
            <TextBlock Text="{Binding Satus}" FontSize="11" FontWeight="Bold" Foreground="Orange" Margin="2" />
        </Grid>
    </Grid>
</UserControl>