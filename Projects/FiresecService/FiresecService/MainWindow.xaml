<Window x:Class="FiresecServiceRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сервер Firesec" Height="600" Width="600">
    <Grid>
        <StackPanel Margin="5">
            <Button Content="Старт" Click="OnConnect" Height="100" Margin="2" Background="YellowGreen" Foreground="White" FontSize="20" />
            <Button Content="Конвертация конфигурации" Click="OnConvertConfiguration"  Height="30" Margin="2" Background="SkyBlue" Foreground="White" FontSize="20" />
            <Button Content="Конвертация журнала событий" Click="OnConvertJournal"  Height="30" Margin="2" Background="SkyBlue" Foreground="White" FontSize="20" />
            <Button Content="Имитатор" Click="OnShowImitator"  Height="30" Margin="2" Background="SkyBlue" Foreground="White" FontSize="20" />
            <TextBox Name="_textBox" Height="200" Margin="2" />
        </StackPanel>
    </Grid>
</Window>
