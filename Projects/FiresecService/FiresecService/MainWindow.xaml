<Window x:Class="FiresecServiceRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:Views="clr-namespace:FiresecService.Views"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Height="400" Width="400" MinWidth="400" MinHeight="400"
        Icon="Server.ico" Title="Сервер Firesec" FontFamily="Tahoma" Background="Transparent" 
        AllowsTransparency="True" StateChanged="Window_StateChanged">
    
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="11" Background="#151515">
        <Border BorderBrush="#747474" BorderThickness="1" CornerRadius="11">
            <DockPanel>
                <Border Height="40" MouseMove="Header_MouseMove" CornerRadius="11 11 0 0" DockPanel.Dock="Top" Background="{DynamicResource WindowBlacHeaderkBackgroundBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" Text="Сервер Firesec" Foreground="White" FontFamily="Arial" FontSize="15" Margin="0 5" Opacity="0.5" />
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0, 2, 2, 0">
                            <Button Click="OnHide" ToolTip="Закрыть" Style="{StaticResource ToolarButtonStyle}">
                                <Image Source="/Controls;component/Images/Close.png" Height="12" Margin="-2" />
                            </Button>
                        </StackPanel>
                        <Image Margin="10 5 0 0" HorizontalAlignment="Left" Source="/Controls;component/Images/logo.png" Opacity="0.5" Width="32" Height="26" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    </Grid>
                </Border>
                <Thumb DockPanel.Dock="Bottom" DragDelta="Thumb_DragDelta" HorizontalAlignment="Right" Width="10" Height="10" Style="{DynamicResource ResizeThumbStyle}" />

                <tb:TaskbarIcon x:Name="_notificationIcon" IconSource="Firesec.ico" ToolTipText='Сервер приложений ОПС "Firesec 2"'>
                    <tb:TaskbarIcon.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Показать консоль" Click="OnShow" />
                            <MenuItem Header="Выход" Click="OnClose" />
                        </ContextMenu>
                    </tb:TaskbarIcon.ContextMenu>
                </tb:TaskbarIcon>

                <Views:MainView x:Name="_mainView" />

            </DockPanel>
        </Border>
    </Border>
    
</Window>