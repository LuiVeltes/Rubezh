<Window x:Class="FiresecService.Imitator.ImitatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:FiresecService.Imitator"
        Title="Имитатор состояний устройств" Height="600" Width="600">
    <Window.Resources>
        <Converters:LevelToMarginConverter x:Key="LevelToMarginConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Устройства" Margin="5" FontWeight="Bold" />

        <DataGrid Grid.Row="1" ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}"
                  AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Устройство">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Margin="{Binding Level, Converter={StaticResource LevelToMarginConverter}}">
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Состояние" Binding="{Binding StateType}"  Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" Text="Состояния" Margin="5" FontWeight="Bold" />
        
        <Grid Grid.Row="3" DataContext="{Binding SelectedDevice}">

            <DataGrid ItemsSource="{Binding DriverStates}"
                      AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="False" RowHeaderWidth="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding DriverState.Name}" />
                    <DataGridTextColumn Header="Состояние" Binding="{Binding DriverState.StateType}" />
                    <DataGridCheckBoxColumn Header="Есть" Binding="{Binding IsActive, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
            
        </Grid>
    </Grid>
</Window>
