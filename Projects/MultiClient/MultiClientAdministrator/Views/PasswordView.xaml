<UserControl x:Class="MultiClient.Views.PasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="200" MinHeight="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Пароль" Foreground="White" Margin="2" />
            <TextBox Text="{Binding Password}" Margin="10, 2, 2, 2" />
        </StackPanel>
        <Button Grid.Row="1" Content="OK" Command="{Binding SaveCommand}" Width="100" HorizontalAlignment="Right" Margin="2" />
    </Grid>
</UserControl>