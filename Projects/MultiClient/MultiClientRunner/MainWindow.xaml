<Window x:Class="MultiClientRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Content="Add" Click="OnAdd" Width="100" Margin="2" />
            <Button Content="Close all" Click="OnKillAll" Width="100" Margin="2" />
            <Button Content="Test" Click="OnTest" Width="100" Margin="2" />
        </StackPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding AppItems}" SelectedItem="{Binding SelectedAppItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>