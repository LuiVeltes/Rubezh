<Window x:Class="MultiClientRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Content="Add Server" Click="Button_Click_5" Width="100" Margin="2" />
            <Button Content="Start Server" Click="Button_Click_2" Width="100" Margin="2" />
            <Button Content="Start process" Click="Button_Click" Width="100" Margin="2" />
            <Button Content="Stop process" Click="Button_Click_1" Width="100" Margin="2" />
            <Button Content="Show All" Click="Button_Click_3" Width="100" Margin="2" />
            <Button Content="Hide All" Click="Button_Click_4" Width="100" Margin="2" />
        </StackPanel>
        <ListBox Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>