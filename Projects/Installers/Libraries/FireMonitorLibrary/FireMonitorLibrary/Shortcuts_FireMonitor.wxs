<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include Variables_FireMonitor.wxi?>

  <Fragment>
    <DirectoryRef Id="DesktopFolder">
      <Component Id="FMDesktopShortcut" Guid="33C7F674-40B2-44A9-8703-1C43367C8BA5">
        <Shortcut Id="FMDesktopShortcut" Name="$(var.FireMonitorName)" Target="[FIREMONITORLOCATION]$(var.FireMonitor.TargetFileName)"
                  WorkingDirectory="FIREMONITORLOCATION" Description="Запускает $(var.FireMonitorName)" Icon="FireMonitorIcon"/>
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]" Name="Shortcut" Type="integer"
                       Value="1" KeyPath="yes" />
        <Condition>SHORTCUT_DESKTOP</Condition>
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="ProgramMenuDir">
      <!--Ярлык для запуска программы-->
      <Component Id="FMProgramsMenuShortcut" Guid="91C890F9-F024-4FBB-B11B-C5944EA72A82">
        <Shortcut Id="FMRunProduct" Name="$(var.FireMonitorName)" Target="[FIREMONITORLOCATION]$(var.FireMonitor.TargetFileName)"
                  WorkingDirectory="FIREMONITORLOCATION" Description="Запускает $(var.FireMonitorName)" Icon="FireMonitorIcon"/>
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]" Name="installed" Type="integer"
                       Value="1" KeyPath="yes" />
        <Condition>SHORTCUT_PROGRAMMENU</Condition>
      </Component>
      <!--Ярлык для удаления программы-->
      <Component Id="FMProgramsMenuShortcutUninstall" Guid="C8E191A9-6463-49C0-A35A-B7E33345FE30">
        <Shortcut Id="FMUninstallProduct" Name="Удалить $(var.FireMonitorName)" Target="[System64Folder]msiexec.exe"
                  Arguments="/x [ProductCode]" Description="Удаляет $(var.FireMonitorName) с данного компьютера" />
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]" Name="installed" Type="integer"
                       Value="1" KeyPath="yes" />
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>