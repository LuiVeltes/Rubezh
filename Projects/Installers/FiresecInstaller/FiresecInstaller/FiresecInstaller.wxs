<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension"
     >
  <?include Variables_Firesec.wxi?>
  
  <Product Id="$(var.ProductCode)" Name="$(var.ProductName)" Language="1049" Version="$(var.ProductVersion)"
           Manufacturer="$(var.Manufacturer)" UpgradeCode="$(var.UpgradeCode)" Codepage="$(var.Codepage)">
    
    
    <Package InstallerVersion="200" Compressed="yes" />

    <Media Id="1" Cabinet="Firesec.cab" EmbedCab="yes" />
    
    <Property Id="_BrowseProperty" Value="INSTALLLOCATION" />
    <Property Id="SHORTCUT_PROGRAMMENU" Value="1"/>
    <Property Id="SHORTCUT_DESKTOP" Value="1"/>
    <Property Id="CHECKSQLSERVER" Value="0" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLLOCATION" />
    <Property Id="INSTALLLEVEL" Value="1" />
    <Property Id="FIRESECSERVICENAME" Value="$(var.FiresecServiceName)" />
    <Property Id="FIREMONITORNAME" Value="$(var.FireMonitorName)" />
    <Property Id="FIREADMINISTRATORNAME" Value="$(var.FireAdministratorName)" />
    <Property Id="DefaultUIFont" Value="WixUI_Font_Normal" />
    <Property Id="WixUI_Mode" Value="Mondo" />
    <Property Id="AgreeToLicense" Value="No" />
    <Property Id="SETUPCHOICE" Value="Full" />
    <Property Id="IS_SQLSERVER_USERNAME" Value="sa" />
    <Property Id="IS_SQLSERVER_AUTHENTICATION" Value="0" />
    <Property Id="SQLINSTANCE" Value="SQLEXPRESS" />
    
    <Icon Id="FiresecIcon" SourceFile="Data\Firesec.ico"/>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLLOCATION" Name="Rubezh">
          <Directory Id="FIRESECSERVICELOCATION" Name="$(var.FiresecServiceName)">
            <Directory Id="FiresecServiceConfigFolder" Name="$(var.ConfigurationFolder)">
              <Directory Id="FiresecServiceIconsFolder" Name="$(var.IconsFolder)" />
              <Directory Id="FiresecServiceSoundsFolder" Name="$(var.SoundsFolder)" />
            </Directory>
          </Directory>
          <Directory Id="FIREADMINISTRATORLOCATION" Name="$(var.FireAdministratorName)">
            <Directory Id="FireAdmConfigFolder" Name="$(var.ConfigurationFolder)">
              <Directory Id="FireAdmIconsFolder" Name="$(var.IconsFolder)" />
              <Directory Id="FireAdmSoundsFolder" Name="$(var.SoundsFolder)" />
            </Directory>
            <Directory Id="FireAdmXslFilesFolder" Name="$(var.XslFilesFolder)">
              <Directory Id="FireAdmXaml2svgFolder" Name="$(var.xaml2svgFolder)" />
            </Directory>
          </Directory>
          <Directory Id="FIREMONITORLOCATION" Name="$(var.FireMonitorName)">
            <Directory Id="ClientSettingsFolder" Name="ClientSettings" />
            <Directory Id="FireMonConfigFolder" Name="$(var.ConfigurationFolder)">
              <Directory Id="FireMonIconsFolder" Name="$(var.IconsFolder)" />
              <Directory Id="FireMonSoundsFolder" Name="$(var.SoundsFolder)" />
              <Directory Id="FireMonReportTemplatesFolder" Name="$(var.ReportTemplatesFolder)" />
            </Directory>
          </Directory>          
        </Directory>
      </Directory>
      <!--Пуск\Программы\FiresecService-->
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ProgramMenuDir" Name="$(var.ProductName)" />
      </Directory>
      <!--Рабочий стол-->
      <Directory Id="DesktopFolder" />
      
    </Directory>
    
    <FeatureRef Id="FiresecFeature" />
    
    <InstallExecuteSequence>
      <Custom Action="WixCloseApplications" Before="LaunchConditions" />
    </InstallExecuteSequence>

    <UI Id="MyWixUI_Wizard">
      <UIRef Id="WixUI_Wizard" />
      <UIRef Id="WixUI_ErrorProgressText" />
    </UI>
  </Product>
</Wix>
