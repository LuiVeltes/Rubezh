<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include Variables_FireMonitor.wxi?>

  <Fragment>
    <DirectoryRef Id="DesktopFolder">
      <Component Id="FMDesktopShortcut" Guid="*">
        <Shortcut Id="FMDesktopShortcut" Name="Оперативная задача ОПС 'FireSec-2'" Target="[FIREMONITORLOCATION]$(var.FireMonitor.TargetFileName)"
                  WorkingDirectory="FIREMONITORLOCATION" Description="Запускает $(var.FireMonitorName)" Icon="FireMonitorIcon"/>
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FireMonitorName)" Name="Shortcut" Type="integer"
                       Value="1" KeyPath="yes" />
        <Condition>SHORTCUT_DESKTOP</Condition>
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="ProgramMenuDir">
      <!--Ярлык для запуска программы-->
      <Component Id="FMProgramsMenuShortcut" Guid="*">
        <Shortcut Id="FMRunProduct" Name="Оперативная задача ОПС 'FireSec-2'" Target="[FIREMONITORLOCATION]$(var.FireMonitor.TargetFileName)"
                  WorkingDirectory="FIREMONITORLOCATION" Description="Запускает $(var.FireMonitorName)" Icon="FireMonitorIcon"/>
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FireMonitorName)" Name="installed" Type="integer"
                       Value="1" KeyPath="yes" />
        <Condition>SHORTCUT_PROGRAMMENU</Condition>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>