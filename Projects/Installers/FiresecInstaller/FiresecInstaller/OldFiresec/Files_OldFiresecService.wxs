    </DirectoryRef>

    <DirectoryRef Id="SystemFolder" >
      <Component Id="msvcp60Dll" Guid="*" Permanent="yes" >
        <File Id="msvcp60DllFile" Name="msvcp60.dll" Source="C:\WINDOWS\system32\" KeyPath="yes" />
