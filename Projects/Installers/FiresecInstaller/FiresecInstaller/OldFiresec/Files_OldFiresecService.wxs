        <File Id="FsSockProxyDllFile" Name="SockProxy.dll" Source="$(var.OldFiresecService.TargetDir)" />
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="INTL">
      <Component Id="FsFbintlDll" Guid="*" Permanent="yes">
        <File Id="FsFbintlDllFile" Name="fbintl.dll" Source="$(var.OldFiresecService.TargetDir)" KeyPath="yes" />
