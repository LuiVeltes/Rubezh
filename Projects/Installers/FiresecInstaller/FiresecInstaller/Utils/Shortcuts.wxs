<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include Variables.wxi?>
  <Fragment>
    <Icon Id="DiagnosticsIcon" SourceFile="Data\Diagnostics.ico"/>

    <DirectoryRef Id="ProgramMenuDir">
      <Component Id="Diagnostics.ProgramsMenuShortcut" Guid="*">
        <Shortcut Id="Diagnostics.ProgramsMenuShortcut" Name="$(var.DiagnosticsName)" Target="[DIAGNOSTICSLOCATION]$(var.Diagnostics.TargetFileName)"
            WorkingDirectory="DIAGNOSTICSLOCATION" Description="$(var.DiagnosticsName)" Icon="DiagnosticsIcon"/>
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.DiagnosticsName)" Name="installed" Type="integer" Value="1" KeyPath="yes" />
        <Condition>SHORTCUT_PROGRAMMENU</Condition>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>