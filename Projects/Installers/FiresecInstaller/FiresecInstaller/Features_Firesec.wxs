<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include Variables_Firesec.wxi?>
  <Fragment>
    <Feature Id="FiresecFeature" Title="$(var.ProductName)" Description="Полная установка" Level="1" Display="expand"
             ConfigurableDirectory="INSTALLLOCATION" AllowAdvertise="no" Absent="allow" InstallDefault="local">
      <!--<MergeRef Id="HASPMSM" />-->
      <Feature Id="FiresecService" Level="1" ConfigurableDirectory="FIRESECSERVICELOCATION" AllowAdvertise="no" Absent="allow" Display="expand" InstallDefault="local" >
        <Condition Level="0">INSTALLLEVEL=2</Condition>
        <FeatureRef Id="OldFiresecServiceFeature" />
        <FeatureRef Id="FiresecServiceFeature" />
        <ComponentRef Id="RegistryFiresec2Key"/>
        <ComponentRef Id="ClearOnUninstallFiresecService"/>
      </Feature>
      <Feature Id="FiresecClient" Level="1"  ConfigurableDirectory="INSTALLLOCATION" AllowAdvertise="no" Absent="allow" Display="expand" InstallDefault="local">
        <FeatureRef Id="FAFeatureBasic" />
        <FeatureRef Id="FMFeatureBasic" />
        <ComponentRef Id="DeleteGKXMLSetting" />
        <ComponentRef Id="DeleteOPCXMLSetting" />
        <ComponentRef Id="DeleteVideoXMLSetting" />
        <ComponentRef Id="DeleteSKUDXMLSetting" />
        <ComponentRef Id="DeleteReportXMLSetting"/>
        <ComponentRef Id="ClearOnUninstallFireAdministrator"/>
        <ComponentRef Id="ClearOnUninstallFireMonitor"/>
      </Feature>
      <ComponentRef Id="LogScript"/>
      <ComponentRef Id="DesktopFolder"/>
      <ComponentRef Id="ProgramMenuDir"/>
      <ComponentRef Id="FiresecProgramsMenuShortcutUninstall"/>
      <ComponentRef Id="ClearOnUninstallLogs" />
    </Feature>
  </Fragment>
</Wix>