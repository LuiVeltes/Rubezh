<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<?include Variables_FiresecService.wxi?>
	<Fragment>
    <Icon Id="FiresecServiceIcon" SourceFile="Data\Server.ico"/>

		<DirectoryRef Id="DesktopFolder">
			<Component Id="FiresecServiceDesktopShortcut" Guid="*">
				<Shortcut Id="desktopShortcut" Name="Сервер приложений ОПС Firesec-2" Target="[FIRESECSERVICELOCATION]$(var.FiresecService.TargetFileName)"
						WorkingDirectory="FIRESECSERVICELOCATION" Description="Запускает $(var.FiresecServiceName)" Icon="FiresecServiceIcon"/>
				<RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FiresecServiceName)" Name="Shortcut" Type="integer" Value="1" KeyPath="yes" />
				<Condition>SHORTCUT_DESKTOP</Condition>
			</Component>
		</DirectoryRef>

		<DirectoryRef Id="ProgramMenuDir">
			<Component Id="FiresecServiceProgramsMenuShortcut" Guid="*">
				<Shortcut Id="RunProduct" Name="Сервер приложений ОПС Firesec-2" Target="[FIRESECSERVICELOCATION]$(var.FiresecService.TargetFileName)"
            WorkingDirectory="FIRESECSERVICELOCATION" Description="Запускает $(var.FiresecServiceName)" Icon="FiresecServiceIcon"/>
				<RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FiresecServiceName)" Name="installed" Type="integer" Value="1" KeyPath="yes" />
				<Condition>SHORTCUT_PROGRAMMENU</Condition>
			</Component>
		</DirectoryRef>
	</Fragment>
</Wix>