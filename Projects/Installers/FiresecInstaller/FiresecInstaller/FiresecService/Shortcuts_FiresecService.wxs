<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<?include Variables_FiresecService.wxi?>
	<Fragment>
		<DirectoryRef Id="DesktopFolder">
			<Component Id="FiresecServiceDesktopShortcut" Guid="FC07AB61-7665-4B86-BB72-00D839984FB9">
				<Shortcut Id="desktopShortcut" Name="Сервер приложений ОПС Firesec-2" Target="[FIRESECSERVICELOCATION]$(var.FiresecService.TargetFileName)"
									WorkingDirectory="FIRESECSERVICELOCATION" Description="Запускает $(var.FiresecServiceName)" Icon="FiresecIcon"/>
				<RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FiresecServiceName)" Name="Shortcut" Type="integer"
											 Value="1" KeyPath="yes" />
				<Condition>SHORTCUT_DESKTOP</Condition>
			</Component>
		</DirectoryRef>

		<DirectoryRef Id="ProgramMenuDir">
			<!--Ярлык для запуска программы-->
			<Component Id="FiresecServiceProgramsMenuShortcut" Guid="6DC3A33B-2C67-47E1-9356-436B5CCC3D9C">
				<Shortcut Id="RunProduct" Name="Сервер приложений ОПС Firesec-2" Target="[FIRESECSERVICELOCATION]$(var.FiresecService.TargetFileName)"
									WorkingDirectory="FIRESECSERVICELOCATION" Description="Запускает $(var.FiresecServiceName)" Icon="FiresecIcon"/>
				<RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FiresecServiceName)" Name="installed" Type="integer"
											 Value="1" KeyPath="yes" />
				<Condition>SHORTCUT_PROGRAMMENU</Condition>
			</Component>
		</DirectoryRef>
	</Fragment>
</Wix>