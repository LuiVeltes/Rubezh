<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include Variables.wxi?>
  <Fragment>
    <Icon Id="FS2Icon" SourceFile="Data\Server.ico"/>

    <DirectoryRef Id="ProgramMenuDir.AdditionalFolder">
      <Component Id="FS2.ProgramsMenuShortcut" Guid="*">
        <Shortcut Id="FS2.ProgramsMenuShortcut" Name="$(var.FS2Name)" Target="[FS2LOCATION]$(var.FS2.TargetFileName)"
            WorkingDirectory="FS2LOCATION" Description="$(var.FS2Name)" Icon="FS2Icon"/>
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FS2Name)" Name="installed" Type="integer" Value="1" KeyPath="yes" />
        <Condition>SHORTCUT_PROGRAMMENU</Condition>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>