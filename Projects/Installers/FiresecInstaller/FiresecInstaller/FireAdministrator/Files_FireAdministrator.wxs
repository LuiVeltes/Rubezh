    <DirectoryRef Id="Administrator.XslFolder">
      <Component Id="Administrator.svg2xaml" Guid="*">
        <File Id="Administrator.svg2xaml.xsl" Source="$(var.Administrator.TargetDir)Configuration\XslFiles\svg2xaml.xsl" />
