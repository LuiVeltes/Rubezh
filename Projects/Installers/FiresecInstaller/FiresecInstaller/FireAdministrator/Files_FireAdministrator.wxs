      <Component Id="Administrator.VIDEO_MODULE" Guid="B25F6265-78F7-413B-8107-56929863F5FA">
        <File Id="Administrator.VideoModule.dll" Name="VideoModule.dll" Source="$(var.Administrator.TargetDir)" KeyPath="yes" />
