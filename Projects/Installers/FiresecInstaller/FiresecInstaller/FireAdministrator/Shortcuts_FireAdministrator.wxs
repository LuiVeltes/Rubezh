<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

	<?include Variables_FireAdministrator.wxi?>
	
	<Fragment>
		<DirectoryRef Id="DesktopFolder">
			<Component Id="FADesktopShortcut" Guid="908694FD-A06F-45A6-BF06-6E8E57E4A996">
				<Shortcut Id="FADesktopShortcut" Name="Администратор" Target="[FIREADMINISTRATORLOCATION]$(var.FireAdministrator.TargetFileName)"
									WorkingDirectory="FIREADMINISTRATORLOCATION" Description="Запускает $(var.FireAdministratorName)" Icon="FireAdministratorIcon"/>
				<RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FireAdministratorName)" Name="Shortcut" Type="integer"
											 Value="1" KeyPath="yes" />
				<Condition>SHORTCUT_DESKTOP</Condition>
			</Component>
		</DirectoryRef>

		<DirectoryRef Id="ProgramMenuDir">
			<!--Ярлык для запуска программы-->
			<Component Id="FAProgramsMenuShortcut" Guid="D7467870-D796-498F-B790-392A73E145A8">
				<Shortcut Id="FARunProduct" Name="Администратор" Target="[FIREADMINISTRATORLOCATION]$(var.FireAdministrator.TargetFileName)"
									WorkingDirectory="FIREADMINISTRATORLOCATION" Description="Запускает $(var.FireAdministratorName)" Icon="FireAdministratorIcon"/>
				<RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FireAdministratorName)" Name="installed" Type="integer"
											 Value="1" KeyPath="yes" />
				<Condition>SHORTCUT_PROGRAMMENU</Condition>
			</Component>
		</DirectoryRef>
	</Fragment>
</Wix>