<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

	<?include Variables_FireAdministrator.wxi?>
	
	<Fragment>
		<DirectoryRef Id="DesktopFolder">
			<Component Id="FADesktopShortcut" Guid="*">
				<Shortcut Id="FADesktopShortcut" Name="Администратор ОПС 'FireSec-2'" Target="[FIREADMINISTRATORLOCATION]$(var.FireAdministrator.TargetFileName)"
						WorkingDirectory="FIREADMINISTRATORLOCATION" Description="Запускает $(var.FireAdministratorName)" Icon="FireAdministratorIcon"/>
				<RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FireAdministratorName)" Name="Shortcut" Type="integer" Value="1" KeyPath="yes" />
				<Condition>SHORTCUT_DESKTOP</Condition>
			</Component>
		</DirectoryRef>

		<DirectoryRef Id="ProgramMenuDir">
			<Component Id="FAProgramsMenuShortcut" Guid="*">
				<Shortcut Id="FARunProduct" Name="Администратор ОПС 'FireSec-2'" Target="[FIREADMINISTRATORLOCATION]$(var.FireAdministrator.TargetFileName)"
				    WorkingDirectory="FIREADMINISTRATORLOCATION" Description="Запускает $(var.FireAdministratorName)" Icon="FireAdministratorIcon"/>
				<RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]\$(var.FireAdministratorName)" Name="installed" Type="integer" Value="1" KeyPath="yes" />
				<Condition>SHORTCUT_PROGRAMMENU</Condition>
			</Component>
		</DirectoryRef>
	</Fragment>
</Wix>