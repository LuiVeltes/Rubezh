<UserControl x:Class="ControllerSDK.Views.TimeShedulesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Content="Get" Command="{Binding GetTimeShedulesCommand}" Width="100" Margin="2" />
            <Button Content="Set" Command="{Binding SetTimeShedulesCommand}" Width="100" Margin="2" />
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding TimeShedules}" SelectedItem="{Binding SelectedTimeShedule}" Margin="2" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дверь" Binding="{Binding DoorNo}" />
                <DataGridTextColumn Header="День" Binding="{Binding DayNo}" />
                <DataGridTextColumn Header="Время начала" Binding="{Binding StartTime}" />
                <DataGridTextColumn Header="Время конца" Binding="{Binding EndTime}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>