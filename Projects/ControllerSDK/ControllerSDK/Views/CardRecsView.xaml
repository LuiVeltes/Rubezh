<UserControl x:Class="ControllerSDK.Views.CardRecsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button Content="Add" Command="{Binding AddCommand}" Width="100" Margin="2" />
                <Button Content="Edit" Command="{Binding EditCommand}" Width="100" Margin="2" />
                <Button Content="Remove" Command="{Binding RemoveCommand}" Width="100" Margin="2" />
                <Button Content="RemoveAll" Command="{Binding RemoveAllCommand}" Width="100" Margin="2" />
                <Button Content="GetInfo" Command="{Binding GetInfoCommand}" Width="100" Margin="2" />
                <Button Content="GetCount" Command="{Binding GetCountCommand}" Width="100" Margin="2" />
                <Button Content="GetAll" Command="{Binding GetAllCommand}" Width="100" Margin="2" />
                <TextBlock Text="Index" Margin="2" />
                <TextBox Text="{Binding Index}" Width="100" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="CreationDateTime" Width="200" Margin="2" />
                <DatePicker SelectedDate="{Binding CreationDateTime}" Width="250" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="CardNo" Width="200" Margin="2" />
                <TextBox Text="{Binding CardNo}" Width="250" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Password" Width="200" Margin="2" />
                <TextBox Text="{Binding Password}" Width="250" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="DoorNo" Width="200" Margin="2" />
                <TextBox Text="{Binding DoorNo}" Width="250" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="IsStatus" Width="200" Margin="2" />
                <CheckBox IsChecked="{Binding IsStatus}" Width="250" Margin="2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="DoorOpenMethod" Width="200" Margin="2" />
                <ComboBox ItemsSource="{Binding AvailableDoorOpenMethods}" SelectedItem="{Binding DoorOpenMethod}" Width="250" Margin="2" />
            </StackPanel>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Cards}" SelectedItem="{Binding SelectedCard}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="RecordNo" Binding="{Binding CardRec.RecordNo}" />
                <DataGridTextColumn Header="CreationDateTime" Binding="{Binding CreationDateTime}" />
                <DataGridTextColumn Header="CardNo" Binding="{Binding CardRec.CardNo}" />
                <DataGridTextColumn Header="DoorOpenMethod" Binding="{Binding CardRec.DoorOpenMethod}" />
                <DataGridTextColumn Header="Password" Binding="{Binding CardRec.Password}" />
                <DataGridTextColumn Header="DoorNo" Binding="{Binding CardRec.DoorNo}" />
                <DataGridTextColumn Header="IsStatus" Binding="{Binding CardRec.IsStatus}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>