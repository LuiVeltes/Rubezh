<Window x:Class="WpfApplication5.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainView" Height="800" Width="800">
    <Grid>
        <StackPanel DataContext="{Binding SelectedPlanViewModel}">
            <Canvas Name="MainCanvas" Background="Beige" Width="500" Height="500" />
            <TextBlock Text="{Binding Name}" />
        </StackPanel>
    </Grid>
</Window>
