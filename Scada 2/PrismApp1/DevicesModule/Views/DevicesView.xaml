<UserControl x:Class="DevicesModule.Views.DevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:WpfToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
             xmlns:local="clr-namespace:DevicesModule.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
<Grid>
        <StackPanel>
            <WpfToolkit:DataGrid ItemsSource="{Binding AllDeviceViewModels}" SelectedItem="{Binding SelectedDeviceViewModel}"
                            Height="500" AutoGenerateColumns="False" SelectionMode="Single" HeadersVisibility="Column"
                            CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserSortColumns="False"
                            IsReadOnly="True" SelectionUnit="FullRow" ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" HorizontalGridLinesBrush="Beige" VerticalGridLinesBrush="Beige"
                            Background="White" BorderBrush="Black" BorderThickness="0" FrozenColumnCount="2"
                            RowHeight="20">
                <WpfToolkit:DataGrid.Columns>
                    <WpfToolkit:DataGridTemplateColumn Header="Тип Устройства" MinWidth="250">
                        <WpfToolkit:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="{Binding Level, Converter={StaticResource LevelToMarginConverter}}">
                                        <StackPanel Visibility="{Binding HasChildren, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <CheckBox Style="{StaticResource TreeExpanderStyle}" IsChecked="{Binding IsExpanded, Mode=TwoWay}"/>
                                        </StackPanel>
                                        <StackPanel Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Image Source="{Binding ImageSource}" Width="16" Height="16" Margin="5, 0, 5, 0" />
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding ShortDriverName}" />
                                    </StackPanel>

                                </Grid>
                            </DataTemplate>
                        </WpfToolkit:DataGridTemplateColumn.CellTemplate>
                    </WpfToolkit:DataGridTemplateColumn>

                    <WpfToolkit:DataGridTemplateColumn Header="Адрес" MinWidth="50">
                        <WpfToolkit:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Address}" />
                                </StackPanel>
                            </DataTemplate>
                        </WpfToolkit:DataGridTemplateColumn.CellTemplate>
                    </WpfToolkit:DataGridTemplateColumn>

                    <WpfToolkit:DataGridTemplateColumn Header="Зона" MinWidth="100">
                        <WpfToolkit:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding PresentationZone}" />
                                </StackPanel>
                            </DataTemplate>
                        </WpfToolkit:DataGridTemplateColumn.CellTemplate>
                    </WpfToolkit:DataGridTemplateColumn>

                    <WpfToolkit:DataGridTemplateColumn Header="Примечание" MinWidth="100">
                        <WpfToolkit:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Description}" />
                                </StackPanel>
                            </DataTemplate>
                        </WpfToolkit:DataGridTemplateColumn.CellTemplate>
                    </WpfToolkit:DataGridTemplateColumn>

                    <WpfToolkit:DataGridTextColumn Header="Состояние" MinWidth="200" Binding="{Binding MainState}" />
                    <WpfToolkit:DataGridTextColumn Header="Неисправность" MinWidth="200" Binding="{Binding FailureType}" />
                    <WpfToolkit:DataGridTextColumn Header="Причина тревоги" MinWidth="200" Binding="{Binding AlarmReason}" />
                    <WpfToolkit:DataGridTextColumn Header="Дым, %" MinWidth="100" Binding="{Binding Smokiness}" />
                    <WpfToolkit:DataGridTextColumn Header="Пыль, %" MinWidth="100" Binding="{Binding Dustiness}" />
                    <WpfToolkit:DataGridTextColumn Header="Температура, °С" MinWidth="100" Binding="{Binding Temperature}" />
                    
                </WpfToolkit:DataGrid.Columns>

                <WpfToolkit:DataGrid.CellStyle>
                    <Style TargetType="{x:Type WpfToolkit:DataGridCell}">
                        <Style.Setters>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type WpfToolkit:DataGridCell}">
                                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                            <ContentPresenter VerticalAlignment="Center"></ContentPresenter>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style.Setters>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="YellowGreen" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </WpfToolkit:DataGrid.CellStyle>

            </WpfToolkit:DataGrid>

            <StackPanel DataContext="{Binding SelectedDeviceViewModel}" Margin="10">

                <TextBlock Text="Состояние" FontWeight="Bold" />

                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Visibility="{Binding HasAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding Address}" />
                        <TextBlock Text=" - " />
                    </StackPanel>
                    <TextBlock Text="{Binding DriverName}" />
                </StackPanel>

                <TextBlock Text="{Binding State}" Padding="10" />

                <ListView ItemsSource="{Binding ParentStates}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <ListView ItemsSource="{Binding SelfStates}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Margin="10">
                    <ListView ItemsSource="{Binding Parameters}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel>
                    <Button Content="Показать на плане" Command="{Binding ShowPlanCommand}" />
                    <Button Content="Показать зону" Command="{Binding ShowZoneCommand}" />
                </StackPanel>
                
            </StackPanel>
            
        </StackPanel>
    </Grid>
</UserControl>
