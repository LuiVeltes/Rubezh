<Window x:Class="PrismApp1.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Shell" Height="800" Width="1000">
    <Grid>
        <Grid Background="Gray">

            <DockPanel>
                
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"  Margin="2">
                    <ContentControl Name="_alarmGroups" />
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom">
                    <TextBlock Text="Состояние" />
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <Button Content="Все тревоги" Command="{Binding ShowAlarmsCommand}" />
                        <Button Content="Планы" Command="{Binding ShowPlansCommand}" />
                        <Button Content="Журнал" Command="{Binding ShowJournalCommand}" />
                        <Button Content="Параметры устройств" Command="{Binding ShowDeviceParametersCommand}" />
                        <Button Content="Устройства" Command="{Binding ShowDevicesCommand}" />
                        <Button Content="Зоны" Command="{Binding ShowZonesCommand}" />
                    </StackPanel>

                    <Grid Grid.Column="1" Name="centerStackPanel" Background="LightGray">
                        <ContentControl Name="_mainRegionHost" />
                    </Grid>

                </Grid>

            </DockPanel>

        </Grid>
    </Grid>
</Window>
