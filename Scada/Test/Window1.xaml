<Window x:Class="Test.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Controls;assembly=Controls"
    xmlns:local="clr-namespace:Test"
    Title="Window1" Height="800" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Save" Click="Button_Click" />
            <Button Content="Load" Click="Button_Click_1" />
            <Button Content="Test" Click="Button_Click_2" />
            <TextBox Name="textBox" />
            <StackPanel Name="stackPanel">
                <c:XButton Width="100" Height="30" Caption="Hello" BackgroundColor="Black" ForefrontColor="White" />
                <c:XTextBox Width="100" Height="50" Caption="Hi, there" BorderColor="Aqua" BorderHeight="5" />
                <c:XButton Width="100" Height="100" Caption="Name" BorderColor="Red" BorderHeight="10" />
                <c:XRectangle Width="200" Height="50" BackgroundColor="DarkCyan" />
                <c:XImage Width="100" Height="100" ImageStretch="Fill" ImageSource = "C:/image.bmp" />
            </StackPanel>
            <StackPanel Name="loadStackPanel" />
        </StackPanel>
    </Grid>
</Window>
