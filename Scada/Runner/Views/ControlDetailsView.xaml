<UserControl x:Class="Runner.Views.ControlDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:Runner.Views">
    <StackPanel>
        <TextBlock Text="Свойства устройства" />
        <ItemsControl ItemsSource="{Binding Functions}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <view:FunctionView />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
